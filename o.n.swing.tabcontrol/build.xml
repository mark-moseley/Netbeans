<project name="core/swing/tabcontrol" default="netbeans" basedir=".">
   <import file="../../../nbbuild/templates/projectized.xml"/>
   
   <property name="plaf-lib" value="${netbeans.dest.dir}/netbeans/lib/org-netbeans-swing-plaf.jar"/>
   <available file="${plaf-lib}" property="plaf-lib-exists"/>

       <target name="plaf" unless="plaf-lib-exists">
        <echo message="Couldn't find plaf library jar.  Building it."/>
        <ant dir="../plaf" inheritAll="false"/>
    </target>

   <target name="compile-demo" depends="compile,plaf">

      <javac srcdir="demosrc" destdir="demosrc" debug="true" source="1.4" deprecation="false" includeantruntime="false">
            <classpath>
                <pathelement location="${build.classes.dir}"/>
                <pathelement path="${module.classpath}"/>
                <pathelement location="${plaf-lib}"/>
            </classpath>
      </javac>
   </target>
    
    <target name="demo" depends="compile-demo" description="Run a demo">
        <echo message="Found plaf lib at: ${plaf-lib}"/>
        <echo>And I am &#x05D9;&#x05E9;&#x05D9; &#x05D1;&#x05E0; &#x05DC;&#x05D6;&#x05E8; or similar.</echo>
        <echo message="Demo args: ${application.args}"/>
        <java fork="true" classname="org.netbeans.swing.tabcontrol.demo.TestFrame" args="${application.args}">
            <classpath>
                <pathelement location="${build.classes.dir}"/>
                <pathelement path="${module.classpath}"/>
                <pathelement location="${plaf-lib}"/>
                <pathelement location="demosrc"/>
            </classpath>
        </java>
    </target>
    
    <target name="chiclet" depends="compile-demo" description="Run a demo">
        <echo message="Found plaf lib at: ${plaf-lib}"/>
        <echo>And I am &#x05D9;&#x05E9;&#x05D9; &#x05D1;&#x05E0; &#x05DC;&#x05D6;&#x05E8; or similar.</echo>
        <echo message="Demo args: ${application.args}"/>
        <java fork="true" classname="org.netbeans.swing.tabcontrol.plaf.ChicletDemo" args="${application.args}">
            <classpath>
                <pathelement location="${build.classes.dir}"/>
                <pathelement path="${module.classpath}"/>
                <pathelement location="${plaf-lib}"/>
                <pathelement location="demosrc"/>
            </classpath>
        </java>
    </target>
        
    <target name="build-javadoc" description="Build the tabcontrol javadoc">
        <antcall target="javadoc"/>
    </target>
       
</project>
