<?xml version="1.0"?>
<!DOCTYPE Language SYSTEM "../../../../../../../../libsrc/org/netbeans/modules/lexer/lang/gen/language.dtd">
<Language mimeType="text/x-calc">
    <TokenId name="whitespace">
        <Pattern value=" "/>
    </TokenId>
    <TokenId name="ml-comment">
        <Category name="comment"/>
    </TokenId>
    <TokenId name="plus">
        <Category name="operator"/>
    </TokenId>
    <TokenId name="minus">
        <Category name="operator"/>
    </TokenId>
    <TokenId name="mul">
        <Category name="operator"/>
    </TokenId>
    <TokenId name="div">
        <Category name="operator"/>
    </TokenId>
    <TokenId name="lparen">
        <Category name="separator"/>
    </TokenId>
    <TokenId name="rparen">
        <Category name="separator"/>
    </TokenId>
    <TokenId name="mul3"
             comment="Special token for testing extra lookahead and lookback">
        <Category name="operator"/>
    </TokenId>
    <TokenId name="plus5"
             comment="Special token for testing extra lookahead and lookback">
        <Category name="operator"/>
    </TokenId>
    <TokenId name="constant">
        <Category name="literal"/>
    </TokenId>

    <!-- Errorneous constructions belong to "error" category
      -->
    <TokenId name="ml-comment-end">
        <Category name="error"/>
    </TokenId>
    <TokenId name="error">
        <Category name="error"/>
    </TokenId>

    <!-- Extra tokens that are not present in xxxConstants
         must be at the end so that the default id
         is assigned correctly.
         Incomplete tokens belong to "incomplete" category
      -->
    <TokenId name="incomplete-ml-comment">
        <Category name="comment"/>
        <Category name="incomplete"/>
    </TokenId>
</Language>
