<project name="lexer" default="help" basedir=".">

  <property name="lexer.module.root" location=".."/>
  <property name="lexerjar" location="${lexer.module.root}/netbeans/modules/lexer.jar"/>
  <!-- <property name="build.compiler.debug" value="on"/> -->
  <!-- <property name="build.compiler.deprecation" value="on"/> -->

  <property name="javaccdemoclass" value="org.netbeans.modules.lexer.demo.javacc.CalcPaneDemo"/>
  <property name="javacctestclass" value="org.netbeans.modules.lexer.demo.javacc.CalcAlgorithmTest"/>
  <property name="antlrdemoclass" value="org.netbeans.modules.lexer.demo.antlr.CalcPaneDemo"/>
  <property name="antlrtestclass" value="org.netbeans.modules.lexer.demo.antlr.CalcAlgorithmTest"/>

  <target name="compile">
    <!-- build complete lexer.jar -->
    <ant dir="${lexer.module.root}" target="netbeans" inheritAll="false"/>
               
    <javac srcdir="src" destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="${lexer.module.root}/tmp"/>
        <pathelement location="${lexerjar}"/>
        <fileset id="antlr.runtime" dir="${lexer.module.root}/external">
          <include name="antlr*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="javacc" depends="compile">
    <java classname="${javaccdemoclass}" fork="true">
      <classpath>
        <pathelement location="${lexerjar}"/>
        <pathelement location="src"/>
      </classpath>
    </java>
  </target>

  <target name="javacctest" depends="compile">
    <java classname="${javacctestclass}" fork="true">
      <classpath>
        <pathelement location="${lexerjar}"/>
        <pathelement location="src"/>
      </classpath>
    </java>
  </target>

  <target name="antlr" depends="compile">
    <java classname="${antlrdemoclass}" fork="true">
      <classpath>
        <pathelement location="${lexerjar}"/>
        <pathelement location="src"/>
        <fileset refid="antlr.runtime"/>
      </classpath>
    </java>
  </target>

  <target name="antlrtest" depends="compile">
    <java classname="${antlrtestclass}" fork="true">
      <classpath>
        <pathelement location="${lexerjar}"/>
        <pathelement location="src"/>
        <fileset refid="antlr.runtime"/>
      </classpath>
    </java>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
  </target>

  <target name="genall">
    <ant dir="${lexer.module.root}/demo/src/org/netbeans/modules/lexer/demo/antlr" antfile="calcBuild.xml" inheritAll="false"/>
    <ant dir="${lexer.module.root}/demo/src/org/netbeans/modules/lexer/demo/javacc" antfile="calcBuild.xml" inheritAll="false"/>
    <ant dir="${lexer.module.root}/editorbridge/calc/src/org/netbeans/modules/lexer/editorbridge/calc/lang/" antfile="calcBuild.xml" inheritAll="false"/>
  </target>

  <target name="buildall" depends="compile">
    <ant dir="${lexer.module.root}/editorbridge/calc" target="netbeans" inheritAll="false"/>
  </target>

  <target name="cleanall" depends="clean">
    <ant dir="${lexer.module.root}" target="clean" inheritAll="false"/>
    <ant dir="${lexer.module.root}/editorbridge" target="clean" inheritAll="false"/>
    <ant dir="${lexer.module.root}/editorbridge/calc" target="clean" inheritAll="false"/>
  </target>

  <!-- helper task to create zip file of the whole lexer module -->
  <target name="zip" depends="cleanall">
    <zip zipfile="${lexer.module.root}/../lexer.zip"
         basedir="${lexer.module.root}/.."
         compress="true"
         includes="lexer/**"
         excludes="lexer/**/*~, lexer/**/.#*"
         update="false"
    />
  </target>

  <target name="help">
    <echo message="Targets:"/>
    <echo message="javacc      Run javacc-based editor pane demo (Requires JDK1.4)"/>
    <echo message="javacctest  Run javacc-based test that checks generated lexer correctness (Requires JDK1.4)"/>
    <echo message="antlr       Run antlr-based editor pane demo (Requires JDK1.4)"/>
    <echo message="antlrtest   Run antlr-based test that checks generated lexer correctness (Requires JDK1.4)"/>
    <echo message="compile     Compile the demo sources"/>
    <echo message="clean       Clean the *.class files under src subdir"/>
    <echo message="genall      Regenerate all the lexer sources from the grammarss in the lexer module."/>
    <echo message="            It requires to have JavaCC.zip under external subdirectory."/>
    <echo message="buildall    Build everything in the lexer module"/>
    <echo message="cleanall    Clean everything in the lexer module"/>
  </target>

</project>

