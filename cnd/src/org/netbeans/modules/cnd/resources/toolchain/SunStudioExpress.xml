<toolchaindefinition xmlns="http://www.netbeans.org/ns/cnd-toolchain-definition/1">
    <toolchain name="SunStudioExpress" display="Sun Studio Express Compiler Collection" family="SunStudio"/>
    <platforms stringvalue="sun_intel" release_file="/etc/release" release_pattern="\s*OpenSolaris.*"/>
    <default_locations>
	<platform os="sun_intel" directory="/opt/SunStudioExpress/bin"/>
    </default_locations>
    <c>
        <compiler name="cc"/>
        <recognizer pattern="/opt/SunStudioExpress"/>
        <version flags="-V" pattern=".*Sun Ceres C 5.10"/>
        <system_include_paths flags="-xdryrun -E" parser="Sun"/>
        <system_macros flags="-xdryrun -E" parser="Sun"/>
        <user_include flags="-I"/>
        <user_macro flags="-D"/>
        <development_mode>
            <fast_build flags=""/>
            <debug flags="-g" default="true"/>
            <performance_debug flags="-g -xO3 -xhwcprof"/>
            <test_coverage flags="-xprofile=tcov -xinline="/>
            <diagnosable_release flags="-g -xO2"/>
            <release flags="-fast"/>
            <performance_release flags="-xO5 -xipo=1 -xdepend -fsimple=1 -xlibmil -xlibmopt -xvector -xbuiltin"/>
        </development_mode>
        <warning_level>
            <no_warnings flags="-w"/>
            <default flags="" default="true"/>
            <more_warnings flags="+w"/>
            <warning2error flags="-errwarn=%all"/>
        </warning_level>
        <architecture>
            <default flags="" default="true"/>
            <bits_32 flags="-m32"/>
            <bits_64 flags="-m64"/>
        </architecture>
        <strip flags="-s"/>
        <multithreading>
            <none flags="" default="true"/>
            <safe flags="-mt"/>
            <automatic flags="-xautopar -xvector -xreduction -xloopinfo" default="true"/>
            <open_mp flags="-xopenmp"/>
        </multithreading>
        <standard>
            <old flags="-xc99=none"/>
            <legacy flags="-xc99=none"/>
            <default flags="" default="true"/>
            <modern flags="-xstrconst -xc99"/>
        </standard>
        <language_extension>
            <none flags="-Xc"/>
            <default flags="" default="true"/>
            <all flags=""/>
        </language_extension>
        <output_object_file flags="-o " />
        <!--<dependency_generation flags="-xMMD -xMF $@.d" />-->
    </c>
    <cpp>
        <compiler name="CC"/>
        <recognizer pattern="/opt/SunStudioExpress"/>
        <version flags="-V" pattern=".*Sun Ceres C++ 5.10"/>
        <system_include_paths flags="-xdryrun -E" parser="Sun"/>
        <system_macros flags="c" parser="Sun"/>
        <user_include flags="-I"/>
        <user_macro flags="-D"/>
        <development_mode>
            <fast_build flags=""/>
            <debug flags="-g" default="true"/>
            <performance_debug flags="-g0 -xO3 -xhwcprof"/>
            <test_coverage flags="-xprofile=tcov +d -xinline="/>
            <diagnosable_release flags="-g0 -xO2"/>
            <release flags="-fast"/>
            <performance_release flags="-xO5 -xipo=1 -xdepend -fsimple=1 -xlibmil -xlibmopt -xvector -xbuiltin -sync_stdio=no"/>
        </development_mode>
        <warning_level>
            <no_warnings flags="-w"/>
            <default flags="" default="true"/>
            <more_warnings flags="+w"/>
            <warning2error flags="-xwe"/>
        </warning_level>
        <architecture>
            <default flags="" default="true"/>
            <bits_32 flags="-m32"/>
            <bits_64 flags="-m64"/>
        </architecture>
        <strip flags="-s"/>
        <multithreading>
            <none flags="" default="true"/>
            <safe flags="-mt"/>
            <automatic flags="-xautopar -xvector -xreduction -xloopinfo"/>
            <open_mp flags="-xopenmp"/>
        </multithreading>
        <standard>
            <old flags="-compat"/>
            <legacy flags="-features=no%localfor,no%extinl,no%conststrings"/>
            <default flags="" default="true"/>
            <modern flags="-features=no%anachronisms,no%transitions,tmplife"/>
        </standard>
        <language_extension>
            <none flags="-features=no%longlong"/>
            <default flags="" default="true"/>
            <all flags="-features=extensions,tmplrefstatic,iddollar"/>
        </language_extension>
        <library>
            <none flags="-library=no%Cstd,no%Crun -filt=no%stdlib"/>
            <runtime flags="-library=no%Cstd -filt=no%stdlib"/>
            <classic flags="-library=iostream,no%Cstd -filt=no%stdlib"/>
            <binary_standard flags="" default="true"/>
            <conforming_standard flags="-library=stlport4,no%Cstd"/>
        </library>
        <output_object_file flags="-o " />
        <!--<dependency_generation flags="-xMMD -xMF $@.d" />-->
    </cpp>
    <fortran>
        <compiler name="ffortran,f95,f90,f77"/>
        <recognizer pattern="/opt/SunStudioExpress"/>
        <version flags="-V" pattern=".*Sun Ceres Fortran 95 8.3"/>
        <development_mode>
            <fast_build flags=""/>
            <debug flags="-g" default="true"/>
            <performance_debug flags="-g -O"/>
            <test_coverage flags="-g"/>
            <diagnosable_release flags="-g -O2"/>
            <release flags="-fast"/>
            <performance_release flags="-O4"/>
        </development_mode>
        <warning_level>
            <no_warnings flags="-w"/>
            <default flags="-w1" default="true"/>
            <more_warnings flags="-w2"/>
            <warning2error flags="-errwarn"/>
        </warning_level>
        <architecture>
            <default flags="" default="true"/>
            <bits_32 flags="-m32"/>
            <bits_64 flags="-m64"/>
        </architecture>
        <strip flags="-s"/>
        <output_object_file flags="-o " />
    </fortran>
    <assembler>
        <compiler name="as"/>
        <alternative_path>
            <path directory="$PATH"/>
        </alternative_path>
        <version flags="-V"/>
        <development_mode>
            <fast_build flags=""/>
            <debug flags="" default="true"/>
            <performance_debug flags=""/>
            <test_coverage flags=""/>
            <diagnosable_release flags=""/>
            <release flags=""/>
            <performance_release flags=""/>
        </development_mode>
        <warning_level>
            <no_warnings flags=""/>
            <default flags="" default="true"/>
            <more_warnings flags=""/>
            <warning2error flags=""/>
        </warning_level>
        <architecture>
            <default flags="" default="true"/>
            <bits_32 flags=""/>
            <bits_64 flags="-xarch=generic64"/>
        </architecture>
        <output_object_file flags="-o " />
    </assembler>
    <scanner>
        <error pattern="^\&quot;(.*)\&quot;, line ([0-9]+):" language="c"/>
        <error pattern="^\&quot;(.*)\&quot;, line ([0-9]+): Error:" language="cpp"/>
        <error pattern="^\&quot;(.*)\&quot;, Line = ([0-9]+)," language="fortran"/>
        <warning pattern="^\&quot;(.*)\&quot;, line ([0-9]+): warning:" language="c"/>
        <warning pattern="^\&quot;(.*)\&quot;, line ([0-9]+): Warning:" language="cpp"/>
        <warning pattern="^\&quot;(.*)\&quot;, Line = ([0-9]+), Column = ([0-9]+): WARNING:" language="fortran"/>
        <enter_directory pattern="\\(([^)]*)\\)[^:]*:"/>
    </scanner>
    <linker>
        <library_prefix stringvalue="lib"/>
        <library_search flags="-L"/>
        <dynamic_library_search flags="-R"/>
        <library_flag flags="-l"/>
        <PIC flags="-KPIC "/>
        <static_library flags="-Bstatic"/>
        <dynamic_library flags="-Bdynamic"/>
        <dynamic_library_basic flags="-G "/>
        <output_file flags="-o "/>
    </linker>
    <make>
        <tool name="dmake"/>
        <alternative_path>
            <path toolchain_name="*"/>
            <path directory="$PATH"/>
        </alternative_path>
        <version flags="-v" />
        <dependency_support code=".KEEP_STATE:\n.KEEP_STATE_FILE:.make.state.${CONF}\n" />
    </make>
    <debugger>
        <tool name="gdb"/>
        <version flags="--version" />
    </debugger>
</toolchaindefinition>
