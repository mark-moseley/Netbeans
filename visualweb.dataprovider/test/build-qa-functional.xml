<project basedir="." default="all" name="CachedRowSetDataProvider Test Script">

    <import file="../../nbbuild/templates/xtest-qa-functional.xml"/>
    
    <property name="xtest.file_appserver.properties" location="${basedir}/qa-functional/app_server_sun.properties"/>    
    <property name="xtest.file_database.properties" location="${basedir}/qa-functional/db_derby.properties"/>
    <property name="xtest.file_project.properties" location="${basedir}/qa-functional/project.properties"/>
    
    <loadproperties srcfile="${xtest.file_appserver.properties}" />
    <loadproperties srcfile="${xtest.file_database.properties}" />
    <!-- -->
    <echo message="xtest.file_appserver.properties = ${xtest.file_appserver.properties}"/>
    <echo message="path_SunAppServer = ${path_SunAppServer}"/>
    <echo message="path_Tomcat = ${path_Tomcat}"/>
    <echo message="path_JBoss = ${path_JBoss}"/>
    <echo message="server_settings = ${server_settings}"/>
    <echo message="database_settings = ${database_settings}"/>
    <echo message=" "/>
    <echo message="Pause..."/>
    <sleep seconds="1"/>    
    <!-- -->

    <property name="data_dir" location="${basedir}/qa-functional/data"/>
    
    <target name="make_derby_db_travel">
        <property name="DB_Travel_Path" location="${xtest.workdir}/.netbeans-derby/travel"/>
        <property name="DB_Travel.zip" location="${data_dir}/travel.zip"/>
        <mkdir dir="${DB_Travel_Path}"/>
        <unzip src="${DB_Travel.zip}" dest="${DB_Travel_Path}" overwrite="true"/>
    </target>
    
    <target name="init-runtime">
        <copy file="${xtest.file_appserver.properties}" todir="${xtest.workdir}"/>
        <copy file="${xtest.file_database.properties}" todir="${xtest.workdir}"/>
        <copy file="${xtest.file_project.properties}" todir="${xtest.workdir}"/>
        
        <condition property="make_derby_db_travel_target_name" 
            value="make_derby_db_travel" else="empty_target">
            <contains string="${database_settings}" substring="Derby" casesensitive="false"/>
        </condition>
        <antcall target="${make_derby_db_travel_target_name}"/>

        <!-- commented because the file "${data_dir}/jdbc_drivers.zip" is removed from CVS 
        <property name="zip-jdbc_drivers" location="${data_dir}/jdbc_drivers.zip"/>
        <unzip src="${zip-jdbc_drivers}" dest="${xtest.workdir}" overwrite="true"/>

        <condition property="sunappserver_jdbc_drivers_target_name" 
            value="sunappserver_jdbc_drivers" else="empty_target">
            <isset property="path_SunAppServer"/>
        </condition>
        <antcall target="${sunappserver_jdbc_drivers_target_name}"/>
        -->
    </target>

    <target name="sunappserver_jdbc_drivers">
        <condition property="command" value="asadmin.bat">
            <contains string="${os.name}" substring="Windows" casesensitive="false"/>
        </condition>
        <condition property="command" value="asadmin">
            <contains string="${os.name}" substring="SunOS" casesensitive="false"/>
        </condition>
        <condition property="command" value="asadmin">
            <contains string="${os.name}" substring="Linux" casesensitive="false"/>
        </condition>
        <condition property="command" value="asadmin">
            <contains string="${os.name}" substring="Mac" casesensitive="false"/>
        </condition>
        <!-- use default value - for Windows -->
        <property name="command" value="asadmin.bat"/>
        
        <property name="command_dir" value="bin"/>
        <property name="command_path" 
                  value="${path_SunAppServer}/${command_dir}/${command}"/>
        <property name="start_arg_line" value="start-domain domain1"/>
        <property name="stop_arg_line" value="stop-domain domain1"/>
        
        <!-- stop SunAppServer
        <exec executable="${command_path}" spawn="false">
              <arg line="${stop_arg_line}"/>    
        </exec>
        -->

        <!-- commented because the file "${data_dir}/jdbc_drivers.zip" is removed from CVS 
        <copy todir="${path_SunAppServer}/domains/domain1/lib" overwrite="false">
            <fileset dir="${xtest.workdir}/jdbc_drivers"/>
        </copy>
        -->
        
        <!-- start SunAppServer -->
        <!--
        <exec executable="${command_path}" spawn="true">
              <arg line="${start_arg_line}"/>    
        </exec>

        <echo message=" "/>        
        <echo message="Application server is starting: "/>
        <echo message="[${command_path} ${start_arg_line}]"/>        
        <echo message=" "/>        
        <echo message="Delay 2 sec... "/>        
        <sleep seconds="2"/>        
        -->
        
        <!-- for debugging of Sun Application Server starting
            <exec executable="${command_path}" spawn="false">
                  <arg line="version"/>    
            </exec>
            <echo message="Delay 3 sec... "/>        
            <sleep seconds="3"/>        
        -->
    </target>
    
    <target name="empty_target"/>
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!-- This target executes tests inside IDE. It is defined in default-build-qa-functional.xml.
         If you need to customize it, you can uncomment the following and override it.-->
    <target name="runidetest" depends="init,init-runtime">
        <path id="httpunit.jars">
            <pathelement location="${nb_all}/testtools/external/httpunit.jar"/>
            <pathelement location="${netbeans.dest.dir}/visualweb1/modules/ext/tidy-mod.jar"/>
        </path>
        <property name="coverage.lib.path" refid="httpunit.jars"/>
        <executeTests  pluginName="ide">
            <classpath>
                <path refid="jemmy.and.jelly.path"/>
                <pathelement location="${nb_all}/visualweb.kit/gravy/builds/gravy.jar"/>
             </classpath>
        </executeTests>
    </target>

</project>
