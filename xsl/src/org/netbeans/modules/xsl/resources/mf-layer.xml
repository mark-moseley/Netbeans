<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.0//EN" "http://www.netbeans.org/dtds/filesystem-1_0.dtd" [
    <!ENTITY localize-it "<attr name='SystemFileSystem.localizingBundle' stringvalue='org.netbeans.modules.xsl.resources.Bundle'/>">
]>

<filesystem>

    <!-- register templates -->  
    <folder name="Templates">

        <folder name="XML">
            <attr name="emptyDTD.dtd/stylesheet.xsl" boolvalue="true"/>
            <attr name="XMLSchema.xml/stylesheet.xsl" boolvalue="true"/>            

            <file name="stylesheet.xsl" url="nbresloc:/org/netbeans/modules/xsl/resources/templates/stylesheet.xsl">
                &localize-it;
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xsl/resources/xslObject.gif" />
                <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xsl/resources/templates/stylesheet.html" />
                <attr name="template" boolvalue="true" />
            </file>

            <attr name="stylesheet.xsl/XMLCatalog.xml" boolvalue="true"/>
        </folder> <!-- XML -->

    </folder> <!-- Templates -->


    <!-- register services with Lookup -->
    <folder name="Services">
        <folder name="Hidden">
            <file name="org-netbeans-modules-xsl-actions-TransformAction.instance">
                <attr name="instanceOf" stringvalue="org.netbeans.modules.xml.core.actions.CollectXMLAction$XMLAction"/>
            </file>
        </folder>

        <folder name="MIMEResolver">
            <file name="xslt-mime-resolver.xml" url="nbres:/org/netbeans/modules/xsl/resources/xslt-mime-resolver.xml">
                &localize-it;
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xsl/resources/xslObject.gif"/>
            </file>
        </folder> <!-- MIMEResolver -->

    </folder>

    <!-- register actions to action pool -->
    <folder name="Actions">
        <folder name="XML">
            <file name="org-netbeans-modules-xsl-actions-TransformAction.instance" />
        </folder>
    </folder>

    <folder name="Shortcuts">
        <file name="A-F6.instance">
	    <attr name="instanceClass" stringvalue="org.netbeans.modules.xsl.actions.TransformAction"/>
	</file>
    </folder> <!-- Shortcuts -->

    
    <folder name="Editors">
        <folder name="text">
            <folder name="xml">    
                <folder name="Toolbars">
                    <folder name="Default">
                        <attr name="org-netbeans-modules-xml-actions-CheckAction.instance/org-netbeans-modules-xsl-actions-TransformAction.instance" boolvalue="true"/>
                        <file name="org-netbeans-modules-xsl-actions-TransformAction.instance"/>
                    </folder> <!-- Default -->
                </folder> <!-- Toolbars -->
            </folder> <!-- xml -->
        </folder> <!-- text -->
    </folder> <!-- Editors -->
    
</filesystem>
