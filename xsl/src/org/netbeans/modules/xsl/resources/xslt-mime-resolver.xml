<!DOCTYPE MIME-resolver PUBLIC "-//NetBeans//DTD MIME Resolver 1.0//EN" "http://www.netbeans.org/dtds/mime-resolver-1_0.dtd">

<MIME-resolver>

    <!-- Mark all XSLT with "application/xslt+xml" MIME content type -->
    <file>
        <ext name="xsl"/>
        <ext name="xslt"/>
        <resolver mime="application/xslt+xml"/>
    </file>
    <file>
        <ext name="xml"/>
        <resolver mime="application/xslt+xml">
            <xml-rule>
                <element ns="http://www.w3.org/1999/XSL/Transform"/>
            </xml-rule>
        </resolver>
    </file>
    
</MIME-resolver>
