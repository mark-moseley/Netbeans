<!DOCTYPE fontscolors PUBLIC "-//NetBeans//DTD Editor Fonts and Colors settings 1.1//EN" "http://www.netbeans.org/dtds/EditorFontsColors-1_1.dtd">

<fontscolors>
    <!-- JavaTokenId categories -->
    <fontcolor name="character" default="char"/>
    <fontcolor name="errors" default="error"/>
    <fontcolor name="identifier" default="identifier"/>
    <fontcolor name="keyword" default="keyword"/>
    <fontcolor name="literal" default="keyword" />
    <fontcolor name="comment" default="comment"/>
    <fontcolor name="number" default="number"/>
    <fontcolor name="operator" default="operator"/>
    <fontcolor name="string" default="string"/>
    <fontcolor name="whitespace" default="whitespace"/>
    
    <!-- keyword groups -->
    <fontcolor name="keyword-directive" default="keyword">
        <font style="bold"/>
    </fontcolor> 
        
    <!--"semantic" highlighting:-->
    <fontcolor name="mod-unused" foreColor="999999"/>
    <fontcolor name="mod-abstract" />
    
    <fontcolor name="mod-field-declaration" default="field">    
        <font style="bold"/>
    </fontcolor> 
    <fontcolor name="mod-local-variable-declaration"> 
        <!-- font style="bold"/ -->
    </fontcolor> 
    <fontcolor name="mod-parameter-declaration">
        <!-- font style="bold"/ -->
    </fontcolor> 
    
    <fontcolor name="mod-method-declaration" >
        <font style="bold"/>
    </fontcolor>
    <fontcolor name="mod-constructor-declaration" >
        <font style="bold"/>
    </fontcolor>
    <fontcolor name="mod-class-declaration" >
            <font style="bold"/>
    </fontcolor>
    <fontcolor name="mod-interface-declaration" >
            <font style="bold"/>
    </fontcolor>
    <fontcolor name="mod-annotation-type-declaration" >
                <font style="bold"/>
    </fontcolor>
    <fontcolor name="mod-enum-declaration" >
        <font style="bold"/>
    </fontcolor>
    
    <fontcolor name="mod-field" default="field"/> <!-- "54A054" -->        
    <fontcolor name="mod-local-variable"/>
    <fontcolor name="mod-parameter"/>
    <fontcolor name="mod-method" />
    <fontcolor name="mod-constructor" />
    <fontcolor name="mod-class" />
    <fontcolor name="mod-interface" />
    <fontcolor name="mod-annotation-type" />
    <fontcolor name="mod-enum" />
    
    <fontcolor name="mod-deprecated" strikeThrough="black"/>
    
    <fontcolor name="mod-static" >
        <font style="italic" />
    </fontcolor>
    
    <fontcolor name="mod-private" />
    <fontcolor name="mod-package-private" />
    <fontcolor name="mod-protected" />
    <fontcolor name="mod-public" />
    
    <!--currently not used:-->
<!--    <fontcolor name="mod-type-parameter-declaration" bgColor="lightGray"/>
    <fontcolor name="mod-type-parameter-use" bgColor="green"/>
    <fontcolor name="mod-undefined" foreColor="red"/>-->
    
    <!--mark occurrences:-->
    <fontcolor name="mark-occurrences" bgColor="ECEBA3"/>

    <!-- JavaStringTokenId categories -->
    <fontcolor name="string-escape" default="string">
        <font style="bold" />
    </fontcolor>
    <fontcolor name="string-escape-invalid" foreColor="a42828">
        <font style="bold" />
    </fontcolor>
   
    <!-- JavadocTokenId categories -->
    <fontcolor name="javadoc-tag" default="comment">
        <font style="bold" />
    </fontcolor>
    <fontcolor name="html-tag" default="comment">
        <font style="bold" />
    </fontcolor>

