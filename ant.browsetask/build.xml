<project name="ant/browsetask" basedir="." default="netbeans">

    <property name="nbm_alias" value="nb_ide"/>
    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" value="../../nbbuild/standard-nbm-license.txt"/>

    <target name="init">
        <ant dir="../../ant/external"/>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="src" destdir="src">
            <classpath>
                <pathelement location="../../openide/netbeans/lib/openide.jar"/>
                <pathelement location="../external/lib/ant.jar"/>
            </classpath>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="netbeans/modules"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="netbeans/modules/org-netbeans-modules-ant-browsetask.jar" manifest="manifest-subst.mf" compress="false">
            <fileset dir="src">
                <excludesfile name="../../nbbuild/standard-jar-excludes.txt"/>
                <exclude name="**/*.class"/>
                <exclude name="org/netbeans/modules/ant/browsetask/antlib.xml"/>
            </fileset>
        </jar>
        <mkdir dir="netbeans/ant/nblib"/>
        <jar jarfile="netbeans/ant/nblib/org-netbeans-modules-ant-browsetask.jar" compress="false">
            <fileset dir="src">
                <excludesfile name="../../nbbuild/standard-jar-excludes.txt"/>
                <include name="**/*.class"/>
                <include name="org/netbeans/modules/ant/browsetask/antlib.xml"/>
            </fileset>
        </jar>
    </target>

    <target name="netbeans" depends="jars" description="Build the module.">
        <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>
        <genlist targetname="nbm" outputfiledir="netbeans"/>
    </target>

    <target name="nbm" depends="netbeans" description="Prepare the module for distribution via Auto Update.">
        <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
        <makenbm file="org-netbeans-modules-ant-browsetask.nbm"
                 topdir="."
                 module="netbeans/modules/org-netbeans-modules-ant-browsetask.jar"
                 homepage="http://ant.netbeans.org/"
                 needsrestart="false"
                 distribution="http://${dist.base}/org-netbeans-modules-ant-browsetask.nbm">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="clean" description="Clean all build products.">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
        <delete file="org-netbeans-modules-ant-browsetask.nbm"/>
        <delete file="manifest-subst.mf"/>
    </target>

</project>
