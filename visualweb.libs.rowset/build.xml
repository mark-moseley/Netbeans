<project name="org.netbeans.modules.visualweb.libs.rowset" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.visualweb.libs.rowset.</description>
    <import file="nbproject/build-impl.xml"/>
    <import file="${suite.dir}/templates/common.xml"/>
    
    <!-- Create the javadoc zip file from the rowset src -->
    <target name="rowset-doc-zip">
        <unzip src="external/src.zip" dest="external">
            <patternset>
                <include name="rowset2.0/src/com/sun/rowset/*.java"/>
                <include name="rowset2.0/src/com/sun/rowset/**/*.java"/>
                <include name="rowset2.0/src/javax/sql/rowset/*.java"/>
                <include name="rowset2.0/src/javax/sql/rowset/**/*.java"/>
            </patternset>
        </unzip>

        <mkdir dir="external/javadoc"/>
        <javadoc destdir="external/javadoc" windowtitle="RowSet"
                 packagenames="javax.sql.rowset.*,com.sun.rowset.*,com.sun.sql.rowset.*"
                 source="1.4" >
            <fileset dir="../../sql/src"          includes="com/sun/sql/rowset/*.java"/>
            <fileset dir="external/rowset2.0/src" includes="**/*.java"/>
            <classpath>
                <fileset dir="external">
                    <include name="rowset.jar" />
                </fileset>
            </classpath>
        </javadoc>

        <mkdir dir="release/docs"/>
        <zip basedir="external/javadoc" destfile="release/docs/rowset-doc.zip" />
    </target>

</project>
