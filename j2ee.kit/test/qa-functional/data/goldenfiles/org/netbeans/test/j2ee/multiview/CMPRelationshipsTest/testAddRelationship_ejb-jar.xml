<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>TestCMPRelationships</display-name>
    <enterprise-beans>
        <entity>
            <display-name>EntityAEB</display-name>
            <ejb-name>EntityABean</ejb-name>
            <home>test.EntityARemoteHome</home>
            <remote>test.EntityARemote</remote>
            <local-home>test.EntityALocalHome</local-home>
            <local>test.EntityALocal</local>
            <ejb-class>test.EntityABean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>EntityA</abstract-schema-name>
            <cmp-field>
                <field-name>key</field-name>
            </cmp-field>
            <primkey-field>key</primkey-field>
        </entity>
        <entity>
            <display-name>EntityBEB</display-name>
            <ejb-name>EntityBBean</ejb-name>
            <home>test.EntityBRemoteHome</home>
            <remote>test.EntityBRemote</remote>
            <local-home>test.EntityBLocalHome</local-home>
            <local>test.EntityBLocal</local>
            <ejb-class>test.EntityBBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>EntityB</abstract-schema-name>
            <cmp-field>
                <field-name>key</field-name>
            </cmp-field>
            <primkey-field>key</primkey-field>
        </entity>
        </enterprise-beans>
    <relationships>
        <ejb-relation>
            <description>test description</description>
            <ejb-relation-name>test</ejb-relation-name>
            <ejb-relationship-role>
                <ejb-relationship-role-name>role A</ejb-relationship-role-name>
                <multiplicity>One</multiplicity>
                <relationship-role-source>
                    <ejb-name>EntityABean</ejb-name>
                    </relationship-role-source>
            </ejb-relationship-role>
            <ejb-relationship-role>
                <ejb-relationship-role-name>role B</ejb-relationship-role-name>
                <multiplicity>One</multiplicity>
                <relationship-role-source>
                    <ejb-name>EntityBBean</ejb-name>
                    </relationship-role-source>
            </ejb-relationship-role>
        </ejb-relation>
        </relationships>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>EntityABean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>EntityBBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
