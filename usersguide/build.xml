<project name="usersguide" default="netbeans" basedir=".">

  <property name="binroot" value=".."/>
  <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../nbbuild/nbantext.jar"/>

  <target name="jars">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <!-- Empty JAR: -->
    <jar jarfile="netbeans/modules/usersguide.jar"
         whenempty="create"
         manifest="manifest-subst.mf"
         basedir=".">
      <exclude name="**/*"/>
    </jar>
  </target>

  <target name="javahelp">
    <copy todir="netbeans/docs" includeEmptyDirs="false">
      <fileset dir="javahelp">
        <!-- Temporary files, or preprocessing scripts: -->
        <exclude name="**/check-anchors.pl"/>
        <exclude name="**/context-help.jhm"/>
        <exclude name="**/create-helpset-files.pl"/>
        <exclude name="**/forte4j_help_fcs.jhm"/>
        <exclude name="**/usergdix.xml"/>
        <exclude name="**/usergdto.xml"/>
      </fileset>
    </copy>
    <mkdir dir="netbeans/docs/org/netbeans/modules/usersguide/JavaHelpSearch"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/usersguide"
               db="netbeans/docs/org/netbeans/modules/usersguide/JavaHelpSearch"
               jhall="${binroot}/nbbuild/lib/jhall.jar">
      <include name="**/*.html"/>
      <exclude name="credits.html"/>
      <exclude name="pending.html"/>
    </jhindexer>
  </target>

  <target name="netbeans" depends="jars,javahelp"/>

  <target name="nbm" depends="netbeans">
    <makenbm file="usersguide.nbm"
             topdir="."
	     manifest="manifest-subst.mf"
	     homepage="http://usersguide.netbeans.org/"
	     distribution="http://www.netbeans.org/download/nbms/40/usersguide.nbm">
      <license file="../nbbuild/standard-nbm-license.txt"/>
      <description>
        Online help for the IDE in JavaHelp format.
      </description>
      <signature keystore="${keystore}" storepass="${storepass}" alias="nb_ide"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete file="manifest-subst.mf"/>
    <delete file="usersguide.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
  </target>

</project>




