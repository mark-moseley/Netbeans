<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.1//EN" "http://www.netbeans.org/dtds/filesystem-1_1.dtd">

<filesystem>
    <folder name="org-netbeans-api-java">
        <!-- Platform - related area -->
        <folder name="platform">
            <folder name="installers">
            </folder>
        </folder>
    </folder>
    
    <folder name="Services">
        <folder name="Platforms">
            <attr name="SystemFileSystem.localizingBundle"
                stringvalue="org.netbeans.modules.java.platform.resources.Bundle"/>
            <folder name="org-netbeans-api-java-Platform">
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/java/platform/resources/platformList.gif"/>
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.java.platform.resources.Bundle"/>
            </folder>
        </folder>
        <file name="org-netbeans-modules-java-platform-settings.settings" url="platformSettings.settings"/>
    </folder>
    
    <folder name="Templates">
        <folder name="Services">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.java.platform.resources.Bundle"/>
            <folder name="Platforms">
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.java.platform.resources.Bundle"/>
                <folder name="org-netbeans-api-java-Platform">
                    <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.java.platform.resources.Bundle"/>
                    <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/java/platform/resources/templates/javaplatform.html" />
                </folder>
            </folder>
        </folder>
    </folder>

    <folder name="Menu">
        <folder name="Tools">
            <attr name="org-netbeans-modules-form-actions-InstallBeanAction.instance/JavaPlatformsCustomizerAction.instance" boolvalue="true"/>
            <attr name="JavaPlatformsCustomizerAction.instance/LibrariesCustomizerAction.instance" boolvalue="true"/>            
            <file name="JavaPlatformsCustomizerAction.instance">
                <attr name="instanceClass" stringvalue="org.netbeans.modules.java.platform.ui.PlatformsCustomizerAction"/>
            </file>
        </folder>
    </folder>

</filesystem>
