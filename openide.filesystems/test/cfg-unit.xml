<mconfig name="openide/fs">

  <testbag testattribs="stable" executor="unit-executor" name="openide/fs">
    <testset dir="unit/src">
      <patternset>
        <!-- fs tests should be stable. If not file a bug: -->                
        <include name="org/openide/filesystems/*Test.class"/>
          <exclude name="org/openide/filesystems/JarFileSystemTest.class/testForSpaces"/>
          <!-- Under development: -->
          <exclude  name="org/openide/filesystems/MultiFileSystemMaskTest.class"/>                                         
          <!-- #39613, nbfilesystems protocol is internally inconsistent: -->
          <exclude name="org/openide/filesystems/XMLFileSystemTest.class/testGetURL"/>
      </patternset>
    </testset>
  </testbag>

  <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
  <executor name="unit-executor" antfile="build-unit.xml" target="run-unit-test"/>

</mconfig>
