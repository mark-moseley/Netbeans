<project name="openide/fs" default="netbeans" basedir=".">
  <import file="../../nbbuild/default.xml"/>

  <target name="boot">
    <ant antfile="${nb_all}/core/build.xml" dir="${nb_all}/core" target="boot" />
    <property file="${moduleCluster.file}"/>
  </target>

  <property name="nbroot" location="../.." />

  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="${nbroot}/nbbuild/standard-nbm-license.txt"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbroot}/nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nbroot}/nbbuild/nbantext.jar"/>

  <path id="classpath" >
    <pathelement location="${nbroot}/openide/util/netbeans/lib/openide-util.jar" />
  </path>
  
  <target name="compile" depends="init">
    <ant dir="${nbroot}/openide" target="do-lib-javac" inheritRefs="true" >
      <property name="localdir" location="src" />
      <property name="selector" value="openide.fs" />
    </ant>
  </target>
  
  <target name="patch" depends="compile">
    <taskdef name="enhanceclass" classname="org.netbeans.nbbuild.NbEnhanceClass" classpath="${nbroot}/nbbuild/nbantext.jar"/>
    <ant antfile="${nbroot}/core/build.xml" dir="${nbroot}/core" target="boot" />
    
    <enhanceclass basedir="src" >
        <classpath>
            <pathelement location="${core.dir}/${nb.lib.dir}/ext/boot.jar"/>
            <!-- See xtest/instance/build-clover.xml for explanation: -->
            <pathelement location="${nbroot}/core/netbeans/lib/ext/clover.jar"/>
        </classpath>
    
        <!-- changes superclass to one that implements Node.Cookie -->
        <patch class="org/openide/filesystems/Repository" super="org/openide/filesystems/$$Repository$$Patch$$" /> 


        <!-- superclass needs to provide refershRoot method with different signature than the one in AbstractFileSystem -->                        
        <patch class="org/openide/filesystems/AbstractFileSystem" > 
            <member name="r3fr3shRoot" rename="refreshRoot" />
        </patch>

       <!-- superclass implements intefaces AbstractFileSystem.Info, List, Change -->
        <patch class="org/openide/filesystems/LocalFileSystem" super="org/openide/filesystems/$$LocalFileSystem$$Patch$$"> 
            <!-- methods are made public instead of proteted -->
            <member name="children" />
            <member name="createData" />
            <member name="createFolder" />
            <member name="delete" />
            <member name="folder" />
            <member name="inputStream" />
            <member name="lastModified" />
            <member name="lock" />
            <member name="markUnimportant" />
            <member name="mimeType" />
            <member name="outputStream" />
            <member name="readOnly" />
            <member name="rename" />
            <member name="size" />
            <member name="unlock" />
        </patch>
        <!-- the same case as LocalFileSystem -->
        <patch class="org/openide/filesystems/JarFileSystem" super="org/openide/filesystems/$$JarFileSystem$$Patch$$"> 
            <member name="attributes" />
            <member name="deleteAttributes" />
            <member name="readAttribute" />
            <member name="renameAttributes" />
            <member name="writeAttribute" />

            <member name="children" />
            <member name="createData" />
            <member name="createFolder" />
            <member name="delete" />
            <member name="folder" />
            <member name="inputStream" />
            <member name="lastModified" />
            <member name="lock" />
            <member name="markUnimportant" />
            <member name="mimeType" />
            <member name="outputStream" />
            <member name="readOnly" />
            <member name="rename" />
            <member name="size" />
            <member name="unlock" />
        </patch>
          
    </enhanceclass>
  </target>

  <target name="jars" depends="compile,patch">
    <mkdir dir="netbeans/lib"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="netbeans/lib/openide-fs.jar" manifest="manifest-subst.mf" compress="false">
      <fileset dir="src">
        <excludesfile name="${nbroot}/nbbuild/standard-jar-excludes.txt"/>
      </fileset>
    </jar>
  </target>

  <target name="netbeans" depends="jars">
    <!-- No! Not yet. Not an actual module, should be merged into other libs instead?
    <genlist targetname="nbm" outputfiledir="${nbroot}/nbbuild/netbeans"/>
    -->
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="openide-fs.nbm"
             topdir="."
             module="netbeans/lib/openide-fs.jar"
	     homepage="http://treefs.${homepage.base}/"
             needsrestart="false"
	     distribution="http://${dist.base}/openide.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="javadoc">
    <ant dir=".." target="do-lib-javadoc" inheritRefs="true" >
      <property name="localdir" location="src" />
      <property name="selector" value="openide.fs" />
      
      <property name="javadoc.base" location="."/>
      <property name="javadoc.name" value="FsAPI"/>
      <property name="javadoc.title" value="FileSystems API"/>
      <!-- <property name="javadoc.apichanges" location="../api/doc/changes/apichanges.xml"/> -->
      <property name="javadoc.arch" location="../arch/arch-openide-filesystems.xml"/>
      <!-- <property name="javadoc.docfiles" location="api/doc"/> -->
      <!-- <property name="javadoc.overview" location="api/doc/overview.html"/> -->
    </ant>
  </target>

  <target name="clean">
    <delete dir="src" />
    <delete file="manifest-subst.mf"/>
    <delete file="treefs.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="javadoc"/>
    <delete dir="Info"/>
    <delete dir="reload"/>
  </target>

</project>
