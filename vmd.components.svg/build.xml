<project name="org.netbeans.modules.vmd.components.svg" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.vmd.components.svg.</description>
    <import file="nbproject/build-impl.xml"/>
    
    <target name="netbeans-extra" depends="release"/>

    <target name="release" depends="init">
        <mkdir dir="${cluster}/modules/ext"/>
        <mkdir dir="${cluster}/docs"/>
        <mkdir dir="${cluster}/sources"/>
        <echo message="${cluster}/modules/ext"/>
        <copy file="../nb_svg_midp_components/dist/nb_svg_midp_components.jar" todir="${cluster}/modules/ext"/>
        <copy file="../nb_svg_midp_components/dist/nb_svg_midp_components-api.zip" todir="${cluster}/docs"/>	
        <copy file="../nb_svg_midp_components/dist/nb_svg_midp_components-src.zip" todir="${cluster}/sources"/>	        
    </target>    
    
</project>
