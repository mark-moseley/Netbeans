<project name="projects/libraries" default="netbeans" basedir=".">

    <property name="nbm_alias" value="nb_ide"/>
    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" value="../../nbbuild/standard-nbm-license.txt"/>
    <property name="build.sysclasspath" value="ignore"/>
    <property name="nb_all" value="../.."/>
    <property name="build.compiler.deprecation" value="false"/>
    <property name="build.compiler.debug" value="on"/>
    <property name="buildnumber" value="dev"/>

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../../nbbuild/nbantext.jar"/>


    <target name="compile"
        description="Compile all source files but do not package them.">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath>
                <pathelement location="${nb_all}/openide/openide-13javac-workaround.jar"/>
                <pathelement location="${nb_all}/openide/loaders/netbeans/lib/openide-loaders.jar"/>
                <pathelement location="${nb_all}/openide/netbeans/lib/openide.jar"/>
                <pathelement location="${nb_all}/core/external/xml-apis-1.0b2.jar"/>
                <pathelement location="${nb_all}/projects/filesets/netbeans/modules/autoload/filesets.jar"/>
                <pathelement location="${nb_all}/projects/core/netbeans/modules/autoload/projects-core.jar"/>
                <pathelement location="${nb_all}/projects/ide/netbeans/modules/projects-ide.jar"/>
            </classpath>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="netbeans/modules"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <locjar jarfile="netbeans/modules/autoload/libraries.jar"
            manifest="manifest-subst.mf"
            compress="false">
            <locale name="ja"/>

            <fileset dir="src" excludesfile="../../nbbuild/standard-jar-excludes.txt"/>
        </locjar>
    </target>

    <target name="try" depends="jars" description="Clean, build, deploy and run in debugging JVM mode.">
        <copy file="netbeans/modules/autoload/libraries.jar" tofile="../../nbbuild/netbeans/modules/libraries.jar"/>
        <exec executable="../../nbbuild/netbeans/bin/runide.sh">
            <arg line="-userdir /tmp/prj-ud -fontsize 14 -J-Xdebug -J-Xnoagent -J-Djava.compiler=NONE -J-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8888"/>
        </exec>
    </target>

    <target name="netbeans" depends="jars">
        <genlist targetname="nbm" outputfiledir="../../nbbuild/netbeans"/>
    </target>

    <target name="nbm" depends="netbeans">
        <makenbm file="libraries.nbm"
            topdir="."
            module="netbeans/modules/autoload/libraries.jar"
            homepage="http://projects.${homepage.base}/"
            distribution="http://${dist.base}/libraries.nbm">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="clean">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
            <!--fileset dir="test">
                <include name="**/*.class"/>
            </fileset-->
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="libraries.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="javadoc"/>
        <delete dir="Info"/>
        <!--delete dir="test/work"/>
        <delete dir="test/lib"/>
        <delete dir="test/results"/-->
    </target>


</project>
