<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://www.netbeans.org/ns/project/1">
    <type>org.netbeans.modules.ant.freeform</type>
    <configuration>
        <general-data xmlns="http://www.netbeans.org/ns/freeform-project/1">
            <name>XTest</name>
            <properties>
                <property name="netbeans.dest.dir">../nbbuild/netbeans</property>
                <property-file>${netbeans.dest.dir}/moduleCluster.properties</property-file>
                <property-file>build.properties</property-file>
            </properties>
            <folders>
                <source-folder>
                    <label>src</label>
                    <type>java</type>
                    <location>src</location>
                </source-folder>
                <source-folder>
                    <label>Unit Test Packages</label>
                    <type>java</type>
                    <location>test/unit/src</location>
                </source-folder>
            </folders>
            <ide-actions>
                <action name="build">
                    <target>build-all</target>
                </action>
                <action name="rebuild">
                    <target>clean</target>
                    <target>build-all</target>
                </action>
                <action name="clean">
                    <target>clean</target>
                </action>
            </ide-actions>
            <view>
                <items>
                    <source-folder style="packages">
                        <label>src</label>
                        <location>src</location>
                    </source-folder>
                    <source-folder style="packages">
                        <label>Unit Test Packages</label>
                        <location>test/unit/src</location>
                    </source-folder>
                    <source-file>
                        <location>build.xml</location>
                    </source-file>
                    <source-file>
                        <location>build.properties</location>
                    </source-file>
                    <source-file>
                        <location>manifest.mf</location>
                    </source-file>
                </items>
                <context-menu>
                    <ide-action name="build"/>
                    <ide-action name="rebuild"/>
                    <ide-action name="clean"/>
                    <action>
                        <label>makedist</label>
                        <target>makedist</target>
                    </action>
                </context-menu>
            </view>
            <subprojects/>
        </general-data>
        <java-data xmlns="http://www.netbeans.org/ns/freeform-project-java/2">
            <compilation-unit>
                <package-root>src</package-root>
                <classpath mode="compile">${basecp}</classpath>
                <source-level>1.5</source-level>
            </compilation-unit>
            <compilation-unit>
                <package-root>test/unit/src</package-root>
                <unit-tests/>
                <classpath mode="compile">lib/junit.jar;lib/nbjunit.jar;lib/xtest.jar</classpath>
                <source-level>1.4</source-level>
            </compilation-unit>
        </java-data>
    </configuration>
</project>
