<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="MyModule unit test config">
    
    <!-- testbag with all MyModule tests -->
    <testbag testattribs="all" executor="code" name="testbag_1" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
		<include name="HelloWorldTest.class"/>
		<include name="myorg/*.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- testbag with tests which does not fail, use -Dxtest.attribute=stable when running ant -->
    <testbag testattribs="stable" executor="code" name="testbag_2" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
		<include name="myorg/*.class"/>
		<include name="HelloWorldTest.class"/>
		<exclude name="HelloWorldTest.class/testGreeting2"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- testbag with failing test (just one method),  use -Dxtest.attribute=failing when running ant  -->
    <testbag testattribs="failing" executor="code" name="testbag_3" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="HelloWorldTest.class/testGreeting2"/>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="code" antfile="build.xml" target="runcodetest"/>
    <executor name="ide" antfile="build.xml" target="runidetest"/>
    
    <resultsprocessor name="unit" antfile="build.xml" target="test_report"/>
    
</mconfig>
