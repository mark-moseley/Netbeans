<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="MyModule unit test config">
    
    <!-- testbag with all MyModule tests running in code mode (i.e. in standard JVM)
         use ant runtests -Dxtest.attribs=stable,code to run this testbag  -->
    <testbag testattribs="all and code" executor="code" name="all tests (no ide)" >
        <testset dir="unit/src">
            <patternset>
		<include name="HelloWorldTest.class"/>
		<include name="myorg/*.class"/>
           </patternset>
        </testset>
    </testbag>

    <!-- testbag with tests which does not fail, use ant runtests -Dxtest.attribs=stable,code -->
    <testbag testattribs="stable and code" executor="code" name="stable tests (no ide)">
        <testset dir="unit/src">
            <patternset>
		<include name="myorg/*.class"/>
		<include name="HelloWorldTest.class"/>
		<exclude name="HelloWorldTest.class/testGreeting2"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- testbag with failing test (just one method)  -->
    <testbag testattribs="failing" executor="code" name="failing tests (no ide)" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="HelloWorldTest.class/testGreeting2"/>
            </patternset>
        </testset>
    </testbag>


    <!-- testbag with all MyModule tests running in ide mode (i.e. inside NetBeans IDE)
         use ant runtests -Dxtest.attribs=stable,ide to run this testbag  -->
    <testbag testattribs="all and ide" executor="ide" name="all tests (in ide)" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
		<include name="HelloWorldTest.class"/>
		<include name="myorg/*.class"/>
            </patternset>
        </testset>
    </testbag>


    <!-- testbag with tests which does not fail and run in IDE, use ant runtests -Dxtest.attribs=stable,ide -->
    <testbag testattribs="stable and ide" executor="ide" name="stable tests (in ide)" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
		<include name="myorg/*.class"/>
		<include name="HelloWorldTest.class"/>
		<exclude name="HelloWorldTest.class/testGreeting2"/>
            </patternset>
        </testset>
    </testbag>

    
    <testbag testattribs="empty" executor="code" name="empty">
        <testset dir="unit/src">
            <patternset/>
        </testset>
    </testbag>
    <!-- code excecutor - use this one if you plan to run your tests in standard 
                          JVM. You can also write your own executor, which will 
                          then call this one. It is handy when some servers (e.g. rmi registry)
                          have to be started before tests are run and stopped after
                          the run. -->
    <executor name="code" antfile="build-unit.xml" target="runcodetest"/>
    
    <!-- ide executor - use this one if you plan to run your tests inside IDE (internally).
                        Similarly as with code executor, you can create your own to 
                        prepare some neccessary stuff before running tests. -->
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>
    

    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>

    <!-- standard results processor - currently there is only one results processor
                                      in XTest -->    
    <resultsprocessor name="unit" antfile="build.xml" target="test_report" default="true"/>
    
</mconfig>
