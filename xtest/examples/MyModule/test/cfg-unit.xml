<!-- 
  These classes are excluded by default (defined by XTest):
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="MyModule unit test config">
    
    <!-- testbag with all MyModule tests running in jvm mode (i.e. in standard JVM)
         use ant runtests -Dxtest.attribs=all,jvm to run this testbag  -->
    <testbag testattribs="all and jvm" executor="unit-executor" name="all tests (no ide)">
        <testset dir="unit/src">
            <patternset>
	        <include name="myorg/MyorgSuite.class"/>
           </patternset>
        </testset>
    </testbag>

    <!-- testbag with tests which does not fail, use ant runtests -Dxtest.attribs=stable,jvm -->
    <testbag testattribs="stable and jvm" executor="unit-executor" name="stable tests (no ide)">
        <testset dir="unit/src">
            <patternset>
		<include name="myorg/HelloWorldTest.class"/>
		<exclude name="myorg/HelloWorldTest.class/testGreeting2"/>
		<include name="myorg/Hello2Test.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- testbag with failing test (just one method)  -->
    <testbag testattribs="failing" executor="unit-executor" name="failing tests (no ide)">
        <testset dir="unit/src">
            <patternset>
                <include name="myorg/HelloWorldTest.class/testGreeting2"/>
            </patternset>
        </testset>
    </testbag>


    <!-- testbag with all MyModule tests running in ide mode (i.e. inside NetBeans IDE)
         use ant runtests -Dxtest.attribs=all,ide to run this testbag  -->
    <testbag testattribs="all and ide" executor="ide" name="all tests (in ide)">
        <!--
        <testsetup dir="unit/src">
            <setup class="myorg/MySetup" method="setup"/>
            <teardown class="myorg/MySetup" method="teardown"/>
        </testsetup>
	-->
        <testset dir="unit/src">
            <patternset>
                <include name="myorg/Hello2Test.class/testExpectedFailure" expectedFail="I'm expected to fail in IDE"/>
		<include name="myorg/*.class"/>		
		<exclude name="myorg/*Suite.class"/>
            </patternset>
        </testset>
    </testbag>


    <!-- testbag with tests which does not fail and run in IDE, use ant runtests -Dxtest.attribs=stable,ide -->
    <testbag testattribs="stable and ide" executor="ide" name="stable tests (in ide)">
        <testset dir="unit/src">
            <patternset>
		<include name="myorg/HelloWorldTest.class"/>
		<exclude name="myorg/HelloWorldTest.class/testGreeting2"/>
		<include name="myorg/Hello2Test.class"/>
                <include name="myorg/Hello2Test.class/testExpectedFailure" expectedFail="I'm expected to fail in IDE"/>
            </patternset>
        </testset>
    </testbag>

    <!-- empty testbag - for use with xtest.includes and xtest.excludes properties -->
    <testbag testattribs="empty" executor="unit-executor" name="empty">
        <testset dir="unit/src">
            <patternset/>
        </testset>
    </testbag>

    <!-- xxxxx -->

    <!-- unit excecutor - use this one if you plan to run your tests in standard 
                          JVM. You can also write your own executor, which will 
                          then call this one. It is handy when some servers (e.g. rmi registry)
                          have to be started before tests are run and stopped after
                          the run. -->
    <executor name="unit-executor" antfile="build-unit.xml" target="run-unit-test"/>
    
    <!-- ide executor - use this one if you plan to run your tests inside IDE (internally).
                        Similarly as with jvm executor, you can create your own to 
                        prepare some neccessary stuff before running tests. -->
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>
    
    <!-- compiler   - this target will compile tests -->
    <compiler name="unit-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    
</mconfig>
