<!-- Example of site-specific setup.
Test cases use properties to setup dalabase connection. These properties
are site specific and they are defined in some properties file. This
file contains for different databases. To test particular database you have
to use xtest.attribs.
-->
<mconfig name="Site specific examples config">
    
    <!-- Testbag with all test of site-specific testtype. Use for example
         ant -Dxtest.testtype=site-specific -Dxtest.userdata.propertyfile=databases.properties -Dxtest.attribs=oracle,all
    -->
    <testbag testattribs="all,stable" executor="code" name="Test database connections">
        <testset dir="site-specific/src">
            <patternset>
                <include name="**/*"/>
                <exclude name="TestViews.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Execute test of views for all databases except PointBase. -->
    <testbag testattribs="(all OR stable) AND NOT pointbase" executor="code" name="Test views">
        <testset dir="site-specific/src">
            <patternset>
                <include name="TestViews.class"/>
            </patternset>
        </testset>
    </testbag>

    <resultsprocessor name="site-specific" antfile="build.xml" target="test_report" default="true"/>
    
    <executor name="code" antfile="site-specific-build.xml" target="runcodetest"/>

    <compiler name="site-specific-compiler" default="true" antfile="site-specific-build.xml" target="site-specific-compiler"/> -->
    
</mconfig>

