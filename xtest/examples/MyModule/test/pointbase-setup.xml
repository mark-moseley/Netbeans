<!-- Used in examples-instance/master-config to start PointBase database -->
<project name="PointBase setup" basedir="." default="start">

    <!-- Starts PointBase database server -->
    <target name="start">
        <echo message="PointBase setup --------------- START"/>
        <property name="pointbase.home" value="${your.pointbase.home}"/>
        <property name="database.home" value="${pointbase.home}/databases"/>
        <java classname="com.pointbase.net.netServer" fork="false">
            <classpath>
                <pathelement location="${pointbase.home}/server/lib/pbserver41ev.jar"/>
            </classpath>
            <arg value="/win"/>
        </java>
    </target>

    <target name="stop">
        <echo message="PointBase setup ----------------- STOP"/>
    </target>

</project>
