<project name="MyModule logging tests compilers and executors" basedir="." default="all">

<!-- =================== -->
   
    
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->
    
    <!-- This target is executed by XTest  -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <!-- This target builds tests -->    
    <target name="unit-compiler">
        <buildTests srcDir="unit/src" classpath="../mymodule.jar"/>
    </target>    

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!-- This target is executed by XTest  -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <!-- This target executes tests inside IDE -->
    <target name="runidetest">
        <executeTests  pluginName="ide" classpath="../mymodule.jar" testMode="testbag"/>
    </target>
    
    <!-- This target is executed by XTest  -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <!-- This target executes tests in plain JVM -->
    <target name="runcodetest">        
        <executeTests  pluginName="jvm" classpath="../mymodule.jar"/>
    </target>

</project>



