<project name="MyModule/test-unit" basedir="." default="all">

    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <target name="default-compiler">
        <buildTests srcdir="unit/src" compileexcludes="**/data/**">
            <classpath>
                <!-- Add classpath elements needed to compile tests -->
                <pathelement location="../mymodule.jar"/>
            </classpath>
        </buildTests>
    </target>

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->

    <target name="run-unit-test">
        <executeTests pluginname="jvm">
            <classpath>
                <!-- Add classpath elements needed to run tests -->
                <pathelement location="../mymodule.jar"/>
            </classpath>
        </executeTests>
    </target>

    <!-- This target is executed by XTest  -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <!-- This target executes tests inside IDE -->
    <target name="runidetest">
        <executeTests  pluginName="ide" classpath="../mymodule.jar" testMode="testbag"/>
    </target>
    
</project>



