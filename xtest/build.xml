<project name="xtest" default="netbeans" basedir=".">

  <property name="build.sysclasspath" value="ignore"/>
  <property name="build.compiler.deprecation" value="off"/>    
  <property name="build.compiler.debug" value="on"/>
  
  <target name="prepare-junit-extensions">
    <ant dir="../junit" antfile="build.xml" target="jar-junit-extensions"/>
    <mkdir dir="lib"/>
    <copy file="../junit/netbeans/modules/ext/junit-ext.jar" todir="lib"/>
  </target>

  <target name="init">
    <ant dir="external" target="unscramble"/>
  </target>
  
  <target name="compile-dependend-modules">
    <ant dir="../openide" antfile="build.xml" target="jars"/>
    <ant dir="../openide/io" antfile="build.xml" target="jars"/>
    <ant dir="../openide/execution" antfile="build.xml" target="jars"/>
    <ant dir="../core" antfile="build.xml" target="jars"/>
    <ant dir="../core/execution" antfile="build.xml" target="jars"/>
    <ant dir="../core/term" antfile="build.xml" target="jars"/>
    <ant dir="../core/output" antfile="build.xml" target="jars"/>
  </target>

  <target name="compile" depends="init,prepare-junit-extensions">
    <path id="basecp">
	<pathelement location="../openide/openide-13javac-workaround.jar"/>
        <fileset dir="../openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="../core/netbeans/lib/core.jar"/>
	<pathelement location="../core/netbeans/lib/ext/boot.jar"/>
        <!-- execution, because of NbClassLoader .... -->
        <pathelement location="../openide/execution/netbeans/modules/autoload/openide-execution.jar"/>
        <!-- use junit with already compiled extensions -->        
	<pathelement location="src"/>
        <fileset dir="external">
          <include name="xml-apis*.jar"/>
          <include name="xerces*.jar"/>
          <include name="xalan*.jar"/>
          <include name="ant-1.*.jar"/>
        </fileset>
        <fileset dir="../junit/external">
          <include name="junit*.jar"/>
        </fileset>
	<pathelement location="lib/junit-ext.jar"/>
    </path>
    <javac srcdir="src" destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">
      <exclude name="org/netbeans/junit/**"/>
      <exclude name="org/netbeans/xtest/pe/server/**"/>
      <exclude name="org/netbeans/xtest/util/NetUtils.java"/>
      <exclude name="org/netbeans/xtest/ide/MainWithExec.java"/>
      <classpath refid="basecp"/>
    </javac>

    <!-- Compile just MainWithExec with other openide/core modules in CP. -->
    <!-- It is referred to only indirectly using reflection and can access any module. -->
    <javac srcdir="src" destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">
      <include name="org/netbeans/xtest/ide/MainWithExec.java"/>
      <include name="org/netbeans/xtest/testrunner/JUnitTestRunner.java"/>
      <classpath>
        <path refid="basecp"/>
        <pathelement location="../openide/execution/netbeans/modules/autoload/openide-execution.jar"/>
        <pathelement location="../openide/io/netbeans/modules/autoload/openide-io.jar"/>
        <pathelement location="../core/output/netbeans/modules/autoload/core-output.jar"/>
        <pathelement location="../core/execution/netbeans/modules/autoload/core-execution.jar"/>
        <!-- Not needed: -->
        <!--
        <pathelement location="../openide/compiler/netbeans/modules/autoload/openide-compiler.jar"/>
        <pathelement location="../core/compiler/netbeans/modules/autoload/core-compiler.jar"/>
        -->
      </classpath>
    </javac>
  </target>
  
  

  <target name="jars" depends="compile">
    <mkdir dir="lib"/>
    <mkdir dir="lib/patches"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>

    <jar jarfile="lib/xtest.jar"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false">
	<include name="org/netbeans/xtest/**"/>
        <exclude name="org/netbeans/xtest/pe/server*/**"/>
        <exclude name="org/netbeans/xtest/testrunner/**"/>
	<!--
	<exclude name="org/netbeans/xtest/ide/**"/>
	-->
	<!-- XTestErrorManager has problems - temporarily disabling it
	<include name="META-INF/services/org.openide.ErrorManager"/>
	-->
    </jar>	    

    <jar jarfile="lib/xtest-junit-testrunner.jar"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false">
	<include name="org/netbeans/xtest/testrunner/**"/>
    </jar>	        
  
    <copy file="../junit/external/junit-3.7.jar" tofile="lib/junit.jar"/>
    <copy file="external/xml-apis-1.0b2.jar" tofile="lib/xml-apis.jar"/>
    <copy file="external/xerces-2.0.1.jar" tofile="lib/xerces.jar"/>
    <copy file="external/xalan-2.3.1.jar" tofile="lib/xalan.jar"/>
    <!--
    <copy file="external/xtest-ext.jar" todir="lib"/>
    -->
  </target>
  
  <target name="makedist" depends="compile-dependend-modules,jars">
     <zip zipfile="xtest-distribution.zip">
     
	<zipfileset dir="lib" prefix="lib" includes="**/*.xml,**/*.jar,**/*.xsl,**/*.exe,**/*.so,**/*.dll"/>
        <zipfileset dir="." includes="dist_build.xml" fullpath="build.xml"/>
        <zipfileset dir="." includes="standard-test-includes.txt,standard-test-excludes.txt"/>
     </zip>
  </target>

  <target name="netbeans" depends="jars"/>

  <target name="clean">
    <ant dir="../junit" antfile="build.xml" target="clean-junit-ext"/>
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete dir="lib/patches"/>
    <delete file="lib/xtest.jar"/>
    <delete file="lib/junit-ext.jar"/>
    <delete file="lib/junit.jar"/>
    <delete file="lib/xerces.jar"/>
    <delete file="lib/xml-apis.jar"/>
    <delete file="lib/xalan.jar"/>
    <delete file="lib/xtest-junit-testrunner.jar"/>
    <delete file="xtest-distribution.zip"/>
    <delete file="xtest-pes-distribution.zip"/>
  </target>
  
  <target name="real-clean" depends="clean">
    <ant dir="../openide" antfile="build.xml" target="clean"/>
    <ant dir="../openide/io" antfile="build.xml" target="clean"/>
    <ant dir="../openide/execution" antfile="build.xml" target="clean"/>
    <ant dir="../core" antfile="build.xml" target="clean"/>
    <ant dir="../core/execution" antfile="build.xml" target="clean"/>
    <ant dir="../core/term" antfile="build.xml" target="clean"/>
    <ant dir="../core/output" antfile="build.xml" target="clean"/>
  </target>  
  
  <!-- PES targets -->
  <target name="compile-pes" depends="init">
  	<javac srcdir="src" destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">
      <include name="org/netbeans/xtest/pe/**"/>      
      <include name="org/netbeans/xtest/util/**"/>
      <include name="org/netbeans/xtest/xmlserializer/**"/>
      <classpath>		
        <pathelement location="src"/>
        <fileset dir="external">
          <include name="xml-apis*.jar"/>
          <include name="xerces*.jar"/>
          <include name="xalan*.jar"/>
          <include name="ant-1.*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>
  
  <target name="jar-pes" depends="compile-pes">
    <mkdir dir="lib"/>    
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="lib/xtest-pes.jar"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false"
            includes="org/netbeans/xtest/pe/**,org/netbeans/xtest/util/**,org/netbeans/xtest/xmlserializer/**,org/netbeans/xtest/NestedException.class"/>            
    <copy file="external/xml-apis-1.0b2.jar" tofile="lib/xml-apis.jar"/>
    <copy file="external/xerces-2.0.1.jar" tofile="lib/xerces.jar"/>
    <copy file="external/xalan-2.3.1.jar" tofile="lib/xalan.jar"/>
  </target>
  
  <target name="makedist-pes" depends="compile-dependend-modules,jar-pes">
    <zip zipfile="xtest-pes-distribution.zip">
     	<zipfileset dir="lib" prefix="lib" includes="**/*.jar,**/*.xsl"/>
     	<zipfileset dir="bin" prefix="bin" includes="xtest-pes.sh"/>
     	<zipfileset  dir="external/" prefix="lib" includes="ant-1.4.1.jar"/>
     </zip>  
  </target>
  
  <target name="all-xtest">
     <ant dir="../nbbuild" antfile="build.xml" target="all-xtest"/>
  </target>

</project>
