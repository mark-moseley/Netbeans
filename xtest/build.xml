<project name="xtest" default="netbeans" basedir=".">

  <property name="nball.cvs.root" location=".."/>
  <property name="build.sysclasspath" value="ignore"/>
  <property name="build.compiler.deprecation" value="off"/>    
  <property name="build.compiler.debug" value="on"/>
  <property name="xtest.license.file" location="xtest-license.txt"/>
  <property name="nbext" value="../nbbuild"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="plugins.install.dir" location="plugins"/>

  
  
  <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>
  
  <target name="prepare-nbjunit">
    <ant dir="nbjunit" antfile="build.xml" target="jar-nbjunit"/>
    <mkdir dir="lib"/>
    <copy file="nbjunit/netbeans/modules/ext/nbjunit.jar" todir="lib"/>
  </target>

  <target name="init">
    <ant dir="external" target="unscramble"/>
  </target>
  
   <target name="compile-dependend-modules">
        <ant dir="../openide" antfile="build.xml" target="jars"/>
        <ant dir="../openide/loaders" antfile="build.xml" target="jars"/>
        <ant dir="../openide/io" antfile="build.xml" target="jars"/>
        <ant dir="../openide/execution" antfile="build.xml" target="jars"/>
        <ant dir="../core" antfile="build.xml" target="jars"/>
        <ant dir="../core/execution" antfile="build.xml" target="jars"/>
        <ant dir="../core/term" antfile="build.xml" target="jars"/>
        <ant dir="../core/output" antfile="build.xml" target="jars"/>
  </target>

  <target name="compile" depends="init,prepare-nbjunit">
    <path id="basecp">	
	<pathelement location="src"/>
        <fileset dir="external">
          <include name="ant-1.*.jar"/>
          <include name="junit*.jar"/>
        </fileset>
	<pathelement location="lib/nbjunit.jar"/>
    </path>
    <javac srcdir="src" destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">       
      <classpath refid="basecp"/>
    </javac>

  </target>
  
  

  <target name="jars" depends="compile">
    <mkdir dir="lib"/>
    <mkdir dir="lib/patches"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>

    <jar jarfile="lib/xtest.jar"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false">
	<include name="org/netbeans/xtest/**"/>
        <exclude name="org/netbeans/xtest/pe/server*/**"/>
        <exclude name="org/netbeans/xtest/testrunner/**"/>
    </jar>	    
    
    <jar jarfile="lib/xtest-junit-testrunner.jar"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false">
	<include name="org/netbeans/xtest/testrunner/**"/>
    </jar>	        
  
    <copy file="external/junit-3.8.1.jar" tofile="lib/junit.jar"/>
  </target>
  
  <target name="build-xtest" depends="jars"/>
    
  
  <!-- builds XTest's plugins -->
  <target name="build-plugins">
    <mkdir dir="${plugins.install.dir}"/>
    <ant dir="plugins_src/jvm" target="deploy"/>
    <ant dir="plugins_src/ide" target="deploy"/>
  </target>
  
  <target name="build-all" depends="build-xtest, build-plugins"/>
  
  
  <target name="makedist" depends="compile-dependend-modules,build-all">
     <zip zipfile="xtest-distribution.zip">     
	<zipfileset dir="lib" prefix="lib" includes="**/*.xml,**/*.jar,**/*.xsl,**/*.exe,**/*.so,**/*.dll"/>
        <zipfileset dir="plugins" prefix="plugins" includes="**"/>
        <zipfileset dir="." includes="dist_build.xml" fullpath="build.xml"/>
        <zipfileset dir="." includes="standard-test-includes.txt,standard-test-excludes.txt"/>
     </zip>
  </target>

  <target name="netbeans" depends="build-all"/>

  <target name="clean-xtest">
    <ant dir="nbjunit" antfile="build.xml" target="clean-nbjunit"/>
    <delete file="lib/nbjunit.jar"/>    
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="modulesrc">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="module-manifest-subst.mf"/>
    <delete dir="lib/patches"/>
    <delete file="lib/xtest.jar"/>
    <delete file="lib/xtest-ide-plugin.jar"/>
    <delete file="lib/junit.jar"/>
    <delete file="lib/xalan.jar"/>
    <delete file="lib/xerces.jar"/>
    <delete file="lib/xml-apis.jar"/>
    <delete file="lib/xtest-junit-testrunner.jar"/>
    <delete file="xtest-distribution.zip"/>
    <delete file="xtest-pes-distribution.zip"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
    <delete dir="${plugins.install.dir}"/>  
  </target>
  
   <target name="clean-plugins">
    <!-- plugins -->
    <ant dir="plugins_src/jvm" target="clean"/>
    <ant dir="plugins_src/ide" target="clean"/>  
  </target>
  
  <target name="clean" depends="clean-xtest,clean-plugins">    

  </target>
  
 
  
  <target name="real-clean" depends="clean">
    <!-- depending modules -->
    <ant dir="../openide" antfile="build.xml" target="clean"/>
    <ant dir="../openide/loaders" antfile="build.xml" target="clean"/>
    <ant dir="../openide/io" antfile="build.xml" target="clean"/>
    <ant dir="../openide/execution" antfile="build.xml" target="clean"/>
    <ant dir="../core" antfile="build.xml" target="clean"/>
    <ant dir="../core/execution" antfile="build.xml" target="clean"/>
    <ant dir="../core/term" antfile="build.xml" target="clean"/>
    <ant dir="../core/output" antfile="build.xml" target="clean"/>    
  </target>
  
  <target name="version" depends="jars">
        <ant antfile="lib/module_harness.xml" target="version">
            <property name="xtest.home" value="./"/>
        </ant>
  </target>  
 
  
  <target name="all-xtest">
     <ant dir="../nbbuild" antfile="build.xml" target="all-xtest"/>
  </target>  

  <target name="timestamp" unless="buildnumber">
    <tstamp>
        <format property="buildnumber" pattern="yyyyMMddhhmm"/>
    </tstamp>
  </target>
  
  
  
  <!-- XTest PES proxy targets -->
  <target name="makedist-pes">
    <ant dir="pes" target="makedist"/>
  </target>
  
  <target name="clean-pes">
    <ant dir="pes" target="clean"/>
  </target>
  
  
  <!-- XTest module - currently not maintained !!!! -->
  
  <target name="nbjunit-module">
    <ant dir="nbjunit" antfile="build.xml" target="netbeans"/>
    <mkdir dir="netbeans"/>       
    <copy todir="netbeans">
       <fileset dir="nbjunit/netbeans"/>
    </copy>
  </target>

  <target name="nbm" depends="nbjunit-module,makedist,timestamp">
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="module-manifest.mf" tofile="module-manifest-subst.mf" filtering="on"/>
    <mkdir dir="netbeans/modules"/>
    <locjar jarfile="netbeans/modules/xtest.jar"
         manifest="module-manifest-subst.mf"
         basedir="modulesrc"
	 excludesfile="../nbbuild/standard-jar-excludes.txt"
	 compress="false">
    </locjar>
    <mkdir dir="netbeans/xtest-distribution"/>
    <unzip src="xtest-distribution.zip" dest="netbeans/xtest-distribution" />
    <makenbm file="xtest.nbm"
             topdir="."
             module="netbeans/modules/xtest.jar"
             homepage="http://xtest.${homepage.base}"
	         distribution="http://${dist.base}/xtest.nbm">
      <license file="${xtest.license.file}"/>
<!--      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/> -->
    </makenbm>
  </target>
</project>
