<project name="xtest/external" default="unscramble" basedir=".">
    <property name="extnl" location="../../nbbuild/external"/>
    <target name="unscramble">
        <taskdef name="unscramble" classname="org.netbeans.nbbuild.Unscramble" classpath="${extnl}/scrambler.jar"/>
        <unscramble logfile="${extnl}/unscrambling.log">
            <!-- LFI #2044: -->
            <binary clear="ant-1.4.1.jar" scrambled="ant-1.4.1.jar.scrambled" license="${extnl}/apache-license.txt"/>
            <!-- LFI #1318: -->
            <binary clear="junit-3.8.1.jar" scrambled="junit-3.8.1.jar.scrambled" license="ibm-public-license.txt"/>
        </unscramble>
    </target>
    <target name="scramble">
        <taskdef name="scramble" classname="org.netbeans.nbbuild.Scramble" classpath="${extnl}/scrambler.jar"/>
        <scramble>
            <binary clear="ant-1.4.1.jar.master" scrambled="ant-1.4.1.jar.scrambled" license="${extnl}/apache-license.txt"/>
            <binary clear="junit-3.8.1.jar.master" scrambled="junit-3.8.1.jar.scrambled" license="ibm-public-license.txt"/>
        </scramble>
    </target>
    <condition property="skip-download-emma" >
        <and>
            <available file="emma_ant.jar" />
            <available file="emma.jar" />
        </and>
    </condition>
    <target name="emma" unless="skip-download-emma" depends="setup-proxy" >
        <echo message="Going to download emma. If it fails download it from http://emma.sf.net or invoke with -Dproxy.host='host' -Dproxy.port='port'" />
        <get src="http://mesh.dl.sourceforge.net/sourceforge/emma/emma-2.0.4217-lib.zip" dest="emma-2.0.4217-lib.zip" />
        <unzip dest="." src="emma-2.0.4217-lib.zip" />
    </target>
    
    <target name="setup-proxy" if="proxy.host" >
        <setproxy proxyhost="${proxy.host}" proxyport="${proxy.port}" />
    </target>
    
    <target name="clean">
        <delete file="ant-1.4.1.jar"/>
        <delete file="junit-3.8.1.jar"/>
        <delete file="emma.jar" />
        <delete file="emma_ant.jar" />
        <delete file="emma-2.0.4217-lib.zip" />
    </target>
</project>
