<mconfig name="Unit config">

    <!-- Used in instance/master-config.xml to test reporting of compilation errors. -->
    <testbag testattribs="uncompilable" compiler="unit-uncompilable-compiler" executor="jvm" name="Uncompilable tests">
        <testset dir="unit/src">
            <patternset>
                <include name="**/UncompilableTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Used in instance/master-config.xml to test reporting of empty testbag. -->
    <testbag testattribs="empty" compiler="unit-compiler" executor="jvm" name="Empty testbag">
        <testset dir="unit/src">
            <patternset>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Used in instance/master-config.xml to test JVMExecuteWatchdog. -->
    <testbag testattribs="watchdog" compiler="unit-compiler" executor="jvm" name="JVM Execute Watchdog" timeout="60000">
        <testset dir="unit/src">
            <patternset>
                <include name="**/JVMExecuteWatchdogTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- Test reporting of compilation errors (http://www.netbeans.org/issues/show_bug.cgi?id=73182). -->
    <testbag testattribs="stable" compiler="instance" executor="jvm" name="Uncompilable tests">
        <testset dir="unit/src">
            <patternset>
                <include name="**/CheckUncompilableTest.class"/>
                <include name="**/CheckEmptyTestbag.class"/>
                <include name="**/CheckJVMExecuteWatchdogTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- Test reporting of unfinished tests (http://www.netbeans.org/issues/show_bug.cgi?id=73182). -->
    <testbag testattribs="stable" compiler="unit-compiler" executor="jvm" name="Unfinished tests">
        <testset dir="unit/src">
            <patternset>
                <!-- Order of classes is significant. -->
                <include name="**/SpeedSuiteTest75001.class"/>
                <include name="**/CheckSpeedSuiteTest75001.class"/>
                <include name="**/UnfinishedWithSetupTest74360.class"/>
                <include name="**/CheckUnfinishedWithSetupTest74360.class"/>
                <include name="**/UnfinishedTest.class"/>
                <include name="**/CheckUnfinishedTest.class"/>
                <include name="**/ErrorLoadingTest.class"/>
                <include name="**/CheckErrorLoadingTest.class"/>
            </patternset>
        </testset>
    </testbag>
  
    <executor name="jvm" antfile="build-unit.xml" target="run-jvm" default="true"/>
    <executor name="ide" antfile="build-unit.xml" target="run-ide"/>
    <compiler name="instance" antfile="build-unit.xml" target="run-instance"/>
    <compiler name="unit-uncompilable-compiler" antfile="build-unit.xml" target="unit-uncompilable-compiler"/>
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>

</mconfig>
