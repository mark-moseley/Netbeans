<project name="xtest/pes/test-unit" basedir="." default="all">

    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <!-- Compile unit tests. This target is used in cfg-unit.xml. -->
    <target name="unit-compiler">
        <!-- Build PES before tests -->
        <ant dir=".." target="jar"/>
        <buildTests srcDir="unit/src" compileExcludes="**/data/**">
            <classpath>
                <pathelement location="../lib/xtest-pes.jar"/>
            </classpath>
        </buildTests>
    </target>
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!-- Run tests in JVM -->
    <target name="run-jvm">
        <executeTests  pluginName="jvm">
            <classpath>
                <pathelement location="../lib/xtest-pes.jar"/>
                <pathelement location="../lib/ant.jar"/>
                <pathelement location="${xtest.data}/classes12.zip"/>
            </classpath>
        </executeTests>
    </target>
    
</project>

