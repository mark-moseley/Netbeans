<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://www.netbeans.org/ns/project/1">
    <type>org.netbeans.modules.ant.freeform</type>
    <configuration>
        <general-data xmlns="http://www.netbeans.org/ns/freeform-project/1">
            <name>XTest PES</name>
            <folders>
                <source-folder>
                    <label>src</label>
                    <type>java</type>
                    <location>src</location>
                </source-folder>
                <source-folder>
                    <label>xtest/src</label>
                    <type>java</type>
                    <location>../src</location>
                </source-folder>
                <source-folder>
                    <label>Unit Test Packages</label>
                    <type>java</type>
                    <location>test/unit/src</location>
                </source-folder>
            </folders>
            <ide-actions>
                <action name="build">
                    <target>build-pes</target>
                </action>
                <action name="rebuild">
                    <target>clean</target>
                    <target>build-pes</target>
                </action>
                <action name="clean">
                    <target>clean</target>
                </action>
                <action name="run.single">
                    <script>nbproject/ide-file-targets.xml</script>
                    <target>run-selected-file-in-src</target>
                    <context>
                        <property>run.class</property>
                        <folder>src</folder>
                        <pattern>\.java$</pattern>
                        <format>java-name</format>
                        <arity>
                            <one-file-only/>
                        </arity>
                    </context>
                </action>
                <action name="compile.single">
                    <script>nbproject/ide-file-targets.xml</script>
                    <target>compile-selected-files-in-src</target>
                    <context>
                        <property>files</property>
                        <folder>src</folder>
                        <pattern>\.java$</pattern>
                        <format>relative-path</format>
                        <arity>
                            <separated-files>,</separated-files>
                        </arity>
                    </context>
                </action>
            </ide-actions>
            <view>
                <items>
                    <source-folder style="packages">
                        <label>src</label>
                        <location>src</location>
                    </source-folder>
                    <source-folder style="packages">
                        <label>xtest/src</label>
                        <location>../src</location>
                    </source-folder>
                    <source-folder style="packages">
                        <label>Unit Test Packages</label>
                        <location>test/unit/src</location>
                    </source-folder>
                    <source-file>
                        <location>build.xml</location>
                    </source-file>
                </items>
                <context-menu>
                    <ide-action name="build"/>
                    <ide-action name="rebuild"/>
                    <ide-action name="clean"/>
                </context-menu>
            </view>
            <subprojects/>
        </general-data>
        <java-data xmlns="http://www.netbeans.org/ns/freeform-project-java/2">
            <compilation-unit>
                <package-root>src</package-root>
                <classpath mode="compile">${ant.home}/lib/ant.jar</classpath>
                <source-level>1.4</source-level>
            </compilation-unit>
            <compilation-unit>
                <package-root>../src</package-root>
                <classpath mode="compile">${ant.home}/lib/ant.jar</classpath>
                <source-level>1.4</source-level>
            </compilation-unit>
            <compilation-unit>
                <package-root>test/unit/src</package-root>
                <unit-tests/>
                <classpath mode="compile">lib/ant.jar;lib/xtest-pes.jar;../lib/junit.jar;../lib/nbjunit-ide.jar;../lib/nbjunit.jar</classpath>
                <source-level>1.4</source-level>
            </compilation-unit>
        </java-data>
    </configuration>
</project>
