<!-- Used in build.xml#mc.generate to generate custom master config. -->
<project basedir="." default="proceedTest" name="Top Level Checker">
       
    <target name="check">
          <fileset dir="." id="all_cfgs">
	         <include name="cfg-*.xml"/>
	  </fileset>
	  <pathconvert targetos="unix" property="cfg_file" refid="all_cfgs" setonempty="false">
	      <map from="${basedir}${file.separator}" to=""/>
	  </pathconvert>
	  <path id="cfg.file">
	      <pathelement location="${cfg_file}"/>
          </path>
	  <pathconvert targetos="unix" property="testtype" refid="cfg.file">
	      <mapper type="regexp" from="^(.*)cfg-(.*)\.xml$$" to="\2"/>      
	  </pathconvert>
	  
	  <condition property="this.allowed" >
	     <isSet property="cfg_file"/>
	  </condition>
    </target>

	
	
    <target name="makeMcRecord">
	   <echo message="Creating MC record for ${basedir} in ${mc.configfile}"/>
	   <pathconvert targetos="unix" property="bd.unixstyle.path">
		<path path="${basedir}"/>
		<chainedmapper>
		    <globmapper from="${xtest.basedir}${file.separator}*${file.separator}test" to="*"/>
		</chainedmapper>
	   </pathconvert>

	   <echo append="true" file="${mc.configfile}">
		&lt;module name="${bd.unixstyle.path}" testtypes="${testtype}"/&gt;</echo>
    </target>

    <target name="proceedTest" depends="check" if="this.allowed">
	   <echo message="RUNNING ${basedir}"/>
	   <antcall target="makeMcRecord"/>
    </target>

</project>