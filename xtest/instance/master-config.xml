<testconfig>

  <!-- Dev TESTS -->
  <!-- ========= -->  

  <config name="config-1">
      <module name="core" testtypes="unit" attributes="stable"/>
      <module name="openide" testtypes="unit" attributes="stable"/>
      <module name="openidex" testtypes="unit" attributes="stable"/>
  </config>
  
  <!-- QA TESTS -->
  <!-- ======== -->
  
  <!-- QA functional tests for Netbeans -->
  <config name="qa-functional-nb">
      <module name="ant"    	testtypes="qa-functional"  attributes="stable"/>
      <module name="beans"  	testtypes="qa-func"        attributes="stable"/>
      <module name="clazz"  	testtypes="qa-functional"  attributes="stable"/>
      <module name="core"   	testtypes="qa-functional"  attributes="stable"/>  
      <module name="editor" 	testtypes="qa-functional"  attributes="stable"/>
      <module name="i18n"   	testtypes="qa-functional"  attributes="stable"/>
      <module name="java"   	testtypes="qa-functional"  attributes="stable"/>
      <module name="openide"  	testtypes="qa-functional"  attributes="stable"/>
      <module name="projects" 	testtypes="qa-functional"  attributes="stable,jdk14"/>
      <module name="qa"       	testtypes="serialization"  attributes="nb34"/>
      <module name="qa"       	testtypes="qa-functional"  attributes="stable"/>
      <module name="vcsgeneric"	testtypes="qa-functional"  attributes="stable"/>      
  </config>
  
  <!-- QA functional tests for Netbeans on jdk 1.3 -->
  <config name="qa-functional-nb-jdk13">
      <module name="ant"    	testtypes="qa-functional"  attributes="stable"/>
      <module name="beans"  	testtypes="qa-func"        attributes="stable"/>
      <module name="clazz"  	testtypes="qa-functional"  attributes="stable"/>
      <module name="core"   	testtypes="qa-functional"  attributes="stable"/>  
      <module name="editor" 	testtypes="qa-functional"  attributes="stable"/>
      <module name="i18n"   	testtypes="qa-functional"  attributes="stable"/>
      <module name="java"   	testtypes="qa-functional"  attributes="stable"/>
      <module name="openide"  	testtypes="qa-functional"  attributes="stable"/>
      <module name="projects" 	testtypes="qa-functional"  attributes="stable,jdk13"/>
      <module name="qa"       	testtypes="serialization"  attributes="nb34"/>
      <module name="qa"       	testtypes="qa-functional"  attributes="stable"/>
      <module name="vcsgeneric"	testtypes="qa-functional"  attributes="stable"/>      
  </config>
  
  <!-- QA functional tests for FFJ CE -->
  <!-- Currently tests for FFJ are in orion_fcs branch 
  <config name="qa-functional-ffjce">
  </config>
  -->

</testconfig>

