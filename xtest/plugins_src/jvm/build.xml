<project basedir="." default="all" name="XTest JVM plugin">
    
    <property file="build.properties"/>
    
    <target name="all" depends="deploy">        
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">          
          <classpath path="${basecp}"/>
        </javac>     
    </target>
    
    
    <target name="jar" depends="compile">      
        <jar jarfile="lib/xtest-jvm-plugin.jar"            
            basedir="build/classes"
            excludesfile="../../../nbbuild/standard-jar-excludes.txt"
            compress="false">
            <include name="org/netbeans/xtest/plugin/jvm/**"/>
        </jar>
    </target>
    
    
    <target name="deploy" depends="jar">
        <mkdir dir="${plugin.install.dir}/lib"/>        
        <copy file="plugin_descriptor.xml" toDir="${plugin.install.dir}"/>
        <copy todir="${plugin.install.dir}/lib">
            <fileset dir="lib"/>
        </copy>
    </target>
    
    <target name="clean">
        <delete dir="${plugin.install.dir}"/>    
        <delete file="lib/xtest-jvm-plugin.jar"/>
        <delete dir="build"/>
    </target>
    
</project>
