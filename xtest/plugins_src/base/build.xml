<project basedir="." default="all" name="Abstract Base Plugin">


    <property name="plugins.install.dir" value="../../plugins"/>
    <property name="plugin.install.dir" value="${plugins.install.dir}/base"/>

    <target name="all" depends="deploy">        
    </target>        

    <target name="compile">
    </target>    
    
    <target name="jar" depends="compile">      
    </target>    
    
    <target name="deploy" depends="jar">        
        <mkdir dir="${plugin.install.dir}/lib"/>        
        <copy file="plugin_descriptor.xml" toDir="${plugin.install.dir}"/>
        <copy todir="${plugin.install.dir}/lib">
            <fileset dir="lib"/>
        </copy>
    </target>
    
    <target name="clean">
        <delete dir="${plugin.install.dir}"/>
    </target>
    
</project>
