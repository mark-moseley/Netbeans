<project name="xtest/ide_plugin/test-unit" basedir="." default="all">

    <property name="netbeans.dest.dir" location="../../../../nbbuild/netbeans"/>
    
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <!-- Compile unit tests. This target is used in cfg-unit.xml. -->
    <target name="unit-compiler">
        <buildTests srcDir="unit/src" compileExcludes="**/data/**">
            <classpath>
                <pathelement location="${xtest.home}/lib/xtest.jar"/>
                <pathelement location="${netbeans.dest.dir}/platform9/lib/org-openide-util.jar"/>
                <!-- Used in NoScanTest class. -->
                <pathelement location="${xtest.home}/lib/nbjunit-ide.jar"/>
                <pathelement location="${netbeans.dest.dir}/platform9/modules/org-netbeans-api-progress.jar"/>
                <!-- Used in OpenCreateProjectTest. -->
                <pathelement location="${netbeans.dest.dir}/ide10/modules/org-netbeans-modules-projectapi.jar"/>
                <pathelement location="${netbeans.dest.dir}/ide10/modules/org-netbeans-modules-projectui.jar"/>
                <!-- Used in BlacklistedClassesHandlerTest. -->
                <pathelement location="${xtest.home}/plugins/ide/lib/xtest-ide-main.jar"/>
            </classpath>
        </buildTests>
    </target>

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!-- Run tests in JVM -->
    <target name="run-jvm">
        <executeTests  pluginName="jvm">
            <classpath>
                <!-- Used in BlacklistedClassesHandlerTest. -->
                <pathelement location="${xtest.home}/plugins/ide/lib/xtest-ide-main.jar"/>
            </classpath>
        </executeTests>
    </target>
    
    <!-- Run tests in IDE -->
    <target name="run-ide">
        <property name="xtest.ide.open.projects" value=""/>
        <property name="xtest.ide.commandline.suffix" value="--nogui"/>
        <executeTests  pluginName="ide">
            <classpath>
            </classpath>
        </executeTests>
    </target>
    
    <!-- Run tests in IDE with prepared projects -->
    <target name="run-ide-projects">
        <!-- Optional: Creates an empty Java project in IDE -->
        <property name="xtest.ide.create.project" value="true"/>
        <!-- Optional: Opens project at specified location -->
        <property name="xtest.ide.open.project" location="${xtest.data}/SampleProject"/>
        <property name="xtest.ide.commandline.suffix" value="--nogui"/>
        <executeTests  pluginName="ide">
            <classpath>
            </classpath>
        </executeTests>
    </target>
    
    <!-- Run tests in IDE with -J-Dnetbeans.javacore.noscan=true -->
    <target name="run-ide-noscan">
        <property name="xtest.ide.open.projects" value=""/>
        <property name="xtest.ide.commandline.suffix" value="--nogui -J-Dnetbeans.javacore.noscan=true"/>
        <executeTests  pluginName="ide">
            <classpath>
            </classpath>
        </executeTests>
    </target>
    

</project>

