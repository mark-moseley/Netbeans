<project name="xtest/ide_plugin/test-unit" basedir="." default="all">

    <property name="netbeans.dest.dir" location="../../../../nbbuild/netbeans"/>
    
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <!-- Compile unit tests. This target is used in cfg-unit.xml. -->
    <target name="unit-compiler">
        <buildTests srcDir="unit/src" compileExcludes="**/data/**">
            <classpath>
                <pathelement location="${xtest.home}/lib/xtest.jar"/>
                <pathelement location="${netbeans.dest.dir}/platform7/lib/org-openide-util.jar"/>
            </classpath>
        </buildTests>
    </target>

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!-- Run tests in JVM -->
    <target name="run-jvm">
        <executeTests  pluginName="jvm">
            <classpath>
            </classpath>
        </executeTests>
    </target>
    
    <!-- Run tests in IDE -->
    <target name="run-ide">
        <property name="xtest.ide.commandline.suffix" value="--nogui"/>
        <executeTests  pluginName="ide">
            <classpath>
            </classpath>
        </executeTests>
    </target>
</project>

