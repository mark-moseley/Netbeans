<project basedir="." default="deploy" name="XTest IDE plugin">

    <property name="netbeans.dest.dir" location="../../../nbbuild/netbeans"/>
    <property file="${netbeans.dest.dir}/moduleCluster.properties"/>
    <property file="build.properties"/>

    <patternset id="xtest.ide.main">
        <include name="org/netbeans/xtest/plugin/ide/Main*"/>
        <!-- Exclude when building against NetBeans Platform. -->
        <exclude name="org/netbeans/xtest/plugin/ide/MainWithProjects*" unless="java/source.dir"/>
        <!-- Stuff needed for xtest error manager functionality controled by xtest.ide.error.manager property -->
        <include name="org/netbeans/xtest/plugin/ide/services/XTestErrorManager*"/>
        <include name="META-INF/**"/>
        <!-- Needed for xtest IDE handler functionality controled by xtest.ide.handler property -->
        <include name="org/netbeans/xtest/plugin/ide/XTestIDEHandler*"/>
    </patternset>

    <patternset id="xtest.ide.plugin">
        <include name="org/netbeans/xtest/plugin/ide/Ide*"/>
    </patternset>

    <target name="compile">
        <mkdir dir="build/classes"/>

        <javac srcdir="src" destdir="build/classes" source="1.4"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">          
          <classpath path="${basecp}"/>  
          <patternset refid="xtest.ide.main" />
        </javac> 
 
        <javac srcdir="src" destdir="build/classes" source="1.4"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">          
          <classpath path="${bootcp}"/>
          <patternset refid="xtest.ide.plugin" />
        </javac>
        <!-- Stuff needed for xtest error manager functionality controled by xtest.ide.error.manager property -->
        <copy file="src/META-INF/services/org.openide.ErrorManager" todir="build/classes/META-INF/services"/>
    </target>

    <target name="jar" depends="compile">
        <!-- ant tasks used in ide_plugin_targets.xml -->
        <jar jarfile="lib/xtest-ide-plugin.jar"            
            basedir="build/classes"
            compress="false">
            <patternset refid="xtest.ide.plugin" />
        </jar>
        <!-- load by system classloader (-J-Dnetbeans.systemclassloader.patches) -->
        <jar jarfile="lib/xtest-ide-testexec.jar"
            basedir="build/classes"
            compress="false">
            <include name=""/>
            <!-- At the time there is no reason to include anything in this jar. -->
            <!-- <include name="org/netbeans/xtest/plugin/ide/Main*.class"/> -->
        </jar>
        <!-- -J-Dnetbeans.classpath or also AKA Dynamic Classpath-->
        <jar jarfile="lib/xtest-ide-main.jar"
            basedir="build/classes"
            compress="false">
            <patternset refid="xtest.ide.main" />
        </jar>        
    </target>
    
    
    <target name="deploy" depends="jar">
        <property name="plugin.install.dir" value="${plugins.install.dir}/ide"/>
        <mkdir dir="${plugin.install.dir}/lib"/>        
        <copy file="plugin_descriptor.xml" toDir="${plugin.install.dir}"/>
        <copy todir="${plugin.install.dir}/lib">
            <fileset dir="lib"/>
        </copy>
    </target>
    
    <target name="clean">
        <delete file="lib/xtest-ide-main.jar"/>
        <delete file="lib/xtest-ide-testexec.jar"/>
        <delete file="lib/xtest-ide-plugin.jar"/>
        <delete dir="build"/>
     </target>
     
</project>
