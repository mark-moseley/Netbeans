<!-- build script for IDE XTest plugin -->
<project basedir="." default="all" name="XTest IDE plugin">
    <target name="all">
        <!-- WRITEME -->
    </target>
    
    
    <target name="compile">
        <path id="basecp">
            <pathelement location="${nball.cvs.root}/openide/openide-13javac-workaround.jar"/>
            <fileset dir="${nball.cvs.root}/openide/netbeans/lib">
                <include name="openide*.jar" />
            </fileset>
            <pathelement location="${nball.cvs.root}/openide/loaders/netbeans/lib/openide-loaders.jar"/>
            <pathelement location="${nball.cvs.root}/core/netbeans/lib/core.jar"/>
            <pathelement location="${nball.cvs.root}/core/netbeans/lib/ext/boot.jar"/>
            <pathelement location="${nball.cvs.root}/openide/execution/netbeans/modules/autoload/openide-execution.jar"/>
            <pathelement location="${nball.cvs.root}/openide/io/netbeans/modules/autoload/openide-io.jar"/>
            <pathelement location="${nball.cvs.root}/core/output/netbeans/modules/autoload/core-output.jar"/>
            <pathelement location="${nball.cvs.root}/core/execution/netbeans/modules/autoload/core-execution.jar"/>
            <!-- use junit with already compiled extensions -->        
            <pathelement location="../../lib/xtest.jar"/>
            <pathelement location="../../lib/xtest-junit-testrunner.jar"/>
            <pathelement location="../../lib/nbjunit.jar"/>
            <fileset dir="../../external">
                <include name="ant-1.*.jar"/>
                <include name="junit*.jar"/>
            </fileset>            
        </path>
        <javac srcdir="src" destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">          
          <classpath refid="basecp"/>
        </javac> 
    </target>
    
    
    <target name="jar" depends="compile">
        <jar jarfile="lib/xtest-ide-plugin.jar"            
            basedir="src"
            excludesfile="${nball.cvs.root}/nbbuild/standard-jar-excludes.txt"
            compress="false">
            <include name="org/netbeans/xtest/ide/**"/>
            <!-- XTestErrorManager has problems - temporarily disabling it
            <include name="META-INF/services/org.openide.ErrorManager"/>
            -->
        </jar>
        <!-- junit test runner customizations for ide mode -->
        <jar jarfile="lib/ide-junit-testrunner.jar"            
            basedir="src"
            excludesfile="${nball.cvs.root}/nbbuild/standard-jar-excludes.txt"
            compress="false">
            <include name="org/netbeans/xtest/testrunner/**"/>
            <!-- XTestErrorManager has problems - temporarily disabling it
            <include name="META-INF/services/org.openide.ErrorManager"/>
            -->
        </jar>               
    </target>
    
    
    <target name="deploy" depends="jar">
        <property name="plugin.install.dir" value="${plugins.install.dir}/ide"/>
        <mkdir dir="${plugin.install.dir}/lib"/>        
        <copy file="plugin_descriptor.xml" toDir="${plugin.install.dir}"/>
        <copy todir="${plugin.install.dir}/lib">
            <fileset dir="lib"/>
        </copy>
    </target>
    
    <target name="clean">
        <delete file="lib/ide-junit-testrunner.jar"/>
        <delete file="lib/xtest-ide-plugin.jar"/>
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>        
        </delete>
     </target>
     
</project>
