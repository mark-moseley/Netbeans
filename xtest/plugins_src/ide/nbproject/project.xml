<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://www.netbeans.org/ns/project/1">
    <type>org.netbeans.modules.ant.freeform</type>
    <configuration>
        <general-data xmlns="http://www.netbeans.org/ns/freeform-project/1">
            <name>XTest IDE plugin</name>
            <properties>
                <property name="netbeans.dest.dir">../../../nbbuild/netbeans</property>
                <property-file>${netbeans.dest.dir}/moduleCluster.properties</property-file>
                <property-file>build.properties</property-file>
            </properties>
            <folders>
                <source-folder>
                    <label>Sources</label>
                    <type>java</type>
                    <location>src</location>
                </source-folder>
                <source-folder>
                    <label>Unit Test Packages</label>
                    <type>java</type>
                    <location>test/unit/src</location>
                </source-folder>
            </folders>
            <ide-actions>
                <action name="build">
                    <target>deploy</target>
                </action>
                <action name="rebuild">
                    <target>clean</target>
                    <target>deploy</target>
                </action>
                <action name="clean">
                    <target>clean</target>
                </action>
                <action name="compile.single">
                    <script>nbproject/ide-file-targets.xml</script>
                    <target>compile-selected-files-in-src</target>
                    <context>
                        <property>files</property>
                        <folder>src</folder>
                        <pattern>\.java$</pattern>
                        <format>relative-path</format>
                        <arity>
                            <separated-files>,</separated-files>
                        </arity>
                    </context>
                </action>
            </ide-actions>
            <view>
                <items>
                    <source-folder style="packages">
                        <label>Sources</label>
                        <location>src</location>
                    </source-folder>
                    <source-folder style="packages">
                        <label>Unit Test Packages</label>
                        <location>test/unit/src</location>
                    </source-folder>
                    <source-file>
                        <location>build.xml</location>
                    </source-file>
                    <source-file>
                        <location>build.properties</location>
                    </source-file>
                    <source-file>
                        <location>plugin_descriptor.xml</location>
                    </source-file>
                    <source-file>
                        <location>lib/ide_plugin_targets.xml</location>
                    </source-file>
                </items>
                <context-menu>
                    <ide-action name="build"/>
                    <ide-action name="rebuild"/>
                    <ide-action name="clean"/>
                    <action>
                        <label>Compile</label>
                        <target>compile</target>
                    </action>
                </context-menu>
            </view>
            <subprojects/>
        </general-data>
        <java-data xmlns="http://www.netbeans.org/ns/freeform-project-java/2">
            <compilation-unit>
                <package-root>src</package-root>
                <classpath mode="compile">${basecp}</classpath>
                <source-level>1.4</source-level>
            </compilation-unit>
            <compilation-unit>
                <package-root>test/unit/src</package-root>
                <unit-tests/>
                <classpath mode="compile">../../lib/junit.jar;../../lib/nbjunit-ide.jar;../../lib/nbjunit.jar;../../lib/xtest.jar;../../plugins/ide/lib/xtest-ide-main.jar;../../../nbbuild/netbeans/platform10/lib/org-openide-util.jar;../../../nbbuild/netbeans/platform10/modules/org-netbeans-api-progress.jar;../../../nbbuild/netbeans/ide11/modules/org-netbeans-modules-projectapi.jar;../../../nbbuild/netbeans/ide11/modules/org-netbeans-modules-projectui.jar</classpath>
                <source-level>1.4</source-level>
            </compilation-unit>
        </java-data>
    </configuration>
</project>
