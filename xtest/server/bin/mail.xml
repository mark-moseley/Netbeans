<?xml version="1.0"?>

<project name="mail" basedir="." default="send">
 
   <property name="xtest.mail.from" value="ffj-xtest-admins@sun.com"/>
   <property name="xtest.mail.to" value="ffj-xtest-admins@sun.com"/>
   <property name="xtest.mail.subject" value="MESSAGE from xtest server"/>
   <property name="xtest.mail.message" value=""/>
   <property name="xtest.mail.mailhost" value=""/>
   <property name="xtest.mail.subject.prefix" value=""/>

   <target name="send">
        <mail from="${xtest.mail.from}" tolist="${xtest.mail.to}" 
              subject="${xtest.mail.subject.prefix} ${xtest.mail.subject}" message="${xtest.mail.message}"
              mailhost="${xtest.mail.mailhost}"/>
   </target>
</project>