<project name="web_jspparser" default="netbeans" basedir=".">

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../../nbbuild/nbantext.jar"/>

  <property name="nb_root" location="../.."/>
  <property name="binroot" location="../../../nbextra"/>
  <property name="core_root" location="../core"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../../nbbuild/standard-nbm-license.txt"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="storepass" value="?"/>

  <target name="web-core.compile">
    <ant dir="${core_root}" target="compile"/>
  </target>

  <target name="compile" depends="web-core.compile">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <include name="org/netbeans/modules/web/jspparser/"/>
      <classpath>
        <pathelement location="${nb_root}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${binroot}/core/release/lib/ext/jaxp.jar"/>
        <pathelement location="${binroot}/core/release/lib/ext/xml-apis.jar"/>
        <pathelement location="${core_root}/src/"/>
        <pathelement location="${binroot}/web/servletapi23/release/modules/ext/servlet-2.3.jar"/>
        <pathelement location="${binroot}/web/jspparser/release/modules/ext/jasper-runtime.jar"/>
        <pathelement location="${binroot}/web/jspparser/release/modules/ext/jasper-compiler.jar"/>
        <fileset dir="${nb_root}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
        <!-- Hopefully set up by nbbuild/build.xml: -->
        <pathelement location="${jdkhome}/lib/tools.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules/eager"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/eager/jsp-parser.jar"
            manifest="manifest-subst.mf"
            basedir="src"
	    excludesfile="${nb_root}/nbbuild/standard-jar-excludes.txt"
	    compress="false">
      <include name="org/netbeans/modules/web/jspparser/"/>
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="release">
    <mkdir dir="netbeans/modules/eager/ext"/>
    <copy file="${binroot}/web/jspparser/release/modules/ext/jasper-compiler.jar"
          tofile="netbeans/modules/eager/ext/jasper-compiler.jar"/>
    <copy file="${binroot}/web/jspparser/release/modules/ext/jasper-runtime.jar"
          tofile="netbeans/modules/eager/ext/jasper-runtime.jar"/>
  </target>

  <target name="netbeans" depends="jars,release">
    <genlist targetname="nbm" outputfiledir="${nb_root}/nbbuild/netbeans"/>
  </target>

  <!-- Complicated: actually two NBMs must be made. -->
  <target name="nbm" depends="netbeans">
    <delete dir="Info"/>
    <makenbm file="web-jspparser.nbm"
             topdir="."
             module="netbeans/modules/eager/jsp-parser.jar"
	     homepage="http://web.${homepage.base}/"
	     distribution="http://${dist.base}/web-jspparser.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="web-jspparser.nbm"/>
    <delete dir="Info"/>
    <delete dir="netbeans"/>
  </target>

  <target name="test-build" depends="compile">
    <!-- need to package also extbins to reload it correctly -->
    <mkdir dir="reload"/>
    <filter token="BUILD_NUMBER_SUBST" value="testing"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="reload/jsp-parser.jar" manifest="manifest-subst.mf" compress="false">
      <fileset dir="src" excludesfile="../nbbuild/standard-jar-excludes.txt"/>
      <zipfileset src="${binroot}/web/jspparser/release/modules/ext/jasper-compiler.jar" excludes="META-INF/MANIFEST.MF"/>
      <zipfileset src="${binroot}/web/jspparser/release/modules/ext/jasper-runtime.jar" excludes="META-INF/MANIFEST.MF"/>
    </jar>
  </target>
  <!-- This target will only work *inside* the IDE! -->
  <target name="test" depends="test-build" description="Test module inside running IDE.">
    <nbinstaller module="reload/jsp-parser.jar" action="reinstall"/>
  </target>


</project>

