<project name="web_jspparser" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>
    
    <target name="files-init" depends="basic-init">
        <patternset id="module.files">
            <!--<include name="${nb.modules/autoload.dir}/jsp-parser.jar"/>
            <include name="${nb.modules/autoload.dir}/ext/jsp-parser-ext.jar"/>-->
            <include name="${module.jar}"/>
            <include name="${nb.modules/autoload.dir}/ext/jsp-parser-ext.jar"/>
            <include name="${nb.modules/autoload.dir}/ext/jasper-compiler-5.0.28.jar"/>
            <include name="${nb.modules/autoload.dir}/ext/jasper-runtime-5.0.28.jar"/>
            <include name="${nb.modules/autoload.dir}/ext/commons-logging-api.jar"/>
            <include name="${nb.modules/autoload.dir}/ext/commons-el.jar"/>
        </patternset>
    </target>
    
    <target name="release" depends="init">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/ext"/>
        <copy todir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/ext">
          <fileset dir="../external">
            <include name="jasper-compiler-5.0.28.jar"/>
            <include name="jasper-runtime-5.0.28.jar"/>
            <include name="commons-logging-api.jar"/>
            <include name="commons-el.jar"/>
          </fileset>
        </copy>
    </target>
    
    <target name="netbeans-extra" depends="release, ext-jar"/>
    
    <target name="jar-with-module-deps" if="module.dependencies" depends="ext-jar">
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="false" manifest="${manifest.mf}">
            <manifest>
                <attribute name="OpenIDE-Module-Public-Packages" value="${public.packages}"/>
                <attribute name="OpenIDE-Module-IDE-Dependencies" value="${ide.dependencies}"/>
                <attribute name="OpenIDE-Module-Module-Dependencies" value="${module.dependencies}"/>
                <!-- XXX make this conditional so can use OIDE-M-B-V instead -->
                <attribute name="OpenIDE-Module-Implementation-Version" value="${buildnumber}"/>
            </manifest>
            <fileset dir="${build.classes.dir}">
              <include name="org/netbeans/modules/web/jspparser/"/>
              <include name="org/netbeans/modules/web/jsps/"/>
            </fileset>
        </jar>
    </target>

    <target name="ext-jar">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/ext"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/ext/jsp-parser-ext.jar"
         basedir="${build.classes.dir}"
         excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
         compress="false">
            <include name="org/netbeans/modules/web/jspparser_ext/"/>
            <include name="org/apache/jasper/"/>
        </jar>
    </target>
</project>

