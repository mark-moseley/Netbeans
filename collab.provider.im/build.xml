<project name="collab-im" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>
 
    <target name="build-init" depends="projectized.build-init">
        <ant dir="../external" target="unscramble"/>
    </target>

 
    <target name="netbeans-extra" depends="init">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/modules/ext"/>
        <copy todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext">
          <fileset dir="../external">
           <include name="collab-service.jar"/>
           <include name="jso-*.jar"/>
           <include name="README-JSO-CHANGES"/>
           <include name="log4j-1.2.8.jar"/>
           <include name="xp.jar"/>
           <include name="jaxen-core-1.0.jar"/>
           <include name="saxpath-1.0.jar"/>        
          </fileset>
        </copy>
    </target>

    <target name="nbm" depends="init,netbeans" description="Build NBM archive.">
        <mkdir dir="build"/>
        <makenbm file="build/${nbm}"
                 productdir="${cluster}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="http://${dist.base}/${nbm}"
                 needsrestart="${nbm.needs.restart}"
                 releasedate="${nbm.release.date}"
		 moduleauthor="${nbm.module.author}">
            <license name="im-libs-license.html">
		<text>This module contains modified version of the JSO
(Jabber Stream Objects) library. For changes, see the installed file
modules/ext/README-JSO-CHANGES and review following license.
</text>
		<text>Jabber Stream Objects 0.12.3</text>
                <file location="../external/jso-lgpl2.1-license.txt"/>
		<text>Log4J - Apache Common Logging 1.2.8</text>
                <file location="../external/apache-2.0-license.txt"/>
                <text>XP - XML Parser 0.5</text>
                <file location="../external/jc-license.txt"/>
                <text>Jaxen 1.0 and SaxPath 1.0</text>
                <file location="../external/jaxen-license.txt"/>
                <text>For the integration module:</text>
                <file location="${license.file}"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

</project>
