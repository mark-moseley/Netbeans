<project name="appsrvapi" default="netbeans" basedir=".">
  <import file="../../../nbbuild/templates/projectized.xml"/>

    <target depends="init" name="compile">
        <ant dir="../../external" target="unscramble"/>
	<antcall target="projectized-common.compile"/>
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/modules/ext"/>
        
        <copy file="../../external/org-netbeans-modules-j2ee-sun-ide.jar" todir="${netbeans.dest.dir}/${cluster.dir}/ant/nblib"/>
        <copy file="../../external/persistence-tool-support.jar" todir="${netbeans.dest.dir}/${cluster.dir}/modules/ext"/>
        
    </target>

    <target name="files-init" depends="basic-init">
        <patternset id="module.files">
            <include name="${module.jar}"/>
            <include name="${javahelp.jar}" if="has.javahelp"/>
            <include name="${nb.system.dir}/Modules/${code.name.base.dashes}.xml"/>
            
            <include name="ant/nblib/org-netbeans-modules-j2ee-sun-ide.jar"/>
            <include name="modules/ext/persistence-tool-support.jar"/>
            
        </patternset>
    </target>    
</project>
