<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mconfig PUBLIC "-//NetBeans//DTD XTest cfg 1.0//EN" "http://www.netbeans.org/dtds/xtest-cfg-1_0.dtd">
<mconfig name="qa-functional Test Type Config">
    
    <testbag testattribs="stable" name="Stable test bag">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="org/netbeans/test/junit/testresults/*.class"/>
		<include name="org/netbeans/test/junit/testcreation/GotoTest.class"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="validation,jv" name="jUnit 4.x test bag">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="org/netbeans/test/junit4/CreateProjectTest.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="validation,full" name="Validation test bag">
	<testset dir="qa-functional/src">
	    <patternset>
		
		<!-- Some Old 3.x tests -->               
		<!-- <include name="test/Test.class"/> -->
                
		<!-- disabling tests not functional due to retouche merge -->
		<!-- add these as soon comment handling will be fixed inside retouche -->
		<!-- <include name="org/netbeans/test/junit/testcreation/*.class"/>
                <include name="org/netbeans/test/junit/pkgtestcreation/*.class"/>
                -->
		<include name="org/netbeans/test/junit/testresults/*.class"/>
		<include name="org/netbeans/test/junit/testcreation/GotoTest.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="goto" name="GotoTest test bag">
	<testset dir="qa-functional/src">
	    <patternset>                
		<include name="org/netbeans/test/junit/testcreation/GotoTest.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <executor name="code" antfile="build-qa-functional.xml" target="runcodetest"/>
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true" />
</mconfig>
