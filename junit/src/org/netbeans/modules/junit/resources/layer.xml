<filesystem>

    <!-- mounts -->
    <folder name="Mount">
        <folder name="Javadoc">
            <!-- JUnit JavaDoc -->
            <file name="org-netbeans-modules-junit-junit-javadoc.xml">
	      <![CDATA[
		<!DOCTYPE Javadoc PUBLIC "-//NetBeans IDE//DTD JavadocLibrary//EN" "http://www.netbeans.org/dtds/JavadocLibrary-1_0.dtd">
		<Javadoc>
		    <Archive name="docs/junit-api.zip"/>
		</Javadoc>
	      ]]>
            </file>
            <!-- NbJUnit JavaDoc -->  
            <file name="org-netbeans-modules-junit-nb-junit-javadoc.xml">
	      <![CDATA[
		<!DOCTYPE Javadoc PUBLIC "-//NetBeans IDE//DTD JavadocLibrary//EN" "http://www.netbeans.org/dtds/JavadocLibrary-1_0.dtd">
		<Javadoc>
		    <Archive name="docs/nbjunit-api.zip"/>
		</Javadoc>
	      ]]>
            </file>
        </folder>
        <folder name="java">
            <file name="org-netbeans-modules-junit-junit-library.xml">
	      <![CDATA[
	          <!DOCTYPE Library PUBLIC "-//NetBeans IDE//DTD JavaLibrary//EN" "http://www.netbeans.org/dtds/JavaLibrary-1_0.dtd">
	          <Library>
	              <Archive name="modules/ext/junit.jar"/>
	          </Library>
	      ]]>
           </file>
           <file name="org-netbeans-modules-junit-nbjunit-library.xml">
	      <![CDATA[
	          <!DOCTYPE Library PUBLIC "-//NetBeans IDE//DTD JavaLibrary//EN" "http://www.netbeans.org/dtds/JavaLibrary-1_0.dtd">
	          <Library>
	              <Archive name="modules/ext/junit-ext.jar"/>
	          </Library>
	      ]]>
           </file>
         </folder>
    </folder>

    <!-- templates -->
    <folder name="Templates">
        <folder name="JUnit">
            <file name="SimpleJUnitTest.java" url="templates/SimpleJUnitTest.java.template">
                <attr name="template" boolvalue="true"/>
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.junit.Bundle"/> 
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/junit/resources/JUnitLogo.gif"/>
            </file>
            <file name="SimpleNbJUnitTest.java" url="templates/SimpleNbJUnitTest.java.template">
                <attr name="template" boolvalue="true"/>
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.junit.Bundle"/> 
                 <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/junit/resources/JUnitLogo.gif"/>
            </file>
        </folder>
    </folder>

    <!-- actions -->
    <folder name="Actions">
        <folder name="Unit tests">
            <file name="org-netbeans-modules-junit-CreateTestAction.instance" />
            <file name="org-netbeans-modules-junit-OpenTestAction.instance" />
            <file name="org-netbeans-modules-junit-RunTestAction.instance" />
        </folder>
    </folder>

    <!-- shortcuts -->
    <folder name="Shortcuts">
        <file name="CA-J.instance">
	    <attr name="instanceClass" stringvalue="org.netbeans.modules.junit.CreateTestAction"/>
	</file>
        <file name="CA-K.instance">
	    <attr name="instanceClass" stringvalue="org.netbeans.modules.junit.OpenTestAction"/>
	</file>
        <file name="CA-L.instance">
	    <attr name="instanceClass" stringvalue="org.netbeans.modules.junit.RunTestAction"/>
	</file>
    </folder>
    
    <!-- Help -->
    <folder name="Services">
        <folder name="JavaHelp">
            <attr name="org-netbeans-modules-usersguide-above-regular.txt/org-netbeans-modules-junit-helpset.xml" boolvalue="true"/>
            <file name="org-netbeans-modules-junit-helpset.xml" url="helpset-decl.xml"/>            
            <attr name="org-netbeans-modules-junit-helpset.xml/org-netbeans-modules-usersguide-below-regular.txt"
                  boolvalue="true"/>
        
        </folder>
    </folder>

    <folder name="Menu">
        <folder name="Help">
            <folder name="HelpShortcuts">
                <attr name="org-netbeans-modules-usersguide-sep.instance/org-netbeans-modules-junit-mainpage.xml" boolvalue="true"/>
                <file name="org-netbeans-modules-junit-mainpage.xml" url="help-main-ref.xml">                
                    <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.junit.Bundle"/> 
                    <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/junit/resources/JUnitLogo.gif"/>
                </file>
                
                <attr name="org-netbeans-modules-junit-mainpage.xml/org-netbeans-modules-usersguide-lower-sep.instance"
                      boolvalue="true"/>
            
            </folder>
        </folder>
    </folder>
    
    <folder name="Actions">
        <folder name="Help">
            <file name="org-netbeans-modules-junit-mainpage.xml" url="help-main-ref.xml">
            	<attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.junit.Bundle"/> 
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/junit/resources/JUnitLogo.gif"/>
            	<!--
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.apache.tools.ant.module.docs.Bundle"/>
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/apache/tools/ant/module/resources/AntIcon.gif"/>
                -->                
            </file>
        </folder>
    </folder>
    
    <!-- settings -->
    <folder name="Services">
    	<file name="org-netbeans-modules-junit-JUnitSettings.settings" url="JUnitSettings.xml">
			<attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.junit.Bundle"/> 
        	<attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/junit/resources/JUnitLogo.gif"/>
    	</file>
    </folder>
    
    <folder name="UI">
    	<folder name="Services">
        <!-- Display the system option under the "Testing" category in Options. -->
        	<folder name="Testing">
            <!-- Point to the real settings file (always on the system file system). -->
	            <file name="org-netbeans-modules-junit-JUnitSettings.shadow">
<![CDATA[Services/org-netbeans-modules-junit-JUnitSettings.settings
SystemFileSystem
]]>
	            </file>
        	</folder>
    	</folder>
	</folder>

</filesystem>