<project name="junit" default="netbeans" basedir=".">

    <import file="../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra" depends="release"/>

    <target name="release" depends="init">
        <mkdir dir="${cluster}/docs"/>
        <copy file="external/junit-3.8.2-api.zip" todir="${cluster}/docs"/>
        <mkdir dir="${cluster}/modules/ext"/>
        <copy todir="${cluster}/modules/ext">
            <fileset dir="external">
                <include name="junit*.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="nbm" depends="init,netbeans" description="Build NBM archive.">
        <mkdir dir="build"/>
        <property name="nbm.target.cluster" value=""/> <!-- fallback -->
        <makenbm file="build/${nbm}"
                 productdir="${cluster}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="http://${dist.base}/${nbm}"
                 needsrestart="${nbm.needs.restart}"
                 releasedate="${nbm.release.date}"
		 moduleauthor="${nbm.module.author}"
                 global="${nbm.is.global}"
                 targetcluster="${nbm.target.cluster}">
            <license>
                <text>For the JUnit module itself:</text>
                <file location="${license.file}"/>
                <text>For the JUnit framework:</text>
                <file location="external/junit-3.8.2-license.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>
    
    <target name="files-init" depends="projectized-common.files-init">
        <property name="extra.arch.files.dir" value="arch"/>
        <patternset id="extra.arch.files" includes="JUnitPlugin.png"/>
    </target>

    <target name="arch" depends="projectized-common.arch">
        <copy todir="build">
            <fileset dir="${extra.arch.files.dir}">
                <patternset refid="extra.arch.files"/>
            </fileset>
        </copy>
    </target>
    
    <target name="javadoc" depends="projectized.javadoc">
        <property name="javadoc.name" value="${code.name.base.dashes}" />
        <property name="javadoc.out" location="${netbeans.javadoc.dir}"/>
        <property name="javadoc.out.dir" location="${javadoc.out}/${javadoc.name}"/>
        <property name="javadoc.out.zip" location="${javadoc.out}/${javadoc.name}.zip"/>
        <copy todir="${javadoc.out.dir}">
            <fileset dir="${extra.arch.files.dir}">
                <patternset refid="extra.arch.files"/>
            </fileset>
        </copy>
        <zip destfile="${javadoc.out.zip}" basedir="${javadoc.out.dir}"
             update="true" duplicate="preserve">
            <fileset dir="${javadoc.out.dir}">
                <patternset refid="extra.arch.files"/>
            </fileset>
        </zip>
    </target>

</project>
