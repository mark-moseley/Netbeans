<project name="junit" default="netbeans" basedir=".">

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>

  <property name="build.compiler.deprecation" value="off"/>
  <property name="build.compiler.debug" value="off"/>  
  <property name="build" location="../nbbuild/netbeans"/>

  <property name="module.license.file" location="../nbbuild/standard-nbm-license.txt"/>

  <target name="init">
    <ant dir="external" target="unscramble"/>
  </target>

  <patternset id="junit.files">
    <include name="modules/junit.jar"/>
    <include name="modules/ext/junit*.jar"/>
    <include name="docs/nbjunit-api.zip"/>
    <include name="system/ParserDB/JUnit.jc*"/>
    <include name="system/ParserDB/NbJUnit.jc*"/>
    <include name="modules/docs/junit-module-help.jar"/>
    <include name="modules/ext/junit-ext.jar"/>
    <include name="docs/junit-api.zip"/>
  </patternset>

  <target name="compile-junit-extensions" depends="init">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <include name="org/netbeans/junit/**"/>
      <classpath>        
        <fileset dir="external">
          <include name="junit*.jar"/>
        </fileset>
        <pathelement location="${build}/lib/openide.jar"/>
        <!-- XXX -->
        <pathelement location="${build}/modules/autoload/openide-execution.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jar-junit-extensions" depends="compile-junit-extensions">
      <mkdir dir="${build}/modules/ext"/>
      <jar jarfile="${build}/modules/ext/junit-ext.jar"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false"
            includes="org/netbeans/junit/**"/>
  </target>

  <target name="clean-junit-extensions">
    <delete>
      <fileset dir="src">
        <include name="org/netbeans/junit/**/*.class"/>
      </fileset>
    </delete>
    <delete file="${build}/lib/modules/junit-ext.jar"/>
  </target>

 <target name="javadoc-junit-extensions">
      <mkdir dir="javadoc/nbjunit-api"/>
      <javadoc packagenames="org.netbeans.junit" 
               sourcepath="src" 
	       destdir="javadoc/nbjunit-api"
	       windowtitle="NetBeans extensions to JUnit"
	       doctitle="NetBeans extensions to JUnit"
      >  
        <classpath>
          <fileset dir="external">
            <include name="junit*.jar"/>
          </fileset>
            <!-- XXX -->
            <pathelement location="${build}/modules/autoload/openide-execution.jar"/>
        </classpath>
      </javadoc>
      <mkdir dir="${build}/docs"/>
      <zip zipfile="${build}/docs/nbjunit-api.zip"
           basedir="javadoc/nbjunit-api"
       />
  </target>

  <target name="clean-javadoc-junit-extensions">
      <delete dir="javadoc/nbjunit-api"/>
      <delete file="${build}/docs/nbjunit-api.zip"/>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="src" destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">
      <exclude name="org/netbeans/junit/**"/>
      <classpath>
	<pathelement location="../openide/openide-13javac-workaround.jar"/>
        <pathelement location="${build}/lib/openide.jar"/>
        <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
        <pathelement location="${build}/modules/autoload/java-src-model.jar"/>
        <!-- XXX -->
        <pathelement location="${build}/modules/autoload/openide-compiler.jar"/>
        <pathelement location="${build}/modules/autoload/openide-execution.jar"/>
        <fileset dir="external">
          <include name="junit*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="${build}/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="${build}/modules/junit.jar"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false"
	    includes="org/netbeans/modules/junit/**">
    </jar>
  </target>

  <target name="javahelp">
    <!-- XXX consider running jhindexer too -->
    <mkdir dir="netbeans/modules/docs"/>
    <jar jarfile="netbeans/modules/docs/junit-module-help.jar"
    	basedir="javahelp"
    	excludesfile="../nbbuild/standard-jar-excludes.txt">
    </jar>
    
  </target>
  
  <target name="parserdb">
  	<mkdir dir="${build}/system/ParserDB"/>
  	<copy toDir="${build}/system/ParserDB">
  		<fileset dir="parserdb"/>
  	</copy>
  </target>

  <target name="release" depends="init">
    <mkdir dir="${build}/docs"/>
    <copy file="external/junit-api.zip" tofile="${build}/docs/junit-api.zip"/>
    <mkdir dir="${build}/modules/ext"/>
    <copy todir="${build}/modules/ext">
      <fileset dir="external">
        <include name="junit*.jar"/>
      </fileset>
    </copy>
  </target>

  <target name="netbeans" depends="jar-junit-extensions,jars,javadoc-junit-extensions,javahelp,parserdb,release">
      <genlist outputfiledir="${build}" module="modules/junit.jar">
          <fileset dir="${build}">
	      <patternset refID="junit.files"/>
          </fileset>
      </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="junit.nbm"
             productDir="${build}"
             module="modules/junit.jar"
	     homepage="http://junit.netbeans.org/"
	     distribution="http://www.netbeans.org/download/nbms/40/junit.nbm">
      <license name="junit-license.txt">
        <text>For the JUnit module itself:</text>
        <file location="${module.license.file}"/>
	<text>For the JUnit framework:</text>
	<file location="external/ibm-public-license.txt"/>
      </license>
      <signature keystore="${keystore}" storepass="${storepass}" alias="nb_ide"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="junit.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="junit.nbm"/>
    <delete dir="javadoc"/>
  </target>

  <target name="clean-junit-ext">
    <delete file="netbeans/modules/ext/junit-ext.jar"/>
    <delete>
      <fileset dir="src">
        <include name="org/netbeans/junit/**/*.class"/>
      </fileset>
    </delete>
  </target>

  <target name="test" depends="netbeans">
    <ant dir="test/function"/>
  </target>

</project>
