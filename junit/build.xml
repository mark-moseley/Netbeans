<project name="junit" default="netbeans" basedir=".">

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>

  <property name="binroot" value="../../nbextra" />
  <property name="build.compiler.deprecation" value="off" />
  <property name="build.compiler.debug" value="off" />
  <property name="build.compiler.debug" value="off" />

  <property name="module.license.file" location="../nbbuild/standard-nbm-license.txt"/>
  <property name="junit.license.file" location="ibm-public-license.txt"/>

  <target name="compile-junit-extensions">
    <javac srcdir="src" destdir="src">
      <include name="org/netbeans/junit/**"/>
      <classpath>
	<pathelement location="${binroot}/junit/release/lib/ext/junit.jar"/> 
      </classpath>
    </javac>
  </target>

  <target name="jar-junit-extensions" depends="compile-junit-extensions">
      <mkdir dir="netbeans/lib/ext"/>
      <jar jarfile="netbeans/lib/ext/junit-ext.jar"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false"
            includes="org/netbeans/junit/**"/>
  </target>

  <target name="clean-junit-extensions">
    <delete>
      <fileset dir="src">
        <include name="org/netbeans/junit/**/*.class"/>
      </fileset>
    </delete>
    <delete file="netbeans/lib/ext/junit-ext.jar"/>
  </target>

 <target name="javadoc-junit-extensions">
      <mkdir dir="javadoc/nbjunit-api"/>
      <javadoc packagenames="org.netbeans.junit" 
               sourcepath="src" 
	       destdir="javadoc/nbjunit-api"
	       windowtitle="NetBeans extensions to JUnit"
	       doctitle="NetBeans extensions to JUnit"
	       classpath="${binroot}/junit/release/lib/ext/junit.jar"
      />  
      <mkdir dir="netbeans/docs"/>
      <zip zipfile="netbeans/docs/nbjunit-api.zip"
           basedir="javadoc/nbjunit-api"
       />
  </target>

  <target name="clean-javadoc-junit-extensions">
      <delete dir="javadoc/nbjunit-api"/>
      <delete file="netbeans/docs/nbjunit-api.zip"/>
  </target>

  <target name="compile">
    <javac srcdir="src" destdir="src"
           deprecation="${build.compiler.deprecation}"
           debug="${build.compiler.debug}">
      <exclude name="org/netbeans/junit/**"/>
      <classpath>
	<pathelement location="../openide/openide-13javac-workaround.jar"/>
        <fileset dir="../openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
	<pathelement location="${binroot}/junit/release/lib/ext/junit.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <jar jarfile="netbeans/modules/junit.jar"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false"
	    includes="org/netbeans/modules/junit/**">
    </jar>
  </target>

  <target name="javahelp">
    <copy todir="netbeans/docs">
      <fileset dir="javahelp"/>
    </copy>
  </target>

  <target name="release">
    <copy todir="netbeans">
      <fileset dir="${binroot}/junit/release" excludesfile="../nbbuild/standard-jar-excludes.txt"/>
    </copy>
  </target>

  <target name="netbeans" depends="jars,jar-junit-extensions,javadoc-junit-extensions,javahelp,release"/>

  <target name="nbm" depends="netbeans">
    <makenbm file="junit.nbm"
             topdir="."
             module="netbeans/modules/junit.jar"
	     homepage="http://junit.netbeans.org/"
	     distribution="http://www.netbeans.org/download/nbms/40/junit.nbm">
      <license name="junit-license.txt">
        For the JUnit module itself:
        <file location="${module.license.file}"/>
	For the JUnit framework:
	<file location="${junit.license.file}"/>
      </license>
      <signature keystore="${keystore}" storepass="${storepass}" alias="nb_ide"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete dir="netbeans"/>
    <delete file="junit.nbm"/>
    <delete dir="Info"/>
    <delete dir="javadoc"/>
  </target>

  <target name="test" depends="netbeans">
    <ant dir="tst/function"/>
  </target>

</project>



