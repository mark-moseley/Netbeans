        <resource path="direct_messages.{format}">
            <param name="format" type="xsd:string" style="template" required="true" default="xml"/>
            <method name="GET" id="getDirectMessages">
                <doc xml:lang="en">
		    Returns a list of the 20 most recent direct messages sent to the authenticating user.  
                    The XML and JSON versions include detailed information about the sending and recipient users.
                    This method requires HTTP Basic Authentication as described at 
                    http://en.wikipedia.org/wiki/Basic_authentication_scheme.
                    For more information, see http://groups.google.com/group/twitter-development-talk/web/api-documentation.
                </doc>
                <request>
                    <param name="since" type="xsd:string" style="query" required="false"/>
                    <param name="since_id" type="xsd:integer" style="query" required="false"/>
                    <param name="page" type="xsd:integer" style="query" required="false"/>
                </request>
                <response/>
            </method>
        </resource>
        <resource path="direct_messages">
            <resource path="new.{format}">
                <method name="POST" id="sendDirectMessage">
                    <doc xml:lang="en">
                        Sends a new, direct message to the specified user from the authenticating user.
                        This method requires HTTP Basic Authentication, described at 
                        http://en.wikipedia.org/wiki/Basic_authentication_scheme, as well as the user name
                        of the recipient and the text of the message as parameters. Returns the text of
                        the message in the requested format if successful.
                        For more information, see 
                        http://groups.google.com/group/twitter-development-talk/web/api-documentation.
                    </doc>
                    <request>
                        <param name="user" type="xsd:string" style="query" required="true">
                            <doc xml:lang="en">
                                    The ID or screen name of the recipient user.
                            </doc>
                        </param>
                        <param name="text" type="xsd:string" style="query" required="true">
                            <doc xml:lang="en">
                                    The text of your direct message.  Be sure to URL encode it
                                    as necessary (as described at http://en.wikipedia.org/wiki/Percent_encoding) 
                                    and keep the length under 140 characters.
                            </doc>
                        </param>
                    </request>
                    <response/>
                </method>
            </resource>
