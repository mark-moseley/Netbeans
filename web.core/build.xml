<project name="web_core" default="netbeans" basedir=".">

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../../nbbuild/nbantext.jar"/>

  <property name="nb_root" location="../.."/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../../nbbuild/standard-nbm-license.txt"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="webbeans_root" location="src/org/netbeans/modules/web/dd/model"/>
  <property name="build" location="../nbbuild/netbeans"/>

  <patternset id="web/core.files">
    <include name="modules/jsp.jar"/>
  </patternset>

  <!-- Check if it is neceseary to rebuild beans -->
  <target name="dd2beans_init">
        <mkdir dir="${webbeans_root}"/>
        <uptodate property="dd.generation.uptodate" targetfile="${webbeans_root}/WebApp.java">
          <srcfiles dir="src/org/netbeans/modules/web/dd/webapp"
                    includes="webapp.mdd"/>
          <srcfiles dir="src/org/netbeans/modules/web/core/resources"
                    includes="web-app_2_3.dtd"/>
        </uptodate>
  </target>

   <target name="dd2beansgen" depends="dd2beans_init" unless="dd.generation.uptodate">
     <antcall target="clean-ddgen-src"/>
     <echo message="generating code generation input file information" />
     <java classname="org.netbeans.modules.schema2beans.GenBeans" fork="yes">
     	<classpath>
          <fileset dir="${nb_root}/core/external">
            <include name="crimson*.jar"/>
            <include name="xml-apis*.jar"/>
          </fileset>
	  <pathelement path="${build}/modules/schema2beans.jar" />
	  <fileset dir = "${build}/lib">
		<include name="openide*.jar"/>
	  </fileset>
	</classpath>
	<arg line= "-f ${nb_root}/web/core/src/org/netbeans/modules/web/core/resources/web-app_2_3.dtd" />
	<arg line= "-mdd src/org/netbeans/modules/web/dd/webapp/webapp.mdd" />
	<arg line= "-p org.netbeans.modules.web.dd.model" />
	<arg line= "-r src" />
     </java>
  </target>

  <target name="compile" depends="dd2beansgen">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="${nb_root}/openide/openide-13javac-workaround.jar"/>
          <fileset dir="${nb_root}/core/external">
            <include name="xml-apis*.jar"/>
          </fileset>
        <pathelement location="${build}/lib/core.jar"/> <!-- XXX: ExLocalFileSystem in UnpackWarAction -->
        <pathelement location="${build}/modules/html.jar"/>
        <pathelement location="${build}/modules/java.jar"/>
        <pathelement location="${build}/modules/jarpackager.jar"/>
        <pathelement location="${build}/modules/autoload/debuggerCore.jar"/>
        <pathelement location="${build}/modules/schema2beans.jar" />
        <pathelement location="${build}/lib/openide.jar"/>
        <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
        <pathelement location="${build}/modules/autoload/java-src-model.jar"/>
        <pathelement location="${build}/modules/autoload/openidex.jar"/>
        <pathelement location="${build}/modules/autoload/j2eeserver.jar"/>
	<pathelement location="${build}/modules/autoload/xml-api.jar" />
        <pathelement location="${build}/modules/autoload/openide-compiler.jar"/>
        <pathelement location="${build}/modules/autoload/openide-execution.jar"/>
        <pathelement location="${build}/modules/autoload/openide-io.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="${build}/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="${build}/modules/jsp.jar"
            manifest="manifest-subst.mf"
            basedir="src"
	    excludesfile="${nb_root}/nbbuild/standard-jar-excludes.txt"
	    compress="false">
      <include name="org/netbeans/modules/web/"/>
      <include name="META-INF/"/>
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="netbeans" depends="jars">
      <genlist outputfiledir="${build}" module="modules/jsp.jar">
          <fileset dir="${build}">
	      <patternset refID="web/core.files"/>
          </fileset>
      </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <delete dir="Info"/>
    <makenbm file="web-jsp.nbm"
             productDir="${build}"
             module="modules/jsp.jar"
	     homepage="http://web.${homepage.base}/"
	     distribution="http://${dist.base}/web-jsp.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean" depends="clean-ddgen-src">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="web/core.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="web-jsp.nbm"/>
    <delete dir="src/org/netbeans/modules/web/dd/model"/>
  </target>

  <target name="clean-ddgen-src">
        <mkdir dir="${webbeans_root}"/>
        <delete>
            <fileset dir="${webbeans_root}">
                <include name="*.java"/>
            </fileset>
        </delete>
  </target>

  <!-- This target will only work *inside* the IDE! -->
  <target depends="jars" description="Test the module inside the running IDE." name= "test">
    <nbinstaller action="reinstall" module="${build}/modules/jsp.jar"/>
  </target>

</project>

