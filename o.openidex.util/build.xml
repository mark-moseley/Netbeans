<!-- ToDo: may need to ensure that SearchTask.java is compiled before Utilities2.java -->
<!--       due to an obscure 1.3 compiler bug                                         -->
<project name="openidex" default="netbeans" basedir=".">

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM"/>

  <target name="compile">
    <javac srcdir="src" destdir="src">
      <classpath>
        <pathelement location="../openide/netbeans/lib/openide.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copyfile src="manifest.mf" dest="manifest-subst.mf" filtering="on"/>
    <!-- Make a dummy module file for purposes of dependencies. -->
    <!-- Note that Ant refuses to make a JAR if there are no contents. -->
    <mkdir dir="nothing"/>
    <touch file="nothing/.exists"/>
    <jar jarfile="netbeans/modules/openidex.jar"
         manifest="manifest-subst.mf"
	 basedir="nothing"/>
    <delete dir="nothing"/>
    <!-- Now the real thing. -->
    <mkdir dir="netbeans/lib/ext"/>
    <jar jarfile="netbeans/lib/ext/openidex.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="../nbbuild/standard-jar-excludes.txt"
	 compress="false"/>
  </target>

  <target name="netbeans" depends="jars"/>

  <target name="nbm" depends="netbeans">
    <makenbm file="openidex.nbm"
             topdir="."
	     manifest="manifest-subst.mf"
	     homepage="http://openidex.netbeans.org/"
	     distribution="http://www.netbeans.org/downloads/nbms/40/openidex.nbm">
      <license file="../nbbuild/standard-nbm-license.txt"/>
      <description>
        Common utility classes needed by many other modules. API
        extensions.
      </description>
      <signature keystore="${keystore}" storepass="${storepass}" alias="nb_ide"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete dir="src">
      <include name="**/*.class"/>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="openidex.nbm"/>
    <deltree dir="netbeans"/>
    <deltree dir="Info"/>
  </target>

</project>
