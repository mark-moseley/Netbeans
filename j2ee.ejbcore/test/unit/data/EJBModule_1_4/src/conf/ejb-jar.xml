<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>EJBModule_1_4</display-name>
    <enterprise-beans>
        <session>
            <display-name>StatelessLRSB</display-name>
            <ejb-name>StatelessLRBean</ejb-name>
            <home>statelesslr.StatelessLRRemoteHome</home>
            <remote>statelesslr.StatelessLRRemote</remote>
            <local-home>statelesslr.StatelessLRLocalHome</local-home>
            <local>statelesslr.StatelessLRLocal</local>
            <ejb-class>statelesslr.StatelessLRBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>StatefulLRSB</display-name>
            <ejb-name>StatefulLRBean</ejb-name>
            <home>statefullr.StatefulLRRemoteHome</home>
            <remote>statefullr.StatefulLRRemote</remote>
            <local-home>statefullr.StatefulLRLocalHome</local-home>
            <local>statefullr.StatefulLRLocal</local>
            <ejb-class>statefullr.StatefulLRBean</ejb-class>
            <session-type>Stateful</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
            <display-name>CmpLREB</display-name>
            <ejb-name>CmpLRBean</ejb-name>
            <home>cmplr.CmpLRRemoteHome</home>
            <remote>cmplr.CmpLRRemote</remote>
            <local-home>cmplr.CmpLRLocalHome</local-home>
            <local>cmplr.CmpLRLocal</local>
            <ejb-class>cmplr.CmpLRBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.Long</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>CmpLR</abstract-schema-name>
            <cmp-field>
                <field-name>key</field-name>
            </cmp-field>
            <primkey-field>key</primkey-field>
        </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>StatelessLRBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>StatefulLRBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>CmpLRBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
