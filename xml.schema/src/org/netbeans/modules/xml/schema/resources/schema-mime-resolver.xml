<!DOCTYPE MIME-resolver PUBLIC "-//NetBeans//DTD MIME Resolver 1.0//EN" "http://www.netbeans.org/dtds/mime-resolver-1_0.dtd">

<MIME-resolver>

    <!-- Mark all XML Schemas with "application/x-schema+xml" MIME content type -->
    <file>
        <ext name="xml"/>
        <resolver mime="application/x-schema+xml">
            <xml-rule>
                <!-- it is official schema DTD public id -->
                <doctype public-id="-//W3C//DTD XMLSCHEMA 200102//EN"/>
                <element ns="http://www.w3.org/2001/XMLSchema"/>
                    <!-- it is official schema namespace - ->
                    <!- - it is namespace of the latest working draft - ->
                    <ns ns="http://www.w3.org/2000/10/XMLSchema"/>
                </element-->                
            </xml-rule>
        </resolver>
    </file>
    
    <file>
        <ext name="xsd"/>
        <resolver mime="application/x-schema+xml"/>
    </file>
    
</MIME-resolver>
