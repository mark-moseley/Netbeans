<project basedir="." default="netbeans" name="websvc/registry">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra" depends="release,ext-jar"/>

    <target name="release" depends="build-init">
        <property name="runtimejars.file" value="websvc_runtimejars.xml"/>
        <property name="runtimejars.path" value="${netbeans.dest.dir}/${cluster.dir}/config/WebServices"/>
        <copy file="${runtimejars.file}" tofile="${runtimejars.path}/${runtimejars.file}" filtering="on">
            <filterset>
                <filter token="CLUSTER_DIR" value="${cluster.dir}"/>
            </filterset>
        </copy>
    </target>

    <target name="ext-compile" depends="build-init">
        <mkdir dir="build/extclasses"/>
        <javac srcdir="extsrc" destdir="build/extclasses" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" source="1.4">
            <classpath>
                <path path="${module.classpath}"/>
                <path location="${netbeans.dest.dir}/${cluster.dir}/${module.jar}"/>
                <path path="${extsrc.cp.extra}"/>
            </classpath>
        </javac>
        <copy todir="build/extclasses">
          <fileset dir="extsrc" excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"/>
        </copy>
    </target>

    <target name="ext-jar" depends="ext-compile">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/modules/ext"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/modules/ext/websvcregistry.jar" compress="false" >
            <fileset dir="build/extclasses"/>
        </jar>
    </target>

</project>
