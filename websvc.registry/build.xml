<project basedir="." default="netbeans" name="websvc/registry">
	<import file="../../nbbuild/templates/projectized.xml"/>

	<target name="build-init" depends="projectized.build-init">
		<property name="websvc/jax-qname.dir" value="${netbeans.dest.dir}/${cluster.dir}"/>
        <property name="j2ee/external" value="../../j2ee/external"/>
		<property name="runtimejars.file" value="websvc_runtimejars.xml"/>
		<property name="runtimejars.path" value="${netbeans.dest.dir}/${cluster.dir}/config/WebServices"/>

		<!-- !PW Override classpath generated by project.xml to add the 3 new jars.
				 There ought to be a better way to do this.
		-->
		<path id="cp">
			<pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
			<pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
			<pathelement location="${openide/io.dir}/${nb.modules.dir}/org-openide-io.jar"/>
			<pathelement location="${j2eeserver.dir}/${nb.modules.dir}/org-netbeans-modules-j2eeserver.jar"/>
			<pathelement location="${j2ee/external}/jaxrpc-impl.jar"/>
			<pathelement location="${j2ee/external}/jaxrpc-spi.jar"/>
			<pathelement location="${j2ee/external}/jax-qname.jar"/>
		</path>

		<copy file="${runtimejars.file}"
			  tofile="${runtimejars.path}/${runtimejars.file}"
			  filtering="on">
			<filterset>
				<filter value="${cluster.dir}" token="CLUSTER_DIR"/>
			</filterset>
		</copy>
	</target>

	<target name="jar-with-module-deps" if="module.dependencies">
		<property file="../../xml/spec-vers.properties"/>
		<jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="false" manifest="${manifest.mf}">
			<fileset dir="${build.classes.dir}">
				<include name="META-INF/**"/>
				<include name="org/netbeans/modules/websvc/registry/netbeans/**"/>
				<include name="org/netbeans/modules/websvc/registry/resources/**"/>
				<include name="org/netbeans/modules/websvc/api/**"/>
			</fileset>
		</jar>
		<mkdir dir="${netbeans.dest.dir}/${cluster.dir}/modules/ext"/>
		<jar jarfile="${netbeans.dest.dir}/${cluster.dir}/modules/ext/websvcregistry.jar" compress="false" >
			<fileset dir="${build.classes.dir}">
				<exclude name="META-INF/**"/>
				<exclude name="org/netbeans/modules/websvc/registry/netbeans/**"/>
				<exclude name="org/netbeans/modules/websvc/api/**"/>
			</fileset>
		</jar>
	</target>
</project>
