  </target> -->

  <!-- This target will only work *inside* the IDE!-->
  <target depends="dev" description="Test the module inside the running IDE." name="reinstall">
    <nbinstaller action="reinstall" module="netbeans/modules/j2ee.jar"/>
  </target> 

  <target name="debug">
      <antcall target="jars">
                <param name="build.compiler.debug" value="on"/>
      </antcall>
  </target>

  <target name="dev" description="A development target to compile with
symbols and copy jar file(s)">
        <antcall target="jars">
                <param name="build.compiler.debug" value="on"/>
        </antcall>
        <copy todir="${nbroot}/nbbuild/netbeans/modules/autoload/ext">
            <fileset dir="netbeans/modules/autoload/ext">
              <exclude name="**/locale/*"/>
              <exclude name="**/*-test.jar" /> 
            </fileset>
        </copy>
      	    <copy todir="${nbroot}/nbbuild/netbeans/modules/"> 
      <!--  <copy todir="../../f4j_all/f4jbuild/firststart/modules/"> -->
            <fileset dir="netbeans/modules">
              <exclude name="**/locale/*"/>
              <exclude name="**/*-test.jar" /> 
            </fileset>
        </copy>
  </target>

  <target name="clean-javadoc">
    <delete dir="J2EEServerAPIs"/>
    <delete file="J2EEServerAPIs.zip"/>
    <delete dir="javadoc"/>
  </target>

  <target name="javadoc" depends="clean-javadoc,j2eeserver-module-apis">
    <copy todir="javadoc">
      <fileset dir=".">
        <include name="J2EEServerAPIs/**"/>
        <include name="J2EEServerAPIs.zip"/>
      </fileset>
    </copy>
  </target>

  <target name="j2eeserver-module-apis" description="Build j2eeserver module API documentation.">
    <tstamp/>
    <property name="apis-footer" value="&lt;font size=-2 color=gray&gt;Built on ${TODAY}.&amp;nbsp;&amp;nbsp;|&amp;nbsp;&amp;nbsp;Portions Copyright 1997-2002 Sun Microsystems, Inc. All rights reserved.&lt;/font&gt;"/>
    <echo message="Build j2eeserver module API documentation..."/>
    <delete dir="J2EEServerAPIs"/>
    <mkdir dir="J2EEServerAPIs"/>
    <javadoc destdir="J2EEServerAPIs"
             packagenames="org.netbeans.modules.j2ee.deployment.devmodules.api,org.netbeans.modules.j2ee.deployment.devmodules.spi,org.netbeans.modules.j2ee.deployment.plugins.api,org.netbeans.modules.j2ee.deployment.plugins.spi"
	     doctitle="NetBeans j2eeserver module APIs"
             windowtitle="NetBeans j2eeserver module APIs"
             overview="api/doc/overview.html"
             bottom="${apis-footer}"
             use="true"
             splitindex="true"
             author="false"
             version="false"
             maxmemory="64m"
             stylesheetfile="../nbbuild/javadoctools/javadoc.css"
    >
      <sourcepath>
        <pathelement location="src"/>
        <pathelement location="api/doc"/>
      </sourcepath>
      <classpath>
        <pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>
        <pathelement location="${nbroot}/openide/deprecated/netbeans/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
<!--         <pathelement location="${nbroot}/openide/compiler/netbeans/modules/autoload/openide-compiler.jar"/> 
        XXX -->
        <pathelement location="${nbroot}/openide/execution/netbeans/modules/autoload/openide-execution.jar"/> <!-- XXX -->
        <pathelement location="${nbroot}/schema2beans/netbeans/modules/autoload/schema2beans.jar"/>
        <pathelement location="${nbroot}/projects/core/netbeans/modules/autoload/projects-core.jar"/>
        <pathelement location="${nbroot}/projects/ide/netbeans/modules/projects-ide.jar"/>
        <pathelement location="${nbroot}/projects/compilation/netbeans/modules/autoload/compilation.jar"/>
        <pathelement location="${nbroot}/projects/filesets/netbeans/modules/autoload/filesets.jar"/>
        <fileset dir="external">
            <include name="*.jar"/>
        </fileset>
        <!-- PENDING required by debugger type, perhaps could be
        removed -->
        <pathelement location="${nbroot}/java/srcmodel/netbeans/modules/autoload/java-src-model.jar"/> 
      </classpath>
    </javadoc>
    <copy todir="J2EEServerAPIs">
            <fileset dir="www/jsr88/">
              <include name="*.html"/>
            </fileset>
    </copy>
    <copy todir="J2EEServerAPIs">
        <fileset dir="src">
            <include name="**/netbeans-deployment.dtd"/>
        </fileset>
    </copy>
    <zip zipfile="J2EEServerAPIs.zip" basedir="J2EEServerAPIs"/>
  </target>
</project>
