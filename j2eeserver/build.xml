<project basedir="." default="netbeans" name="j2eeserver">
  <import file="../nbbuild/default.xml"/> 
 
  <target name="init" depends="default.init">
    <patternset id="j2eeserver.files">
      <include name="${nb.modules/autoload.dir}/j2eeserver.jar"/>
    </patternset>
    <path id="cp">
      <pathelement location="${nb_all}/openide/openide-13javac-workaround.jar"/>
      <pathelement location="${debuggercore/api.dir}/${nb.modules/autoload.dir}/debugger-api.jar"/>
      <pathelement location="${core/javahelp.dir}/${nb.modules/autoload.dir}/javahelp-api.jar"/>
      <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
      <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
      <pathelement location="${nb_all}/libs/external/j2eeeditor-1.0.jar"/>
      <pathelement location="${openide/execution.dir}/${nb.modules/autoload.dir}/openide-execution.jar"/> <!-- XXX -->
      <pathelement location="${openide/execution/deprecated.dir}/${nb.modules/autoload.dir}/org-openide-execution-deprecated.jar"/> <!-- XXX -->
      <pathelement location="${debuggercore/oldapi.dir}/${nb.modules/autoload.dir}/openide-debugger.jar"/> <!-- XXX -->
      <pathelement location="${debuggercore.dir}/${nb.modules/autoload.dir}/debuggerCore.jar"/> <!-- XXX -->
      <pathelement location="${schema2beans/rt.dir}/${nb.modules/autoload.dir}/schema2beans.jar"/>
      <pathelement location="${openide/io.dir}/${nb.modules/autoload.dir}/openide-io.jar"/> 
      <pathelement location="${core/settings.dir}/${nb.modules/autoload.dir}/core-settings.jar"/>
      <pathelement location="${xml/api.dir}/${nb.modules/autoload.dir}/xml-api.jar" />
      <pathelement location="${projects/projectapi.dir}/${nb.modules/autoload.dir}/org-netbeans-modules-projectapi.jar" />
      <fileset dir="external">
          <include name="*.jar"/>
      </fileset>
      <!-- PENDING required by debugger type, perhaps could be
      removed -->
      <pathelement location="${java/srcmodel.dir}/${nb.modules/autoload.dir}/java-src-model.jar"/> 
    </path>
  </target>
  
  <target name="s2binit" depends="init">
	<taskdef name="schema2beans" classname="org.netbeans.modules.s2banttask.Schema2BeansAntTask">
	  <classpath>
		<pathelement path="${schema2beans/rt.dir}/${nb.modules/autoload.dir}/schema2beans.jar" />
		<pathelement path="${schema2beans/dev.dir}/${nb.modules/autoload.dir}/schema2beansdev.jar" />
		<pathelement path="${nb_all}/schema2beans/anttask/s2banttask.jar"/>
	  </classpath>
	</taskdef>
  </target>

  <!-- These are the primary targets. -->

  <target depends="jars" name="netbeans">
    <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules/autoload.dir}/j2eeserver.jar">
       <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
         <patternset refID="j2eeserver.files"/>
       </fileset>
    </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="j2eeserver.nbm"
             productdir="${netbeans.dest.dir}/${cluster.dir}"
             module="${nb.modules/autoload.dir}/j2eeserver.jar"
             homepage="http://j2eeserver.${homepage.base}/"
             distribution="${dist.base}/j2eeserver.nbm">
      <license file="${license.file}" />
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean" depends="init">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="j2eeserver.files"/>
      </fileset>
    </delete>
    <delete dir="src/org/netbeans/modules/j2ee/deployment/impl/gen"/>
    <delete file="j2eeserver.nbm"/>
    <delete file="manifest-subst.mf"/>
    <delete dir="javadoc"/>
  </target>


  <target depends="compile" name="jars">
    <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf"
          filtering="on"/>
    <jar compress="false" 
         jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/j2eeserver.jar" 
         manifest="manifest-subst.mf"
         excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
         basedir="src"/>
  </target>

  <target name="compile" depends="init,privatedtds">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <patternset>
          <include name="org/"/>
          <exclude name="**/tests/**"/>
          <exclude name="**/J2eeNoProjectEnvironment.java"/>
      </patternset>
      <classpath refid="cp"/>
    </javac>
  </target>

  <target name="privatedtds">
      <antcall target="ddgen">
          <param name="dtdfile" value="src/org/netbeans/modules/j2ee/deployment/plugins/api/netbeans-deployment.dtd"/>
          <param name="dtdpackage" value="org.netbeans.modules.j2ee.deployment.impl.gen.nbd"/>
          <param name="dtddir" value="org/netbeans/modules/j2ee/deployment/impl/gen/nbd"/>
      </antcall>
  </target>

  <target name="j2eedtds">
      <antcall target="ddgen">
          <param name="dtdfile" value="src/dtds/connector_1_0.dtd"/>
          <param name="dtdpackage" value="org.netbeans.modules.j2ee.deployment.eardeploy.dd.connector10"/>
          <param name="dtddir" value="org/netbeans/modules/j2ee/deployment/eardeploy/dd/connector10"/>
      </antcall>
      <antcall target="ddgen">
          <param name="dtdfile" value="src/dtds/application-client_1_3.dtd"/>
          <param name="dtdpackage" value="org.netbeans.modules.j2ee.deployment.eardeploy.dd.appclient13"/>
          <param name="dtddir" value="org/netbeans/modules/j2ee/deployment/eardeploy/dd/appclient13"/>
      </antcall>
      <antcall target="ddgen">
          <param name="dtdfile" value="src/dtds/application_1_3.dtd"/>
          <param name="dtdpackage" value="org.netbeans.modules.j2ee.deployment.eardeploy.dd.application13"/>
          <param name="dtddir" value="org/netbeans/modules/j2ee/deployment/eardeploy/dd/application13"/>
      </antcall>
      <antcall target="ddgen">
          <param name="dtdfile" value="src/dtds/ejb-jar_2_0.dtd"/>
          <param name="dtdpackage" value="org.netbeans.modules.j2ee.deployment.eardeploy.dd.ejbjar20"/>
          <param name="dtddir" value="org/netbeans/modules/j2ee/deployment/eardeploy/dd/ejbjar20"/>
      </antcall>
      <antcall target="ddgen">
          <param name="dtdfile" value="src/dtds/web-app_2_3.dtd"/>
          <param name="dtdpackage" value="org.netbeans.modules.j2ee.deployment.eardeploy.dd.webapp23"/>
          <param name="dtddir" value="org/netbeans/modules/j2ee/deployment/eardeploy/dd/webapp23"/>
      </antcall>
  </target>

  <target name="ddinit">
        <mkdir dir="src/${dtddir}"/>
        <uptodate property="dd.generation" 
                targetfile="${dtdfile}">
            <srcfiles dir="src/${dtddir}" includes="*.java"/>
        </uptodate> 
  </target>

  <target name="ddgen" depends="init,ddinit" if="dd.generation">
     <echo message="Generated schema2beans from ${dtdfile}"/>
     <java classname="org.netbeans.modules.schema2beansdev.GenBeans" fork="yes">
       <classpath>
          <pathelement location="${schema2beans/rt.dir}/${nb.modules/autoload.dir}/schema2beans.jar" />
          <pathelement location="${schema2beans/dev.dir}/${nb.modules/autoload.dir}/schema2beansdev.jar" />
          <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
          <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
       </classpath>
       <arg line= "-f ${dtdfile}" />
       <arg line= "-p ${dtdpackage}" />
       <arg line= "-r src" />
       <arg line="-javaBeans"/>
       <arg line="-commonInterface"/>
       <arg line="-extendBaseBean"/>
     </java>
  </target> 

  <target name="debug">
      <antcall target="jars">
                <param name="build.compiler.debug" value="on"/>
      </antcall>
  </target>

  <!-- This target will only work *inside* the IDE!-->
  <target depends="dev" description="Test the module inside the running IDE." name="reinstall">
    <nbinstaller action="reinstall" module="netbeans/modules/autoload/j2eeserver.jar"/>
  </target> 

  <target name="dev" description="A development target to compile with
symbols and copy jar file(s)" depends="debug">
        <copy todir="${nbroot}/nbbuild/netbeans/modules/autoload/">
            <fileset dir="netbeans/modules/autoload/">
              <exclude name="**/locale/*"/>
              <exclude name="**/*-test.jar" /> 
            </fileset>
        </copy>
  </target>
  
 <target name="f4dev" description="A development target to compile with
symbols and copy jar file(s)" depends="debug">
        <copy todir="${f4jroot}/f4jbuild/firststart/modules/autoload/">
            <fileset dir="netbeans/modules/autoload/">
              <exclude name="**/locale/*"/>
              <exclude name="**/*-test.jar" /> 
            </fileset>
        </copy>
  </target>
  
  <target name="javadoc" description="Build j2eeserver module API documentation.">
    <echo message="Build j2eeserver module API documentation..."/>
    <ant dir="${nbroot}/nbbuild/javadoctools" antfile="template.xml" target="javadoc">
      <property name="javadoc.base" location="."/>
      <property name="javadoc.name" value="J2EEServerAPI"/>
      <property name="javadoc.title" value="NetBeans j2eeserver module APIs"/>
      <property name="javadoc.packages" value="org.netbeans.modules.j2ee.deployment.devmodules.spi.*,org.netbeans.modules.j2ee.deployment.devmodules.api.*,org.netbeans.modules.j2ee.deployment.plugins.api.*"/>
      <property name="javadoc.classpath" refid="cp"/>
      <property name="javadoc.overview" location="api/doc/overview.html"/>
      <property name="javadoc.docfiles" location="api/doc"/>
      <!--<property name="javadoc.apichanges" location="api/doc/changes/apichanges.xml"/>-->
    </ant>
  </target>

</project>
