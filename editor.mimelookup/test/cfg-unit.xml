<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="editor mimelookup unit test config">
    
    <testbag testattribs="stable" executor="code" name="testbag_1">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*Test.class"/>
                <exclude name="**/*MemoryTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="stable,memory" executor="memory" name="testbag_2">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*MemoryTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="failing" executor="code" name="testbag_2">
        <testset dir="unit/src">
            <patternset>
		<!-- Some of the original tests had already been failing before the MimePath change. -->
		<include name="org/netbeans/modules/editor/mimelookup/Depr_MimeLookupPerformanceTest.class" />
		<include name="org/netbeans/modules/editor/mimelookup/Depr_MimeLookupPopupItemsChangeTest.class" />
		<include name="org/netbeans/modules/editor/mimelookup/Depr_MimeLookupTest.class/testRegisteredClassLookup" />
		<include name="org/netbeans/modules/editor/mimelookup/Depr_MimeLookupTest.class/testRegisteredTemplatesLookup" />
		<include name="org/netbeans/modules/editor/mimelookup/Depr_MimeLookupWeakRefTest.class/testWeakListenersAddingToResult" />
		<include name="org/netbeans/modules/editor/mimelookup/IssuesTest.class/testForChangeInLayer" />

		<!-- These are the cloned original tests updated to use MimePath. They are still failing. -->
		<include name="org/netbeans/modules/editor/mimelookup/MimeLookupPerformanceTest.class" />
		<include name="org/netbeans/modules/editor/mimelookup/MimeLookupPopupItemsChangeTest.class" />
		<exclude name="org/netbeans/modules/editor/mimelookup/MimeLookupTest.class/testRegisteredClassLookup" />
		<include name="org/netbeans/modules/editor/mimelookup/MimeLookupTest.class/testRegisteredTemplatesLookup" />
		<include name="org/netbeans/modules/editor/mimelookup/MimeLookupWeakRefTest.class/testWeakListenersAddingToResult" />
            </patternset>
        </testset>
    </testbag>
    
    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="empty" executor="code" name="testbag_empty">
        <testset dir="unit/src"/>
    </testbag>

    <testbag testattribs="dev" executor="code" name="testbag_dev">
        <testset dir="unit/src">
            <patternset>
                <!-- Add your own code tests -->
            </patternset>
        </testset>
    </testbag>
    
    <executor name="code" antfile="build-unit.xml" target="runcodetest" default="true"/>
    <executor name="memory" antfile="build-unit.xml" target="runmemorytest" />
    
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>
    
</mconfig>
