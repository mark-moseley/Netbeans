<project basedir="." default="netbeans" name="ide/branding">

  <property name="nbroot" location="../.."/>
  
  <import file="${nbroot}/nbbuild/default.xml"/> 

  <property name="locjar.warnMissingDir" value="true"/>

  <!-- These are the locales we care about.  Not everything has to be -->
  <!-- localized for each of these locales, though.		      -->
  <property name="locales" value="nb"/>
  <property name="locjar.locales"       value="${locales}"/>

  <target name="init" depends="default.init" >

    <patternset id="ide/branding.files">
      <include name="**/*_nb.jar"/>
      <include name="${nb.modules.dir}/org-netbeans-modules-ide-branding.jar" />
      <include name="${nb.system.dir}/Modules/org-netbeans-modules-ide-branding.xml" />
    </patternset>
  
  
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM"
             classpath="${nbroot}/nbbuild/nbantext.jar"/>
    <taskdef name="locmakenbm" classname="org.netbeans.nbbuild.LocMakeNBM"
             classpath="${nbroot}/nbbuild/nbantext.jar"/>
    <taskdef name="locjhindexer" classname="org.netbeans.nbbuild.LocJHIndexer"
             classpath="${nbroot}/nbbuild/nbantext.jar"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar"
             classpath="${nbroot}/nbbuild/nbantext.jar"/>
    <taskdef name="grabLocalizableFiles"
             classname="org.netbeans.nbbuild.GetL9eFiles"
             classpath="${nbroot}/nbbuild/nbantext.jar"/>
    <taskdef name="makelayer" 
             classname="org.netbeans.nbbuild.MakeLayer" 
	     classpath="${nbroot}/nbbuild/nbantext.jar"/>
    <taskdef 
        name="createmodulexml" 
        classname="org.netbeans.nbbuild.CreateModuleXML" 
        classpath="${nbroot}/nbbuild/nbantext.jar"
    />
  </target>

  <!-- Need todo: Decide how to handle genlist, especially since it's changing. -->
  <!-- Note: jars has to be the last use of locjar so that inferring the        -->
  <!-- location of the localizing bundle works!					-->
  <target name="netbeans" depends="init,release,jars">
    <genlist 
      outputfiledir="${netbeans.dest.dir}/${cluster.dir}" 
      module="${nb.modules.dir}/org-netbeans-modules-ide-branding.jar"
    >
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="ide/branding.files"/>
      </fileset>
    </genlist>
  </target>


  <target name="netbeans-extra" depends="release"/>

  <target name="release" depends="init">
    <copy todir="${netbeans.dest.dir}/${cluster.dir}">
      <fileset dir="release">
      </fileset>
    </copy>
  </target>
  
  <target name="jars" depends="init">
   <!-- <property name="locjar.writeSrcDir" value="true"/> -->

    <mkdir  dir="build/org/netbeans/modules/ide/branding" />
    <copy file="Bundle.properties" tofile="build/org/netbeans/modules/ide/branding/Bundle.properties" />
    <mkdir  dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}" />
    <!-- core (main core) -->
    <jar basedir="." 
      excludes="**/*"
      manifest="manifest.mf"
      jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/org-netbeans-modules-ide-branding.jar" 
    >
        <fileset dir="build" >
            <include name="org/netbeans/modules/ide/branding/Bundle.properties" />
        </fileset>
    </jar>
    <createmodulexml xmldir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/Modules">
      <autoload dir="${netbeans.dest.dir}/${cluster.dir}">
        <include name="${nb.modules.dir}/org-netbeans-modules-ide-branding.jar"/>
      </autoload>
    </createmodulexml>
    
    <locjar 
      basedir="core/src"
      jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.lib.dir}/core.jar"
    />

    <locjar 
      basedir="core/windows/src"
      jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/org-netbeans-core-windows.jar"
    />
  </target>

  <target name="nbm" depends="netbeans" description="Create Localized NBM's">
    <mkdir dir="build"/>
    <makenbm 
       file="build/org-netbeans-modules-ide-branding.nbm"
       productdir="${netbeans.dest.dir}/${cluster.dir}"
	     homepage="http://ide.${homepage.base}/"
	     distribution="http://${dist.base}/org-netbeans-modules-ide-branding.nbm"
       module="${nb.modules.dir}/org-netbeans-modules-ide-branding.jar"
    >
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>
  
	<target name="clean" depends="init" >
  	<delete dir="build" />
    <delete>
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="ide/branding.files"/>
      </fileset>
    </delete>
  </target>

</project>
