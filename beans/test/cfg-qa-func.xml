<?xml version="1.0" encoding="UTF-8"?>

<mconfig name="QA Beans config">
    
    <testbag testattribs="full" executor="ide" name="testbag_beans_templates" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
                <include name="gui/BeansTemplates.class"/> 
                <exclude name="**/*Tonga*"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="full" executor="ide" name="testbag_beans_property" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
                <include name="gui/CreateNewIndexedProperty.class"/> 
                <include name="gui/CreateNewNonIndexedProperty.class"/> 
                <include name="gui/ChangingOfBeanPropertyProperties.class"/> 
                <exclude name="**/*Tonga*"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="full" executor="ide" name="testbag_beans_event_source" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
                <include name="gui/NewMulticastEventSource.class"/> 
                <include name="gui/NewUnicastEventSource.class"/> 
                <exclude name="**/*Tonga*"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="full" executor="ide" name="testbag_beans_beaninfo" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
                <include name="gui/BeanInfoGeneration.class"/>  
                <exclude name="**/*Tonga*"/>
            </patternset>
        </testset>
    </testbag>
    
    <resultsprocessor name="qa-beans" antfile="build.xml" target="test_report"/>
    <executor name="ide" antfile="build-qa-func.xml" target="runidetest"/>
    <compiler name="default-compiler" default="true" antfile="build-qa-func.xml" target="default-compiler"/>

</mconfig>