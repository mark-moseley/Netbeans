<?xml version="1.0" encoding="UTF-8"?>

<mconfig name="QA Beans config">
    
    <testbag testattribs="full,templates" executor="ide" name="templates" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
                <include name="gui/BeansTemplates.class"/> 
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="full,property" executor="ide" name="property" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
                <include name="gui/CreateNewIndexedProperty.class"/>
                <include name="gui/CreateNewNonIndexedProperty.class"/>
                <include name="gui/ChangingOfBeanPropertyProperties.class"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="full,event_source" executor="ide" name="event_source" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
                <include name="gui/NewMulticastEventSource.class"/> 
                <include name="gui/NewUnicastEventSource.class"/> 
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="full,beaninfo" executor="ide" name="beaninfo" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
                <include name="gui/BeanInfoGeneration.class"/>  
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="validation" executor="ide" name="validaion" resultsprocessor="qa-beans">
        <testset dir="qa-func/src">
            <patternset>
		<include name="gui/ChangingOfBeanPropertyProperties.class"/>
		<include name="gui/BeanInfoGeneration.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <resultsprocessor name="qa-beans" antfile="build.xml" target="test_report"/>
    <executor name="ide" antfile="build-qa-func.xml" target="runidetest"/>
    <compiler name="default-compiler" default="true" antfile="build-qa-func.xml" target="default-compiler"/>

</mconfig>
