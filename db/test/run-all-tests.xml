<project name="Run tests for all supported databases" basedir="." default="info">

    <target name="info">
        <echo message="use 'ant -buildfile run-all-tests.xml all'"/>
    </target>

    <target name="all">
        <!-- -->
        <ant antfile="build.xml" target="runtests">
            <!--property name="xtest.userdata|active_driver" value="pointbase"/-->
            <property name="xtest.attribs" value="stable,pointbase"/>
        </ant>
        <!-- -->

        <!-- -->
        <ant antfile="build.xml" target="runtests">
            <property name="xtest.attribs" value="stable,oracle"/>
        </ant>
        <!-- -->

        <!-- -->
        <ant antfile="build.xml" target="runtests">
            <property name="xtest.attribs" value="stable,db2"/>
        </ant>
        <!-- -->
    </target>

</project>
