<project name="db" default="netbeans" basedir=".">

  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>
  <property name="build" location="../nbbuild/netbeans"/>

  <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="tojar" classname="org.netbeans.nbbuild.ToJar" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>

  <patternset id="db.files">
    <include name="modules/db.jar"/>
    <include name="modules/docs/db.jar"/>
    <include name="modules/ext/ddl.jar"/>
  </patternset>

  <target name="init">
    <tstamp/>
    <property name="buildnumber" value="${DSTAMP}-${TSTAMP}"/>
    <echo message="buildnumber = ${buildnumber}"/>
  </target>

  <target name="precompile">
    <javac srcdir="libsrc" destdir="libsrc" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="../openide/openide-13javac-workaround.jar"/>
        <pathelement location="${build}/lib/openide.jar"/>
        <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
        <pathelement location="${build}/modules/autoload/openide-io.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="compile" depends="precompile">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement path="libsrc"/>
        <pathelement location="../openide/openide-13javac-workaround.jar"/>
        <pathelement location="${build}/lib/openide.jar"/>
        <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
        <pathelement location="${build}/modules/openidex.jar"/>
        <pathelement location="${build}/modules/autoload/openide-io.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="tojar">
<!--    <tojar srcdir="src" unpackeddir="tojar"/>-->
  </target>

  <target name="jars" depends="init,tojar,compile">
    <mkdir dir="${build}/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="${build}/modules/db.jar"
         manifest="manifest-subst.mf"
         basedir="src"
         excludesfile="../nbbuild/standard-jar-excludes.txt"
         compress="false">
      <locale name="ja"/>
    </locjar>
    <mkdir dir="${build}/modules/ext"/>
    <locjar jarfile="${build}/modules/ext/ddl.jar"
         basedir="libsrc"
         excludesfile="../nbbuild/standard-jar-excludes.txt"
         compress="false">
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="javahelp">
    <mkdir dir="javahelp/org/netbeans/modules/db/docs/JavaHelpSearch2"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/db/docs/"
               db="javahelp/org/netbeans/modules/db/docs/JavaHelpSearch2"
               jhall="../nbbuild/external/jhall-1.1.2_02.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch2/"/>
      <exclude name="ja/"/>
      <exclude name="credits.html"/>
    </jhindexer>
    <mkdir dir="javahelp/org/netbeans/modules/db/docs/ja/JavaHelpSearch2"/>
    <jhindexer basedir="javahelp/org/netbeans/modules/db/docs/ja/"
               db="javahelp/org/netbeans/modules/db/docs/ja/JavaHelpSearch2"
               locale="ja"
               jhall="../nbbuild/external/jhall-1.1.2_02.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch2/"/>
      <exclude name="credits.html"/>
    </jhindexer>
    <mkdir dir="javahelp/org/netbeans/modules/usersguide"/>
    <copy file="../usersguide/javahelp/org/netbeans/modules/usersguide/ide.css" tofile="javahelp/org/netbeans/modules/usersguide/ide.css"/>
    <mkdir dir="${build}/modules/docs"/>
    <locjar jarfile="${build}/modules/docs/db.jar"
            compress="true">
      <fileset dir="javahelp" excludesfile="../nbbuild/standard-jar-excludes.txt" excludes="org/netbeans/modules/usersguide/"/>
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="netbeans" depends="jars,javahelp">
      <genlist outputfiledir="${build}" module="modules/db.jar">
          <fileset dir="${build}">
	      <patternset refID="db.files"/>
          </fileset>
      </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="db.nbm"
             productDir="${build}"
             module="modules/db.jar"
             homepage="http://${homepage.base}/db.html"
             distribution="${dist.base}/db.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="db.files"/>
      </fileset>
      <fileset dir="libsrc">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="db.nbm"/>
    <delete dir="javahelp/org/netbeans/modules/db/docs/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/db/docs/ja/JavaHelpSearch2"/>
    <delete dir="javahelp/org/netbeans/modules/usersguide"/>
  </target>

</project>
