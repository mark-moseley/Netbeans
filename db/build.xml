-->

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="db.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
  </target>

</project>
