<!-- The root connection element. -->
<!ELEMENT connection (driver-class|connection-url|schema|user)*>

<!-- The driver class. -->
<!ELEMENT driver-class EMPTY>
<!ATTLIST driver-class 
    value CDATA #REQUIRED
>

<!-- The connection URL. -->
<!ELEMENT connection-url EMPTY>
<!ATTLIST connection-url 
    value CDATA #REQUIRED
>

<!-- The schema to which to connect by default. -->
<!ELEMENT schema EMPTY>
<!ATTLIST schema 
    value CDATA #IMPLIED
>

<!-- The database user to connect as. -->
<!ELEMENT user EMPTY>
<!ATTLIST user 
    value CDATA #REQUIRED
>
