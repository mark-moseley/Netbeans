<project default="all" name="VW Deployment Test Type Script">

    <import file="../../nbbuild/templates/xtest-qa-functional.xml"/>

    <property name="xtest.data.dir" location="./data"/>
    <property name="xtest.properties-file.dir" value="${xtest.data.dir}"/>

    <available file="${xtest.properties-file.dir}/DeploymentTargets.properties" property="xtest.dt-properties-file.present"/>
    <echo message="xtest.dt-properties-file.present=${xtest.dt-properties-file.present}"/>
    <echo message="xtest.data.dir=${xtest.data.dir}"/>
    <echo message="xtest.ide.commandline.suffix=${xtest.ide.commandline.suffix}"/>

    <property name="xtest.ide.commandline.suffix" value="-J-Dxtest.data.dir=${xtest.data.dir}"/>

    <condition property="asadmin.script" value="asadmin.bat" else="asadmin">
        <contains string="${os.name}" substring="Windows" casesensitive="false"/>
    </condition>
    <condition property="wl-stop.script" value="stopWebLogic.cmd" else="stopWebLogic.sh">
        <contains string="${os.name}" substring="Windows" casesensitive="false"/>
    </condition>
    <condition property="shutdown.script" value="shutdown.bat" else="shutdown.sh">
        <contains string="${os.name}" substring="Windows" casesensitive="false"/>
    </condition>
    
    <!-- ================================ -->
    <!-- Preparation for deployment tests -->
    <!-- ================================ -->
    <target name="deployment-preparation" if="xtest.dt-properties-file.present">
        <echo message="xtest.properties-file.dir=${xtest.properties-file.dir}"/>
        <copy file="${xtest.properties-file.dir}/DeploymentTargets.properties" tofile="${xtest.data.dir}/DeploymentTargets.properties" overwrite="true"/>
        <copy file="${xtest.properties-file.dir}/DefaultDeploymentTargets.properties" tofile="${xtest.data.dir}/DefaultDeploymentTargets.properties" overwrite="true"/>
        <loadproperties srcFile="${xtest.data.dir}/DeploymentTargets.properties"/>
        <available file="${deployment.target.path.GlassFish V2}/bin/${asadmin.script}" property="asadmin.present"/>
        <echo message="asadmin.present=${asadmin.present}"/>
        <antcall target="glassfish-preparation"/>
    </target>

    <target name="glassfish-preparation" if="asadmin.present">
        <touch file="./passwd"/>
        <echo file="./passwd" message="AS_ADMIN_PASSWORD=${deployment.target.password.GlassFish V2}"/>
        <exec dir="." executable="${deployment.target.path.GlassFish V2}/bin/${asadmin.script}" spawn="true">
            <arg line="start-domain domain1"/>
        </exec>
        <sleep seconds="30"/> 
        <property name="SunAppServer.command.prefix" value="create-jdbc-resource --host localhost --port 4848 --user ${deployment.target.login.GlassFish V2} --passwordfile passwd --connectionpoolid DerbyPool jdbc/Test"/>
        <exec dir="." executable="${deployment.target.path.GlassFish V2}/bin/${asadmin.script}">
            <arg line="${SunAppServer.command.prefix}1"/>
        </exec>
        <exec dir="." executable="${deployment.target.path.GlassFish V2}/bin/${asadmin.script}">
            <arg line="${SunAppServer.command.prefix}2"/>
        </exec>
        <exec dir="." executable="${deployment.target.path.GlassFish V2}/bin/${asadmin.script}">
            <arg line="${SunAppServer.command.prefix}3"/>
        </exec>
        <exec dir="." executable="${deployment.target.path.GlassFish V2}/bin/${asadmin.script}">
            <arg line="stop-domain domain1"/>
        </exec>
    </target>

    <!-- Creates an empty Java project in IDE -->
    <!-- <property name="xtest.ide.create.project" value="true"/> -->
    <!-- Opens project at specified location -->
    <!--property name="xtest.ide.open.project" location="${xtest.data}/SampleProject"/-->
    
    <!-- ================ -->
    <!-- Additional tasks -->
    <!-- ================ -->
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->

    <!-- This target executes tests inside IDE. It is defined in default-build-qa-functional.xml.
         If you need to customize it, you can uncomment the following and override it.-->
   <target name="runidetest" depends="init,init-cp,deployment-preparation">
       <path id="httpunit.jars">
            <pathelement location="${nb_all}/testtools/external/httpunit.jar"/>
            <pathelement location="${netbeans.dest.dir}/visualweb2/modules/ext/tidy-mod.jar"/>
        </path>
        <property name="coverage.lib.path" refid="httpunit.jars"/>
        <executeTests  pluginName="ide">
            <classpath>
                <path refid="jemmy.and.jelly.path"/>
                <pathelement location="${nb_all}/visualweb.kit/gravy/builds/gravy.jar"/>
             </classpath>
        </executeTests>
        <loadproperties srcFile="${xtest.data.dir}/DeploymentTargets.properties"/>
        <condition property="all.servers.present">
            <and>
                <available file="${deployment.target.path.GlassFish V2}/bin/${asadmin.script}"/>
                <available file="${deployment.target.path.JBoss Application Server}/bin/${shutdown.script}"/>
                <available file="${deployment.target.path.Tomcat 5.0}/bin/${shutdown.script}"/>
                <available file="${deployment.target.path.Tomcat 5.5}/bin/${shutdown.script}"/>
                <available file="${deployment.target.path.Tomcat 6.0}/bin/${shutdown.script}"/>
                <available file="${deployment.target.path.BEA WebLogic Server}/samples/domains/wl_server/bin/${wl-stop.script}"/>
            </and>
        </condition>
        <echo message="all.servers.present=${all.servers.present}"/>
        <antcall target="stop-servers"/>
    </target>

    <target name="stop-servers" if="all.servers.present">
        <echo message="Stopping GlassFish V2"/>
        <exec dir="${deployment.target.path.GlassFish V2}/bin" executable="${deployment.target.path.GlassFish V2}/bin/${asadmin.script}">
            <arg line="stop-domain domain1"/>
        </exec>
        <echo message="GlassFish V2 is stopped"/>
        <echo message=""/>
        <echo message="Stopping JBoss"/>
        <exec dir="${deployment.target.path.JBoss Application Server}/bin" executable="${deployment.target.path.JBoss Application Server}/bin/${shutdown.script}">
            <arg line="-S"/>
        </exec>
        <echo message="JBoss is stopped"/>
        <echo message=""/>
        <echo message="Stopping Tomcat 5.0"/>
        <exec dir="${deployment.target.path.Tomcat 5.0}/bin" executable="${deployment.target.path.Tomcat 5.0}/bin/${shutdown.script}"/>
        <echo message="Tomcat 5.0 is stopped"/>
        <echo message=""/>
        <echo message="Stopping Tomcat 5.5"/>
        <exec dir="${deployment.target.path.Tomcat 5.5}/bin" executable="${deployment.target.path.Tomcat 5.5}/bin/${shutdown.script}"/>
        <echo message="Tomcat 5.5 is stopped"/>
        <echo message=""/>
        <echo message="Stopping Tomcat 6.0"/>
        <exec dir="${deployment.target.path.Tomcat 6.0}/bin" executable="${deployment.target.path.Tomcat 6.0}/bin/${shutdown.script}"/>
        <echo message="Tomcat 6.0 is stopped"/>
        <echo message=""/>
        <echo message="Stopping WebLogic"/>
        <exec dir="${deployment.target.path.BEA WebLogic Server}/samples/domains/wl_server/bin" executable="${deployment.target.path.BEA WebLogic Server}/samples/domains/wl_server/bin/${wl-stop.script}"/>
        <echo message="WebLogic is stopped"/>
   </target>

</project>
