<!DOCTYPE mconfig PUBLIC "-//NetBeans//DTD XTest cfg 1.0//EN" "http://www.netbeans.org/dtds/xtest-cfg-1_0.dtd">
<mconfig name="qa-functional Test Type Config">

    <!-- Validation suite for my module -->

    <testbag testattribs="sanity" compiler="qa-functional-compiler" executor="ide" name="Sanity test">
        <testset dir="qa-functional/src">
            <patternset>
		    <include name="org/netbeans/test/sanity/SanityTests.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="glassfish_acceptance_deployment,acceptance" compiler="qa-functional-compiler" executor="ide" name="Acceptance validation of GlassFish Deployment">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/glassfish/GlassFishAcceptanceTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="glassfish_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Validation of GlassFish Deployment">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/glassfish/GlassFishTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="glassfish_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Restart IDE and Deploy to GlassFish Tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/glassfish/GlassFishRestartTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="glassfish_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Other GlassFish Deployment Tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/glassfish/GlassFishOtherTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="jboss_acceptance_deployment,acceptance" compiler="qa-functional-compiler" executor="ide" name="Acceptance validation of JBoss Deployment">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/jboss/JBossAcceptanceTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="jboss_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Validation of JBoss Deployment">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/jboss/JBossTestSuite.class"/>
            </patternset>
        </testset>

    </testbag>
    <testbag testattribs="jboss_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Restart IDE and Deploy to JBoss Tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/jboss/JBossRestartTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="jboss_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Other JBoss Deployment Tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/jboss/JBossOtherTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="tomcat_acceptance_deployment,acceptance" compiler="qa-functional-compiler" executor="ide" name="Acceptance validation of Tomcat Deployment">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/tomcat/TomcatAcceptanceTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="tomcat_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Validation of Tomcat Deployment">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/tomcat/TomcatTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="tomcat_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Restart IDE and Deploy to Tomcat Tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/tomcat/TomcatRestartTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="tomcat_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Other Tomcat Deployment Tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/tomcat/TomcatOtherTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="weblogic_acceptance_deployment,acceptance" compiler="qa-functional-compiler" executor="ide" name="Acceptance validation of WebLogic Deployment">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/weblogic/WebLogicAcceptanceTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="weblogic_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Validation of WebLogic Deployment">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/weblogic/WebLogicTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="weblogic_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Restart IDE and Deploy to WebLogic Tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/weblogic/WebLogicRestartTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="weblogic_deployment,all" compiler="qa-functional-compiler" executor="ide" name="Other WebLogic Deployment Tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/deployment/weblogic/WebLogicOtherTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>

</mconfig>
