<project name="ant/docs" default="netbeans" basedir=".">

    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" location="../../nbbuild/standard-nbm-license.txt"/>

    <property name="nbm_alias" value="nb_ide"/>
    <property name="build" location="../nbbuild/netbeans"/>

    <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="../../nbbuild/nbantext.jar"/>
    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../../nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>

    <patternset id="ant/docs.files">
        <include name="modules/ant-docs.jar"/>
	<include name="modules/docs/ant-manual.zip"/>
	<include name="system/ParserDB/ant151.jc*"/>
	<include name="docs/ant-api.zip"/>
    </patternset>

    <target name="init">
        <ant dir="../external" target="unscramble"/>
    </target>

    <target name="jars">
        <mkdir dir="${build}/modules"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <locjar jarfile="${build}/modules/ant-docs.jar"
                manifest="manifest-subst.mf"
                basedir="src"
                excludesfile="../../nbbuild/standard-jar-excludes.txt"
                compress="false">
            <locale name="ja"/>
        </locjar>
    </target>

    <target name="release">
        <copy todir="${build}" includeEmptyDirs="false">
            <fileset dir="release" excludesfile="../../nbbuild/standard-jar-excludes.txt"/>
        </copy>
    </target>

    <target name="javahelp" depends="init">
        <mkdir dir="javahelp/org/apache/tools/ant/module/docs/ant-docs"/>
        <unzip src="../external/ant-docs-1.5.1.zip" dest="javahelp/org/apache/tools/ant/module/docs/ant-docs"/>
        <mkdir dir="javahelp/org/apache/tools/ant/module/docs/JavaHelpSearch"/>
        <jhindexer basedir="javahelp/org/apache/tools/ant/module/docs"
                   db="javahelp/org/apache/tools/ant/module/docs/JavaHelpSearch"
                   jhall="../../nbbuild/external/jhall-1.1.2_02.jar">
            <include name="**/*.html"/>
            <exclude name="JavaHelpSearch/"/>
            <exclude name="credits.html"/>
            <exclude name="ant-docs/LICENSE"/>
        </jhindexer>
        <mkdir dir="${build}/modules/docs"/>
        <zip zipfile="${build}/modules/docs/ant-manual.zip"
             basedir="javahelp"
             excludesfile="../../nbbuild/standard-jar-excludes.txt"
             compress="true"/>
    </target>

    <target name="check-javahelp" depends="javahelp" description="Validate helpset for various errors.">
        <taskdef name="checkhelpsets" classname="org.netbeans.nbbuild.CheckHelpSets">
            <classpath>
                <pathelement location="../../nbbuild/nbantext.jar"/>
                <fileset dir="../../core/external">
                    <include name="regexp*.jar"/>
                </fileset>
                <fileset dir="../../nbbuild/external">
                    <include name="jhall*.jar"/>
                </fileset>
            </classpath>
        </taskdef>
        <checkhelpsets>
            <fileset dir="javahelp">
                <include name="org/apache/tools/ant/module/docs/HelpSet.hs"/>
            </fileset>
        </checkhelpsets>
    </target>

    <target name="netbeans" depends="jars,release,javahelp" description="Build module.">
      <genlist outputfiledir="${build}" module="modules/ant-docs.jar">
          <fileset dir="${build}">
	      <patternset refID="ant/docs.files"/>
          </fileset>
      </genlist>
    </target>

    <target name="nbm" depends="netbeans" description="Build module NBM file.">
        <makenbm file="ant-docs.nbm"
                 productDir="${build}"
                 module="modules/ant-docs.jar"
                 homepage="http://ant.${homepage.base}/"
                 needsrestart="false"
                 distribution="http://${dist.base}/ant-docs.nbm">
            <license name="ant-docs-license.txt">
                <text>For the Ant documentation module itself:</text>
                <file location="${license.file}"/>
                <text>For the Ant manual:</text>
                <file location="../../nbbuild/external/apache-license.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="clean" description="Clean out build products.">
        <delete file="manifest-subst.mf"/>
        <delete file="ant-docs.nbm"/>
	<delete>
          <fileset dir="${build}">
	      <patternset refID="ant/docs.files"/>
          </fileset>
	</delete>
        <delete dir="javahelp/org/apache/tools/ant/module/docs/JavaHelpSearch"/>
        <delete dir="javahelp/org/apache/tools/ant/module/docs/ant-docs"/>
    </target>

</project>
