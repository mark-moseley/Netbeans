<project name="utilities" default="netbeans" basedir=".">

    <import file="../nbbuild/templates/projectized.xml"/>

    <target name="files-init" depends="basic-init">
        <patternset id="module.files">
            <include name="${module.jar}"/>
            <include name="${javahelp.jar}" if="has.javahelp"/>
            <include name="${nb.system.dir}/Modules/${code.name.base.dashes}.xml"/>
            <include name="${nb.lib.dir}/org-netbeans-modules-utilities-cli.jar"/>
        </patternset>
    </target>

    <target name="compile-cli" depends="init">
        <mkdir dir="build/cliclasses"/>
        <javac srcdir="clisrc" destdir="build/cliclasses" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" source="1.4">
            <classpath path="${cp.cli}"/>
        </javac>
        <copy todir="build/cliclasses">
            <fileset dir="clisrc" excludesfile="../nbbuild/standard-jar-excludes.txt"/>
        </copy>
    </target>

    <target name="jar-cli" depends="init,compile-cli">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.lib.dir}" />
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.lib.dir}/org-netbeans-modules-utilities-cli.jar"
             compress="false">
            <fileset dir="build/cliclasses"/>
        </jar>
    </target>

    <target name="compile" depends="jar-cli,projectized.compile"/>

    <target name="netbeans-extra" depends="jar-cli"/>

</project>
