<project name="utilities" default="nbm" basedir=".">
  <target name="compile">
    <javac srcdir="src"
           destdir="src"
           classpath="../editor/netbeans/lib/ext/nb-editor.jar:../openide/netbeans/lib/openide.jar:../openidex/netbeans/modules/openidex.jar:../core/release/lib/ext/regexp.jar"/>
  </target>
  <target name="tojar">
    <taskdef name="tojar" classname="org.netbeans.nbbuild.ToJar"/>
    <tojar srcdir="src"
           unpackeddir="tojar"/>
  </target>
  <target name="jars" depends="compile,tojar">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copyfile src="manifest.mf" dest="manifest-subst.mf" filtering="on"/>
    <jar jarfile="netbeans/modules/utilities.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="../nbbuild/standard-jar-excludes.txt"
	 compress="false"/>
  </target>
  <target name="nbm" depends="jars">
    <zip zipfile="utilities.nbm"
         includes="netbeans/"
	 basedir="."/>
  </target>
</project>
