<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.0//EN" "http://www.netbeans.org/dtds/filesystem-1_0.dtd">

<!-- XML Layer for core-ide -->

<filesystem>
    
    <folder name="Shortcuts">
        <file name="S-F8.instance"> <!-- PENDING Debugger -->
	    <attr name="instanceClass" stringvalue="org.openide.actions.ToggleBreakpointAction"/>
	</file>
        <file name="CS-F7.instance">
	    <attr name="instanceClass" stringvalue="org.openide.actions.AddWatchAction"/>
	</file>
    </folder>
    
    <folder name="Startup">
        <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle"/>
    </folder>
        
    <folder name="Services"> <!-- PENDING - move to Java module -->
        <file name="org-openide-src-nodes-SourceOptions.settings" url="SourceOptions.settings">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />
            <attr name="SystemFileSystem.icon" urlvalue="nbresloc:org/openide/resources/src/sourceOptions.gif" />
        </file>
    </folder>
    
    <folder name="UI">
    <!-- settings categories UI presentation -->
        <folder name="Services">
            <attr name="helpID" stringvalue="org.netbeans.core.ControlPanelNode" />
            
            <folder name="IDEConfiguration"> <!-- PENDING rename to somethink like APP Settings or so -->
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />

                <folder name="LookAndFeel"> 
                    <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />

                    <file name="org-openide-src-nodes-SourceOptions.shadow">
<![CDATA[Services/org-openide-src-nodes-SourceOptions.settings
SystemFileSystem
]]>
                    </file>
                </folder>
                
            </folder>        
            
            <folder name="SourceCreationAndManagement">
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />

                <file name="Templates.instance">
                    <attr name="instanceCreate" methodvalue="org.netbeans.core.ui.UINodes.createTemplate" />
                    <attr name="instanceClass" stringvalue="org.openide.nodes.Node" />
                </file>
            </folder> <!-- SourceCreationAndManagement -->
        
        </folder>
    </folder>
    
    <folder name="Workplace">
         <!-- Workplace of the IDE -->
    </folder>    


    <!-- unmounts all global filesystems -->
    <folder name="Mount">
        <file name="AllRoots.instance_hidden" />
        <file name="Home.instance_hidden" />
    </folder>

    <folder name="Toolbars">
        <!-- remove workspace switcher and status line from toolbars for ide -->
        <folder name="WorkspaceSwitcher_hidden">
        </folder>
        <folder name="StatusLine_hidden">
        </folder>
        
        <!-- specify toolbar config for ide, overrides configuration from core/ui.
             if you modify this file, please review
             org/netbeans/core/ui/resources/Standard.xml also, and sync
             the changes if appropriate -->
        <file name="Standard.xml" url="Standard.xml"/>
    </folder> <!-- Toolbars -->
        
</filesystem>
