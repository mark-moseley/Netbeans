package Templates.Classes;

import java.io.IOException;
import java.net.*;
import java.util.Properties;
import java.util.logging.Level;
import java.util.logging.Logger;


/**
 *
 * @author __USER__
 */
public class HttpBasicAuthenticator extends Authenticator {
    private String username;
    
    private String password;
    
    public ${name}(String username, String password) {
        this.username = username;
        this.password = password;
    }
    
    public ${name}() {
        try {
            Properties props = new Properties();
            props.load(HttpBasicAuthenticator.class.getResourceAsStream(
                    "profile.properties"));
            username = props.getProperty("username");
            password = props.getProperty("password");
        } catch (IOException ex) {
            Logger.getLogger(HttpBasicAuthenticator.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
    
    protected PasswordAuthentication getPasswordAuthentication() {
        return new PasswordAuthentication(username, password.toCharArray());
    }
}
