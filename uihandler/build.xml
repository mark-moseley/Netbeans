<project basedir="." default="netbeans" name="logger/uihandler">
    <description>Builds, tests, and runs the project org.netbeans.modules.uihandler</description>
    <import file="../../nbbuild/templates/projectized.xml"/>
    
    
    <!-- make sure sample server is running -->
    <target name="reload" depends="-run-server,projectized.reload"/>
    <target name="debug" depends="-run-server,projectized.debug"/>
    
    
    <target name="-run-server">
        <tempfile deleteonexit="true" property="url.file"/>
        <subant target="run-server">
            <property name="url.file" value="${url.file}"/>
            <dirset dir="..">
                <include name="uihandlerserver"/>
            </dirset>
        </subant>
        <loadfile property="client.url" srcfile="${url.file}"/>
        <delete file="${url.file}" failonerror="true"/>
        <property name="tryme.args" value="-J-Dorg.netbeans.modules.uihandler.Submit=${client.url}/upload.jsp"/>
    </target>
</project>
