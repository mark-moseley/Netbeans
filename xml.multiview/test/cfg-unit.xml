<mconfig name="Configuration of XML MultiView Editor unit tests">

    <testbag testattribs="stable" executor="ide" name=" XML MultiView Editor unit tests">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/modules/xml/multiview/test/XmlMultiViewEditorTest.class"/>
            </patternset>
        </testset>
    </testbag>
 
    <testbag testattribs="dev" executor="ide" name="XML MultiView Editor unit tests - under development">
        <testset dir="unit/src">
            <patternset>
            </patternset>
        </testset>
    </testbag>    

    <!-- ide executor - use this one if you plan to run your tests inside IDE (internally).
                        Similarly as with code executor, you can create your own to 
                        prepare some neccessary stuff before running tests. -->
    <executor name="ide" antfile="build-unit.xml" target="runidetest"/>    

    <compiler name="unit-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
</mconfig>

