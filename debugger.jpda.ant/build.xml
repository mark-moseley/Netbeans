<project name="debuggerjpda/ant" basedir="." default="netbeans">
  <import file="../../nbbuild/default.xml"/> 

  <target name="init" depends="default.init">
    <patternset id="debuggerjpda/ant.files">
      <include name="${nb.modules.dir}/org-netbeans-modules-debugger-jpda-ant.jar"/>
      <include name="ant/nblib/org-netbeans-modules-debugger-jpda-ant.jar"/>
    </patternset>

    <path id="cp">
      <pathelement location="${nb_all}/openide/openide-13javac-workaround.jar"/>
      <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
      <pathelement location="${ant.dir}/${nb.modules.dir}/ant.jar"/>
      <pathelement location="${xml/core.dir}/${nb.modules/autoload.dir}/xml-core.jar"/>
      <pathelement location="${ant.dir}/ant/lib/ant.jar"/>
      <pathelement location="${java.home}/../lib/tools.jar"/>
      <pathelement location="${openide/execution.dir}/${nb.modules/autoload.dir}/openide-execution.jar"/>
      <pathelement location="${debuggercore/oldapi.dir}/${nb.modules/autoload.dir}/openide-debugger.jar"/>
      <pathelement location="${debuggercore.dir}/${nb.modules/autoload.dir}/debuggerCore.jar"/>
      <pathelement location="${debuggerjpda.dir}/${nb.modules.dir}/jpdaDebugger.jar"/>
    </path>
  </target>

    <target name="compile" depends="init">
        <javac srcdir="src" destdir="src" debug="true" deprecation="true" source="1.4">
            <classpath refid="cp"/>
        </javac>
    </target>

    <target name="jars" depends="compile">
      <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/org-netbeans-modules-debugger-jpda-ant.jar" 
             manifest="manifest-subst.mf" compress="false">
            <fileset dir="src">
                <excludesfile name="../../nbbuild/standard-jar-excludes.txt"/>
                <exclude name="**/*.class"/>
                <exclude name="org/netbeans/modules/debugger/jpda/ant/antlib.xml"/>
            </fileset>
        </jar>
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/ant/nblib"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/ant/nblib/org-netbeans-modules-debugger-jpda-ant.jar" compress="false">
            <fileset dir="src">
                <excludesfile name="../../nbbuild/standard-jar-excludes.txt"/>
                <include name="**/*.class"/>
                <include name="org/netbeans/modules/debugger/jpda/ant/antlib.xml"/>
            </fileset>
        </jar>
    </target>

  <target name="netbeans" depends="jars" description="Build the module.">
    <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules.dir}/org-netbeans-modules-debugger-jpda-ant.jar">
      <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
        <patternset refID="debuggerjpda/ant.files"/>
      </fileset>
    </genlist>
  </target>

  <target name="nbm" depends="netbeans" description="Prepare the module for distribution via Auto Update.">
    <makenbm file="org-netbeans-modules-debugger-jpda-ant.nbm"
             productdir="${netbeans.dest.dir}/${cluster.dir}"
             module="${nb.modules.dir}/org-netbeans-modules-debugger-jpda-ant.jar"
	     homepage="http://debuggerjpda.${homepage.base}/"
             needsrestart="false"
	     distribution="http://${dist.base}/org-netbeans-modules-debugger-jpda-ant.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

    <target name="clean" description="Clean all build products." depends="init">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
               <patternset refID="debuggerjpda/ant.files"/>
            </fileset>
        </delete>
        <delete file="org-netbeans-modules-debugger-jpda-ant.nbm"/>
        <delete file="manifest-subst.mf"/>
    </target>

</project>
