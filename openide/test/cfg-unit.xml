<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="openide unit test config">

    <testbag testattribs="stable" executor="code" name="testbag_1" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/openide/actions/*Test.class"/>
                <include name="org/openide/execution/*Test.class"/>
                <!-- filesystems tests should be stable. If not file a bug: -->                
                <include name="org/openide/filesystems/*.class"/>
                <exclude  name="org/openide/filesystems/SystemFileSystemTest.class"/>                                         
                <include name="org/openide/modules/*.class"/>
                <include name="org/openide/loaders/*.class"/>                
                <!-- Don't worry about these, cannot be fixed currently: -->
		<exclude name="org/openide/loaders/DataFolderTest.class"/> <!-- failing in cont. test -->
                <!-- following was disabled because of issue #20179 -->
                <exclude name="org/openide/loaders/DataFolderMoveTest.class"/>
                <!-- x -->
                <exclude name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart1"/>
                <exclude name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart5"/>
                <exclude name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart7"/>
                <exclude name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart8"/>
                <!-- If #2, #3, or #4 are seen to fail, just add them above, no big deal. -->
                <!-- But if #6 is seen failing, please file a bug report, that is more serious. -->
                <include name="org/openide/nodes/*.class"/>
		<exclude name="org/openide/nodes/FilterNodeTest.class/testChangeOriginalLeafToArray"/>
                <include name="org/openide/options/*Test.class"/>
                <include name="org/openide/util/*.class"/>
                <include name="org/openide/util/actions/*Test.class"/>
                <include name="org/openide/xml/*.class"/>
                <!-- following test was excluded because of issue #22629 
                <include name="org/openide/explorer/FindHelpTest.class"/>
                -->                
                <include name="org/openide/explorer/propertysheet/FindHelpTest.class/testFindHelpOnPropertySheetTab"/>
            </patternset>
        </testset>      
    </testbag>
  
    <testbag testattribs="stable" executor="ide" name="testbag_2" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/openide/explorer/propertysheet/*.class"/>
                <exclude name="org/openide/explorer/propertysheet/FindHelpTest.class"/>
                <include name="org/openide/explorer/view/*.class"/>
            </patternset>
        </testset>        
    </testbag>

    <testbag testattribs="stable,fs" executor="ide" name="testbag_fs_ide" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include  name="org/openide/filesystems/SystemFileSystemTest.class"/>                                         
            </patternset>
        </testset>        
    </testbag>
    
    <testbag testattribs="failing" executor="code" name="testbag_3" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>                
                <!-- See above. -->
                <include name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart1"/>
                <include name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart5"/>
                <include name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart7"/>
                <include name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart8"/>
		<!-- failing in cont. test -->
		<include name="org/openide/loaders/DataFolderTest.class"/>
		<!-- Nodes -->
		<include name="org/openide/nodes/FilterNodeTest.class"/>
		<include name="org/openide/nodes/CookieSetTest*class"/>
                <!-- Implementation was apparently killed during a refactoring: -->
                <include name="org/openide/explorer/propertysheet/FindHelpTest.class/testFindHelpOnPropertySheetRow"/>
            </patternset>
        </testset>      
    </testbag>

    <testbag testattribs="failing" executor="ide" name="testbag_4" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- none -->
            </patternset>
        </testset>      
    </testbag>

    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="empty" executor="code" name="testbag_empty" resultsprocessor="unit">
        <testset dir="unit/src"/>
    </testbag>

    <testbag testattribs="dev" executor="code" name="testbag_dev" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- Add your own code tests -->
            </patternset>
        </testset>
    </testbag>
    
    <executor name="code" antfile="build.xml" target="runcodetest"/>
    
    <executor name="ide" antfile="build.xml" target="runidetest"/>

    <compiler name="unit-compiler" antfile="build.xml" target="unit-compiler" default="true"/>

    <resultsprocessor name="unit" antfile="build.xml" target="test_report" default="true"/>
    
</mconfig>
