<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="openide unit test config">

    <testbag testattribs="stable" executor="code" name="testbag_1" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/openide/actions/*Test.class"/>
                <include name="org/openide/execution/*Test.class"/>
                <include name="org/openide/filesystems/*.class"/>
                <exclude name="org/openide/filesystems/LocalFileSystemTest.class/testFireFileDataCreatedEvent"/>
                <exclude name="org/openide/filesystems/LocalFileSystemTest.class/testFireFileFolderCreatedEvent"/>
                <exclude name="org/openide/filesystems/LocalFileSystemTest.class/testGetOutputStream"/>
                <exclude name="org/openide/filesystems/LocalFileSystemTest.class/testLastModified"/>
                <exclude name="org/openide/filesystems/LocalFileSystemTest.class/testGetSize"/>
                <exclude name="org/openide/filesystems/MultiFileSystem1Test.class/testFireFileAttributeChangedEvent"/>
                <exclude name="org/openide/filesystems/MultiFileSystem1Test.class/testDelete"/>
                <exclude name="org/openide/filesystems/MultiFileSystem1Test.class/testAddFileChangeListener"/>
                <exclude name="org/openide/filesystems/MultiFileSystem1Test.class/testRemoveFileChangeListener"/>
                <exclude name="org/openide/filesystems/MultiFileSystem1Test.class/testLastModified"/>
                <exclude name="org/openide/filesystems/MultiFileSystem1Test.class/testGetSize"/>
                <exclude name="org/openide/filesystems/MultiFileSystem2Test.class/testDelete"/>
                <exclude name="org/openide/filesystems/MultiFileSystem2Test.class/testGetInputStream"/>
                <exclude name="org/openide/filesystems/MultiFileSystem2Test.class/testGetOutputStream"/>
                <exclude name="org/openide/filesystems/MultiFileSystem2Test.class/testRename"/>
                <exclude name="org/openide/filesystems/MultiFileSystem2Test.class/testLastModified"/>
                <exclude name="org/openide/filesystems/MultiFileSystem2Test.class/testGetSize"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testFireFileDeletedEvent"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testFireFileAttributeChangedEvent"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testFireFileRenamedEvent"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testDelete"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testGetInputStream"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testGetOutputStream"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testAddFileChangeListener"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testRemoveFileChangeListener"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testLastModified"/>
                <exclude name="org/openide/filesystems/MultiFileSystem3Test.class/testGetSize"/>
                <include name="org/openide/modules/*.class"/>
                <include name="org/openide/loaders/*.class"/>                
                <!-- Don't worry about these, cannot be fixed currently: -->
                <exclude name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart1"/>
                <exclude name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart5"/>
                <exclude name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart7"/>
                <exclude name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart8"/>
                <!-- If #2, #3, or #4 are seen to fail, just add them above, no big deal. -->
                <!-- But if #6 is seen failing, please file a bug report, that is more serious. -->
                <include name="org/openide/nodes/*.class"/>
		<exclude name="org/openide/nodes/FilterNodeTest.class/testChangeOriginalLeafToArray"/>
                <include name="org/openide/options/*Test.class"/>
                <include name="org/openide/util/*.class"/>
                <include name="org/openide/util/actions/*Test.class"/>
                <include name="org/openide/xml/*.class"/>
            </patternset>
        </testset>      
    </testbag>
  
    <testbag testattribs="stable" executor="ide" name="testbag_2" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/openide/explorer/propertysheet/*.class"/>
                <include name="org/openide/explorer/view/*.class"/>
            </patternset>
        </testset>        
    </testbag>
    
    <testbag testattribs="failing" executor="code" name="testbag_3" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>                
                <include name="org/openide/filesystems/LocalFileSystemTest.class/testFireFileDataCreatedEvent"/>
                <include name="org/openide/filesystems/LocalFileSystemTest.class/testFireFileFolderCreatedEvent"/>
                <include name="org/openide/filesystems/LocalFileSystemTest.class/testGetOutputStream"/>
                <include name="org/openide/filesystems/MultiFileSystem1Test.class/testFireFileAttributeChangedEvent"/>
                <include name="org/openide/filesystems/MultiFileSystem1Test.class/testDelete"/>
                <include name="org/openide/filesystems/MultiFileSystem1Test.class/testAddFileChangeListener"/>
                <include name="org/openide/filesystems/MultiFileSystem1Test.class/testRemoveFileChangeListener"/>
                <include name="org/openide/filesystems/MultiFileSystem2Test.class/testDelete"/>
                <include name="org/openide/filesystems/MultiFileSystem2Test.class/testGetInputStream"/>
                <include name="org/openide/filesystems/MultiFileSystem2Test.class/testGetOutputStream"/>
                <include name="org/openide/filesystems/MultiFileSystem2Test.class/testRename"/>
                <include name="org/openide/filesystems/MultiFileSystem3Test.class/testFireFileDeletedEvent"/>
                <include name="org/openide/filesystems/MultiFileSystem3Test.class/testFireFileAttributeChangedEvent"/>
                <include name="org/openide/filesystems/MultiFileSystem3Test.class/testFireFileRenamedEvent"/>
                <include name="org/openide/filesystems/MultiFileSystem3Test.class/testDelete"/>
                <include name="org/openide/filesystems/MultiFileSystem3Test.class/testGetInputStream"/>
                <include name="org/openide/filesystems/MultiFileSystem3Test.class/testGetOutputStream"/>
                <include name="org/openide/filesystems/MultiFileSystem3Test.class/testAddFileChangeListener"/>
                <include name="org/openide/filesystems/MultiFileSystem3Test.class/testRemoveFileChangeListener"/>
                <!-- See above. -->
                <include name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart1"/>
                <include name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart5"/>
                <include name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart7"/>
                <include name="org/openide/loaders/DataLoaderTest.class/testFindTwoPart8"/>
		<!-- Nodes -->
		<include name="org/openide/nodes/FilterNodeTest.class"/>
            </patternset>
        </testset>      
    </testbag>

    <testbag testattribs="failing" executor="ide" name="testbag_4" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- none -->
            </patternset>
        </testset>      
    </testbag>

    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="empty" executor="code" name="testbag_empty" resultsprocessor="unit">
        <testset dir="unit/src"/>
    </testbag>

    <testbag testattribs="dev" executor="code" name="testbag_dev" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- Add your own code tests -->
            </patternset>
        </testset>
    </testbag>
    
    <executor name="ide" antfile="build.xml" target="runidetest"/>
    <executor name="code" antfile="build.xml" target="runcodetest"/>
    
    <resultsprocessor name="unit" antfile="build.xml" target="test_report"/>

</mconfig>
