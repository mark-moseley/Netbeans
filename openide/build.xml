    </or>
  </selector>
  <selector id="openide.text" >
    <or>
      <filename name="**/openide/text/*" />
      <filename name="**/openide/cookies/LineCookie*" />
      <filename name="**/openide/cookies/EditorCookie*" />

      <!-- resources -->
