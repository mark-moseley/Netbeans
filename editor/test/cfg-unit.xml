<!-- 
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="editor unit test config">
    
    <testbag testattribs="document" executor="code" name="document_testbag">
        <testset dir="unit/src">
            <patternset>
                <include name="**/**Document**.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="random" executor="code" name="Randomized Editor Unit Tests">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/modules/editor/RandomDocumentUnitTestSuite.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="failing" executor="code" name="testbag_2">
        <testset dir="unit/src">
            <patternset>
            </patternset>
        </testset>
    </testbag>
    
    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="empty" executor="code" name="testbag_empty">
        <testset dir="unit/src"/>
    </testbag>

    <testbag testattribs="dev" executor="code" name="Developers' Tests">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/modules/editor/AnnotationLoadingTest.class"/>
                <include name="org/netbeans/modules/editor/AnnotationsUnitTestSuite.class"/>
                <include name="org/netbeans/modules/editor/DocumentUnitTestSuite.class"/>
                <include name="org/netbeans/modules/editor/openide/*.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="code" antfile="build-unit.xml" target="runcodetest"/>
    
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>
    
</mconfig>
