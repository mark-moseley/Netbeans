<mconfig name="qa-functional tests config">

    <!-- Validation: -->
    <testbag testattribs="all,validation,full" name="validation">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/editor/suites/keybindings/*Performer.class"/>            
		<include name="org/netbeans/test/editor/completion/*Performer.class"/>
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testcomplexsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testcomplexunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIsorted" />
            </patternset>
        </testset>
    </testbag>
        
    
    <!-- Editor Test Application's Tests
    -->
    
    <testbag testattribs="all,validation,apps" name="TestApplication">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/app/tests/*Performer.class"/>
                <exclude name="org/netbeans/test/editor/completion/CompletionPerformer.class/" />
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,experimental,apps" name="TestApplicationExperimental">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/editor/completion/CompletionPerformer.class/" />
            </patternset>
        </testset>
    </testbag>    
        
    <!-- Code completion non-validation tests: (and three from test editor application) -->

    <testbag testattribs="all,failing" name="completion-failing">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testcomplexsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testcomplexsorted" />                
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,experimental" name="completion-experimental">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIsorted" />
            </patternset>
        </testset>
    </testbag>


    <!-- Programmatic indentation tests: -->
    
    <testbag testattribs="all,full" name="indentation-programmatic">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/indentation/programmatic/*Performer.class"/>
            </patternset>
        </testset>
    </testbag>
        
    <!-- Experimental tests (not to be runned automaticaly): -->
    <testbag testattribs="all,exper" name="abbrev-gui">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/suites/abbrevs/*Performer.class"/>
            </patternset>
        </testset>
    </testbag>
        
    <resultsprocessor name="qa-functional" antfile="build.xml" target="test_report" default="true"/>
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true" />
</mconfig>
