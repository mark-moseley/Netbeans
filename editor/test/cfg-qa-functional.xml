<mconfig name="qa-functional tests config">
    
    <!-- Editor Test Application's Tests -->
    
    <!-- Validation tests-->
    
    <testbag testattribs="all,validation,full,apps" name="TestApplication">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/app/tests/*Performer.class"/>
                <exclude name="org/netbeans/test/editor/app/tests/IndentationPerformer.class/testDoWhile" />
                <exclude name="org/netbeans/test/editor/app/tests/IndentationPerformer.class/testTwoBrackets" />
                <exclude name="org/netbeans/test/editor/app/tests/IndentationPerformer.class/testTernary" />
                <exclude name="org/netbeans/test/editor/app/tests/CompletionPerformer.class" />
            </patternset>
        </testset>
    </testbag>
        
    <!-- Code completion Validation tests: -->
    <testbag testattribs="all,validation,full,completion" name="Completion-Validation" compiler="qa-functional-compiler-completion" >
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class"/>
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testcomplexsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testcomplexunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15*" />
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,completion-15" name="JDK1.5 Completion" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15*" />

		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest4biunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest4biiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest4biiiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest5biiiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest7biiunsorted" />

		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest1iunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest1iiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest2iunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest2iiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest13iunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest13iiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest14iunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest14iiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest8iiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest8iiiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest9iiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest9iiiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest10iiunsorted" />
		<exclude name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest10iiiunsorted" />
            </patternset>
        </testset>
    </testbag>

    <!--These tests represent testcases, that are currently failing, but the golden files are known, and so should
        start passing once the problems are fixed.
      -->
    <testbag testattribs="all,completion-15-should-pass" name="JDK1.5 Completion Should Pass" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest4biunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest4biiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest4biiiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest5biiiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest7biiunsorted" />
            </patternset>
        </testset>
    </testbag>

    <!--These tests represent testcases, that are currently failing and will require some work to make them pass (the golden file
        are not known for these testcases.
      -->
    <testbag testattribs="all,completion-15-will-fail" name="JDK1.5 Completion Will Fail" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest1iunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest1iiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest2iunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest2iiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest13iunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest13iiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest14iunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest14iiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest8iiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest8iiiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest9iiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest9iiiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest10iiunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testjdk15CCTest10iiiunsorted" />
            </patternset>
        </testset>
    </testbag>
    
    <!-- Editor Application non-validation tests -->

    <testbag testattribs="all,apps" name="TestApplication Non-Validation">
        <testset dir="qa-functional/src">
            <patternset>  
                <include name="org/netbeans/test/editor/app/tests/CompletionPerformer.class" />
                <exclude name="org/netbeans/test/editor/app/tests/CompletionPerformer.class/testPackageCC" />
                <exclude name="org/netbeans/test/editor/app/tests/CompletionPerformer.class/testInstantSubstitution" />                
            </patternset>
        </testset>
    </testbag>    
        
    <testbag testattribs="all,failing,apps" name="TestApplicationFailings">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/editor/app/tests/IndentationPerformer.class/testDoWhile" />
                <include name="org/netbeans/test/editor/app/tests/IndentationPerformer.class/testTwoBrackets" />
                <include name="org/netbeans/test/editor/app/tests/IndentationPerformer.class/testTernary" />                
                <include name="org/netbeans/test/editor/app/tests/CompletionPerformer.class/testPackageCC" />
                <include name="org/netbeans/test/editor/app/tests/CompletionPerformer.class/testInstantSubstitution" />
            </patternset>
        </testset>
    </testbag>    
                        
    <!-- Code completion non-validation tests: (and three from test editor application) -->
    
    <testbag testattribs="all,failing" name="completion-failing" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testcomplexsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testcomplexsorted" />                
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,experimental" name="completion-experimental" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIsorted" />
            </patternset>
        </testset>
    </testbag>


    <!-- Programmatic indentation tests: -->
    
    <testbag testattribs="all,validation,full" name="indentation-programmatic">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/indentation/programmatic/*Performer.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- Abbreviation dialog test -->

    <testbag testattribs="all,full,abbrevs" name="abbrev-gui">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/suites/abbrevs/*Performer.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,full,validation,focus" name="FocusTests">
        <testset dir="qa-functional/src">
            <patternset>            
                <include name="org/netbeans/test/editor/suites/focus/FocusTestPerformer.class"/>            
            </patternset>
        </testset>
    </testbag>
    
            
    <!-- Key bindings tests -->
    
    <testbag testattribs="all,full,validation" name="KeyBindings-Actions">
        <testset dir="qa-functional/src">
            <patternset>            
                <include name="org/netbeans/test/editor/suites/keybindings/*Performer.class"/>            
            </patternset>
        </testset>
    </testbag>
    
    <!-- Experimental tests (not to be runned automaticaly): -->
        
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true" />
    <compiler name="qa-functional-compiler-completion" antfile="build-qa-functional.xml" target="qa-functional-compiler-completion" default="false" />
</mconfig>
