<!-- IMPORTANT:  To handle Apple-specific keybindings, there is another copy of
     this file, with minor diffs, in ide/applemenu.  Any changes made here should
     be made there too -->                          
<bindings>
    <bind actionName="abbrev-expand" key="S-SPACE"/>
