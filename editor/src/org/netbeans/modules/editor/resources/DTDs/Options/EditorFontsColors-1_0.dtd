    <!ELEMENT fontscolors (fontcolor*, elementcolor*)>

    <!ELEMENT fontcolor (font?)>
    <!ATTLIST fontcolor
         syntaxName CDATA #REQUIRED
         foreColor CDATA #IMPLIED
         bgColor CDATA #IMPLIED
    >

    <!ELEMENT font EMPTY> 
    <!ATTLIST font 
         name CDATA #IMPLIED
         size CDATA #IMPLIED
         style CDATA #IMPLIED
    > 

    <!ELEMENT elementcolor EMPTY>
    <!ATTLIST elementcolor
         name CDATA #REQUIRED
         color CDATA #REQUIRED
    >

