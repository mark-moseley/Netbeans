<project name="apisupport/apidocs" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra" depends="docs"/>
    
    <target name="docs-check" depends="init">
        <property name="docs.dir" location="${cluster}/docs"/>
        <property name="docs.zip" location="${docs.dir}/NetBeansAPIs.zip"/>
        <available property="have.docs" file="${docs.zip}"/>
    </target>

    <target name="docs" depends="docs-check" unless="have.docs">
        <fail message="Must have defined netbeans.javadoc.dir!">
            <condition>
                <not>
                    <isset property="netbeans.javadoc.dir"/>
                </not>
            </condition>
        </fail>
        <!-- Build Javadoc in the usual way: -->
        <property file="../../nbbuild/build.properties"/>
        <ant dir="../../nbbuild" target="build-javadoc" inheritall="false">
            <!-- Stable only: -->
            <property name="config.javadoc.all" value="${config.javadoc.stable}"/>
            <property name="building.apisupport/apidocs" value="true"/><!-- avoid recursion -->
            
            <!-- these modules do not have stable API, so we need to link
              to them on website -->
            <property name="javadoc.docs.org-netbeans-modules-editor-util" value="http://www.netbeans.org/download/dev/javadoc/org-netbeans-modules-editor-util/"/>
            <property name="javadoc.docs.org-netbeans-modules-editor-lib" value="http://www.netbeans.org/download/dev/javadoc/org-netbeans-modules-editor-lib/"/>
            <property name="javadoc.docs.org-netbeans-modules-editor" value="http://www.netbeans.org/download/dev/javadoc/org-netbeans-modules-editor/"/>
            <!-- moreover we need to allow references to http://www.netbeans.org/download/dev/javadoc/
              so skip forbidden links check
            -->
		        <property name="javadoc.check.forbidden.links" value="false" />
        </ant>
        <mkdir dir="${docs.dir}"/>
        <zip zipfile="${docs.zip}" compress="true">
            <fileset dir="${netbeans.javadoc.dir}">
                <exclude name="*.zip"/>
            </fileset>
        </zip>
    </target>
    
    <target name="javadoc"/><!-- dummy, see above -->
    
    <target name="netbeans" unless="building.apisupport/apidocs"><!-- see above -->
        <antcall target="projectized-common.netbeans"/>
    </target>
    
    <target name="clean" depends="projectized-common.clean">
        <fail message="Must have defined netbeans.javadoc.dir!">
            <condition>
                <not>
                    <isset property="netbeans.javadoc.dir"/>
                </not>
            </condition>
        </fail>
        <delete dir="${netbeans.javadoc.dir}"/>
    </target>

</project>
