<project name="apisupport/apidocs" default="netbeans" basedir=".">

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>

    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" location="../../nbbuild/standard-nbm-license.txt"/>

    <property name="nbm_alias" value="nb_ide"/>

    <target name="jars">
        <mkdir dir="netbeans/modules"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="netbeans/modules/apisupport-apidocs.jar"
             manifest="manifest-subst.mf"
             excludesfile="../../nbbuild/standard-jar-excludes.txt"
             compress="false">
            <fileset dir="src"/>
        </jar>
    </target>

    <target name="release">
        <copy todir="netbeans">
            <fileset dir="release" excludesfile="../../nbbuild/standard-jar-excludes.txt"/>
        </copy>
    </target>

    <target name="open-apis">
        <ant dir="../../openide" target="open-apis"/>
        <mkdir dir="netbeans/docs"/>
        <copy file="../../openide/OpenAPIs.zip" tofile="netbeans/docs/OpenAPIs.zip"/>
    </target>

    <target name="netbeans" depends="jars,release,open-apis" description="Build complete module.">
        <genlist targetname="nbm" outputfiledir="../../nbbuild/netbeans"/>
    </target>

    <target name="nbm" depends="netbeans" description="Build standalone NBM.">
        <makenbm file="apisupport-apidocs.nbm"
                 topdir="."
                 module="netbeans/modules/apisupport-apidocs.jar"
	         homepage="http://apisupport.${homepage.base}/"
	         distribution="http://${dist.base}/apisupport-apidocs.nbm">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="clean" description="Clean out build products.">
        <delete file="manifest-subst.mf"/>
        <delete file="apisupport-apidocs.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
    </target>

</project>
