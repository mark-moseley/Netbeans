<project name="apisupport/apidocs" default="netbeans" basedir=".">

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>

    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" location="../../nbbuild/standard-nbm-license.txt"/>

    <property name="nbm_alias" value="nb_ide"/>

    <target name="jars">
        <mkdir dir="netbeans/modules"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="netbeans/modules/apisupport-apidocs.jar"
             manifest="manifest-subst.mf"
             excludesfile="../../nbbuild/standard-jar-excludes.txt"
             compress="false">
            <fileset dir="src"/>
        </jar>
    </target>

    <target name="parser-db">
        <taskdef name="makeparserdb" classname="org.netbeans.nbbuild.MakeParserDB" classpath="../../nbbuild/nbantext.jar"/>
        <mkdir dir="netbeans/system/ParserDB"/>
        <makeparserdb db="netbeans/system/ParserDB/OpenAPIs" sources="../../openide/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/CompilerAPI" sources="../../openide/compiler/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/LoadersAPI" sources="../../openide/loaders/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/ExecutionAPI" sources="../../openide/execution/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/DebuggerAPI" sources="../../debuggercore/oldapi/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/InputOutputAPI" sources="../../openide/io/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/JavaHelpAPI" sources="../../core/javahelp/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/JavaSupportAPIs" sources="../../java/api/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/JavaHierarchyAPI" sources="../../java/srcmodel/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/RegistryAPI" sources="../../openide/registry/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/ConvertorAPI" sources="../../openide/convertor/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/RegistryOverFSAPI" sources="../../core/registry/src" nbroot="../.."/>
        <makeparserdb db="netbeans/system/ParserDB/LooksAPI" sources="../../openide/looks/src" nbroot="../.."/>
    </target>

    <target name="collect-javadoc">
        <mkdir dir="netbeans/docs"/>
        <ant dir="../../openide" target="javadoc"/>
        <copy file="../../openide/javadoc/OpenAPIs.zip" tofile="netbeans/docs/OpenAPIs.zip"/>
        <ant dir="../../openide/io" target="javadoc"/>
        <copy file="../../openide/io/javadoc/InputOutputAPI.zip" tofile="netbeans/docs/InputOutputAPI.zip"/>
        <ant dir="../../openide/execution" target="javadoc"/>
        <copy file="../../openide/execution/javadoc/ExecutionAPI.zip" tofile="netbeans/docs/ExecutionAPI.zip"/>
        <ant dir="../../debuggercore/oldapi" target="javadoc"/>
        <copy file="../../debuggercore/oldapi/javadoc/DebuggerAPI.zip" tofile="netbeans/docs/DebuggerAPI.zip"/>
        <ant dir="../../openide/compiler" target="javadoc"/>
        <copy file="../../openide/compiler/javadoc/CompilerAPI.zip" tofile="netbeans/docs/CompilerAPI.zip"/>
        <ant dir="../../openide/loaders" target="javadoc"/>
        <copy file="../../openide/loaders/javadoc/LoadersAPI.zip" tofile="netbeans/docs/LoadersAPI.zip"/>
        <ant dir="../../core/javahelp" target="javadoc"/>
        <copy file="../../core/javahelp/javadoc/JavaHelpAPI.zip" tofile="netbeans/docs/JavaHelpAPI.zip"/>
        <ant dir="../../java/api" target="javadoc"/>
        <!-- XXX inconsistent naming in prj40_prototype branch: -->
        <copy tofile="netbeans/docs/JavaSupportAPIs.zip">
            <fileset dir="../../java/api/javadoc">
                <include name="JavaSupportAPI*.zip"/>
            </fileset>
        </copy>
        <ant dir="../../java/srcmodel" target="javadoc"/>
        <copy file="../../java/srcmodel/javadoc/JavaHierarchyAPI.zip" tofile="netbeans/docs/JavaHierarchyAPI.zip"/>
        <ant dir="../../openide/registry" target="javadoc"/>
        <copy file="../../openide/registry/javadoc/RegistryAPI.zip" tofile="netbeans/docs/RegistryAPI.zip"/>
        <ant dir="../../openide/convertor" target="javadoc"/>
        <copy file="../../openide/convertor/javadoc/ConvertorAPI.zip" tofile="netbeans/docs/ConvertorAPI.zip"/>
        <!-- The next two will need to run Javadoc against org-netbeans-modules-registry.jar: -->
        <ant dir="../../openide/registry" target="netbeans"/>
        <ant dir="../../core/registry" target="javadoc"/>
        <copy file="../../core/registry/javadoc/RegistryOverFSAPI.zip" tofile="netbeans/docs/RegistryOverFSAPI.zip"/>
        <ant dir="../../openide/looks" target="javadoc"/>
        <copy file="../../openide/looks/javadoc/LooksAPI.zip" tofile="netbeans/docs/LooksAPI.zip"/>
    </target>

    <target name="netbeans" depends="jars,parser-db,collect-javadoc" description="Build complete module.">
        <genlist targetname="nbm" outputfiledir="netbeans"/>
    </target>

    <target name="nbm" depends="netbeans" description="Build standalone NBM.">
        <makenbm file="apisupport-apidocs.nbm"
                 topdir="."
                 module="netbeans/modules/apisupport-apidocs.jar"
	         homepage="http://apisupport.${homepage.base}/"
	         distribution="http://${dist.base}/apisupport-apidocs.nbm">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="reload-build" depends="jars"> <!-- do not depend on full netbeans, too slow -->
        <mkdir dir="reload"/>
        <copy file="netbeans/modules/apisupport-apidocs.jar" tofile="reload/apisupport-apidocs.jar"/>
    </target>

    <target name="reload" depends="reload-build" description="Test changes to the module.">
        <nbinstaller module="reload/apisupport-apidocs.jar" action="reinstall"/>
    </target>

    <target name="clean" description="Clean out build products.">
        <delete file="manifest-subst.mf"/>
        <delete file="apisupport-apidocs.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
    </target>

    <target name="real-clean" depends="clean" description="Clean all build products and also test modules.">
        <delete dir="reload"/>
    </target>

</project>
