<project name="openide/io" default="netbeans" basedir=".">

    <property name="nb_all" value="../.."/>

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nb_all}/nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nb_all}/nbbuild/nbantext.jar"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nb_all}/nbbuild/nbantext.jar"/>

    <property name="nbm_alias" value="nb_ide"/>
    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" value="${nb_all}/nbbuild/standard-nbm-license.txt"/>

    <path id="cp">
        <pathelement location="${nb_all}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${nb_all}/openide/netbeans/lib/openide.jar"/>
    </path>
  
    <target name="compile">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath refid="cp"/>
        </javac>

        <!-- Patching -->
        <taskdef name="enhanceclass" classname="org.netbeans.nbbuild.NbEnhanceClass"
             classpath="${nb_all}/nbbuild/nbantext.jar"/>
        <enhanceclass basedir="src">
            <classpath>
                <pathelement location="../../core/netbeans/lib/ext/boot.jar"/>
                <!-- See xtest/instance/build-clover.xml for explanation: -->
                <pathelement location="../../core/netbeans/lib/ext/clover.jar"/>
            </classpath>
            <!-- Making public -->
            <patch class="org/openide/windows/InputOutput$$Null" /> 
            <patch class="org/openide/windows/InputOutput$$NullOutputWriter" /> 
        </enhanceclass>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="netbeans/modules/autoload"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <locjar jarfile="netbeans/modules/autoload/openide-io.jar"
                manifest="manifest-subst.mf"
                basedir="src"
	        excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	        compress="false">
            <locale name="ja"/>
        </locjar>
    </target>

    <target name="netbeans" depends="jars">
        <genlist targetname="nbm" outputfiledir="netbeans"/>
    </target>

    <target name="nbm" depends="netbeans">
        <makenbm file="openide-io.nbm"
                 topdir="."
                 module="netbeans/modules/autoload/openide-io.jar"
                 homepage="http://java.${homepage.base}/"
                 distribution="http://${dist.base}/openide-io.nbm">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>
  
    <target name="javadoc-check-timestamps">
        <uptodate property="javadoc-up-to-date" targetfile="javadoc/InputOutputAPI.zip">
            <srcfiles dir="src">
                <include name="org/openide/**/*.java"/>
            </srcfiles>
            <srcfiles dir="../api/doc">
                <include name="*.css"/>
            </srcfiles>
        </uptodate>
    </target>
    <target name="javadoc" depends="javadoc-check-timestamps" unless="javadoc-up-to-date">
        <property name="jdk-docs-location" value="http://java.sun.com/j2se/1.4/docs/api"/>
        <property name="openide-docs-location" value="http://www.netbeans.org/download/dev/javadoc/OpenAPIs"/>
        <tstamp/>
        <property name="javadoc-footer" value='&lt;font size="-2" color="gray"&gt;Built on ${TODAY}.&amp;nbsp;&amp;nbsp;|&amp;nbsp;&amp;nbsp;Portions Copyright 1997-2002 Sun Microsystems, Inc. All rights reserved.&lt;/font&gt;'/>
        <mkdir dir="javadoc/InputOutputAPI"/>
        <javadoc author="false" destdir="javadoc/InputOutputAPI" stylesheetfile="../api/doc/javadoc.css" windowtitle="NetBeans Input/Output API" splitindex="true" use="true" version="false">
            <sourcepath>
                <pathelement location="src"/>
            </sourcepath>
            <classpath refid="cp"/>
            <package name="org.openide.windows"/>
            <group>
                <title>Input/Output API</title>
                <package name="org.openide.windows"/>
            </group>
            <link href="${jdk-docs-location}" offline="true" packagelistloc="../api/doc"/>
            <link href="${openide-docs-location}" offline="true" packagelistloc="../javadoc/OpenAPIs"/>
            <doctitle>NetBeans Input/Output API</doctitle>
            <bottom>${javadoc-footer}</bottom>
        </javadoc>
        <copy todir="javadoc/InputOutputAPI">
            <fileset dir="../api/doc">
                <include name="*.css"/>
            </fileset>
        </copy>
        <replace dir="javadoc/InputOutputAPI">
            <include name="**/doc-files/*.html"/>
            <include name="**/package-summary.html"/>
            <replacefilter token="@JDK@" value="${jdk-docs-location}"/>
            <replacefilter token="@OPENIDE@" value="${openide-docs-location}"/>
            <replacefilter token="@IO@" value="${io-docs-location}"/>
            <replacefilter token="@FOOTER@" value="${javadoc-footer}"/>
        </replace>
        <replace dir="javadoc/InputOutputAPI" token="@TOP@" value="">
            <include name="*.html"/>
        </replace>
        <replace dir="javadoc/InputOutputAPI" token="@TOP@" value="../">
            <include name="*/*.html"/>
        </replace>
        <replace dir="javadoc/InputOutputAPI" token="@TOP@" value="../../">
            <include name="*/*/*.html"/>
        </replace>
        <replace dir="javadoc/InputOutputAPI" token="@TOP@" value="../../../">
            <include name="*/*/*/*.html"/>
        </replace>
        <replace dir="javadoc/InputOutputAPI" token="@TOP@" value="../../../../">
            <include name="*/*/*/*/*.html"/>
        </replace>
        <replace dir="javadoc/InputOutputAPI" token="@TOP@" value="../../../../../">
            <include name="*/*/*/*/*/*.html"/>
        </replace>
        <replace dir="javadoc/InputOutputAPI" token="@TOP@" value="../../../../../../">
            <include name="*/*/*/*/*/*/*.html"/>
        </replace>
        <taskdef name="checklinks" classname="org.netbeans.nbbuild.CheckLinks">
            <classpath>
                <pathelement location="../../nbbuild/nbantext.jar"/>
                <fileset dir="../../core/external">
                    <include name="regexp*.jar"/>
                </fileset>
            </classpath>
        </taskdef>
        <checklinks basedir="javadoc/InputOutputAPI" checkexternal="false">
            <include name="overview-summary.html"/>
            <include name="**/package-summary.html"/>
            <include name="**/doc-files/**/*.html"/>
        </checklinks>
        <zip zipfile="javadoc/InputOutputAPI.zip" basedir="javadoc/InputOutputAPI"/>
    </target>
  
    <target name="clean">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="openide-io.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
        <delete dir="javadoc"/>
    </target>
  
</project>
