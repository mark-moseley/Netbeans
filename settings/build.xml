<project name="core/settings" default="netbeans" basedir=".">

    <property name="nbm_alias" value="nb_ide"/>
    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="nb_all" value="../../"/>
    <property name="license.file" location="${nb_all}/nbbuild/standard-nbm-license.txt"/>

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nb_all}/nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nb_all}/nbbuild/nbantext.jar"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nb_all}/nbbuild/nbantext.jar"/>

    <target name="compile">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath>
                <pathelement location="${nb_all}/openide/openide-13javac-workaround.jar"/>
                <fileset dir="${nb_all}/openide/netbeans/lib">
                    <include name="openide*.jar" />
                </fileset>
                <fileset dir="../external">
                    <include name="xml-apis*.jar" />
                </fileset>
            </classpath>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="netbeans/modules/autoload"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <locjar jarfile="netbeans/modules/autoload/core-settings.jar"
                basedir="src"
                manifest="manifest-subst.mf"
                excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	        compress="false">
            <locale name="ja"/>
        </locjar>
    </target>

    <target name="netbeans" depends="jars" description="Build everything.">
        <genlist targetname="nbm" outputfiledir="netbeans"/>
    </target>

    <target name="nbm" depends="netbeans" description="Build NBM.">
        <makenbm file="core-settings.nbm"
                 topdir="."
                 module="netbeans/modules/autoload/core-settings.jar"
                 homepage="http://core.${homepage.base}/"
                 distribution="http://${dist.base}/core-settings.nbm">
                 <license file="${license.file}"/>
                 <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="clean" description="Clean build products.">
      <delete>
        <fileset dir="src">
          <include name="**/*.class"/>
        </fileset>
      </delete>
      <delete file="manifest-subst.mf"/>
      <delete file="core-settings.nbm"/>
      <delete dir="netbeans"/>
      <delete dir="Info"/>
      <delete file="SettingsAPI.zip"/>
      <delete dir="SettingsAPI"/>
      <delete dir="javadoc"/>
    </target>

    <target name="real-clean" depends="clean">
        <delete dir="reload"/>
    </target>

    <target name="javadoc" description="Create Settings API documentation." depends="settingsapis">
      <copy todir="javadoc/">
        <fileset dir=".">
          <include name="SettingsAPI/**"/>
          <include name="SettingsAPI.zip"/>
        </fileset>
      </copy>
    </target>

    <!-- Settings API documentation -->
    <target name="settingsapis" description="Create Settings API documentation.">
        <property name="jdk-docs-location" value="http://java.sun.com/j2se/1.4/docs/api"/>
        <property name="openide-docs-location" value="http://www.netbeans.org/download/apis"/>
        <property name="openide.package-list.loc" location="${nbroot}/openide/OpenAPIs"/>
        <property name="apis-footer" value="&lt;font size=-2 color=gray&gt;Built on ${TODAY}.&amp;nbsp;&amp;nbsp;|&amp;nbsp;&amp;nbsp;Portions Copyright 2002 Sun Microsystems, Inc. All rights reserved.&lt;/font&gt;"/>
        <echo message="Build Settings API documentation..."/>
        <delete dir="SettingsAPI"/>
        <mkdir dir="SettingsAPI"/>
        <javadoc destdir="SettingsAPI"
                 packagenames="org.netbeans.spi.settings"
                 doctitle="NetBeans Settings API"
                 use="true"
                 bottom="${apis-footer}"
                 splitindex="true"
                 author="false"
                 version="false"
                 maxmemory="64m"
            >
            <sourcepath>
              <pathelement location="api/doc"/>
              <pathelement location="src"/>
            </sourcepath>
            <classpath>
              <fileset dir="${nb_all}/openide/netbeans/lib">
                <include name="openide*.jar" />
              </fileset>
                <fileset dir="../external">
                    <include name="xml-apis*.jar" />
                </fileset>
            </classpath>
            <link href="${jdk-docs-location}"
                  offline="true"
                  packagelistLoc="${nb_all}/openide/api/doc"
            />
            <link href="${openide-docs-location}"
                  offline="true"
                  packagelistLoc="${openide.package-list.loc}"
            />
        </javadoc>
        <replace dir="SettingsAPI" token="@FOOTER@" value="${apis-footer}">
          <include name="**/doc-files/*.html"/>
        </replace>
        <replace dir="SettingsAPI" token="@OPENAPI@" value="${openide-docs-location}">
          <include name="**/doc-files/*.html"/>
        </replace>
        <copy file="src/org/netbeans/modules/settings/resources/properties-1_0.dtd"
          tofile="SettingsAPI/org/netbeans/spi/settings/doc-files/properties-1_0.dtd"/>
        <zip zipfile="SettingsAPI.zip" basedir="SettingsAPI"/>
  </target>

  <target name="apichanges-generate" description="Regenerate HTML from XML API changes list.">
      <!-- Ant 1.3 and 1.4 disagree on style attribute. -->
      <!-- 1.3: treated as a name relative to XML file. -->
      <!-- 1.4: treated as a filename consistent with normal Ant usage. -->
      <!-- Be safe and give the absolute path here. -->
      <style in="${basedir}/api/doc/changes/apichanges.xml" out="${basedir}/www/apichanges.html" destdir="www" style="${nb_all}/openide/api/doc/changes/apichanges.xsl"/>
  </target>

</project>
