<project basedir="." default="all" name="build-unit">
    <!-- Imports default default-compiler and run-unit-test executor.
         Module jar and required jar are on the compile and run classpath by default.
         Extra classpath can be defined here on in nbproject/project.properties
         in property ${test.unit.cp.extra} (compilation) and ${test.unit.run.cp.extra}
         (run).
      -->
    <import file="../../../nbbuild/templates/xtest-unit.xml"/>
   
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->
    
    <!-- Override if you need something special
    <target name="default-compiler">
        <buildTests srcDir="unit/src" compileexcludes="**/data/**">
            <classpath refid="compiletest.classpath"/>
        </buildTests>
    </target>
    -->
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <target name="runidetest">
        <executeTests pluginName="ide">
            <classpath/>
        </executeTests>
    </target>
    
    <!-- Override if you need something special
    <target name="run-unit-test">
        <executeTests pluginName="jvm">
            <classpath/>
        </executeTests>
    </target>
    -->
    
</project>
