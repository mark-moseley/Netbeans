<project name="core/settings/test" basedir="." default="all">

    <!-- Name of tested module -->
    <property name="xtest.module" value="core/settings"/>
    
    <!-- Imports buildtests, cleantests, runtest, cleanresults, realclean, printconfig targets. -->
    <import file="../../../nbbuild/templates/xtest.xml"/>
    
     <!-- default testtypes, attributes and executors -->
    <property name="xtest.testtype" value="unit"/>
    <property name="xtest.attribs" value="stable,all,code,ide"/>

    <target name="build-workaround-issue-59632" >
        <replace file="unit/src/META-INF/MANIFEST.MF" token="OpenIDE-Module-IDE-Dependencies" value="better-to-remove" />
    </target>
    
    <target name="buildtests" depends="build-workaround-issue-59632,xtest.buildtests" >
    </target>
    
</project>

