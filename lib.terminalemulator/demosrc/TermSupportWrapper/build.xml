<project name="termsupportwrapper" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project termsupportwrapper.</description>
    <import file="nbproject/build-impl.xml"/>

    <property name="original.project.dir" value="../TermSupport"/>
    <property name="original.project.jar"
              value="${original.project.dir}/dist/TermSupport.jar"/>

    <target name="release">
	<echo message="Building ${original.project.dir}"/>
	<ant dir="${original.project.dir}"
	     target="jar" inheritall="false" inheritrefs="false"/>
	<echo message="Done building ${original.project.dir}"/>

	<copy todir="${cluster}/modules/ext"
	      file="${original.project.jar}"/>

	<echo message="Copying pty_bind to ${cluster}/modules/ext/lib ..." />
	<mkdir dir="${cluster}/modules/ext/lib"/>
	<copy todir="${cluster}/modules/ext/lib"
	      file="${original.project.dir}/dist/lib/pty_bind"/>
	<chmod file="${cluster}/modules/ext/lib/pty_bind"
	       perm="+x"/>
    </target>

    <target name="clean" depends="projectized-common.clean">
	<echo message="Cleaning ${original.project.dir}"/>
	<ant dir="${original.project.dir}"
	     target="clean" inheritall="false" inheritrefs="false"/>
	<echo message="Done cleaning ${original.project.dir}"/>
    </target>
</project>
