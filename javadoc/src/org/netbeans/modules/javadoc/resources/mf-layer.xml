<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.0//EN" "http://www.netbeans.org/dtds/filesystem-1_0.dtd">
<filesystem>

  <!-- Contribute actions to main menu -->
  <folder name="Menu">
	<folder name="Help">
            <file name="org-netbeans-modules-javadoc-search-IndexOverviewAction.instance">
                <attr name="position" intvalue="1100"/>
            </file>
            </folder>
        <!-- 
      <folder name="Tools">
          <file name="javadoc-Search-Doc-Action.instance">
              <attr name="instanceClass" stringvalue="org.netbeans.modules.javadoc.search.SearchDocAction"/>
          </file>
      </folder>
      -->
  </folder>  <!-- Main menu -->

  <!-- Register actions in actions pool -->
  <folder name="Actions">
    <folder name="Build">
      <file name="Show Doc Action.instance">
        <attr name="instanceClass" stringvalue="org.netbeans.modules.javadoc.search.ShowDocAction"/>
      </file>
    </folder>
    
    <folder name="Tools">
      <!-- XXX disabled until the org.netbeans.modules.javadoc.comments package will be rewritten.
      <file name="Auto Comment Action.instance">
        <attr name="instanceClass" stringvalue="org.netbeans.modules.javadoc.comments.AutoCommentAction"/>
      </file>      
      <file name="Correct Javadoc Action.instance">
        <attr name="instanceClass" stringvalue="org.netbeans.modules.javadoc.comments.CorrectJavaDocAction"/>
      </file-->
      <file name="javadoc-Search-Doc-Action.instance">
        <attr name="instanceClass" stringvalue="org.netbeans.modules.javadoc.search.SearchDocAction"/>
      </file>
    </folder>
  </folder> <!-- Action pool -->


  <folder name="Shortcuts">
      <file name="S-F1.instance">
        <attr name="instanceClass" stringvalue="org.netbeans.modules.javadoc.search.SearchDocAction"/>
      </file>
  </folder> 
  
  <!-- XXX likely needless since node factories seems to be dead
  <folder name="NodeFactories">
    <folder name="java">
		  <folder name="explorer">
        <file name="org-netbeans-modules-javadoc-comments-JavaDocPropertySupportFactory.instance"/>
			</folder> 
    </folder>
  </folder-->
   

<!--  Services part -->

    <folder name="Services">

        <file name="org-netbeans-modules-javadoc-settings-DocumentationSettings.settings" url="DocumentationSettings.xml">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.javadoc.settings.Bundle"/>
            <attr name="SystemFileSystem.icon" urlvalue="nbres:/org/netbeans/modules/javadoc/resources/JavadocSettings.gif"/>
        </file>

        <folder name="JavadocSearchType">
            <attr name="hidden" boolvalue="true"/>
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.javadoc.search.Bundle"/>
            <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/javadoc/resources/searchDoc.gif"/>
            <attr name="helpID" stringvalue="org.netbeans.modules.javadoc.search.JavaDocSearchType"/>

            <file name="org-netbeans-modules-javadoc-search-Jdk12SearchType.settings" url="javadoc_search.settings">
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.javadoc.search.Bundle"/>
                <attr name="SystemFileSystem.icon" urlvalue="nbres:/org/netbeans/modules/javadoc/resources/searchDoc.gif"/>
                <attr name="position" intvalue="200"/>
            </file>
            <file name="org-netbeans-modules-javadoc-search-Jdk12SearchType_japan.settings" url="javadoc_japan_search.settings">
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.javadoc.search.Bundle"/>
                <attr name="SystemFileSystem.icon" urlvalue="nbres:/org/netbeans/modules/javadoc/resources/searchDoc.gif"/>
                <attr name="position" intvalue="100"/>
            </file>
        </folder>  
    </folder>

    <folder name="org-netbeans-modules-java-hints">
        <folder name="rules">
            <folder name="hints">
                <folder name="javadoc">
                    <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.javadoc.hints.Bundle"/>
                    <file name="CreateJavadoc.instance">
                        <attr name="instanceCreate" methodvalue="org.netbeans.modules.javadoc.hints.JavadocHintProvider.createCreateJavadoc"/>
                    </file>
                    <file name="ErrorInJavadoc.instance">
                        <attr name="instanceCreate" methodvalue="org.netbeans.modules.javadoc.hints.JavadocHintProvider.createErrorInJavadoc"/>
                    </file>
                </folder>
            </folder>
        </folder>
    </folder>

    <folder name="Editors">
        <folder name="text">
            <folder name="x-javadoc">
                <file name="org-netbeans-modules-javadoc-JavadocBracesMatcher.instance"/>
            </folder>
        </folder>
    </folder>
    
</filesystem>
