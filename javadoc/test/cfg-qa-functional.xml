<mconfig name="Javadoc QA functional test config">

    <testbag testattribs="ide,stable,validation,full" executor="ide" name="Generating">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/gui/javadoc/TestGenerateJavadoc.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!-- ====================================== -->
    <!-- COMPILERS, EXECUTORS, RESULTPROCESSORS -->
    <!-- ====================================== -->
    
    <compiler name="default-compiler" antfile="build-qa-functional.xml" 
              target="default-compiler" default="true"/>
    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest"/>
    <executor name="code" antfile="build-qa-functional.xml" target="runcodetest"/>
    
    <resultsprocessor name="default-processor" antfile="build.xml" 
                      target="test_report" default="true"/>
    
</mconfig>
