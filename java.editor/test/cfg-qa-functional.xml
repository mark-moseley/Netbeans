<mconfig name="qa-functional tests config">
    
    <!-- Java Editor Test Application's Tests -->

    <!-- Validation tests-->
    <testbag testattribs="stable" name="Stable test suite">
        <testset dir="qa-functional/src">
            <patternset>               
            <!--   <include name="java_editor_actions/JavaEditorActionsTestSuite.class"/>  -->
                <include name="java_smart_bracket/SmartBracketTestSuite.class"/>
                <include name="java_smart_enter/SmartEnterTestSuite.class"/>
                <include name="java_code_folding/JavaCodeFoldingTestSuite.class"/>            
            </patternset>
        </testset>
    </testbag>
    
    
    <testbag testattribs="actions,all" name="Editor Actions">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="java_editor_actions/JavaEditorActionsTestSuite.class"/>            
                <include name="java_smart_bracket/SmartBracketTestSuite.class"/>
                <include name="java_smart_enter/SmartEnterTestSuite.class"/>                               
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="folding,all" name="Editor Folds">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="java_code_folding/JavaCodeFoldingTestSuite.class"/>            
            </patternset>
        </testset>
    </testbag>
            
    <testbag testattribs="completion,all" name="Completion-Validation" compiler="qa-functional-compiler-completion" >
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/java/editor/completion/*CCTests.class"/>		
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="smartcompletion" name="Completion-Validation" compiler="qa-functional-compiler-completion" >
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/java/editor/completion/SmartCCTests.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="completiongui,all" name="Completion GUI tests" compiler="qa-functional-compiler-completion" >
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/java/editor/completiongui/*Test.class"/>		
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="gencode,all" name="Generate Code Tests" >
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/java/editor/codegeneration/CreateConstructor.class"/>
                <include name="org/netbeans/test/java/editor/codegeneration/CreateGetterSetter.class"/>
                <include name="org/netbeans/test/java/editor/codegeneration/ImplementMethod.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="mark,all" name="Mark Occurrences" executor="ide-cl"> 
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/modules/java/editor/semantic/*.class"/>		                               
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="devel" name="Testcases under development" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/java/editor/completion/SmartCCTests.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <!--//Experimental tests (not to be runned automaticaly): -->
        
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    
    <executor name="ide-cl" antfile="build-qa-functional.xml" target="runidetestcl" default="false"/>
    
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true" />
    <compiler name="qa-functional-compiler-completion" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="false" />
</mconfig>
