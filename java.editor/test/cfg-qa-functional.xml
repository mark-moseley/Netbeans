<mconfig name="qa-functional tests config">
    
    <!-- Java Editor Test Application's Tests -->
    
    <!-- Validation tests-->
   <testbag testattribs="validation" name="Editor Validation">
         <testset dir="qa-functional/src">
             <patternset>
               <include name="java_editor_actions/JavaEditorActionsTestSuite.class"/>
               <include name="java_code_folding/JavaCodeFoldingTestSuite.class"/>
               <include name="java_smart_bracket/SmartBracketTestSuite.class"/>
               <include name="java_smart_enter/SmartEnterTestSuite.class"/>
             </patternset>
         </testset>
     </testbag>
        
    <!-- Code completion Validation tests: -->
    <testbag testattribs="all,full,completion" name="Completion-Validation" compiler="qa-functional-compiler-completion" >
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/java/editor/completion/*Performer.class"/>
		<exclude name="org/netbeans/test/java/editor/completion/*Performer.class/testcomplexsorted" />
		<exclude name="org/netbeans/test/java/editor/completion/*Performer.class/testcomplexunsorted" />
		<exclude name="org/netbeans/test/java/editor/completion/*Performer.class/testequalSignIunsorted" />
		<exclude name="org/netbeans/test/java/editor/completion/*Performer.class/testequalSignIsorted" />
		<exclude name="org/netbeans/test/java/editor/completion/*Performer.class/testjdk15*" />
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,completion-15" name="JDK1.5 Completion" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/java/editor/completion/*Performer.class/testjdk15*" />
            </patternset>
        </testset>
    </testbag>

    <!-- Java Editor Application non-validation tests -->
    <!-- Code completion non-validation tests: (and three from test editor application) -->
    
    <testbag testattribs="all,failing" name="completion-failing" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testcomplexsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testcomplexsorted" />                
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all,experimental" name="completion-experimental" compiler="qa-functional-compiler-completion">
        <testset dir="qa-functional/src">
            <patternset>
		<include name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIunsorted" />
		<include name="org/netbeans/test/editor/completion/*Performer.class/testequalSignIsorted" />
            </patternset>
        </testset>
    </testbag>

    <!-- Experimental tests (not to be runned automaticaly): -->
        
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true" />
    <compiler name="qa-functional-compiler-completion" antfile="build-qa-functional.xml" target="qa-functional-compiler-completion" default="false" />
</mconfig>
