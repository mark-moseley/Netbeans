<project name="apisupport/ant" default="netbeans" basedir=".">

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../../nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../../nbbuild/nbantext.jar"/>

    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" location="../../nbbuild/standard-nbm-license.txt"/>

    <property name="nbm_alias" value="nb_ide"/>

    <target name="compile" description="Compile source files.">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath>
                <fileset dir="../../ant/external">
                    <include name="ant-1.*.jar"/>
                </fileset>
                <pathelement location="../../openide/netbeans/lib/openide.jar"/>
                <pathelement location="../../core/netbeans/lib/core.jar"/>
            </classpath>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="netbeans/modules"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar jarfile="netbeans/modules/apisupport-ant.jar" manifest="manifest-subst.mf" compress="false">
            <fileset dir="src" excludesfile="../../nbbuild/standard-jar-excludes.txt">
                <exclude name="**/*.class"/>
                <exclude name="META-INF/*.properties"/>
            </fileset>
        </jar>
        <mkdir dir="netbeans/ant/nblib"/>
        <jar jarfile="netbeans/ant/nblib/nbinstaller.jar" compress="false">
            <fileset dir="src" excludesfile="../../nbbuild/standard-jar-excludes.txt">
                <include name="**/*.class"/>
                <include name="META-INF/*.properties"/>
            </fileset>
        </jar>
    </target>
    
    <target name="nbantext-src">
        <!-- See #31368 -->
        <mkdir dir="tmp/nbantext-src"/>
        <copy todir="tmp/nbantext-src">
            <fileset dir="../../nbbuild/antsrc">
                <include name="org/netbeans/nbbuild/Arch.java"/>
                <include name="org/netbeans/nbbuild/Arch.xsl"/>
                <include name="org/netbeans/nbbuild/Arch.dtd"/>
                <include name="org/netbeans/nbbuild/Arch-api-questions.xml"/>
                <include name="org/netbeans/nbbuild/CheckHelpSets.java"/>
                <include name="org/netbeans/nbbuild/CheckLinks.java"/>
                <include name="org/netbeans/nbbuild/CreateModuleXML.java"/>
                <include name="org/netbeans/nbbuild/JHIndexer.java"/>
                <include name="org/netbeans/nbbuild/MakeListOfNBM.java"/>
                <include name="org/netbeans/nbbuild/MakeNBM.java"/>
                <include name="org/netbeans/nbbuild/MakeParserDB.java"/>
                <include name="org/netbeans/nbbuild/MakeUpdateDesc.java"/>
                <include name="org/netbeans/nbbuild/UpdateTracking.java"/>
                <include name="org/netbeans/nbbuild/XMLUtil.java"/>
                <include name="org/netbeans/nbbuild/package.html"/>
            </fileset>
        </copy>
        <path id="nbantext-cp">
            <!-- cmdline Ant -->
            <pathelement location="${ant.home}/lib/ant.jar"/>
            <!-- Ant in NB -->
            <pathelement path="${netbeans.library.path}"/>
            <fileset dir="../..">
                <include name="nbbuild/external/jhall*.jar"/>
                <include name="libs/external/xerces*.jar"/>
            </fileset>
        </path>
    </target>
    
    <target name="nbantext-jars" depends="nbantext-src">
        <javac srcdir="tmp/nbantext-src" destdir="tmp/nbantext-src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath refid="nbantext-cp"/>
        </javac>
        <mkdir dir="netbeans/ant/extra"/>
        <jar jarfile="netbeans/ant/extra/nbantext.jar" compress="true">
            <fileset dir="tmp/nbantext-src">
                <exclude name="**/*.java"/>
            </fileset>
        </jar>
    </target>
    
    <target name="javadoc-check-timestamps" depends="nbantext-src">
        <uptodate property="javadoc.up.to.date" targetfile="netbeans/docs/NetBeansAntTasks.zip">
            <srcfiles dir="tmp/nbantext-src">
                <include name="**/*.java"/>
                <include name="**/*.html"/>
            </srcfiles>
        </uptodate>
    </target>

    <target name="nbantext-javadoc" depends="javadoc-check-timestamps" unless="javadoc.up.to.date">
        <mkdir dir="tmp/nbantext-javadoc"/>
        <tstamp/>
        <javadoc destdir="tmp/nbantext-javadoc" windowtitle="NetBeans Ant Tasks" author="false" nodeprecatedlist="true" notree="true" nohelp="true">
            <package name="org.netbeans.nbbuild"/>
            <sourcepath>
                <pathelement location="tmp/nbantext-src"/>
            </sourcepath>
            <classpath refid="nbantext-cp"/>
            <doctitle>NetBeans Ant Tasks</doctitle>
            <bottom><![CDATA[<font size="-2" color="gray">Built on ${TODAY}.&nbsp;&nbsp;|&nbsp;&nbsp;Portions Copyright 1997-2003 Sun Microsystems, Inc. All rights reserved.</font>]]></bottom>
            <link href="http://nagoya.apache.org/gump/javadoc/ant/build/javadocs" offline="true" packagelistloc="../../nbbuild/antsrc"/>
        </javadoc>
        <mkdir dir="netbeans/docs"/>
        <zip zipfile="netbeans/docs/NetBeansAntTasks.zip" compress="true">
            <fileset dir="tmp/nbantext-javadoc"/>
        </zip>
    </target>

    <target name="netbeans" depends="jars,nbantext-jars,nbantext-javadoc" description="Build complete module.">
        <genlist targetname="nbm" outputfiledir="netbeans"/>
    </target>

    <target name="nbm" depends="netbeans" description="Build standalone NBM.">
        <makenbm file="apisupport-ant.nbm"
                 topdir="."
                 module="netbeans/modules/apisupport-ant.jar"
                 homepage="http://apisupport.${homepage.base}/"
                 distribution="http://${dist.base}/apisupport-ant.nbm">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="reload-build" depends="netbeans">
        <mkdir dir="reload"/>
        <copy file="netbeans/modules/apisupport-ant.jar" tofile="reload/apisupport-ant.jar"/>
    </target>

    <target name="reload" depends="reload-build" description="Test changes to the module.">
        <nbinstaller module="reload/apisupport-ant.jar" action="reinstall"/>
    </target>

    <target name="clean" description="Clean out build products.">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="apisupport-ant.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="tmp"/>
        <delete dir="Info"/>
    </target>

    <target name="real-clean" depends="clean" description="Clean all build products and also test modules.">
        <delete dir="reload"/>
    </target>

</project>
