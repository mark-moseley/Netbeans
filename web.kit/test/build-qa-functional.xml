<project name="web/test-qa-functional" basedir="." default="all">

    <property name="tomcat_version" value="5.5.17"/>
    <!-- Root folders -->
    <property name="nball.dir" location="../../../../nb_all"/>
    <property environment="env"/>

    <!-- Imports default qa-functional-compiler and runidetes executor.
        jemmy and jellytools jars are on classpath for both. -->
    <import file="${nball.dir}/nbbuild/templates/xtest-qa-functional.xml"/>

    <!-- Setting command line -->
    <target name="ide_command_line_suffix">
        <property name="reg.home"
        value="-J-Dorg.netbeans.modules.tomcat.autoregister.catalinaHome=${xtest.tmpdir}/apache-tomcat-${tomcat_version}"/>
        <property name="reg.token" value="-J-Dorg.netbeans.modules.tomcat.autoregister.token=1"/>
        <property name="jmxremote.option" value="-J-Dcom.sun.management.jmxremote=true"/>
        <property name="xtest.ide.commandline.suffix" value="${reg.home} ${reg.token} ${jmxremote.option}"/>
    </target>
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <!--Executor for IDE test -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <!-- This target executes tests inside IDE -->
    <target name="runidetest" depends="init-cp,install-tomcat,ide_command_line_suffix">
        <executeTests pluginName="ide">
            <classpath refid="jemmy.and.jelly.path"/>
            <classpath location="${test.qa-functional.run.cp.extra}"/>
            <property name="xtest.timeout" value="7200000" />
        </executeTests>
    </target>
    <property name="tomcat.ext.dir" location="${nball.dir}/tomcatint/tomcat5/bundled/external"/>
    <import file="${nball.dir}/tomcatint/tomcat5/bundled/build.xml"/>
    
    <property name="tomcat.home" value="${xtest.tmpdir}/apache-tomcat-${tomcat_version}"/>
    
    <target name="install-tomcat" depends="init">
        <delete dir="${tomcat.home}" quiet="true"/>
        <unzip src="${tomcat.ext.dir}/apache-tomcat-${tomcat_version}.zip" dest="${xtest.tmpdir}/"/>
        <chmod dir="${tomcat.home}/bin" perm="ugo+rx" includes="**/*.sh"/>
    </target>

    <target name="runidetest-debug" depends="setup-debugger,runidetest"/>

    <target name="setup-debugger">
        <property name="xtest.debug.port" value="1111"/>
        <property name="xtest.debug.suspend" value="true"/>
    </target>
</project>

