package o.n.m.ws.qaf.rest.crud.service;

import java.util.Collection;
import javax.ws.rs.Path;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Produces;
import javax.ws.rs.Consumes;
import javax.ws.rs.PathParam;
import javax.ws.rs.QueryParam;
import javax.ws.rs.DefaultValue;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.Context;
import javax.ws.rs.core.UriInfo;
import com.sun.jersey.api.core.ResourceContext;
import javax.persistence.EntityManager;
import o.n.m.ws.qaf.rest.crud.MicroMarket;
import o.n.m.ws.qaf.rest.crud.converter.MicroMarketsConverter;
import o.n.m.ws.qaf.rest.crud.converter.MicroMarketConverter;

/**
 *
 * @author lukas
 */

@Path("/microMarkets/")
public class MicroMarketsResource {
    @Context
    protected UriInfo uriInfo;
    @Context
    protected ResourceContext resourceContext;
  
    /** Creates a new instance of MicroMarketsResource */
    public MicroMarketsResource() {
    }

    /**
     * Get method for retrieving a collection of MicroMarket instance in XML format.
     *
     * @return an instance of MicroMarketsConverter
     */
    @GET
    @Produces({"application/xml", "application/json"})
    public MicroMarketsConverter get(@QueryParam("start")
    @DefaultValue("0")
    int start, @QueryParam("max")
    @DefaultValue("10")
    int max, @QueryParam("expandLevel")
    @DefaultValue("1")
    int expandLevel, @QueryParam("query")
    @DefaultValue("SELECT e FROM MicroMarket e")
    String query) {
        try {
            return new MicroMarketsConverter(getEntities(start, max, query), uriInfo.getAbsolutePath(), expandLevel);
        } finally {
            PersistenceService.getInstance().close();
        }
    }

    /**
     * Post method for creating an instance of MicroMarket using XML as the input format.
     *
     * @param data an MicroMarketConverter entity that is deserialized from an XML stream
     * @return an instance of MicroMarketConverter
     */
    @POST
    @Consumes({"application/xml", "application/json"})
    public Response post(MicroMarketConverter data) {
        PersistenceService persistenceSvc = PersistenceService.getInstance();
        try {
            persistenceSvc.beginTx();
            EntityManager em = persistenceSvc.getEntityManager();
            MicroMarket entity = data.resolveEntity(em);
            createEntity(data.resolveEntity(em));
            persistenceSvc.commitTx();
            return Response.created(uriInfo.getAbsolutePath().resolve(entity.getZipCode() + "/")).build();
        } finally {
            persistenceSvc.close();
        }
    }

    /**
     * Returns a dynamic instance of MicroMarketResource used for entity navigation.
     *
     * @return an instance of MicroMarketResource
     */
    @Path("{zipCode}/")
    public MicroMarketResource getMicroMarketResource(@PathParam("zipCode")
    String id) {
        MicroMarketResource resource = resourceContext.getResource(MicroMarketResource.class);
        resource.setId(id);
        return resource;
    }

    /**
     * Returns all the entities associated with this resource.
     *
     * @return a collection of MicroMarket instances
     */
    protected Collection<MicroMarket> getEntities(int start, int max, String query) {
        EntityManager em = PersistenceService.getInstance().getEntityManager();
        return em.createQuery(query).setFirstResult(start).setMaxResults(max).getResultList();
    }

    /**
     * Persist the given entity.
     *
     * @param entity the entity to persist
     */
    protected void createEntity(MicroMarket entity) {
        EntityManager em = PersistenceService.getInstance().getEntityManager();
        em.persist(entity);
    }
}
