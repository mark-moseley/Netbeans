package o.n.m.ws.qaf.rest.crud.service;

import java.util.Collection;
import javax.ws.rs.Path;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Produces;
import javax.ws.rs.Consumes;
import javax.ws.rs.PathParam;
import javax.ws.rs.QueryParam;
import javax.ws.rs.DefaultValue;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.Context;
import javax.ws.rs.core.UriInfo;
import com.sun.jersey.api.core.ResourceContext;
import javax.persistence.EntityManager;
import o.n.m.ws.qaf.rest.crud.Product;
import o.n.m.ws.qaf.rest.crud.PurchaseOrder;
import o.n.m.ws.qaf.rest.crud.Manufacturer;
import o.n.m.ws.qaf.rest.crud.ProductCode;
import o.n.m.ws.qaf.rest.crud.converter.ProductsConverter;
import o.n.m.ws.qaf.rest.crud.converter.ProductConverter;

/**
 *
 * @author lukas
 */

@Path("/products/")
public class ProductsResource {
    @Context
    protected UriInfo uriInfo;
    @Context
    protected ResourceContext resourceContext;
  
    /** Creates a new instance of ProductsResource */
    public ProductsResource() {
    }

    /**
     * Get method for retrieving a collection of Product instance in XML format.
     *
     * @return an instance of ProductsConverter
     */
    @GET
    @Produces({"application/xml", "application/json"})
    public ProductsConverter get(@QueryParam("start")
    @DefaultValue("0")
    int start, @QueryParam("max")
    @DefaultValue("10")
    int max, @QueryParam("expandLevel")
    @DefaultValue("1")
    int expandLevel, @QueryParam("query")
    @DefaultValue("SELECT e FROM Product e")
    String query) {
        PersistenceService persistenceSvc = PersistenceService.getInstance();
        try {
            persistenceSvc.beginTx();
            return new ProductsConverter(getEntities(start, max, query), uriInfo.getAbsolutePath(), expandLevel);
        } finally {
            persistenceSvc.commitTx();
            persistenceSvc.close();
        }
    }

    /**
     * Post method for creating an instance of Product using XML as the input format.
     *
     * @param data an ProductConverter entity that is deserialized from an XML stream
     * @return an instance of ProductConverter
     */
    @POST
    @Consumes({"application/xml", "application/json"})
    public Response post(ProductConverter data) {
        PersistenceService persistenceSvc = PersistenceService.getInstance();
        try {
            persistenceSvc.beginTx();
            EntityManager em = persistenceSvc.getEntityManager();
            Product entity = data.resolveEntity(em);
            createEntity(data.resolveEntity(em));
            persistenceSvc.commitTx();
            return Response.created(uriInfo.getAbsolutePath().resolve(entity.getProductId() + "/")).build();
        } finally {
            persistenceSvc.close();
        }
    }

    /**
     * Returns a dynamic instance of ProductResource used for entity navigation.
     *
     * @return an instance of ProductResource
     */
    @Path("{productId}/")
    public ProductResource getProductResource(@PathParam("productId")
    Integer id) {
        ProductResource resource = resourceContext.getResource(ProductResource.class);
        resource.setId(id);
        return resource;
    }

    /**
     * Returns all the entities associated with this resource.
     *
     * @return a collection of Product instances
     */
    protected Collection<Product> getEntities(int start, int max, String query) {
        EntityManager em = PersistenceService.getInstance().getEntityManager();
        return em.createQuery(query).setFirstResult(start).setMaxResults(max).getResultList();
    }

    /**
     * Persist the given entity.
     *
     * @param entity the entity to persist
     */
    protected void createEntity(Product entity) {
        EntityManager em = PersistenceService.getInstance().getEntityManager();
        em.persist(entity);
        Manufacturer manufacturerId = entity.getManufacturerId();
        if (manufacturerId != null) {
            manufacturerId.getProductCollection().add(entity);
        }
        ProductCode productCode = entity.getProductCode();
        if (productCode != null) {
            productCode.getProductCollection().add(entity);
        }
        for (PurchaseOrder value : entity.getPurchaseOrderCollection()) {
            Product oldEntity = value.getProductId();
            value.setProductId(entity);
            if (oldEntity != null) {
                oldEntity.getPurchaseOrderCollection().remove(entity);
            }
        }
    }
}
