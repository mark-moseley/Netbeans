package o.n.m.ws.qaf.rest.crud.service;

import java.util.Collection;
import javax.ws.rs.Path;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.ProduceMime;
import javax.ws.rs.ConsumeMime;
import javax.ws.rs.PathParam;
import javax.ws.rs.QueryParam;
import javax.ws.rs.DefaultValue;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.Context;
import javax.ws.rs.core.UriInfo;
import o.n.m.ws.qaf.rest.crud.Product;
import o.n.m.ws.qaf.rest.crud.PurchaseOrder;
import o.n.m.ws.qaf.rest.crud.converter.ProductsConverter;
import o.n.m.ws.qaf.rest.crud.converter.ProductConverter;


/**
 *
 * @author lukas
 */

@Path("/products/")
public class ProductsResource {
    @Context
    private UriInfo context;
  
    /** Creates a new instance of ProductsResource */
    public ProductsResource() {
    }

    /**
     * Constructor used for instantiating an instance of dynamic resource.
     *
     * @param context HttpContext inherited from the parent resource
     */
    public ProductsResource(UriInfo context) {
        this.context = context;
    }

    /**
     * Get method for retrieving a collection of Product instance in XML format.
     *
     * @return an instance of ProductsConverter
     */
    @GET
    @ProduceMime({"application/xml", "application/json"})
    public ProductsConverter get(@QueryParam("start")
    @DefaultValue("0")
    int start, @QueryParam("max")
    @DefaultValue("10")
    int max) {
        try {
            return new ProductsConverter(getEntities(start, max), context.getAbsolutePath());
        } finally {
            PersistenceService.getInstance().close();
        }
    }

    /**
     * Post method for creating an instance of Product using XML as the input format.
     *
     * @param data an ProductConverter entity that is deserialized from an XML stream
     * @return an instance of ProductConverter
     */
    @POST
    @ConsumeMime({"application/xml", "application/json"})
    public Response post(ProductConverter data) {
        PersistenceService service = PersistenceService.getInstance();
        try {
            service.beginTx();
            Product entity = data.getEntity();
            createEntity(entity);
            service.commitTx();
            return Response.created(context.getAbsolutePath().resolve(entity.getProductId() + "/")).build();
        } finally {
            service.close();
        }
    }

    /**
     * Returns a dynamic instance of ProductResource used for entity navigation.
     *
     * @return an instance of ProductResource
     */
    @Path("{productId}/")
    public ProductResource getProductResource(@PathParam("productId")
    Integer id) {
        return new ProductResource(id, context);
    }

    /**
     * Returns all the entities associated with this resource.
     *
     * @return a collection of Product instances
     */
    protected Collection<Product> getEntities(int start, int max) {
        return PersistenceService.getInstance().createQuery("SELECT e FROM Product e").setFirstResult(start).setMaxResults(max).getResultList();
    }

    /**
     * Persist the given entity.
     *
     * @param entity the entity to persist
     */
    protected void createEntity(Product entity) {
        PersistenceService.getInstance().persistEntity(entity);
        for (PurchaseOrder value : entity.getPurchaseOrderCollection()) {
            value.setProductId(entity);
        }
    }
}
