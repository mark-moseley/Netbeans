package o.n.m.ws.qaf.rest.crud.service;

import java.util.Collection;
import javax.ws.rs.Path;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.ProduceMime;
import javax.ws.rs.ConsumeMime;
import javax.ws.rs.PathParam;
import javax.ws.rs.QueryParam;
import javax.ws.rs.DefaultValue;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.Context;
import javax.ws.rs.core.UriInfo;
import o.n.m.ws.qaf.rest.crud.Product;
import o.n.m.ws.qaf.rest.crud.Customer;
import o.n.m.ws.qaf.rest.crud.PurchaseOrder;
import o.n.m.ws.qaf.rest.crud.converter.PurchaseOrdersConverter;
import o.n.m.ws.qaf.rest.crud.converter.PurchaseOrderConverter;


/**
 *
 * @author lukas
 */

@Path("/purchaseOrders/")
public class PurchaseOrdersResource {
    @Context
    private UriInfo context;
    
    /** Creates a new instance of PurchaseOrdersResource */
    public PurchaseOrdersResource() {
    }

    /**
     * Constructor used for instantiating an instance of dynamic resource.
     *
     * @param context HttpContext inherited from the parent resource
     */
    public PurchaseOrdersResource(UriInfo context) {
        this.context = context;
    }

    /**
     * Get method for retrieving a collection of PurchaseOrder instance in XML format.
     *
     * @return an instance of PurchaseOrdersConverter
     */
    @GET
    @ProduceMime({"application/xml", "application/json"})
    public PurchaseOrdersConverter get(@QueryParam("start")
    @DefaultValue("0")
    int start, @QueryParam("max")
    @DefaultValue("10")
    int max, @QueryParam("expandLevel")
    @DefaultValue("1")
    int expandLevel, @QueryParam("query")
    @DefaultValue("SELECT e FROM PurchaseOrder e")
    String query) {
        try {
            return new PurchaseOrdersConverter(getEntities(start, max, query), context.getAbsolutePath(), expandLevel);
        } finally {
            PersistenceService.getInstance().close();
        }
    }

    /**
     * Post method for creating an instance of PurchaseOrder using XML as the input format.
     *
     * @param data an PurchaseOrderConverter entity that is deserialized from an XML stream
     * @return an instance of PurchaseOrderConverter
     */
    @POST
    @ConsumeMime({"application/xml", "application/json"})
    public Response post(PurchaseOrderConverter data) {
        PersistenceService persistenceSvc = PersistenceService.getInstance();
        try {
            persistenceSvc.beginTx();
            PurchaseOrder entity = data.getEntity();
            createEntity(entity);
            persistenceSvc.commitTx();
            return Response.created(context.getAbsolutePath().resolve(entity.getOrderNum() + "/")).build();
        } finally {
            persistenceSvc.close();
        }
    }

    /**
     * Returns a dynamic instance of PurchaseOrderResource used for entity navigation.
     *
     * @return an instance of PurchaseOrderResource
     */
    @Path("{orderNum}/")
    public o.n.m.ws.qaf.rest.crud.service.PurchaseOrderResource getPurchaseOrderResource(@PathParam("orderNum")
    Integer id) {
        return new PurchaseOrderResource(id, context);
    }

    /**
     * Returns all the entities associated with this resource.
     *
     * @return a collection of PurchaseOrder instances
     */
    protected Collection<PurchaseOrder> getEntities(int start, int max, String query) {
        return PersistenceService.getInstance().createQuery(query).setFirstResult(start).setMaxResults(max).getResultList();
    }

    /**
     * Persist the given entity.
     *
     * @param entity the entity to persist
     */
    protected void createEntity(PurchaseOrder entity) {
        PersistenceService.getInstance().persistEntity(entity);
        Customer customerId = entity.getCustomerId();
        if (customerId != null) {
            customerId.getPurchaseOrderCollection().add(entity);
        }
        Product productId = entity.getProductId();
        if (productId != null) {
            productId.getPurchaseOrderCollection().add(entity);
        }
    }
}
