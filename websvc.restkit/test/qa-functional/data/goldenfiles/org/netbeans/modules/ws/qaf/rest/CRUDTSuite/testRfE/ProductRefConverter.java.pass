package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import o.n.m.ws.qaf.rest.crud.Product;


/**
 *
 * @author lukas
 */

@XmlRootElement(name = "productRef")
public class ProductRefConverter {
    private Product entity;
    private boolean isUriExtendable;
    private URI uri;
    
    /** Creates a new instance of ProductRefConverter */
    public ProductRefConverter() {
    }

    /**
     * Creates a new instance of ProductRefConverter.
     *
     * @param entity associated entity
     * @param uri associated uri
     * @param isUriExtendable indicates whether the uri can be extended
     */
    public ProductRefConverter(Product entity, URI uri, boolean isUriExtendable) {
        this.entity = entity;
        this.uri = uri;
        this.isUriExtendable = isUriExtendable;
    }

    /**
     * Getter for productId.
     *
     * @return value for productId
     */
    @XmlElement
    public Integer getProductId() {
        return entity.getProductId();
    }

    /**
     * Returns the URI associated with this reference converter.
     *
     * @return the converted uri
     */
    @XmlAttribute(name = "uri")
    public URI getResourceUri() {
        if (isUriExtendable) {
            return uri.resolve(entity.getProductId() + "/");
        }
        return uri;
    }

    /**
     * Sets the URI for this reference converter.
     *
     */
    public void setResourceUri(URI uri) {
        this.uri = uri;
    }

    /**
     * Returns the Product entity.
     *
     * @return Product entity
     */
    @XmlTransient
    public Product getEntity() {
        ProductConverter result = UriResolver.getInstance().resolve(ProductConverter.class, uri);
        if (result != null) {
            return result.getEntity();
        }
        return null;
    }
}
