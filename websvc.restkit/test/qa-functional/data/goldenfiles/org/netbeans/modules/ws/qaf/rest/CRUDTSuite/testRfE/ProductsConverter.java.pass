package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import java.util.Collection;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import java.util.ArrayList;
import o.n.m.ws.qaf.rest.crud.Product;


/**
 *
 * @author lukas
 */

@XmlRootElement(name = "products")
public class ProductsConverter {
    private Collection<Product> entities;
    private Collection<ProductRefConverter> references;
    private URI uri;
  
    /** Creates a new instance of ProductsConverter */
    public ProductsConverter() {
    }

    /**
     * Creates a new instance of ProductsConverter.
     *
     * @param entities associated entities
     * @param uri associated uri
     */
    public ProductsConverter(Collection<Product> entities, URI uri) {
        this.entities = entities;
        this.uri = uri;
    }

    /**
     * Returns a collection of ProductRefConverter.
     *
     * @return a collection of ProductRefConverter
     */
    @XmlElement(name = "productRef")
    public Collection<ProductRefConverter> getReferences() {
        references = new ArrayList<ProductRefConverter>();
        if (entities != null) {
            for (Product entity : entities) {
                references.add(new ProductRefConverter(entity, uri, true));
            }
        }
        return references;
    }

    /**
     * Sets a collection of ProductRefConverter.
     *
     * @param a collection of ProductRefConverter to set
     */
    public void setReferences(Collection<ProductRefConverter> references) {
        this.references = references;
    }

    /**
     * Returns the URI associated with this converter.
     *
     * @return the uri
     */
    @XmlAttribute(name = "uri")
    public URI getResourceUri() {
        return uri;
    }

    /**
     * Returns a collection Product entities.
     *
     * @return a collection of Product entities
     */
    @XmlTransient
    public Collection<Product> getEntities() {
        entities = new ArrayList<Product>();
        if (references != null) {
            for (ProductRefConverter ref : references) {
                entities.add(ref.getEntity());
            }
        }
        return entities;
    }
}
