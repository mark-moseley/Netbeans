package o.n.m.ws.qaf.rest.crud.service;

import javax.ws.rs.Path;
import javax.ws.rs.GET;
import javax.ws.rs.PUT;
import javax.ws.rs.DELETE;
import javax.ws.rs.ProduceMime;
import javax.ws.rs.ConsumeMime;
import javax.ws.rs.WebApplicationException;
import javax.persistence.NoResultException;
import javax.ws.rs.core.UriInfo;
import o.n.m.ws.qaf.rest.crud.Product;
import java.util.Collection;
import o.n.m.ws.qaf.rest.crud.ProductCode;
import o.n.m.ws.qaf.rest.crud.converter.ProductCodeConverter;


/**
 *
 * @author lukas
 */

public class ProductCodeResource {
    private String id;
    private UriInfo context;
  
    /** Creates a new instance of ProductCodeResource */
    public ProductCodeResource() {
    }

    /**
     * Constructor used for instantiating an instance of dynamic resource.
     *
     * @param context HttpContext inherited from the parent resource
     */
    public ProductCodeResource(String id, UriInfo context) {
        this.id = id;
        this.context = context;
    }

    /**
     * Get method for retrieving an instance of ProductCode identified by id in XML format.
     *
     * @param id identifier for the entity
     * @return an instance of ProductCodeConverter
     */
    @GET
    @ProduceMime({"application/xml", "application/json"})
    public ProductCodeConverter get() {
        try {
            return new ProductCodeConverter(getEntity(), context.getAbsolutePath());
        } finally {
            PersistenceService.getInstance().close();
        }
    }

    /**
     * Put method for updating an instance of ProductCode identified by id using XML as the input format.
     *
     * @param id identifier for the entity
     * @param data an ProductCodeConverter entity that is deserialized from a XML stream
     */
    @PUT
    @ConsumeMime({"application/xml", "application/json"})
    public void put(ProductCodeConverter data) {
        PersistenceService service = PersistenceService.getInstance();
        try {
            service.beginTx();
            updateEntity(getEntity(), data.getEntity());
            service.commitTx();
        } finally {
            service.close();
        }
    }

    /**
     * Delete method for deleting an instance of ProductCode identified by id.
     *
     * @param id identifier for the entity
     */
    @DELETE
    public void delete() {
        PersistenceService service = PersistenceService.getInstance();
        try {
            service.beginTx();
            ProductCode entity = getEntity();
            service.removeEntity(entity);
            service.commitTx();
        } finally {
            service.close();
        }
    }

    /**
     * Returns a dynamic instance of ProductsResource used for entity navigation.
     *
     * @param id identifier for the parent entity
     * @return an instance of ProductsResource
     */
    @Path("products/")
    public ProductsResource getProductsResource() {
        final ProductCode parent = getEntity();
        return new ProductsResource(context) {

            @Override
            protected Collection<Product> getEntities(int start, int max) {
                Collection<Product> result = new java.util.ArrayList<Product>();
                int index = 0;
                for (Product e : parent.getProductCollection()) {
                    if (index >= start && (index - start) < max) {
                        result.add(e);
                    }
                    index++;
                }
                return result;
            }

            @Override
            protected void createEntity(Product entity) {
                super.createEntity(entity);
                entity.setProductCode(parent);
            }
        };
    }

    /**
     * Returns an instance of ProductCode identified by id.
     *
     * @param id identifier for the entity
     * @return an instance of ProductCode
     */
    protected ProductCode getEntity() {
        try {
            return (ProductCode) PersistenceService.getInstance().createQuery("SELECT e FROM ProductCode e where e.prodCode = :prodCode").setParameter("prodCode", id).getSingleResult();
        } catch (NoResultException ex) {
            throw new WebApplicationException(new Throwable("Resource for " + context.getAbsolutePath() + " does not exist."), 404);
        }
    }

    /**
     * Updates entity using data from newEntity.
     *
     * @param entity the entity to update
     * @param newEntity the entity containing the new data
     * @return the updated entity
     */
    protected ProductCode updateEntity(ProductCode entity, ProductCode newEntity) {
        newEntity.setProdCode(entity.getProdCode());
        entity.getProductCollection().removeAll(newEntity.getProductCollection());
        for (Product value : entity.getProductCollection()) {
            value.setProductCode(null);
        }
        entity = PersistenceService.getInstance().mergeEntity(newEntity);
        for (Product value : entity.getProductCollection()) {
            value.setProductCode(entity);
        }
        return entity;
    }
}
