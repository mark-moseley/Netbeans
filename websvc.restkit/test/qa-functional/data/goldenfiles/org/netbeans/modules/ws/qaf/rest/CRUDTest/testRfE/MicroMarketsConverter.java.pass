package o.n.m.ws.qaf.rest.crud.converter;

import java.net.URI;
import java.util.Collection;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import java.util.ArrayList;
import o.n.m.ws.qaf.rest.crud.MicroMarket;


/**
 *
 * @author lukas
 */

@XmlRootElement(name = "microMarkets")
public class MicroMarketsConverter {
    private Collection<MicroMarket> entities;
    private Collection<MicroMarketRefConverter> references;
    private URI uri;
    
    /** Creates a new instance of MicroMarketsConverter */
    public MicroMarketsConverter() {
    }

    /**
     * Creates a new instance of MicroMarketsConverter.
     *
     * @param entities associated entities
     * @param uri associated uri
     */
    public MicroMarketsConverter(Collection<MicroMarket> entities, URI uri) {
        this.entities = entities;
        this.uri = uri;
    }

    /**
     * Returns a collection of MicroMarketRefConverter.
     *
     * @return a collection of MicroMarketRefConverter
     */
    @XmlElement(name = "microMarketRef")
    public Collection<MicroMarketRefConverter> getReferences() {
        references = new ArrayList<MicroMarketRefConverter>();
        if (entities != null) {
            for (MicroMarket entity : entities) {
                references.add(new MicroMarketRefConverter(entity, uri, true));
            }
        }
        return references;
    }

    /**
     * Sets a collection of MicroMarketRefConverter.
     *
     * @param a collection of MicroMarketRefConverter to set
     */
    public void setReferences(Collection<MicroMarketRefConverter> references) {
        this.references = references;
    }

    /**
     * Returns the URI associated with this converter.
     *
     * @return the uri
     */
    @XmlAttribute(name = "uri")
    public URI getResourceUri() {
        return uri;
    }

    /**
     * Returns a collection MicroMarket entities.
     *
     * @return a collection of MicroMarket entities
     */
    @XmlTransient
    public Collection<MicroMarket> getEntities() {
        entities = new ArrayList<MicroMarket>();
        if (references != null) {
            for (MicroMarketRefConverter ref : references) {
                entities.add(ref.getEntity());
            }
        }
        return entities;
    }
}
