package o.n.m.ws.qaf.rest.crud.service;

import java.util.Collection;
import javax.ws.rs.Path;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.ProduceMime;
import javax.ws.rs.ConsumeMime;
import javax.ws.rs.UriParam;
import javax.ws.rs.QueryParam;
import javax.ws.rs.DefaultValue;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.HttpContext;
import javax.ws.rs.core.UriInfo;
import o.n.m.ws.qaf.rest.crud.Manufacturer;
import o.n.m.ws.qaf.rest.crud.Product;
import o.n.m.ws.qaf.rest.crud.converter.ManufacturersConverter;
import o.n.m.ws.qaf.rest.crud.converter.ManufacturerConverter;


/**
 *
 * @author lukas
 */

@Path("/manufacturers/")
public class ManufacturersResource {
    @HttpContext
    private UriInfo context;
  
    /** Creates a new instance of ManufacturersResource */
    public ManufacturersResource() {
    }

    /**
     * Constructor used for instantiating an instance of dynamic resource.
     *
     * @param context HttpContext inherited from the parent resource
     */
    public ManufacturersResource(UriInfo context) {
        this.context = context;
    }

    /**
     * Get method for retrieving a collection of Manufacturer instance in XML format.
     *
     * @return an instance of ManufacturersConverter
     */
    @GET
    @ProduceMime({"application/xml", "application/json"})
    public ManufacturersConverter get(@QueryParam("start")
    @DefaultValue("0")
    int start, @QueryParam("max")
    @DefaultValue("10")
    int max) {
        try {
            return new ManufacturersConverter(getEntities(start, max), context.getAbsolutePath());
        } finally {
            PersistenceService.getInstance().close();
        }
    }

    /**
     * Post method for creating an instance of Manufacturer using XML as the input format.
     *
     * @param data an ManufacturerConverter entity that is deserialized from an XML stream
     * @return an instance of ManufacturerConverter
     */
    @POST
    @ConsumeMime({"application/xml", "application/json"})
    public Response post(ManufacturerConverter data) {
        PersistenceService service = PersistenceService.getInstance();
        try {
            service.beginTx();
            Manufacturer entity = data.getEntity();
            createEntity(entity);
            service.commitTx();
            return Response.created(context.getAbsolutePath().resolve(entity.getManufacturerId() + "/")).build();
        } finally {
            service.close();
        }
    }

    /**
     * Returns a dynamic instance of ManufacturerResource used for entity navigation.
     *
     * @return an instance of ManufacturerResource
     */
    @Path("{manufacturerId}/")
    public ManufacturerResource getManufacturerResource(@UriParam("manufacturerId")
    Integer id) {
        return new ManufacturerResource(id, context);
    }

    /**
     * Returns all the entities associated with this resource.
     *
     * @return a collection of Manufacturer instances
     */
    protected Collection<Manufacturer> getEntities(int start, int max) {
        return PersistenceService.getInstance().createQuery("SELECT e FROM Manufacturer e").setFirstResult(start).setMaxResults(max).getResultList();
    }

    /**
     * Persist the given entity.
     *
     * @param entity the entity to persist
     */
    protected void createEntity(Manufacturer entity) {
        PersistenceService.getInstance().persistEntity(entity);
        for (Product value : entity.getProductCollection()) {
            value.setManufacturerId(entity);
        }
    }
}
