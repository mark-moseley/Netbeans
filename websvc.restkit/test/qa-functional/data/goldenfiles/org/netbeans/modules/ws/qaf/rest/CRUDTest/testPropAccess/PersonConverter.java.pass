package converter;

import java.net.URI;
import javax.xml.bind.annotation.XmlRootElement;
import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlTransient;
import javax.xml.bind.annotation.XmlAttribute;
import javax.ws.rs.core.UriBuilder;
import entity.Person;
import service.PersistenceService;


/**
 *
 * @author lukas
 */

@XmlRootElement(name = "person")
public class PersonConverter {
    private Person entity;
    private URI uri;
    private int expandLevel;
    
    /** Creates a new instance of PersonConverter */
    public PersonConverter() {
    }

    /**
     * Creates a new instance of PersonConverter.
     *
     * @param entity associated entity
     * @param uri associated uri
     * @param expandLevel indicates the number of levels the entity graph should be expanded@param isUriExtendable indicates whether the uri can be extended
     */
    public PersonConverter(Person entity, URI uri, int expandLevel, boolean isUriExtendable) {
        this.entity = entity;
        this.uri = (isUriExtendable) ? UriBuilder.fromUri(uri).path(entity.getId() + "/").build() : uri;
        this.expandLevel = expandLevel;
    }

    /**
     * Creates a new instance of PersonConverter.
     *
     * @param entity associated entity
     * @param uri associated uri
     * @param expandLevel indicates the number of levels the entity graph should be expanded
     */
    public PersonConverter(Person entity, URI uri, int expandLevel) {
        this(entity, uri, expandLevel, false);
    }

    /**
     * Getter for id.
     *
     * @return value for id
     */
    @XmlElement
    public String getId() {
        return (expandLevel > 0) ? getEntity().getId() : null;
    }

    /**
     * Setter for id.
     *
     * @param value the value to set
     */
    public void setId(String value) {
        getEntity().setId(value);
    }

    /**
     * Getter for lastName.
     *
     * @return value for lastName
     */
    @XmlElement
    public String getLastName() {
        return (expandLevel > 0) ? getEntity().getLastName() : null;
    }

    /**
     * Setter for lastName.
     *
     * @param value the value to set
     */
    public void setLastName(String value) {
        getEntity().setLastName(value);
    }

    /**
     * Getter for firstName.
     *
     * @return value for firstName
     */
    @XmlElement
    public String getFirstName() {
        return (expandLevel > 0) ? getEntity().getFirstName() : null;
    }

    /**
     * Setter for firstName.
     *
     * @param value the value to set
     */
    public void setFirstName(String value) {
        getEntity().setFirstName(value);
    }

    /**
     * Returns the URI associated with this converter.
     *
     * @return the uri
     */
    @XmlAttribute
    public URI getUri() {
        return uri;
    }

    /**
     * Sets the URI for this reference converter.
     *
     */
    public void setUri(URI uri) {
        this.uri = uri;
    }

    /**
     * Returns the Person entity.
     *
     * @return an entity
     */
    @XmlTransient
    public Person getEntity() {
        if (entity == null) {
            entity = new Person();
        }
        return entity;
    }

    /**
     * Returns the resolved Person entity.
     *
     * @return an resolved entity
     */
    public Person resolveEntity() {
        if (entity != null) {
            return PersistenceService.getInstance().resolveEntity(Person.class, entity.getId());
        } else {
            return (Person) UriResolver.getInstance().resolve(PersonConverter.class, uri);
        }
    }
}
