<mconfig name="XML-ALL config">

    <!-- Validation suite for my module -->
    <testbag testattribs="stable" executor="ide" name="all_xml_full">
        <testset dir="qa-functional/src">
            <patternset>
                <!-- TAX -->
		<include name="org/netbeans/tax/EncodingTest.class"/>
		<include name="org/netbeans/tax/XMLCloneTest.class"/>
		<include name="org/netbeans/tax/FactoryTest.class"/>
                <include name="org/netbeans/tax/CreateXMLTest.class"/>
		<include name="org/netbeans/tax/io/TreeBuilderTest.class"/>
                <!-- CORE -->
		<include name="org/netbeans/modules/xml/core/CoreTemplatesTest.class"/>
		<include name="org/netbeans/modules/xml/core/settings/CoreSettingsTest.class"/>
		<include name="org/netbeans/modules/xml/core/actions/OpenActionJTest.class"/>
                <!-- CATALOG -->
		<include name="org/netbeans/modules/xml/catalog/CatalogTest.class"/>
                <!-- TOOLS -->
                <include name="org/netbeans/modules/xml/tools/generator/GenerateDOMScannerSupportTest.class"/>
                <include name="org/netbeans/modules/xml/tools/generator/GenerateDTDSupportTest.class"/>
                <include name="org/netbeans/modules/xml/tools/generator/SAXGeneratorJTest.class"/>
                <include name="org/netbeans/modules/xml/tools/doclet/DTDDocletTest.class"/>
                <include name="org/netbeans/modules/xml/tools/actions/CheckActionTest.class"/>
                <include name="org/netbeans/modules/xml/tools/actions/ValidateActionTest.class"/>
                <!-- TEXT-EDIT -->
                <include name="org/netbeans/modules/xml/text/syntax/ColoringTest.class"/>
                <!-- TREE-EDIT -->
                <include name="org/netbeans/modules/xml/tree/nodes/XMLDataNodeTest.class"/>
                <include name="org/netbeans/modules/xml/tree/nodes/DTDDataNodeTest.class"/>
		<!-- XSL -->
                <include name="org/netbeans/modules/xsl/action/TransformationActionTest.class"/>
            </patternset>
        </testset>
    </testbag>
        
    <testbag testattribs="fail" executor="ide" name="all_xml_fail">
        <testset dir="qa-functional/src">
           <patternset>
           </patternset>
        </testset>
    </testbag>
        
    <testbag testattribs="dev" executor="ide" name="all_xml_dev">
        <testset dir="qa-functional/src">
            <patternset>
           </patternset>
        </testset>
    </testbag>    

    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
</mconfig>