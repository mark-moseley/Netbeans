<project name="xml" default="netbeans" basedir=".">

    <property name="nbroot" location=".."/>
    <property name="binroot" location="${nbroot}/../nbextra"/>
    <property name="nbext_root" location="${nbroot}/nbbuild"/>

    <taskdef name="genjavadoc" classname="org.netbeans.nbbuild.GenerateJavadoc" classpath="${nbext_root}/nbantext.jar"/>
    <taskdef name="validatexml" classname="org.netbeans.nbbuild.XMLValidate" classpath="${nbext_root}/nbantext.jar;${binroot}/xml/catalog/release/modules/ext/resolver-1_1_nb.jar"/>
    <taskdef  name="for-each" classname="org.netbeans.nbbuild.ForEach" classpath="${nbext_root}/nbantext.jar"/>
    <property name="submodules" value="api, tax, core, catalog, tools, text-edit, tree-edit, css"/>

    <property name="build.compiler.debug" value="on"/>


    <target name="compile">
        <for-each locations="${submodules}"/>
    </target>

    <target name="jars" depends="compile">
        <for-each locations="${submodules}"/>
    </target>

    <target name="release">
        <for-each locations="${submodules}"/>
    </target>

    <target name="javahelp">
        <for-each locations="${submodules}"/>
    </target>

    <target name="netbeans" depends="jars,release,javahelp">
        <mkdir dir="netbeans"/>

        <for-each locations="${submodules}"/>
    </target>

    <target name="nbm" depends="netbeans">
        <for-each locations="${submodules}"/>
    </target>

    <target name="clean">
        <delete dir="netbeans"/>
        <delete file="xml-nbms.zip"/>

        <for-each locations="${submodules}"/>
    </target>

    <target name="real-clean" depends="clean">
        <delete dir="javadoc"/>

        <for-each locations="${submodules}"/>
    </target>

    <target name="all" depends="clean,nbm">
        <for-each locations="${submodules}"/>
    </target>

    <target name="javadoc">
        <delete dir="javadoc"/>
        <mkdir dir="javadoc"/>
        <genjavadoc destdir="javadoc" modules="openide,openidex,editor,xml/api,xml/catalog,xml/core,xml/css,xml/tax,xml/tax/lib,xml/text-edit,xml/tools,xml/tree-edit">
            <topdir path="${nbroot}"/>
        </genjavadoc>

        <for-each locations="${submodules}"/>
    </target>


    <!-- Build xml module and all modules which is depend on. -->
    <target name="all-xml" depends="all-depend,clean,netbeans"/>

    <target name="all-depend">
        <property name="modules" value="../openide, ../openidex, ../core, ../editor"/>
        <for-each locations="${modules}" target="clean"/>
        <for-each locations="${modules}" target="jars"/>
    </target>


    <!-- Update www documents. -->
    <target name="www">
        <ant dir="www" target="all"/>
    </target>


    <!-- Create zip archive from all nbm files. -->
    <target name="zip" depends="nbm">
        <zip zipfile="xml-nbms.zip"
             basedir="."
             includes="*.nbm"
             excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
             compress="true"/>
    </target>

    <!-- Check all XML files in all sub-modules. -->
    <target name="check">
        <validatexml basedir="." catalog="${nbroot}/www/www/dtds/catalog" warnings="true">
<!--            <include name="**/src/**/*.xml"/>-->
            <include name="**/src/**/mf-layer.xml"/>
            <include name="**/build.xml"/>
<!--            <include name="**/TODO.xml"/>-->
<!--            <include name="www/**/*.xml"/>-->
        </validatexml>
    </target>

</project>
