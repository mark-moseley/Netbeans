<project name="core" default="netbeans" basedir=".">

    <import file="../nbbuild/templates/projectized.xml"/> 

    <target name="files-init" depends="basic-init">
        <patternset id="main.module.files">
            <include name="${module.jar}"/>
            <include name="${nb.lib.dir}/ide.ks"/>
            <include name="${nb.bin.dir}/nbexec*"/>
            <include name="${nb.system.dir}/ModuleAutoDeps/${code-name-base-dashes}.xml"/>
            <include name="CREDITS.html"/>
        </patternset>
        <patternset id="module.files">
            <patternset refid="main.module.files"/>
            <include name="${nb.lib/ext.dir}/boot.jar"/> <!-- see core/bootstrap/build.xml -->
        </patternset>
    </target>

    <target name="clean" depends="files-init">
        <delete dir="build"/>
        <delete dir="javadoc"/>
        <delete>
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refid="main.module.files"/>
            </fileset>
        </delete>
        <delete file="${netbeans.dest.dir}/${cluster.dir}/update_tracking/${code.name.base.dashes}.xml"/>
    </target>

    <target name="netbeans-extra" depends="release"/>

    <target name="release" depends="init">
        <copy file="launcher/unix/nbexec" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.bin.dir}" />
        <chmod file="${netbeans.dest.dir}/${cluster.dir}/${nb.bin.dir}/nbexec" perm="ugo+rx"/>
        <copy file="launcher/windows/nbexec.exe" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.bin.dir}/" />
        <copy file="launcher/os2/nbexec.cmd" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.bin.dir}/" />
        <!-- copy file="launcher/security.policy" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.bin.dir}" / -->
        <!-- copy file="release/lib/ide.ks" tofile="${netbeans.dest.dir}/${cluster.dir}/${nb.lib.dir}/keystore.ks" / -->
        <copy todir="${netbeans.dest.dir}/${cluster.dir}/${nb.bin.dir}" includeEmptyDirs="false">
            <fileset dir="release/bin" excludesfile="../nbbuild/standard-jar-excludes.txt">
                <!-- These do not currently work anyway: -->
                <exclude name="unsupported/nbscript*"/>
                <exclude name="**/runide*" />
                <exclude name="**/ide.policy" />
                <exclude name="**/ide.ks" />
            </fileset>
        </copy>
        <copy todir="${netbeans.dest.dir}/${cluster.dir}/${nb.lib.dir}" includeEmptyDirs="false">
            <fileset dir="release/lib" excludesfile="../nbbuild/standard-jar-excludes.txt"/>
        </copy>
        <fixcrlf srcdir="${netbeans.dest.dir}/${cluster.dir}/${nb.bin.dir}" eol="crlf">
            <include name="**/*.bat"/>
            <include name="**/*.cmd"/>
        </fixcrlf>
        <fixcrlf srcdir="${netbeans.dest.dir}/${cluster.dir}/${nb.bin.dir}" eol="lf">
            <include name="**/*.sh"/>
            <include name="**/ide.cfg"/>
        </fixcrlf>
    </target>

