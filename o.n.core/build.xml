  </target>

  <target name="clean-modules" description="Moves the moved classes back">
    <move todir="src/org/netbeans/core/modules">
      <fileset dir="bootstrap/src/org/netbeans">
        <selector refid="boot-modules" />
      </fileset>
    </move>
  </target>
  <target name="lib-modules" description="Moves independent modules API to core/bootstrap">
    <move todir="bootstrap/src/org/netbeans">
      <fileset dir="src/org/netbeans/core/modules">
        <selector refid="boot-modules" />
      </fileset>
    </move>
  </target>
</project>
