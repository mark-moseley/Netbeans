<mconfig name="core unit test config">
  
    <testbag testattribs="ide,stable" executor="ide" name="testbag_1" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/windows/*.class"/>
                <include name="org/netbeans/core/filesystems/*.class"/>
                <exclude name="org/netbeans/core/filesystems/MIMEResolverImplTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="ide,failing" executor="ide" name="testbag_2" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/windows/layers/*.class"/>
                <include name="org/netbeans/core/filesystems/MIMEResolverImplTest.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="code,stable" executor="code" name="testbag_3" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/core/modules/ModuleManagerTest.class"/>
                <include name="org/netbeans/core/modules/ModuleListTest.class"/>
                <include name="org/netbeans/core/PlainTest.class"/>
            </patternset>
        </testset>
    </testbag>

    <!-- If you want to use this testbag you *must* provide xtest.includes property, -->
    <!-- (either on cmd line or in the script) to explicitly define which test       -->
    <!-- you want to run. This will run *only* tests from unit/src folder !!!        -->
    <testbag testattribs="code,empty" executor="code" name="testbag_empty" resultsprocessor="unit">
        <testset dir="unit/src"/>
    </testbag>

    <testbag testattribs="code,dev" executor="code" name="testbag_dev" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
                <!-- Add your own code tests -->
            </patternset>
        </testset>
    </testbag>
    
    <executor name="ide" antfile="build.xml" target="runidetest"/>
    <executor name="code" antfile="build.xml" target="runcodetest"/>
    
    <resultsprocessor name="unit" antfile="build.xml" target="test_report"/>

</mconfig>
