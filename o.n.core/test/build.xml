<project name="module test build script" basedir="." default="all">
    
    <!-- Points to directory with moduleCluster.properties and directories.properties -->
    <property name="netbeans.dest.dir" location="../../nbbuild/"/>
    
    <!-- Name of tested module -->
    <property name="xtest.module" value="core"/>
    
    <!-- Home of XTest -->
    <property name="xtest.home" location="../../xtest"/>
    
    <!-- default testtypes, attributes used when no value is supplied from command line -->
    <property name="xtest.testtype" value="unit"/>
    <property name="xtest.attribs" value="stable,all,code,ide"/>
    
    <!-- Imports buildtests, cleantests, runtest, cleanresults, -->
    <!-- realclean, printconfig targets. -->
    <import file="${xtest.home}/lib/default-module-build.xml"/>
    
    <!-- This calls common clean process. -->
    <target name="cleantests">
        <!-- Call cleantests also from imported script -->
        <antcall target="module-build.cleantests"/>
        <ant dir="unit/src/org/netbeans/core/modules" target="clean"/>
        <ant dir="unit/src/org/netbeans/core/projects" target="clean"/>
        <ant dir="unit/src/org/netbeans/core/lookup/data" target="clean"/>             
    </target> 
    
</project>
