<mconfig name="core qa-functional test config">

<!-- Start Property Editors testbag -->
    <testbag testattribs="full or ide or pe" executor="ide" name="Property Editors tests">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/propertyeditors/PropertyType_BooleanO.class"/>
		<include name="gui/propertyeditors/PropertyType_ByteO.class"/>
                <include name="gui/propertyeditors/PropertyType_Character.class"/>
		<include name="gui/propertyeditors/PropertyType_Class.class"/>
		<include name="gui/propertyeditors/PropertyType_DoubleO.class"/>
		<include name="gui/propertyeditors/PropertyType_FloatO.class"/>
		<include name="gui/propertyeditors/PropertyType_Integer.class"/>
		<include name="gui/propertyeditors/PropertyType_LongO.class"/>
		<include name="gui/propertyeditors/PropertyType_ShortO.class"/>
		<include name="gui/propertyeditors/PropertyType_URL.class"/>
		<include name="gui/propertyeditors/PropertyType_boolean.class"/>
		<include name="gui/propertyeditors/PropertyType_byte.class"/>
		<include name="gui/propertyeditors/PropertyType_char.class"/>
		<include name="gui/propertyeditors/PropertyType_double.class"/>
		<include name="gui/propertyeditors/PropertyType_float.class"/>
		<include name="gui/propertyeditors/PropertyType_int.class"/>
		<include name="gui/propertyeditors/PropertyType_long.class"/>
		<include name="gui/propertyeditors/PropertyType_short.class"/>
   
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="full or ide or pe" executor="ide" name="Property Customizers tests">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/propertyeditors/PropertyType_Color.class"/>
		<include name="gui/propertyeditors/PropertyType_Dimension.class"/>
		<include name="gui/propertyeditors/PropertyType_File.class"/>
		<include name="gui/propertyeditors/PropertyType_Font.class"/>
		<include name="gui/propertyeditors/PropertyType_HTMLBrowser.class"/>
		<include name="gui/propertyeditors/PropertyType_IndentEngine.class"/>
		<include name="gui/propertyeditors/PropertyType_Insets.class"/>
		<include name="gui/propertyeditors/PropertyType_NbClassPath.class"/>
		<include name="gui/propertyeditors/PropertyType_NbProcessDescriptor.class"/>
		<include name="gui/propertyeditors/PropertyType_Point.class"/>
		<include name="gui/propertyeditors/PropertyType_Properties.class"/>
		<include name="gui/propertyeditors/PropertyType_Rectangle.class"/>
		<include name="gui/propertyeditors/PropertyType_ServiceType.class"/>
		<include name="gui/propertyeditors/PropertyType_String.class"/>
		<include name="gui/propertyeditors/PropertyType_StringArray.class"/>
	    </patternset>
	</testset>
    </testbag>
<!-- END Property Editors testbag -->


<!-- START javahelp testbag -->
    <testbag testattribs="full or javahelp or validation" executor="ide" name="Javahelp tests">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/javahelp/JavaHelpDialogTest.class"/>
	    </patternset>
	</testset>
    </testbag>
<!-- END javahelp testbag -->


<!-- START windowsystem testbag -->
    <testbag testattribs="full or windowsystem or validation" executor="ide" name="Window System tests">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/windowsystem/MainMenu.class"/>
	    </patternset>
	</testset>
    </testbag>
<!-- END windowsystem testbag -->


<!-- START TEMP -->
    <testbag testattribs="temp" executor="ide" name="Temp">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/javahelp/JavaHelpDialogTest.class"/>
	    </patternset>
	</testset>
    </testbag>
<!-- END TEMP -->

    
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>

</mconfig>
