<mconfig name="core qa-functional test config">
<!-- START Window System testbags -->
    <testbag testattribs="stable or ide or ws" executor="ide" name="Validation tests - initial position of windows (in ide)" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>                
                <include name="gui/windowsystem/validation/Validation_Init.class"/>		               
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="stable or ide or ws" executor="ide" name="Validation tests - docking/attaching/resize/move/project switching (in ide)" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="gui/windowsystem/validation/Validation_Docking.class"/>		
                <include name="gui/windowsystem/validation/Validation_ProjectSwitching.class"/>		
                <include name="gui/windowsystem/validation/Validation_ResizeMove.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="stable or ide or ws" executor="ide" name="Main Window tests (in ide)" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="gui/windowsystem/mainwindow/MainMenu.class"/>		
            </patternset>
        </testset>
    </testbag>
<!-- END Window System testbags -->


<!-- Start Property Editors testbag -->
    <testbag testattribs="stable or ide or pe" executor="ide" name="Property Editors and Customizers tests" resultsprocessor="unit">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/propertyeditors/PropertyType_*.class"/>
	    </patternset>
	</testset>
    </testbag>
								
<!-- END Property Editors testbag -->
    
