<mconfig name="core qa-functional test config">
<!-- START Window System testbags -->
    <testbag testattribs="validation or full or ide or ws" executor="ide_firststart" prio="1" name="Initial position of windows after first start" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>                
                <include name="gui/windowsystem/validation/Validation_Init.class"/>		               
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="validation or full or ide or ws" executor="ide_secondstart" prio="2" name="Initial position of windows after restart" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>                
                <include name="gui/windowsystem/validation/Validation_Init_1.class"/>		               
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="validation or full or ide or ws" executor="ide" name="Docking, Attaching, Resize, Move windows in IDE" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="gui/windowsystem/validation/Validation_Docking.class"/>		
                <include name="gui/windowsystem/validation/Validation_ResizeMove.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="full ide or ws" executor="ide" name="Project switching" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="gui/windowsystem/validation/Validation_ProjectSwitching.class"/>		
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="(validation and not full) or ide or ws" executor="ide" name="Main Window tests - validation" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="gui/windowsystem/mainwindow/MainMenu.class/testMainMenuMnemonicsCollision"/>
                <include name="gui/windowsystem/mainwindow/MainMenu.class/testMainMenuShortCutCollision"/>
                <include name="gui/windowsystem/mainwindow/MainMenu.class/testMenuItemsWhenFilesystemSelected"/>
                <include name="gui/windowsystem/mainwindow/MainMenu.class/testMenuItemsWhenJavaSelected"/>
                <include name="gui/windowsystem/mainwindow/MainMenu.class/testMenuItemsWhenFormSelected"/>
                <include name="gui/windowsystem/mainwindow/MainMenu.class/testPopupMenuItemsWhenFilesystemSelected"/>
                <include name="gui/windowsystem/mainwindow/MainMenu.class/testPopupMenuItemsWhenJavaSelected"/>
                <include name="gui/windowsystem/mainwindow/MainMenu.class/testPopupMenuItemsWhenFormSelected"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="full or ide or ws" executor="ide" name="Main Window tests" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="gui/windowsystem/mainwindow/MainMenu.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="(validation and not full) or ide or ws" executor="ide" name="MDI Workspaces tests - validation" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="gui/windowsystem/mdi/WorkspacesTest.class/testSwitchingWorkspacesByMenu"/>
                <include name="gui/windowsystem/mdi/WorkspacesTest.class/testSwitchingWorkspacesByClick"/>
                <include name="gui/windowsystem/mdi/WorkspacesTest.class/testSwitchingWorkspacesByPopup"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="full or ide or ws" executor="ide" name="MDI Workspaces tests" resultsprocessor="unit">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="gui/windowsystem/mdi/WorkspacesTest.class"/>		
            </patternset>
        </testset>
    </testbag>

<!-- END Window System testbags -->


<!-- Start Property Editors testbag -->
    <testbag testattribs="(validation and not full) or ide or pe" executor="ide" name="Property Editors tests - validation" resultsprocessor="unit">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/propertyeditors/PropertyType_BooleanO.class/testByComboTrue"/>
		<include name="gui/propertyeditors/PropertyType_ByteO.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_Character.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_Class.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_DoubleO.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_ElementFormat.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_FloatO.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_Integer.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_LongO.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_ShortO.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_Type.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_URL.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_boolean.class/testByComboFalse"/>
		<include name="gui/propertyeditors/PropertyType_byte.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_char.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_double.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_float.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_int.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_long.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_short.class/testByInPlace"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="(validation and not full) or ide or pe" executor="ide" name="Property Customizers tests - validation" resultsprocessor="unit">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/propertyeditors/PropertyType_Color.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_CompilerType.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_DebuggerType.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_Dimension.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_Executor.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_ExtensionList.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_ExtensionList.class/testCustomizerAdd"/>
		<include name="gui/propertyeditors/PropertyType_File.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_Filesystem.class/testCustomizerAddDirectory"/>
		<include name="gui/propertyeditors/PropertyType_Font.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_HTMLBrowser.class/testByComboSWINGBrowser"/>
		<include name="gui/propertyeditors/PropertyType_Icon.class/testCustomizerOkURL"/>
		<include name="gui/propertyeditors/PropertyType_IdentifierArray.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_IdentifierArray.class/testCustomizerAdd"/>
		<include name="gui/propertyeditors/PropertyType_IndentEngine.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_Insets.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_NbClassPath.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_NbClassPath.class/testCustomizerAddDirectory"/>
		<include name="gui/propertyeditors/PropertyType_NbProcessDescriptor.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_Point.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_Properties.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_Properties.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_Rectangle.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_ServiceType.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_String.class/testCustomizerOk"/>
		<include name="gui/propertyeditors/PropertyType_StringArray.class/testByInPlace"/>
		<include name="gui/propertyeditors/PropertyType_StringArray.class/testCustomizerAdd"/>
	    </patternset>
	</testset>
    </testbag>
								
    <testbag testattribs="full or ide or pe" executor="ide" name="Property Editors and Customizers tests" resultsprocessor="unit">
	<testset dir="qa-functional/src">
	    <patternset>
		<include name="gui/propertyeditors/PropertyType_*.class"/>
	    </patternset>
	</testset>
    </testbag>
    
<!-- END Property Editors testbag -->
    
    <executor name="code" antfile="build-qa-functional.xml" target="runcodetest"/>
    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest"/>

    <executor name="ide_firststart" antfile="build-qa-functional.xml" target="runidetest_firststart"/>
    
    <executor name="ide_secondstart" antfile="build-qa-functional.xml" target="runidetest_secondstart"/>

    <compiler name="QAcompiler" antfile="build-qa-functional.xml" target="QAcompiler" default="true"/>

    <resultsprocessor name="unit" antfile="build.xml" target="test_report" default="true"/>

</mconfig>
