<project name="projects test setup" basedir="." default="build">

    <target name="build" description="Build stuff for projects tests">
	<path id="openide">
            <pathelement location="${openide/util.dir}/lib/org-openide-util.jar"/>
            <pathelement location="${openide/fs.dir}/core/org-openide-filesystems.jar"/>
            <pathelement location="${openide/loaders.dir}/core/openide-loaders.jar"/>
        </path>
        <antcall target="create-jar">
            <param name="name" value="sfs-attr-test"/>
        </antcall>
    </target>

    <!-- Create a JAR file under data/; give the name (must have subdir w/ contents and manifest) -->
    <target name="create-jar">
        <property name="sourcedir" location="data/${name}"/>
        <javac destdir="${sourcedir}" srcdir="${sourcedir}">
            <!-- Permit use of Open APIs from module code: -->
            <classpath refid="openide"/>
            <!-- Permit them to compile against one another -->
            <!-- (note this means they must be built in a reasonable order): -->
            <classpath>
                <fileset dir="data">
                    <include name="*.jar"/>
                </fileset>
            </classpath>
        </javac>
        <jar manifest="data/${name}.mf" compress="false" jarfile="data/${name}.jar">
            <fileset dir="${sourcedir}">
                <exclude name="**/*.java"/>
                <exclude name="**/*.nbattrs"/>
            </fileset>
        </jar>
    </target>

    <target name="clean" description="Clean stuff from projects tests">
        <delete>
            <fileset dir="data">
                <include name="*.jar"/>
                <include name="**/*.class"/>
            </fileset>
        </delete>
    </target>

</project>
