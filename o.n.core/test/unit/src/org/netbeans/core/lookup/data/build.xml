<project basedir="." default="all">

    <target name="all" depends="test1,test2,services1,services2,ims"/>

    <property name="xtest.source.location" value="jar"/>
 
    <target name="init">
	<condition property="jarcode.classpath">
            <or>
              <equals arg1="${xtest.source.location}" arg2="jar"/>
              <equals arg1="${xtest.source.location}" arg2="src"/>
            </or>
        </condition>        
        <condition property="idecode.classpath">
            <equals arg1="${xtest.source.location}" arg2="ide"/>
        </condition>    
    </target>
    
    <target name="prepare-classpath" 
            depends="init,jartest-classpath,idetest-classpath"/>
    
    <target name="jartest-classpath" if="jarcode.classpath">
	<property name="ims.classpath" value="${openide.dir}/${nb.lib.dir}/openide.jar"/>
    </target>
        
    <target name="idetest-classpath" if="idecode.classpath">
	<property name="ims.classpath" value="${openide.dir}/${nb.lib.dir}/openide.jar"/>
    </target>


    <target name="test1">
        <javac srcdir="test1-src" destdir="test1-src"/>
        <jar jarfile="test1.jar" manifest="test1.mf" compress="false">
            <fileset dir="test1-src"/>
        </jar>
    </target>

    <target name="test2">
        <javac srcdir="test2-src" destdir="test2-src"/>
        <jar jarfile="test2.jar" manifest="test2.mf" compress="false">
            <fileset dir="test2-src"/>
        </jar>
    </target>
    
    <target name="services1">
        <javac srcdir="services-jar-1" destdir="services-jar-1"/>
        <jar jarfile="services-jar-1.jar" manifest="services-jar-1.mf">
            <fileset dir="services-jar-1"/>
        </jar>
    </target>

    <target name="services2" depends="services1">
        <javac srcdir="services-jar-2" destdir="services-jar-2" classpath="services-jar-1.jar"/>
        <jar jarfile="services-jar-2.jar" manifest="services-jar-2.mf">
            <fileset dir="services-jar-2"/>
        </jar>
    </target>

    <target name="ims" depends="prepare-classpath">
        <javac srcdir="install-manifest-service" destdir="install-manifest-service" classpath="${ims.classpath}"/>
        <jar jarfile="install-manifest-service.jar" manifest="install-manifest-service.mf">
            <fileset dir="install-manifest-service"/>
        </jar>
    </target>

    <target name="clean">
        <delete>
            <fileset dir=".">
                <include name="**/*.class"/>
                <include name="*.jar"/>
            </fileset>
        </delete>
    </target>

</project>
