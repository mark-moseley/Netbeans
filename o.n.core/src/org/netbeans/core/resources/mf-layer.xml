<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.0//EN" "http://www.netbeans.org/dtds/filesystem-1_0.dtd">

<filesystem>

    <!--
    <folder name="Actions">
        You can add Actions into this folder in xml-layer of
        your module.
    </folder>
    -->

    <!-- 
    <folder name="Welcome">
        Folder for customizing Welcome dialog. You can add 
        components into the welcome dialog using your xml-layer
        in your module.
    </folder>
    -->
    
    <!-- moved to various packages see comments
    <folder name="Menu">
        Adding Actions into subfolders of this folder in xml-layer
        of your module will customize the MainWindow.
    </folder>    
    -->  
    

    <folder name="Toolbars">
        <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />

        <!-- 
            Specifying file Standard.xml on this place in your layer will
            override default toolbar configuration.
            File should contain description of toolbar configuration, for syntax
            reference see for example Standard.xml file in core/ui.
        -->   
        
        <!--
            If you wish to have no toolbars at all, make all subfolders and 
            configuration hidden (using _hidden suffix) and run system with
            command line option -J-Dnetbeans.windows.no_wswitcher
        -->
        
        <!--
            Adding Actions into subfolders of this folder in xml-layer
            of your module will customize the MainWindow toolbars.
        -->

    </folder>

    <!-- 
    <folder name="Shortcuts">
        You can customize keyboard shorcuts using this folder in the
        xml-layer of your module.
    </folder>
    -->

    <folder name="Startup">
        <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle"/>
    </folder>


    <folder name="Templates">
        <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle"/>
        <attr name="templateWizardURL" urlvalue="nbresbootloc:/org/netbeans/core/resources/templatesRootDescription.html"/>

        <!-- 
        <folder name="Services">
            templates for services in Lookup, should have the same subdirectory as 
            objects under the
        </folder>
        -->
            
        <!-- 
        <folder name="Mount">
            folder for all registered filesystem templates
        </folder>
        -->
    </folder>

    <!-- 
    <folder name="Wizards">
        You can customize the SetupWizard in this folder in xml-layer
        of your module.
    </folder>
    -->

    <folder name="Services">
    
        <!-- 
        Register services with Lookup here in xml-layer of 
        your module.
        -->
    
        <folder name="MIMEResolver">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />
            <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/core/resources/mime.gif" />        
            <attr name="SystemFileSystem.layer" stringvalue="project"/>
        </folder>

        <folder name="Hidden">
            <attr name="hidden" boolvalue="true" />

            <!-- in memory EntityCalalog intance (it serves for deprecated method implementations) -->
            <file name="org-openide-loaders-XMLDataObject-compat.instance" >
                <attr name="instanceClass" stringvalue="org.openide.xml.EntityCatalog" />
                <attr name="instanceCreate" methodvalue="org.openide.loaders.XMLDataObject.createEntityCatalog"/>
            </file>

            <!-- Permit test modules to be (re)deployed. -->
            <file name="org-netbeans-core-module-tester.instance">
                <attr name="instanceClass" stringvalue="org.netbeans.core.modules.TestModuleDeployer"/>
                <attr name="instanceOf" stringvalue="org.netbeans.core.modules.TestModuleDeployer"/>
                <attr name="instanceCreate" methodvalue="org.netbeans.core.modules.ModuleSystem.getTestModuleDeployer"/>
            </file>
        
            <!--
            Register the default error manager. It looks for the system property org.openide.ErrorManager
            first, but normally just loads an NbErrorManager singleton. Modules wishing to provide a
            different error manager should place an instance in this folder and make sure it comes before
            this one so it can override. However this one will still be used during the early startup
            phases before module layer merging and folder lookup are ready.
            -->
            <file name="org-netbeans-core-default-error-manager.instance">
                <attr name="instanceClass" stringvalue="org.openide.ErrorManager"/>
                <attr name="instanceOf" stringvalue="org.openide.ErrorManager"/>
                <attr name="instanceCreate" methodvalue="org.netbeans.core.NbTopManager.getDefaultErrorManager"/>
            </file>
        
        </folder>
    </folder> 

    <!-- moved to various modules
    <folder name="UI">
        You can customize the appearance of the options tree in the 
        Tools | Options dialog uising this folder in the xml-layer
        of your module.
    </folder>
    -->
    
    <!--
    <folder name="Workplace">
         Workplace of the IDE - an alternative to projects. 
    </folder>
    -->

    <folder name="Mount">
        <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />
        <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/core/resources/repository.gif" />
        <attr name="SystemFileSystem.layer" stringvalue="project"/>

        <file name="SystemFileSystem.instance">
            <attr name="instanceClass" stringvalue="org.openide.nodes.Node" />
            <attr name="instanceCreate" methodvalue="org.netbeans.core.ui.MountNode.createSystemNode" />
        </file>
        
        <!-- SystemFileSystem should be the first one -->
        <attr name="OpenIDE-Folder-Order" stringvalue="SystemFileSystem" />
        
        <!-- 
        Mounted filesystems
        -->    
    </folder>  

    <!-- PENDING: This should be moved to the core-windows
         as soon as the classes are better separated.
    -->
    <folder name="Windows">
        <attr name="SystemFileSystem.layer" stringvalue="project"/>
        <file name="WindowManager.wswmgr" url="windowmanager/windowmanager.wswmgr" />
        <folder name="WindowManager">
        </folder>
        
        <!-- 
        Use this folder and it's subfolfder in your xml-layer to define
        workspaces, frames and their layout.
        -->
        
    </folder>

    <!-- For debugging only, comment out if desired: -->
    <file name="debug-sfs-structure.instance">
        <attr name="instanceOf" stringvalue="org.openide.nodes.Node"/>
        <attr name="instanceClass" stringvalue="org.netbeans.core.projects.SystemFileSystem$StructureNode"/>
    </file>
    
    <folder name="xml">

    	<!--
    	  This 'entities' folder represents an entity catalog realized by mapping 
    	  public IDs to filesystem constructs (files and folders).
    	-->

    	<folder name="entities">
        	<folder name="NetBeans_IDE">
            	<!-- public ID defined by XMLDataObject -->
            	<file name="DTD_xmlinfo" url="nbresboot:/org/openide/resources/xmlinfo.dtd">
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans IDE//DTD xmlinfo//EN"/>
            	</file>
        	</folder>

        	<folder name="NetBeans">
            	<file name="Entity_Mapping_Registration_1_0" url="nbresboot:/org/openide/xml/EntityCatalog.dtd" >
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans//Entity Mapping Registration 1.0//EN"/>
            	</file>
            	<file name="DTD_Filesystem_1_0" url="nbresboot:/org/openide/filesystems/filesystem.dtd">
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans//DTD Filesystem 1.0//EN"/>
            	</file>
            	<file name="DTD_Filesystem_1_1" url="nbresboot:/org/openide/filesystems/filesystem1_1.dtd">
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans//DTD Filesystem 1.1//EN"/>
            	</file>
            	<file name="DTD_DefaultAttributes_1_0" url="nbresboot:/org/openide/filesystems/attributes.dtd">
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans//DTD DefaultAttributes 1.0//EN"/>
            	</file>

            	<!-- Session settings -->
            	<file name="DTD_Session_settings_1_0"
                	  url="nbresboot:/org/openide/resources/sessionsettings-1_0.dtd">
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans//DTD Session settings 1.0//EN"/>
            	</file>

            	<!-- Modules -->
            	<file name="DTD_Module_Status_1_0" url="nbresboot:/org/netbeans/core/modules/module-status-1_0.dtd">
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans//DTD Module Status 1.0//EN"/>
            	</file>

            	<!-- Declarative MIME resolver -->
            	<file name="DTD_MIME_Resolver_1_0" url="nbresboot:/org/netbeans/core/filesystems/resolver.dtd">
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans//DTD MIME Resolver 1.0//EN"/>
            	</file>

            	<file name="DTD_MIME_Resolver_XML_Rules_1_0" url="nbresboot:/org/netbeans/core/filesystems/xml-rules.dtd">
                	<attr name="hint.originalPublicID" stringvalue="-//NetBeans//DTD MIME Resolver XML Rules 1.0//EN"/>
            	</file>            

        	</folder>

        	<!-- folder name="Forte_for_Java">
            	<file name="DTD_xmlinfo" url="nbresboot:/org/openide/resources/xmlinfo.dtd" />
            	<file name="DTD_toolbar" url="nbresboot:/org/netbeans/core/windows/resources/toolbar.dtd" />
        	</folder -->

    	</folder>


    	<!-- XMLDataObject.Info processors -->
    	<folder name="lookups">
            <folder name="NetBeans_IDE">
            	<!-- public ID defined by XMLDataObject -->
            	<file name="DTD_toolbar.instance">
                    <attr name="instanceClass" stringvalue="org.openide.loaders.XMLDataObject$Processor"/>
                    <attr name="instanceCreate" newvalue="org.netbeans.core.windows.toolbars.ToolbarProcessor" />
            	</file>
            </folder>

            <folder name="NetBeans">
            	<file name="Entity_Mapping_Registration_1_0.instance">
                    <attr name="instanceClass" stringvalue="org.openide.loaders.XMLDataObject$Processor"/>
                    <attr name="instanceCreate" newvalue="org.netbeans.core.xml.EntityCatalogImpl$RegistrationProcessor" />
            	</file>

            	<!-- Environment.Provider for declarative MIME resolver XML documents. -->
            	<file name="DTD_MIME_Resolver_1_0.instance">
                    <attr name="instanceClass" stringvalue="org.openide.loaders.Environment$Provider"/>
                    <attr name="instanceCreate" newvalue="org.netbeans.core.filesystems.MIMEResolverImpl"/>
            	</file>
            	<!-- Convertor handling session settings-->
                <file name="DTD_Session_settings_1_0.instance">
                  <attr name="instanceCreate" methodvalue="org.netbeans.core.projects.SerialDataConvertor$Provider.create"/>
                  <attr name="settings.convertor" methodvalue="org.netbeans.core.projects.SerialDataConvertor.createWriter"/>
                </file>
            </folder>
    	</folder>
        
        <!-- registered convertors used by InstanceDataObject.create -->
        <folder name="memory">
            <folder name="java">
                <folder name="lang">
                    <!--default convertor-->
                    <file name="Object">
                        <attr name="settings.providerPath" stringvalue="xml/lookups/NetBeans/DTD_Session_settings_1_0.instance"/>
                    </file>
                </folder>
            </folder>
        </folder>
    </folder>

</filesystem>
