<project name="jellytools" default="jars" basedir=".">

    <target name="all" depends="jars,zipsrc,javadoc" description="Create jars, source zip and javadoc zip">
    </target>

    <target name="compile" depends="jemmy">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
          <classpath>
            <pathelement location="../openide/netbeans/lib/openide.jar"/>
            <pathelement location="../core/netbeans/lib/core.jar"/>
            <pathelement location="../core/netbeans/lib/ext/terminalemulator.jar"/>
            <pathelement location="../jemmy/jemmy.jar"/>
            <pathelement location="../xtest/lib/junit.jar"/>
            <pathelement location="../xtest/lib/junit-ext.jar"/>
          </classpath>
        </javac>
    </target>

    <target name="jemmy" description="Build jemmy.jar">
        <ant dir="../jemmy" target="jar"/>
    </target>
    
    <target name="jars" depends="compile" description="Create jars">
        <jar basedir="src" compress="false" jarfile="jelly-nb.jar" >
          <include name="**/test/oo/**"/>
	  <!-- These would come from standard-jar-excludes -->
	  <exclude name="**/*.java"/>
	  <exclude name="**/*.orig"/>
	  <exclude name="**/*.rej"/>
	  <exclude name="**/*.form"/>
	  <exclude name="**/*.jar.MAKEME"/>
	  <exclude name="**/filesystem.attributes"/>
          <exclude name="**/.nbattrs"/>
          <exclude name="**/.#*"/>
        </jar>
        <!-- Create jell2 jar -->
        <jar basedir="src" compress="false" jarfile="jelly2-nb.jar" >
          <include name="**/jellytools/**"/>
	  <!-- These would come from standard-jar-excludes -->
	  <exclude name="**/*.java"/>
	  <exclude name="**/*.orig"/>
	  <exclude name="**/*.rej"/>
	  <exclude name="**/*.form"/>
	  <exclude name="**/*.jar.MAKEME"/>
	  <exclude name="**/filesystem.attributes"/>
          <exclude name="**/.nbattrs"/>
          <exclude name="**/.#*"/>
        </jar>
      </target>
    
    <!-- only to enable call both 'ant jar' and 'ant jars' -->
    <target name="jar" depends="jars">
    </target>

    <target name="zipsrc" description="Create zip containing only sources">
        <zip zipfile="jelly-nb-src.zip" basedir="src" includes="**/test/oo/**/*.java"/>
        <zip zipfile="jelly2-nb-src.zip" basedir="src" includes="**/jellytools/**/*.java"/>
    </target>
  
    <target name="javadoc" description="Javadoc for jellytools">
        <mkdir dir="javadoc"/>
        <javadoc destdir="javadoc" packagenames="org.netbeans.test.oo.*" Windowtitle="Jellytools API">
            <sourcepath>
                <pathelement location="src"/>
            </sourcepath>
            <classpath>
                <pathelement location="../openide/netbeans/lib/openide.jar"/>
                <pathelement location="../core/netbeans/lib/core.jar"/>
                <pathelement location="../core/netbeans/lib/ext/terminalemulator.jar"/>
                <pathelement location="../jemmy/jemmy.jar"/>
            </classpath>
        </javadoc>
        <zip zipfile="jelly-nb-javadoc.zip" basedir="." includes="javadoc/**"/>
        <delete dir="javadoc"/>
        <mkdir dir="javadoc"/>
        <!-- Javadoc for jelly2 -->
        <javadoc destdir="javadoc" packagenames="org.netbeans.jellytools.*" Windowtitle="Jellytools API">
            <sourcepath>
                <pathelement location="src"/>
            </sourcepath>
            <classpath>
                <pathelement location="../openide/netbeans/lib/openide.jar"/>
                <pathelement location="../core/netbeans/lib/core.jar"/>
                <pathelement location="../core/netbeans/lib/ext/terminalemulator.jar"/>
                <pathelement location="../jemmy/jemmy.jar"/>
                <pathelement location="../xtest/lib/junit.jar"/>
                <pathelement location="../xtest/lib/junit-ext.jar"/>
            </classpath>
        </javadoc>
        <zip zipfile="jelly2-nb-javadoc.zip" basedir="." includes="javadoc/**"/>
    </target>

    <target  name="clean" description="Clean all build products">
        <delete>
            <fileset dir=".">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete file="*.jar"/>
        <delete file="*.zip"/>
        <delete dir="javadoc"/>
    </target>

</project>
