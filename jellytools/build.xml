<project name="jellytools" default="jars" basedir=".">

  <property name="nbext" value="../nbbuild"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" location="${nbext}/standard-nbm-license.txt"/>
  <property name="build.compiler.debug" value="true"/>

    <path id="jellytools.classpath">
        <pathelement location="../openide/netbeans/lib/openide.jar"/>
        <pathelement location="../openide/loaders/netbeans/lib/openide-loaders.jar"/>
        <pathelement location="../core/netbeans/lib/core.jar"/>
        <pathelement location="../core/term/netbeans/modules/autoload/terminalemulator.jar"/>
        <pathelement location="../core/windows/netbeans/modules/core-windows.jar"/>
        <pathelement location="../jemmy/jemmy.jar"/>
        <pathelement location="../xtest/external/junit-3.8.1.jar"/>
        <pathelement location="../xtest/nbjunit/netbeans/modules/ext/nbjunit.jar"/>
    </path>

    <target name="all" depends="jars,zipsrc,javadoc,javadocWithJemmy" description="Create jars, source zip and javadoc zip">
    </target>

    <target name="compile" depends="buildDependentModules">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
          <classpath>
            <path refid="jellytools.classpath"/>
          </classpath>
        </javac>
    </target>

    <target name="buildDependentModules">
        <ant dir="../xtest/nbjunit" target="jar-nbjunit"/>
    </target>

    <target name="timestamp" unless="buildnumber">
      <tstamp>
          <format property="buildnumber" pattern="yyyyMMddHHmm"/>
      </tstamp>
    </target>

    <target name="jars" depends="timestamp,compile" description="Create jars">
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>

        <!-- Create jelly1 jar -->
        <filter token="VERSION_SUBST" value="1.0"/>
        <delete file="manifest-subst.mf"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar basedir="src" compress="false" jarfile="jelly-nb.jar" 
             manifest="manifest-subst.mf" excludesfile="../nbbuild/standard-jar-excludes.txt">
          <include name="**/test/oo/**"/>
        </jar>
        
        <!-- Create jelly2 jar -->
        <delete file="manifest-subst.mf"/>
        <copy file="src/org/netbeans/jellytools/version_info" tofile="manifest-subst.mf" filtering="on"/>
        <move file="src/org/netbeans/jellytools/version_info" todir="."/>
        <copy file="manifest-subst.mf" tofile="src/org/netbeans/jellytools/version_info" overwrite="true"/>
        <jar basedir="src" compress="false" jarfile="jelly2-nb.jar"
             manifest="manifest-subst.mf" excludesfile="../nbbuild/standard-jar-excludes.txt">
          <include name="**/jellytools/**"/>
        </jar>
        <move file="./version_info" todir="src/org/netbeans/jellytools"/>
     </target>

    <!-- only to enable call both 'ant jar' and 'ant jars' -->
    <target name="jar" depends="jars">
    </target>

    <target name="zipsrc" description="Create zip containing only sources">
        <zip zipfile="jelly-nb-src.zip" basedir="src" includes="**/test/oo/**/*.java"/>
        <zip zipfile="jelly2-nb-src.zip" basedir="src" 
             includes="**/jellytools/**/*.java,org/netbeans/jellytools/version_info"
        />
    </target>

    <target name="javadoc" description="Javadoc for jellytools">
        <uptodate property="jelly.javadoc.uptodate" targetfile="javadoc/jelly-nb-javadoc.zip" >
    	      <srcfiles dir= "src/org/netbeans/test/oo" includes="**/*.java"/>
        </uptodate>
        <antcall target="create-jelly-javadoc"/>
        <uptodate property="jelly2.javadoc.uptodate" targetfile="javadoc/jelly2-nb-javadoc.zip" >
    	      <srcfiles dir= "src/org/netbeans/jellytools" includes="**/*.java"/>
        </uptodate>
        <antcall target="create-jelly2-javadoc"/>
    </target>

    <target name="create-jelly-javadoc" unless="jelly.javadoc.uptodate">
        <mkdir dir="javadoc/jelly-nb-javadoc"/>
        <javadoc destdir="javadoc/jelly-nb-javadoc" packagenames="org.netbeans.test.oo.*" Windowtitle="Jellytools API">
            <sourcepath>
                <pathelement location="src"/>
            </sourcepath>
            <classpath>
                <path refid="jellytools.classpath"/>
            </classpath>
        </javadoc>
        <zip zipfile="javadoc/jelly-nb-javadoc.zip" basedir="javadoc/jelly-nb-javadoc" includes="**"/>
    </target>

    <target name="create-jelly2-javadoc" unless="jelly2.javadoc.uptodate">
        <mkdir dir="javadoc/jelly2-nb-javadoc"/>
        <!-- Javadoc for jelly2 -->
        <javadoc destdir="javadoc/jelly2-nb-javadoc" packagenames="org.netbeans.jellytools.*" Windowtitle="Jellytools API">
            <sourcepath>
                <pathelement location="src"/>
            </sourcepath>
            <classpath>
                <path refid="jellytools.classpath"/>
            </classpath>
        </javadoc>
        <zip zipfile="javadoc/jelly2-nb-javadoc.zip" basedir="javadoc/jelly2-nb-javadoc" includes="**"/>
    </target>

    <target name="javadocWithJemmy" description="Javadoc for Jellytools and Jemmy">
        <mkdir dir="javadoc/jemmy-jelly2-nb-javadoc"/>
        <!-- Javadoc both for Jelly2 and Jemmy-->
        <javadoc destdir="javadoc/jemmy-jelly2-nb-javadoc" packagenames="org.netbeans.jellytools.*, org.netbeans.jemmy.*" Windowtitle="Jellytools and Jemmy API" Protected="yes">
            <sourcepath>
                <pathelement location="src"/>
                <pathelement location="../jemmy/src"/>
            </sourcepath>
            <classpath>
                <path refid="jellytools.classpath"/>
            </classpath>
        </javadoc>
        <zip zipfile="javadoc/jemmy-jelly2-nb-javadoc.zip" basedir="javadoc/jemmy-jelly2-nb-javadoc" includes="**"/>
    </target>

    <target  name="clean" description="Clean all build products">
        <delete>
            <fileset dir=".">
                <include name="**/*.class"/>
                <include name="**/*.zip"/>
                <include name="**/*.jar"/>
            </fileset>
        </delete>
        <delete file="jellytools.nbm"/>
        <delete file="manifest-subst.mf"/>
        <delete file="module-manifest-subst.mf"/>
        <delete dir="javadoc"/>
        <delete dir="netbeans/docs"/>
        <delete dir="netbeans/modules"/>
        <delete file="netbeans/system/ParserDB/Jelly.jcb"/>
        <delete file="netbeans/system/ParserDB/Jelly.jcs"/>
        <delete dir="Info"/>
    </target>

  <target name="netbeans" depends="release"/>

  <target name="parser-db">
      <taskdef name="makeparserdb" classname="org.netbeans.nbbuild.MakeParserDB" classpath="../nbbuild/nbantext.jar"/>
      <mkdir dir="netbeans/system/ParserDB"/>
      <makeparserdb db="netbeans/system/ParserDB/Jelly" sources="src" nbroot=".."/>
  </target>

  <target name="release" depends="jars,javadoc,parser-db">
    <property file="src/org/netbeans/jellytools/version_info"/>
    <filter token="MODULE_VERSION_SUBST" value="${Jellytools-MajorVersion}.${Jellytools-MinorVersion}"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="module-manifest.mf" tofile="module-manifest-subst.mf" filtering="on"/>
    <mkdir dir="netbeans/modules"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>
    <locjar jarfile="netbeans/modules/jellytools.jar"
         manifest="module-manifest-subst.mf"
         basedir="modulesrc"
	 excludesfile="../nbbuild/standard-jar-excludes.txt"
	 compress="false">
    </locjar>

    <mkdir dir="netbeans/modules/ext"/>
    <copy file="jelly-nb.jar" tofile="netbeans/modules/ext/jelly-nb.jar" filtering="off"/>
    <copy file="jelly2-nb.jar" tofile="netbeans/modules/ext/jelly2-nb.jar" filtering="off"/>
    <mkdir dir="netbeans/docs"/>
    <copy file="javadoc/jelly-nb-javadoc.zip" tofile="netbeans/docs/jelly-nb-javadoc.zip" filtering="off"/>
    <copy file="javadoc/jelly2-nb-javadoc.zip" tofile="netbeans/docs/jelly2-nb-javadoc.zip" filtering="off"/>
  </target>

  <target name="nbm" depends="release">
    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
    <makenbm file="jellytools.nbm"
             topdir="."
             module="netbeans/modules/jellytools.jar"
             homepage="http://jellytools.${homepage.base}"
	         distribution="http://${dist.base}/jellytools.nbm">
      <license file="${license.file}"/>
<!--      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/> -->
    </makenbm>
  </target>

</project>
