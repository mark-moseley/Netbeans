<!-- "-//NetBeans//DTD Java PlatformDefinition 1.0//EN" "http://www.netbeans.org/dtds/java-platformdefinition-1_0.dtd" -->

<!--
    DTD to describe a standard JDK/JRE installation
-->

<!-- 
attributes: 
    name = displayed name of the platform
-->    
<!ELEMENT platform (device+,platformhome?,sourcepath?,javadoc?)>
<!ATTLIST platform 
    name CDATA #REQUIRED
    antname CDATA #REQUIRED
    type CDATA #REQUIRED
    classversion CDATA #IMPLIED
    displayname CDATA #IMPLIED
    fatjar (true|false) "false"
>

<!ELEMENT device (profile+,screen+)>
<!ATTLIST device
    name CDATA #REQUIRED
    description CDATA #IMPLIED
  >
  
<!ELEMENT profile (execution*) >
<!ATTLIST profile
    name CDATA #REQUIRED
    description CDATA #IMPLIED
    version CDATA #REQUIRED
    classpath CDATA #REQUIRED
    runclasspath CDATA #IMPLIED
    isDefault (true|false) "false"
  >
  
<!ELEMENT screen EMPTY>
<!ATTLIST screen
    width CDATA #IMPLIED
    height CDATA #IMPLIED
    bitDepth CDATA #IMPLIED
    isColor (true|false) "true"
    isTouch (true|false) "false"
    isMain (true|false)  "true"    
 >
<!ELEMENT execution EMPTY>
<!ATTLIST execution
    type  CDATA #REQUIRED
    class CDATA #IMPLIED
 >

<!ELEMENT classpath (resource)*>

<!ELEMENT runclasspath (resource)*>
  
<!--Holds the platform root-->
<!ELEMENT platformhome (resource)*>

<!--Holds the source roots of the jdk-->
<!ELEMENT sources (resource)*>

<!--Holds the roots of the jdk's javadoc-->
<!ELEMENT javadoc (resource)*>

<!--Represents a root of a path, holds a stringified URL-->
<!ELEMENT resource (#PCDATA)>
