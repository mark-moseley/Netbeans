<project basedir="." default="netbeans" name="monitor/jmeter">
    <description>Builds, tests, and runs the project org.apache.jmeter.module</description>
    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="build-init" depends="projectized.build-init">
        <mkdir dir="build/jmeter"/>
        <unzip src="external/apache-jmeter-2.2.zip" dest="build/jmeter"/>
    </target>

    <target name="release" depends="projectized.release">
        <mkdir dir="${cluster}/modules/jmeter"/>
        <copy todir="${cluster}/modules/jmeter">
            <fileset dir="build/jmeter"/>
        </copy>
        <chmod perm="ugo+x">
            <fileset dir="${cluster}/modules/jmeter/bin">
                <exclude name="*.cmd"/>
                <exclude name="*.bat"/>
            </fileset>
        </chmod>
    </target>

</project>
