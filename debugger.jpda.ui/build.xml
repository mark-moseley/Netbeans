<project name="debuggerjpda-ui" default="netbeans" basedir=".">

    <import file="../../nbbuild/default.xml"/>

    <property name="module.jar.name" value="debuggerjpda-ui.jar"/>

    <target name="init" depends="default.init">
        <patternset id="module.product.files">
            <include name="${nb.modules/autoload.dir}/${module.jar.name}"/>
        </patternset>
        <path id="cp">
            <pathelement location="${debuggercore/api.dir}/${nb.modules/autoload.dir}/debuggercore-api.jar"/>
            <pathelement location="${debuggercore/viewmodel.dir}/${nb.modules/autoload.dir}/debuggercore-viewmodel.jar"/>
            <pathelement location="${debuggercore.dir}/${nb.modules/autoload.dir}/debuggercore-ui.jar"/>
            <pathelement location="${debuggerjpda/api.dir}/${nb.modules/autoload.dir}/debuggerjpda-api.jar"/>
            <pathelement location="${debuggerjpda.dir}/${nb.modules/autoload.dir}/debuggerjpda-impl.jar"/>
            <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar"/>
            <pathelement location="${openide/io.dir}/${nb.modules.dir}/org-openide-io.jar"/>
            <pathelement location="${openide/loaders.dir}/${nb.lib.dir}/openide-loaders.jar"/>
            <pathelement location="${java/api.dir}/${nb.modules.dir}/org-netbeans-api-java.jar"/>
            <pathelement location="${java/srcmodel.dir}/${nb.modules.dir}/org-openide-src.jar"/>
            <pathelement location="${jdkhome}/lib/tools.jar"/>
        </path>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" source="1.4">
            <classpath refID="cp"/>
        </javac>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <jar
            jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules/autoload.dir}/${module.jar.name}"
            manifest="manifest-subst.mf"
            basedir="src"
            excludesfile="../../nbbuild/standard-jar-excludes.txt"
            compress="false">
        </jar>
    </target>

    <target name="release" depends="init">
    </target>

    <target name="netbeans" depends="jars,release">
        <genlist outputfiledir="${netbeans.dest.dir}/${cluster.dir}" module="${nb.modules/autoload.dir}/${module.jar.name}">
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refID="module.product.files"/>
            </fileset>
        </genlist>
    </target>

    <target name="nbm" depends="netbeans">
      <makenbm file="debuggerjpda-ui.nbm"
               productdir="${netbeans.dest.dir}/${cluster.dir}"
               module="${nb.modules/autoload.dir}/${module.jar.name}"
           homepage="http://debuggerjpda.${homepage.base}/"
           distribution="http://${dist.base}/debuggerjpda-ui.nbm">
        <license file="${license.file}"/>
        <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
      </makenbm>
    </target>

    <target name="clean" depends="init" description="Clean build products.">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="${netbeans.dest.dir}/${cluster.dir}">
                <patternset refID="module.product.files"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="debuggerjpda-ui.nbm"/>
        <delete dir="javadoc"/>
    </target>

    <target name="javadoc" depends="init" description="Build JPDA debugger UI documentation.">
       <selector id="debuggerjpda_ui_javadoc_files" >
         <or>
           <filename name="src/**/*.java" />
         </or>
       </selector>

      <ant dir="../../nbbuild/javadoctools" antfile="template.xml" target="javadoc" inheritRefs="true">
          <property name="javadoc.base" location="."/>
          <property name="javadoc.name" value="JPDADebuggerUI"/>
          <property name="javadoc.title" value="JPDA Debugger UI"/>
          <property name="javadoc.packages" value="org.netbeans.modules.debugger.jpda.ui"/>
          <property name="javadoc.classpath" refid="cp"/>
          <property name="javadoc.src" value="../../debuggerjpda"/>
          <property name="javadoc.files" value="debuggerjpda_ui_javadoc_files" />
          <property name="javadoc.arch" location="../arch/arch-debugger-api-viewmodel.xml"/>
      </ant>
    </target>


