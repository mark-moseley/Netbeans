<project name="jemmy/idemodule" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra">
        <!-- build jemmy.jar -->
        <ant dir=".." target="jar" inheritAll="false"/>
        <copy file="../dist/jemmy.jar" todir="${cluster}/modules/ext"/>
        <!-- create javadoc -->
        <antcall target="javadoc"/>
        <mkdir dir="${cluster}/docs"/>
        <copy file="../dist/javadoc/org-netbeans-jemmy.zip" todir="${cluster}/docs"/>
    </target>

     <!-- overridden because we need to read jemmy version from version_info -->
    <target name="jar" depends="init,compile,jar-prep">
        <property file="../src/org/netbeans/jemmy/version_info"/>
        <jarwithmoduleattributes jarfile="${cluster}/${module.jar}" compress="${build.package.compress}" index="${build.package.index}" manifest="${manifest.mf}">
            <fileset dir="${build.classes.dir}"/>
            <manifest>
                <attribute name="OpenIDE-Module-Specification-Version" value="${Jemmy-MajorVersion}.${Jemmy-MinorVersion}"/>
            </manifest>
	</jarwithmoduleattributes>
    </target>
    
    <target name="clean" depends="projectized-common.clean">
        <ant dir=".." target="clean" inheritAll="false"/>
    </target>

    <!-- Create jemmy javadoc to be published at http://www.netbeans.org/download/dev/javadoc/jemmy-api/index.html. -->
    <target name="javadoc" depends="init">
        <ant dir=".." target="javadoc" inheritAll="false"/>
    </target>

</project>
