<project name="jemmy/idemodule" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>
  
    <target name="files-init" depends="basic-init">
        <patternset id="module.files">
            <!-- All files created for NBM -->
            <include name="${module.jar}" />
            <include name="${nb.system.dir}/Modules/${code.name.base.dashes}.xml" />
            <include name="${nb.docs.dir}/jemmy-api.zip"/>
            <include name="${nb.modules.dir}/ext/jemmy.jar"/>
        </patternset>
    </target>
    
    <target name="netbeans-extra">
        <!-- build jemmy.jar -->
        <ant dir=".." target="jar" inheritAll="false"/>
        <copy file="../dist/jemmy.jar" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext"/>
        <!-- create javadoc -->
        <antcall target="javadoc"/>
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}"/>
        <copy file="javadoc/jemmy-api.zip" todir="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}"/>
    </target>

     <!-- overridden because we need to read jemmy version from version_info -->
    <target name="jar" depends="init,compile,jar-prep">
        <property file="../src/org/netbeans/jemmy/version_info"/>
        <jarwithmoduleattributes jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="${build.package.compress}" index="${build.package.index}" manifest="${manifest.mf}">
            <fileset dir="${build.classes.dir}"/>
            <manifest>
                <attribute name="OpenIDE-Module-Specification-Version" value="${Jemmy-MajorVersion}.${Jemmy-MinorVersion}"/>
            </manifest>
	</jarwithmoduleattributes>
    </target>
    
    <target name="clean" depends="projectized.clean">
        <ant dir=".." target="clean" inheritAll="false"/>
    </target>

    <!-- Create jemmy javadoc to be published at http://www.netbeans.org/download/dev/javadoc/jemmy-api/index.html. -->
    <target name="javadoc" depends="init">
        <ant dir=".." target="javadoc" inheritAll="false"/>
        <!-- Copy javadoc from jemmy to this module. It is required by task in nbbuild. -->
        <copy todir="javadoc">
            <fileset dir="../dist/javadoc"/>
        </copy>
    </target>

</project>
