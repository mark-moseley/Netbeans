    elif <Name>opt</Name> + '=' in <Name>possibilities</Name>:
        return <Name>True</Name>, <Name>opt</Name>
    # No exact match, so better be unique.
    if <Call><Name>len</Name></Call>(<Name>possibilities</Name>) &gt; 1:
        # XXX since possibilities contains all valid continuations, might be
        # nice to work them into the error msg
        raise <Call><Name>GetoptError</Name></Call>('option --%s not a unique prefix' % <Name>opt</Name>, <Name>opt</Name>)
    assert <Call><Name>len</Name></Call>(<Name>possibilities</Name>) == 1
    <Name>unique_match</Name> = <Name>possibilities</Name>[0]
    <Name>has_arg</Name> = <Attribute><Name>unique_match</Name></Attribute>.<Call>endswith</Call>('=')
    if <Name>has_arg</Name>:
