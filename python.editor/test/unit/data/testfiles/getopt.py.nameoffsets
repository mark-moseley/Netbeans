# Return:
#   has_arg?
#   full option name
def <FunctionDef>long_has_args</FunctionDef>(<Name>opt</Name>, <Name>longopts</Name>):
    <Name>possibilities</Name> = [<Name>o</Name> for <Name>o</Name> in <Name>longopts</Name> if <Attribute><Name>o</Name></Attribute>.<Call>startswith</Call>(<Name>opt</Name>)]
    if not <Name>possibilities</Name>:
        raise <Call><Name>GetoptError</Name></Call>('option --%s not recognized' % <Name>opt</Name>, <Name>opt</Name>)
    # Is there an exact match?
