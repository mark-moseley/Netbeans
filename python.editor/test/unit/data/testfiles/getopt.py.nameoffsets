                raise <Call><Name>GetoptError</Name></Call>('option --%s requires argument' % <Name>opt</Name>, <Name>opt</Name>)
            <Name>optarg</Name>, <Name>args</Name> = <Name>args</Name>[0], <Name>args</Name>[1:]
    elif <Name>optarg</Name>:
        raise <Call><Name>GetoptError</Name></Call>('option --%s must not have an argument' % <Name>opt</Name>, <Name>opt</Name>)
    <Attribute><Name>opts</Name></Attribute>.<Call>append</Call>(('--' + <Name>opt</Name>, <Name>optarg</Name> or ''))
