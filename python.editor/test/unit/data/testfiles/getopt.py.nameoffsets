    # Allow options after non-option arguments?
    if <Attribute><Name>shortopts</Name></Attribute>.<Call>startswith</Call>('+'):
        <Name>shortopts</Name> = <Name>shortopts</Name>[1:]
        <Name>all_options_first</Name> = <Name>True</Name>
    elif <Attribute><Attribute><Name>os</Name></Attribute></Attribute>.environ.<Call>get</Call>("POSIXLY_CORRECT"):
        <Name>all_options_first</Name> = <Name>True</Name>
    else:
        <Name>all_options_first</Name> = <Name>False</Name>

    while <Name>args</Name>:
        if <Name>args</Name>[0] == '--':
            <Name>prog_args</Name> += <Name>args</Name>[1:]
            break

        if <Name>args</Name>[0][:2] == '--':
            <Name>opts</Name>, <Name>args</Name> = <Call><Name>do_longs</Name></Call>(<Name>opts</Name>, <Name>args</Name>[0][2:], <Name>longopts</Name>, <Name>args</Name>[1:])
        elif <Name>args</Name>[0][:1] == '-':
            <Name>opts</Name>, <Name>args</Name> = <Call><Name>do_shorts</Name></Call>(<Name>opts</Name>, <Name>args</Name>[0][1:], <Name>shortopts</Name>, <Name>args</Name>[1:])
        else:
            if <Name>all_options_first</Name>:
                <Name>prog_args</Name> += <Name>args</Name>
                break
            else:
                <Attribute><Name>prog_args</Name></Attribute>.<Call>append</Call>(<Name>args</Name>[0])
                <Name>args</Name> = <Name>args</Name>[1:]

    return <Name>opts</Name>, <Name>prog_args</Name>

