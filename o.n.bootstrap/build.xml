<project name="core/bootstrap" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/> 

    <target name="files-init" depends="basic-init">
        <!-- Not really a module, so cannot own any files: -->
        <patternset id="module.files"/>
    </target>

    <target name="jar" depends="init,compile,jar-prep">
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="false">
            <manifest>
                <attribute name="Build-Version" value="${buildnumber}"/>
            </manifest>
            <fileset dir="${build.classes.dir}"/>
        </jar>
    </target>

    <target name="netbeans" depends="jar"/>

    <target name="nbm">
        <fail>Not supported!</fail>
    </target>

    <target name="clean" depends="init">
        <delete dir="build"/>
        <delete file="${netbeans.dest.dir}/${cluster.dir}/${module.jar}"/>
    </target>

</project>
