<project name="xtest/nbjunit" basedir="." default="netbeans">

    <import file="../../nbbuild/templates/projectized.xml"/>
    
    <target name="files-init" depends="projectized-common.files-init">
        <copy file="../external/insanelib.jar" todir="${cluster}/modules/ext"/>
    </target>

    <target name="netbeans-extra" depends="projectized-common.netbeans-extra">
        <mkdir dir="build/javadoc"/>
        <ant dir="." target="javadoc" inheritall="false">
            <property name="netbeans.javadoc.dir" location="build/javadoc"/>
        </ant>
        <copy file="build/javadoc/org-netbeans-modules-nbjunit.zip" todir="${cluster}/docs"/>
    </target>
</project>
