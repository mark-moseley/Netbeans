<project basedir="." default="netbeans" name="NbJUnit">
  <import file="../../nbbuild/default.xml"/>
      
  <target name="init" depends="default.init">
    <ant dir="../external" target="unscramble"/>
    <path id="compile.classpath">
        <fileset dir="../external">
          <include name="junit*.jar"/>
        </fileset>
        <!-- project support classpath -->
        <pathelement location="${openide.dir}/${nb.lib.dir}/openide.jar" />
        <pathelement location="${projects/projectapi.dir}/${nb.modules.dir}/org-netbeans-modules-projectapi.jar"/>
        <pathelement location="${projects/projectui.dir}/${nb.modules.dir}/org-netbeans-modules-projectui.jar"/>
        <pathelement location="${java/j2seproject.dir}/${nb.modules.dir}/org-netbeans-modules-java-j2seproject.jar"/>
        <pathelement location="${ant/project.dir}/${nb.modules.dir}/org-netbeans-modules-project-ant.jar"/>
        <!-- metadata repository support classpath -->
        <pathelement location="${java/javacore.dir}/${nb.modules.dir}/org-netbeans-modules-javacore.jar"/>
        <pathelement location="${mdr/nbjmiutils.dir}/${nb.modules.dir}/ext/jmiutils.jar"/>
    </path>
  </target>
  
  <target name="compile-nbjunit" depends="init">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <include name="org/netbeans/junit/**"/>
      <classpath refid="compile.classpath"/>
    </javac>
  </target>

  <target name="jar-nbjunit" depends="compile-nbjunit">
      <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext"/>
      <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext/nbjunit.jar"
            basedir="src"
            excludesfile="../../nbbuild/standard-jar-excludes.txt"
            compress="true"
            includes="org/netbeans/junit/**"
            excludes="org/netbeans/junit/ide/**"
      />
      <!-- Project support available in test cases -->
      <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext/nbjunit-ide.jar"
            basedir="src"
            excludesfile="../../nbbuild/standard-jar-excludes.txt"
            compress="true"
            includes="org/netbeans/junit/ide/**"
      />
  </target>

  <target name="check-javadoc-uptodate">
    <uptodate property="javadoc-uptodate" targetfile="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}/nbjunit-api.zip">
      <srcfiles dir="src">
        <include name="**/*.java"/>
      </srcfiles>
    </uptodate>
  </target>

  <target name="javadoc-nbjunit" depends="check-javadoc-uptodate" unless="javadoc-uptodate">
      <mkdir dir="javadoc/nbjunit-api"/>
      <javadoc packagenames="org.netbeans.junit.*" 
               sourcepath="src" 
	       destdir="javadoc/nbjunit-api"
	       windowtitle="NetBeans extensions to JUnit"
	       doctitle="NetBeans extensions to JUnit">  
        <classpath refid="compile.classpath"/>
      </javadoc>
      <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}"/>
      <zip zipfile="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}/nbjunit-api.zip"
           basedir="javadoc/nbjunit-api"/>
  </target>
  
  <target name="parserdb">
  	<copy toDir="${netbeans.dest.dir}/${cluster.dir}/${nb.system.dir}/ParserDB">
  		<fileset dir="parserdb"/>
  	</copy>
  </target>
  
  <target name="netbeans" depends="compile-nbjunit, jar-nbjunit, javadoc-nbjunit, parserdb"/>

  <target name="clean" depends="default.init">
     <delete dir="javadoc"/>
     <delete file="${netbeans.dest.dir}/${cluster.dir}/${nb.docs.dir}/nbjunit-api.zip"/>
     <delete file="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext/nbjunit.jar"/>
     <delete file="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext/nbjunit-ide.jar"/>
     <delete>
         <fileset dir="src">
            <include name="org/netbeans/junit/**/*.class"/>
         </fileset>
     </delete>
  </target>
  
</project>
