<project name="whitelist-test" default="default" basedir=".">

    <dirname property="whitelist-test.basedir" file="${ant.file.whitelist-test}"/>

    <property name="nb_all" location="${whitelist-test.basedir}/../../.."/>
    <property name="temp_dir" location="${whitelist-test.basedir}/temp"/>
    <property name="lime6_zip" location="${temp_dir}/qa/projectized/lime6.zip"/>
    <property name="lime6_dir" location="${temp_dir}/lime6"/>
    <property name="lime6_dest_dir" location="${whitelist-test.basedir}/../qa-functional/data/lime6"/>
    <property name="work_dir" location="${whitelist-test.basedir}/../../build/test/qa-functional/work"/>
    <condition property="ant.executable" value="ant.bat" else="ant">
        <os family="windows"/>
    </condition>

    <target name="default">
        <echo>
            Execute

            ant test             to perform measurement
            ant unprepare        to remove LimeWire project from ide.kit test data dir
        </echo>
    </target>
    
    <!-- Download -->

    <target name="init-download-project" depends="init-prepare,init-unzip-project" if="lime6_zip">
        <available property="lime6_zip_exists" file="${lime6_zip}"/>
        <condition property="do-download-project">
            <and>
                <not>
                    <isset property="lime6_dir_exists"/>
                </not>
                <not>
                    <isset property="lime6_zip_exists"/>
                </not>
                <not>
                    <isset property="lime6_dest_dir_exists"/>
                </not>
            </and>
        </condition>
    </target>
    
    <target name="download-project" depends="init-download-project" if="do-download-project">
        <cvs cvsroot=":pserver:anoncvs@toolscvs.sfbay.sun.com:/cvs/nbextra" command="co qa\projectized\lime6.zip" dest="${temp_dir}"/>
    </target>
    
    <!-- Prepare -->

    <target name="init-unzip-project" depends="init-prepare" if="lime6_dir">
        <available property="lime6_dir_exists" file="${lime6_dir}"/>
        <condition property="do-unzip-project">
            <and>
                <not>
                    <isset property="lime6_dir_exists"/>
                </not>
                <not>
                    <isset property="lime6_dest_dir_exists"/>
                </not>
            </and>
        </condition>
    </target>

    <target name="unzip-project" depends="init-unzip-project,download-project" if="do-unzip-project">
        <unzip dest="${temp_dir}" src="${lime6_zip}"/>
        <delete file="${lime6_dir}"/>
    </target>

    <target name="init-prepare" depends="" if="lime6_dest_dir">
        <available property="lime6_dest_dir_exists" file="${lime6_dest_dir}"/>
    </target>

    <target name="prepare" depends="init-prepare,unzip-project" unless="lime6_dest_dir_exists">
<!--        <mkdir dir="${lime6_dest_dir}"/>-->
        <copy todir="${lime6_dest_dir}">
            <fileset dir="${lime6_dir}"/>
        </copy>
        <echo>
            Environment is prepared to run the project
        </echo>
    </target>
    
    <!-- Test -->

    <target name="clean">
        <delete dir="${work_dir}"/>
    </target>

    <target name="test" depends="prepare,clean">
        <echo>
            1st startup test
            ~~~~~~~~~~~~~~~~
        </echo>
        <exec executable="${ant.executable}" dir="${whitelist-test.basedir}/../..">
            <arg value="test-qa-functional"/>
            <arg value="-Dtest.includes=**/WhitelistTest*"/>
            <arg value="-Dtest.run.args=-ea -XX:PermSize=64m -XX:MaxPermSize=400m -Xmx512m -Xverify:none -Dtest.whitelist.stage=1"/>
        </exec>
        <echo>
            2nd startup test
            ~~~~~~~~~~~~~~~~
        </echo>
        <exec executable="${ant.executable}" dir="${whitelist-test.basedir}/../..">
            <arg value="test-qa-functional"/>
            <arg value="-Dtest.includes=**/WhitelistTest*"/>
            <arg value="-Dtest.run.args=-ea -XX:PermSize=64m -XX:MaxPermSize=400m -Xmx512m -Xverify:none -Dtest.whitelist.stage=2"/>
        </exec>
        <echo>
            Startup with LimeWire project test
            ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
        </echo>
        <exec executable="${ant.executable}" dir="${whitelist-test.basedir}/../..">
            <arg value="test-qa-functional"/>
            <arg value="-Dtest.includes=**/WhitelistTest*"/>
            <arg value="-Dtest.run.args=-ea -XX:PermSize=64m -XX:MaxPermSize=400m -Xmx512m -Xverify:none -Dtest.whitelist.stage=3"/>
        </exec>
        <echo>
            _________________________________________________________________________________
            Results are in ${work_dir}

            Execute

            ant unprepare

            to remove LimeWire project project from ide.kit test data dir
            (recommended if you're going to run ide.kit tests such as commit-validation suite)
        </echo>
    </target>
    
    <!-- Unprepare -->
    
    <target name="unprepare">
        <delete dir="${lime6_dest_dir}"/>
    </target>
        
</project>
