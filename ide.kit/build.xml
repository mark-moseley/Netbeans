<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="netbeans" name="ide.kit">
    <description>Builds, tests, and runs the project org.netbeans.modules.ide.kit</description>
    <import file="../nbbuild/templates/projectized.xml"/>
    <property name="test.results.dir" value="build/test/qa-functional/results"/>
    <target name="junit-create-html">
        <junitreport todir="${test.results.dir}">
            <fileset dir="${test.results.dir}">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="frames" todir="${test.results.dir}/html"/>
        </junitreport>
    </target>
</project>
