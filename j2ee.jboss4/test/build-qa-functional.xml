<project name="jboss-qa-functional" default="all" basedir=".">
    <!-- Imports default qa-functional-compiler and runidetest executor.
        jemmy and jellytools jars are on classpath for both. -->
    <import file="../../../nbbuild/templates/xtest-qa-functional.xml"/>
    <property name="jboss.server.path"  value="E:\Work\Appservers\jboss-4.0.2\jboss-4.0.2"/>
    <property name="xtest.optional"  value="../../../../../optional"/>
    <!--property name="jboss.server.path"  value="${xtest.optional}/jboss4"/-->
    <property name="xtest.ide.commandline.suffix" value="-J-Djboss.server.path=${jboss.server.path}" /> 

    
    
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->
    
    <target name="qa-functional-compiler" depends="init,init-cp">
        <buildTests srcdir="qa-functional/src" compileexcludes="**/data/**">
            <classpath>
                <path refid="test.qa-functional.compile.cp"/>
            </classpath>
        </buildTests>
    </target>
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <target name="set-jboss-path" unless="jboss.server.path">
        <condition property="jboss.server.path" value="E:\Work\Appservers\jboss-4.0.2\jboss-4.0.2">
            <os family="windows"/>
        </condition>
        <condition property="jboss.server.path" value="${xtest.optional}/jboss4">
            <os family="unix"/>
        </condition>
    </target>
    
    <target name="check-jboss" depends="set-jboss-path">
        <available file="${jboss.server.path}/server/default" property="jboss.present"/>
        <fail unless="jboss.present" message="JBoss was not found in ${jboss.server.path}. Set property jboss.server.path to point to JBoss installation directory."/>
    </target>
    
     <target name="runidetest" depends="init,init-cp,check-jboss"> 
        <delete dir="${jboss.server.path}/server/default/work/jboss.web/localhost/TestDeployDebugWebApp"/>
        <delete file="${jboss.server.path}/server/default/deploy/TestDeployDebugWebApp.war"/>
        <delete dir="${jboss.server.path}/server/default/tmp/*.*"/>
        <copy todir="${xtest.tmpdir}/ejb">
            <fileset dir="qa-functional/data/ejb"/>
        </copy>
        <copy todir="${xtest.tmpdir}/TestDeployDebugWebApp">
            <fileset dir="qa-functional/data/TestDeployDebugWebApp"/>
        </copy>
        <executeTests pluginname="ide">
            <classpath>
                <path refid="test.qa-functional.run.cp"/>
                <path location="${jboss.server.path}"/>
            </classpath>
        </executeTests>
        <delete dir="${xtest.tmpdir}/TestDeployDebugWebApp"/>
        <delete dir="${xtest.tmpdir}/ejb"/>
    </target>
    
    
    
</project>
