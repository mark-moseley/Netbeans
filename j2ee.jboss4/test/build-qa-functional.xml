<project name="serverplugins/jboss4/test/qa-functional" basedir="." default="all">
    
    <import file="../../nbbuild/templates/xtest-qa-functional.xml"/>

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    
    <target name="set-environment">
        <condition property="xtest.optional" value="e:/space/optional">
            <os family="windows"/>
        </condition>
        <condition property="xtest.optional" value="/space/optional">
            <os family="unix"/>
        </condition>
        <!-- <buildTests srcdir="qa-functional/src" compileexcludes="**/data/**" debug="true"></buildTests> -->
        <property name="jboss.server.path"  value="${xtest.optional}/jboss4"/>
        <property name="xtest.ide.commandline.suffix" value="-J-Djboss.server.path=${jboss.server.path}"/>
        <!-- <property name="xtest.ide.commandline.suffix" value="-J-Djboss.server.path=${jboss.server.path} -J-Xdebug -J-Xnoagent -J-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8765"/> -->
        <property name="test.classpath" value=""/>
    </target>

    <target name="check-jboss" depends="set-environment">
        <available file="${jboss.server.path}/server/default" property="jboss.present"/>
        <fail unless="jboss.present" message="JBoss was not found in ${jboss.server.path}. Set property jboss.server.path to point to JBoss installation directory."/>
    </target>
    
    <target name="runidetest" depends="init,init-cp, check-jboss">
        <delete dir="${jboss.server.path}/server/default/work/jboss.web/localhost/JBoss4WebTest"/>
        <delete file="${jboss.server.path}/server/default/deploy/JBoss4WebTest.war"/>
        <delete file="${jboss.server.path}/server/default/deploy/JBoss4EjbTest.jar"/>
        <delete dir="${jboss.server.path}/server/default/tmp/*.*"/>
        <copy todir="${xtest.tmpdir}/JBoss4EjbTest">
            <fileset dir="qa-functional/data/JBoss4EjbTest"/>
        </copy>
        <copy todir="${xtest.tmpdir}/JBoss4WebTest">
            <fileset dir="qa-functional/data/JBoss4WebTest"/>
        </copy>
        <executeTests pluginname="ide"/>
        <delete dir="${xtest.tmpdir}/JBoss4WebTest"/>
        <delete dir="${xtest.tmpdir}/JBoss4EjbTest"/>
    </target>
    
</project>
