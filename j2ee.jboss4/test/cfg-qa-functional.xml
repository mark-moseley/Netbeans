<mconfig name="Configuration of JBoss4 unit tests">

    <testbag testattribs="dev-api" executor="ide" name="JBoss4 API Validation tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/modules/j2ee/jboss4/test/JBoss4TestSuite.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="dev-ui" executor="ide" name="JBoss4 UI Validation tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="org/netbeans/test/j2ee/jboss4/JBossValidation.class"/>
            </patternset>
        </testset>
    </testbag>
 
    <!-- ide executor - use this one if you plan to run your tests inside IDE (internally).
    Similarly as with code executor, you can create your own to 
    prepare some neccessary stuff before running tests. -->
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest" default="true"/>
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
</mconfig>

