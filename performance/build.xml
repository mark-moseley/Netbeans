<project name="performance" default="netbeans" basedir=".">

  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>

  <target name="compile">
    <javac srcdir="tests" destdir="tests" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <fileset dir="../openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/tests"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../nbbuild/nbantext.jar"/>
    <locjar jarfile="netbeans/tests/performance.jar" basedir="tests" excludesfile="../nbbuild/standard-jar-excludes.txt" compress="false">
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="netbeans" depends="jars"/>

  <target name="clean">
    <delete>
      <fileset dir="tests">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
  </target>

  <path id="perftest.class.path">
    <pathelement location="netbeans/tests/performance.jar"/>
    <fileset dir="../openide/netbeans/lib">
      <include name="openide*.jar" />
    </fileset>
    <pathelement location="../core/netbeans/lib/core.jar"/>
    <fileset dir="../core/netbeans/lib/ext">
      <include name="*.jar" />
    </fileset>
  </path>

  <target name="runtests" depends="jars,runlocalfstests,runxmlfstests"
          description="Run performance tests (build them first if needed).">

    <java classname="org.netbeans.performance.tests.filesystems.localfs.LocalFSTest" fork="yes" maxmemory="96m" >
      <classpath refid="perftest.class.path"/>
    </java>

    <java classname="org.netbeans.performance.tests.filesystems.xmlfs.XMLFSTest" fork="yes" maxmemory="96m" >
      <classpath refid="perftest.class.path"/>
    </java>

  </target>

  <target name="runlocalfstests" depends="jars"
          description="Run performance tests (build them first if needed).">
    <java classname="org.netbeans.performance.tests.filesystems.localfs.LocalFSTest" fork="yes" maxmemory="96m" >
      <classpath refid="perftest.class.path"/>
    </java>

  </target>

  <target name="runxmlfstests" depends="jars"
          description="Run performance tests (build them first if needed).">

    <java classname="org.netbeans.performance.tests.filesystems.xmlfs.XMLFSTest" fork="yes" maxmemory="96m" >
      <classpath refid="perftest.class.path"/>
    </java>

  </target>

</project>
