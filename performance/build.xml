<project name="performance" default="jars" basedir=".">

  <target name="compile">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
	<classpath>
	    <pathelement location="../xtest/lib/junit.jar"/>
	</classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="lib"/>
    <jar jarfile="lib/performance.jar"
	    basedir="src"
	    excludesfile="../nbbuild/standard-jar-excludes.txt"
	    compress="false"/>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete dir="lib"/>
  </target>
  
  <target name="perf" depends="jars">
    <ant dir="test/perf" antfile="build.xml" />
  </target>
	  
  <!-- <target name="grammar" if="${javacchome}"> -->
  <target name="grammar" >
    <mkdir dir="src/org/netbeans/performance/bde/generated"/>

    <jjtree 
      javacchome="${javacchome}" 
      target="src/org/netbeans/performance/bde/BDEGrammar.jjt" 
      outputdirectory="src/org/netbeans/performance/bde/generated"
    />

    <javacc 
      javacchome="${javacchome}" 
      target="src/org/netbeans/performance/bde/generated/BDEGrammar.jj" 
      outputdirectory="src/org/netbeans/performance/bde/generated"
    />

    <copy file="src/org/netbeans/performance/bde/override/SimpleNode.xjava" tofile="src/org/netbeans/performance/bde/generated/SimpleNode.java" overwrite="true" />

    <antcall target="jars"/>
  </target>

  <target name="clean_grammar">
    <delete dir="src/org/netbeans/performance/bde/generated"/>
  </target>
	
</project>
