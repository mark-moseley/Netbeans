<project basedir="." default="run" name="performance/threaddemo" xmlns:nbj="antlib:org.netbeans.modules.debugger.jpda.ant" xmlns:nbb="antlib:org.netbeans.modules.ant.browsetask">

    <!-- Put any overrides here (check for "???" below): -->
    <property file="user.build.properties"/>

    <property name="nbroot" location="../.."/>
    <property name="openide" location="${nbroot}/openide"/>
    <property name="util.jar" location="${openide}/util/netbeans/lib/openide-util.jar"/>
    <property name="nodes.jar" location="${openide}/nodes/netbeans/lib/openide-nodes.jar"/>
    <property name="actions.jar" location="${openide}/actions/netbeans/lib/openide-actions.jar"/>
    <property name="explorer.jar" location="${openide}/explorer/netbeans/lib/openide-explorer.jar"/>
    <property name="text.jar" location="${openide}/text/netbeans/lib/openide-text.jar"/>
    <property name="dialogs.jar" location="${openide}/dialogs/netbeans/lib/openide-dialogs.jar"/>
    <property name="windows.jar" location="${openide}/windows/netbeans/lib/openide-windows.jar"/>
    <property name="awt.jar" location="${openide}/awt/netbeans/lib/openide-awt.jar"/>
    <property name="options.jar" location="${openide}/options/netbeans/lib/openide-options.jar"/>
    <property name="looks" location="${openide}/looks"/>
    <property name="looks.jar" location="${looks}/netbeans/modules/autoload/openide-looks.jar"/>
    <property name="registry.jar" location="${openide}/registry/netbeans/modules/org-netbeans-modules-registry.jar"/>
    <property name="Spin.jar" location="???/spin-1.1/Spin.jar"/>
    <!-- only needed for optit target: -->
    <property name="optit" location="???/optit"/>
    <property name="junit.jar" location="${nbroot}/junit/external/junit-3.8.1.jar"/>
    
    <!-- Root directory of the file browsers: -->
    <property name="testdir" location="/tmp"/>

    <!-- Logging config file: -->
    <property name="logging.properties" location="logging.properties"/>

    <path id="build.cp">
        <pathelement location="${util.jar}"/>
        <pathelement location="${nodes.jar}"/>
        <pathelement location="${actions.jar}"/>
        <pathelement location="${explorer.jar}"/>
        <pathelement location="${text.jar}"/>
        <pathelement location="${dialogs.jar}"/>
        <!-- Just for CloneableEditorSupport: -->
        <pathelement location="${windows.jar}"/>
        <pathelement location="${looks.jar}"/>
        <pathelement location="${Spin.jar}"/>
    </path>
    
    <path id="run.cp">
        <path refid="build.cp"/>
        <!-- Only because Looks links against it (but will not use it): -->
        <pathelement location="${registry.jar}"/>
        <!-- explorer.jar uses it: -->
        <pathelement location="${awt.jar}"/>
        <!-- NbDocument links against it currently (but will not use it): -->
        <pathelement location="${options.jar}"/>
        <!-- Crimson is useless: -->
        <fileset dir="${nbroot}/libs/external">
            <include name="xerces*.jar"/>
            <include name="xml-commons-dom-ranges*.jar"/>
        </fileset>
        <pathelement location="threaddemo.jar"/>
    </path>
    
    <target name="init">
        <property name="build.compiler.debug" value="true"/>
    </target>
    
    <target name="build-looks" depends="init">
        <ant dir="${nbroot}/nbbuild" target="all-openide/looks"/>
        <!-- all-openide is implied by that -->
    </target>
    
    <target name="compile" depends="build-looks">
        <javac srcdir="src" destdir="src" debug="true" deprecation="true" source="1.4">
            <classpath refid="build.cp"/>
        </javac>
    </target>

    <target name="build" depends="compile">
        <jar jarfile="threaddemo.jar" manifest="manifest.mf" compress="false">
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </jar>
    </target>
    
    <target name="build-complete" depends="compile">
        <jar jarfile="threaddemo-complete.jar" manifest="manifest.mf" compress="true">
            <fileset dir="src"/>
            <zipfileset src="${util.jar}"/>
            <zipfileset src="${nodes.jar}"/>
            <zipfileset src="${actions.jar}"/>
            <zipfileset src="${explorer.jar}"/>
            <zipfileset src="${text.jar}"/>
            <zipfileset src="${dialogs.jar}"/>
            <zipfileset src="${windows.jar}"/>
            <zipfileset src="${looks.jar}"/>
            <zipfileset src="${Spin.jar}"/>
            <!-- Xerces -->
            <zipgroupfileset dir="${nbroot}/libs/external">
                <include name="xerces*.jar"/>
                <include name="xml-commons-dom-ranges*.jar"/>
            </zipgroupfileset>
        </jar>
    </target>

    <target name="run" depends="build">
        <java classname="threaddemo.Main" fork="true" failonerror="true">
            <classpath refid="run.cp"/>
            <arg file="${testdir}"/>
            <jvmarg value="-Xmx256m"/>
            <jvmarg value="-ea"/>
            <sysproperty key="java.util.logging.config.file" file="${logging.properties}"/>
        </java>
    </target>
    
    <target name="debug" depends="build,do-debug"/>
    
    <target name="do-debug">
        <java classname="threaddemo.Main" fork="true" failonerror="true">
            <classpath refid="run.cp"/>
            <arg file="${testdir}"/>
            <jvmarg value="-Xmx64m"/>
            <jvmarg value="-ea"/>
            <sysproperty key="java.util.logging.config.file" file="logging.properties"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xnoagent"/>
            <jvmarg value="-Djava.compiler=none"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address},suspend=n"/>
        </java>
    </target>
    
    <target name="debug-nb" depends="build">
        <nbj:nbjpdastart transport="dt_socket" addressproperty="jpda.address" name="threaddemo"/>
        <antcall target="do-debug"/>
    </target>
    
    <target name="optit" depends="build">
        <java classname="intuitive.audit.Audit" fork="true" failonerror="true">
            <classpath>
                <path refid="run.cp"/>
                <pathelement location="${optit}/lib/optit.jar"/>
            </classpath>
            <arg value="-startCPUprofiler:type=sampler,samplingPeriod=1,onlyCPU=true"/>
            <arg value="threaddemo.Main"/>
            <arg file="${testdir}"/>
            <jvmarg value="-Xmx64m"/>
            <!--<jvmarg value="-ea"/>-->
            <sysproperty key="OPTITDIR" file="${optit}"/>
            <env key="LD_LIBRARY_PATH" path="${optit}/lib"/>
            <jvmarg value="-Xbootclasspath/a:${optit}/lib/oibcp.jar"/>
            <jvmarg value="-Xboundthreads"/>
            <jvmarg value="-Xrunpri"/>
        </java>
    </target>
    
    <target name="javadoc">
        <property name="javadoc.docs.jdk" value="http://java.sun.com/j2se/1.4.2/docs/api"/>
        <property name="javadoc.web.root" value="http://www.netbeans.org/download/dev/javadoc"/>
        <property name="javadoc.docs.openide" value="${javadoc.web.root}/OpenAPIs"/>
        <property name="javadoc.docs.openide/looks" value="${javadoc.web.root}/LooksAPI"/>
        <javadoc destdir="javadoc" source="1.4">
            <classpath>
                <path refid="build.cp"/>
            </classpath>
            <sourcepath>
                <pathelement location="src"/>
            </sourcepath>
            <fileset dir="src"/>
            <link href="${javadoc.docs.jdk}" offline="true" packagelistloc="${nbroot}/openide/api/doc"/>
            <link href="${javadoc.docs.openide}" offline="true" packagelistloc="${nbroot}/openide/javadoc/OpenAPIs"/>
            <link href="${javadoc.docs.openide/looks}" offline="true" packagelistloc="${nbroot}/openide/looks/javadoc/LooksAPI"/>
        </javadoc>
    </target>
    
    <target name="javadoc-nb" depends="javadoc">
        <nbb:nbbrowse file="javadoc/overview-summary.html"/>
    </target>
    
    <target name="test-build" depends="build">
        <ant dir="${nbroot}/junit/external"/>
        <javac srcdir="test" destdir="test" debug="true" deprecation="true">
            <classpath>
                <path refid="build.cp"/>
                <pathelement location="threaddemo.jar"/>
                <pathelement location="${junit.jar}"/>
            </classpath>
        </javac>
    </target>
    
    <target name="test" depends="test-build">
        <mkdir dir="test-results"/>
        <junit printsummary="withOutAndErr" failureproperty="test.failed" showoutput="true" fork="true">
            <batchtest todir="test-results">
                <fileset dir="test">
                    <include name="**/*Test.java"/>
                </fileset>
            </batchtest>
            <classpath>
                <path refid="build.cp"/>
                <pathelement location="threaddemo.jar"/>
                <pathelement location="test"/>
            </classpath>
            <formatter type="xml"/>
        </junit>
        <junitreport todir="test-results">
            <fileset dir="test-results">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="noframes" todir="test-results"/>
        </junitreport>
    </target>
    
    <target name="test-nb" depends="test">
        <nbb:nbbrowse file="test-results/junit-noframes.html"/>
    </target>
    
    <target name="clean">
        <delete file="threaddemo.jar"/>
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="test">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete dir="javadoc"/>
        <delete dir="test-results"/>
    </target>
    
</project>
