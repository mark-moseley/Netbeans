<project name="Measure startup time and memory usage" basedir="." default="all">
    
    <!-- Root folders -->
    <property name="nball.dir" location="../../../.."/>
    <property name="nbextra.dir" location="../../../../../nbextra"/>
    
    <!-- Import defaults for Unit tests -->
    <import file="${nball.dir}/nbbuild/templates/xtest-unit.xml"/>
    
    <!-- Import defaults for Performance testing.  -->
    <import file="${nball.dir}/performance/performancetestutilities/dist/build-performance-tests.xml"/>
    
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <target name="unit-compiler" depends="init,init-cp">
        <buildTests srcDir="unit/src" compileexcludes="**/data/**">
            <classpath refid="test.unit.compile.cp"/>
        </buildTests>
    </target>
    
    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->

    <!-- Executor - Prepare IDE for complex measurements -->
    <target name="prepare_ide_for_complex_measurements_web_project" depends="copy_unzip_j2ee_project,check-appserver">
        <antcall target="copy_released_ide_cfg_file"/>
        <executeTests pluginName="ide">
            <classpath>
                <pathelement location="${nb_all}/jellytools/builds/jelly2-nb.jar"/>
                <pathelement location="${nb_all}/jemmy/builds/jemmy.jar"/>
                <pathelement location="${nb_all}/performance/performancetestutilities/dist/performance-test-utilities.jar"/>
            </classpath>
            
            <property name="xtest.enable.assertions" value="false" /> 
            
            <!-- Add AppSever to NetBeans  -->
            <property name="xtest.ide.commandline.suffix" value="-J-Dcom.sun.aas.installRoot=&quot;${j2ee.appserver.path}&quot;"/>
            
            <!-- Opens project at specified location -->
            <property name="xtest.ide.open.project" location="${xtest.tmpdir}/HugeApp"/>
            
            <property name="xtest.timeout" value="1800000" />
        </executeTests>
        
        <antcall target="copy_original_ide_cfg_file"/>
    </target>
    
    <!-- Executor for Measure Complex Web Project Startup Time -->
    <target name="runcodetest_measure_complex_startup_web_project" depends="make_netbeans_executable">
        <!-- copy xsl transformator file for ActionTracker log into appropriate directory -->
        <copy file="${performance.testutilities.dist.dir}/ActionTracker.xsl" todir="${xtest.results.testrun.dir}" />
        
        <antcall target="copy_released_ide_cfg_file"/>
        <executeTests pluginName="jvm">
            <classpath>
                <pathelement location="${nb_all}/jellytools/builds/jelly2-nb.jar"/>
                <pathelement location="${nb_all}/jemmy/builds/jemmy.jar"/>
                <path location="${performance.testutilities.dist.jar}"/>
            </classpath>
            
            <property name="xtest.enable.assertions" value="false" /> 
            <property name="xtest.ide.reuse.userdir" value="true"/>
            <property name="xtest.userdata|netbeans.dest.dir" value="${netbeans.dest.dir}"/>
            <property name="xtest.userdata|userdir.prepared" value="${xtest.workdir}"/>
            <property name="xtest.userdata|performance.testutilities.dist.jar" value="${performance.testutilities.dist.jar}"/>
            <property name="xtest.userdata|xtest.perf.commandline.suffix" value="${xtest.perf.commandline.suffix}"/>
            
            <!-- Property for repeatedly used userdir with opened files -->
            <property name="xtest.userdata|org.netbeans.performance.repeat" value="5"/>

            <property name="xtest.timeout" value="3000000" />
        </executeTests>
        
        <copy todir="${xtest.sketchpad}">
            <fileset dir="${xtest.workdir}/sys/ide/var/log"/>
        </copy>
        
        <antcall target="copy_original_ide_cfg_file"/>
    </target>

    <!-- ========= -->
    <!-- Utils     -->
    <!-- ========= -->
    
    <!-- Copy and unzip project Huge Web Application project from close source path, will be used for Performance tests -->
    <target name="copy_unzip_j2ee_project">
        <unzip src="${nbextra.dir}/qa/projectized/HugeApp.zip" dest="${xtest.tmpdir}/"/>
    </target>
    
    
    <!-- =================== -->
    <!-- Work with Appserver -->
    <!-- =================== -->

    <target name="set-appserver-path" unless="j2ee.appserver.path">
        <condition property="j2ee.appserver.path" value="e:\\space\\appserver">
            <os family="windows"/>
        </condition>
        <condition property="j2ee.appserver.path" value="/space/appserver">
            <os family="unix"/>
        </condition>
    </target>
    
    <target name="check-appserver" depends="set-appserver-path">
        <available file="${j2ee.appserver.path}/domains/domain1" property="j2ee.appserver.present"/>
        <fail unless="j2ee.appserver.present" message="AppServer was not found in ${j2ee.appserver.path}. Set property j2ee.appserver.path to point to AppServer installation directory."/>
    </target>
    
</project>
