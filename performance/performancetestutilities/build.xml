<project name="Performance Test Utilities" basedir="." default="jar">

    <property name="nball.dir" location="../.."/>
    <property file="${nball.dir}/performance/performancetestutilities/dist/performance-tests.properties"/>
    <property name="build.compiler.debug" value="true"/>
    <property name="build.compiler.deprecation" value="true"/>

    <!-- Imports buildtests, cleantests, runtest, cleanresults, realclean, printconfig targets. -->
    <import file="${nball.dir}/nbbuild/templates/xtest.xml"/>
    <import file="dist/build-performance-tests.xml"/>
    
    <target name="jar" depends="compile" description="Create Performance Test Utitilities jar">
        <mkdir dir="${performance.testutilities.dist.dir}" />
        <jar basedir="${performance.testutilities.dist.build.dir}" compress="false" jarfile="${performance.testutilities.dist.jar}">
          <include name="**"/>
        </jar>
    </target>

    <target name="compile" description="Compile Performance Test Utilities">
        <mkdir dir="${performance.testutilities.dist.build.dir}" />
        <javac srcdir="." 
               deprecation="${build.compiler.deprecation}" 
               debug="${build.compiler.debug}"
               destdir="${performance.testutilities.dist.build.dir}"
               source="1.5">
	    <compilerarg line="-Xlint:unchecked"/>
            <classpath>
                <path refid="testutilities.classpath"/>
            </classpath>
            
        </javac>
    </target>

    <target name="clean" description="Clean Performance Test Utilities">
        <delete>
            <fileset dir="${performance.testutilities.dist.build.dir}" />
            <fileset file="${performance.testutilities.dist.jar}" />
        </delete>
    </target>
    
    <path id="testutilities.classpath">        
        <pathelement location="${openide/nodes.dir}/modules/org-openide-nodes.jar"/>
        <pathelement location="${openide/options.dir}/modules/org-openide-options.jar"/>
        <pathelement location="${openide/util.dir}/lib/org-openide-util.jar"/>
        
        <pathelement location="${editor.dir}/modules/org-netbeans-modules-editor.jar"/>
        <pathelement location="${editor.dir}/modules/org-netbeans-modules-java-editor.jar"/>
        <pathelement location="${editor.dir}/modules/org-netbeans-modules-editor-lib.jar"/>
        <pathelement location="${editor/plain.dir}/modules/org-netbeans-modules-editor-plain.jar"/>
        
        <pathelement location="${java.dir}/modules/org-netbeans-modules-java.jar"/>
        
        <pathelement location="${web/jspsyntax.dir}/modules/org-netbeans-modules-web-core-syntax.jar"/>
        
        <pathelement location="${xml/text-edit.dir}/modules/org-netbeans-modules-xml-text.jar"/>        
                
        <pathelement location="${nball.dir}/xtest/lib/junit.jar"/>
        <pathelement location="${nball.dir}/xtest/lib/nbjunit.jar"/>
        <pathelement location="${nball.dir}/xtest/lib/nbjunit-ide.jar"/>

        <pathelement location="${nball.dir}/jemmy/builds/jemmy.jar"/>
        <pathelement location="${nball.dir}/jellytools/builds/jelly2-nb.jar"/>
    </path>
    
        
</project>
