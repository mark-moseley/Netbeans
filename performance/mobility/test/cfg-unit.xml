<mconfig name="Performance unit tests config">


    <testbag testattribs="all or startup" prio="1" executor="execute_startup" name="Startup time with WTK">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/OutOfTheBoxStartupWTK.class"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="all or startup or complex_startup" prio="2" executor="prepare_ide" name="Prepare IDE for complex startup time measurement">
	<testset dir="unit/src">
	    <patternset>
		<include name="prepare/PrepareIDEForMobilityComplexMeasurements.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="all or startup or complex_startup" prio="3" executor="execute_complex_startup" name="IDE complex startup time">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/ComplexMobilityProjectStartup.class"/>
	    </patternset>
	</testset>
    </testbag>

<!-- Executors for Startup testing -->
    <executor name="execute_startup" antfile="build-unit.xml" target="runcodetest_measure_startup"/>

    <executor name="prepare_ide" antfile="build-unit.xml" target="prepare_ide_for_complex_measurements"/>
    <executor name="execute_complex_startup" antfile="build-unit.xml" target="runcodetest_measure_complex_startup"/>
    
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>
    
</mconfig>
