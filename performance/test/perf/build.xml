<project basedir="." default="test" name="JDK platform benchmarks">

    <!-- Properties -->
    <property name="perf.home" value="../../../performance"/>

    <!-- ClassPath for platform performance tests compilation -->
    <path id="performance.pt.cpath">
	<pathelement location="../../../xtest/lib/junit.jar"/>
	<pathelement location="../../lib/performance.jar"/>
    </path>

    <!-- ClassPath for platform performance tests running -->
    <path id="performance.pt.rpath">
	<pathelement location="../../../xtest/lib/junit.jar"/>
	<pathelement location="../../lib/performance.jar"/>
	<pathelement location="lib/tests.jar"/>
    </path>

    <!-- Task definitions -->
    <target name="init">
    </target>

    <!-- test compilation & packaging -->
    <target name="compile" depends="init">
        <javac destdir="src" srcdir="src">
            <classpath refid="performance.pt.cpath"/>
        </javac>
    </target>

    <target depends="compile" name="jars">
        <mkdir dir="lib"/>
        <jar basedir="src"
		compress="false"
		excludesfile="../../../nbbuild/standard-jar-excludes.txt"
		jarfile="lib/tests.jar"/>
    </target>
    
    <!-- Temporal way for spawning tests before I write ant task for spawning -->
    <target name="test">
	<mkdir dir="report"/>
	<antcall target="test-lists"/>
	<antcall target="test-exceptionconstruct"/>
	<antcall target="test-runnablemethod"/>
    </target>

    <target depends="jars" name="test-lists">
	<java	fork="yes"
		output="report/list-arraylist.txt"
		classname="org.netbeans.performance.collections.ListTestArrayList">
	    <classpath refid="performance.pt.rpath"/>
	</java>
	<java	fork="yes"
		output="report/list-arraylistn.txt"
		classname="org.netbeans.performance.collections.ListTestArrayListForN">
	    <classpath refid="performance.pt.rpath"/>
	</java>
	<java	fork="yes"
		output="report/list-vector.txt"
		classname="org.netbeans.performance.collections.ListTestVector">
	    <classpath refid="performance.pt.rpath"/>
	</java>
	<java	fork="yes"
		output="report/list-vectorn.txt"
		classname="org.netbeans.performance.collections.ListTestVectorForN">
	    <classpath refid="performance.pt.rpath"/>
	</java>
	<java	fork="yes"
		output="report/list-linkedlist.txt"
		classname="org.netbeans.performance.collections.ListTestLinkedList">
	    <classpath refid="performance.pt.rpath"/>
	</java>
    </target>

    <target depends="jars" name="test-exceptionconstruct">
	<java	fork="yes"
		output="report/exceptionconstruct.txt"
		classname="org.netbeans.performance.platform.ExceptionConstruct">
	    <classpath refid="performance.pt.rpath"/>
	</java>
    </target>

    <target depends="jars" name="test-runnablemethod">
	<java	fork="yes"
		output="report/runnablemethod.txt"
		classname="org.netbeans.performance.platform.RunnableMethod">
	    <classpath refid="performance.pt.rpath"/>
	</java>
    </target>


</project>
