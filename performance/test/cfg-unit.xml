<mconfig name="Performance unit tests config">


    <testbag testattribs="measure_ide or measure_startup" prio="1" executor="measure_startup" name="Measure IDE startup time">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureIDEStartupTime.class/testStartIDE"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="measure_ide or measure_startup or measure_complex_startup" prio="10" executor="prepare_ide" name="Prepare IDE for measure startup time with opened files">
	<testset dir="unit/src">
	    <patternset>
		<include name="prepare/PrepareIDEForComplexMeasurements.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="measure_ide or measure_startup or measure_complex_startup" prio="11" executor="measure_startup_opened_files" name="Measure IDE startup time complex">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureIDEStartupTime.class/testStartIDEWithOpenedFiles"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="measure_ide or measure_startup or measure_complex_startup or measure_complex_startup_nb_project" prio="12" executor="measure_startup_opened_files_nb_project" name="Measure IDE startup time with opened NB project">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureIDEStartupTime.class/testStartIDEWithOpenedFilesNBproject"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="measure_ide or measure_startup or measure_complex_startup or measure_complex_startup_nb_project" prio="22" executor="prepare_ide_nb_project" name="Prepare IDE for measure startup time with opened files from NB project">
	<testset dir="unit/src">
	    <patternset>
		<include name="prepare/PrepareIDEForPluginComplexMeasurements.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="measure_ide or measure_warmup" prio="30" executor="measure_warmup" name="Measure warm up">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureWarmUp.class/testWarmUp"/>		
	    </patternset>
	</testset>
    </testbag>

<!-- Executors for Startup and Warmup testing -->
    
    <executor name="prepare_ide" antfile="build-unit.xml" target="prepare_ide_for_complex_measurements"/>
    
    <executor name="measure_startup" antfile="build-unit.xml" target="runcodetest_measure_startup"/>
    <executor name="measure_startup_opened_files" antfile="build-unit.xml" target="runcodetest_measure_complex_startup"/>
    
    <executor name="measure_warmup" antfile="build-unit.xml" target="runcodetest_measure_warmup"/>
    
    <executor name="prepare_ide_nb_project" antfile="build-unit.xml" target="prepare_ide_for_complex_measurements_nb_project"/>
    <executor name="measure_startup_opened_files_nb_project" antfile="build-unit.xml" target="runcodetest_measure_complex_startup_nb_project"/>
    
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>
    
</mconfig>
