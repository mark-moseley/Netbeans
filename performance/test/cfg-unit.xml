<mconfig name="Performance unit tests config">


    <testbag testattribs="all or startup" prio="1" executor="execute_startup" name="Startup time">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/OutOfTheBoxStartup.class"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="all or startup_complex" prio="10" executor="prepare_ide" name="Startup time - Complex - prepare">
	<testset dir="unit/src">
	    <patternset>
		<include name="prepare/PrepareIDEForComplexMeasurements.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="all or startup_complex" prio="11" executor="execute_complex_startup" name="Startup time - Complex">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/ComplexJavaProjectStartup.class"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="all or startup_complex_nb_project" prio="20" executor="prepare_ide_nb_project" name="Startup time - Complex NB project - prepare">
	<testset dir="unit/src">
	    <patternset>
		<include name="prepare/PrepareIDEForPluginComplexMeasurements.class"/>
	    </patternset>
	</testset>
    </testbag>
    
    <testbag testattribs="all or startup_complex_nb_project" prio="21" executor="execute_complex_startup_nb_project" name="Startup time - Complex NB project">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/ComplexNBProjectStartup.class"/>
	    </patternset>
	</testset>
    </testbag>

    <testbag testattribs="all or warmup" prio="30" executor="execute_warmup" name="Warm Up">
	<testset dir="unit/src">
	    <patternset>
		<include name="startup/MeasureWarmUp.class"/>		
	    </patternset>
	</testset>
    </testbag>

<!-- Executors for Startup and Warmup testing -->
    
    <executor name="prepare_ide" antfile="build-unit.xml" target="prepare_ide_for_complex_measurements"/>
    
    <executor name="execute_startup" antfile="build-unit.xml" target="runcodetest_measure_startup"/>
    <executor name="execute_complex_startup" antfile="build-unit.xml" target="runcodetest_measure_complex_startup"/>
    
    <executor name="execute_warmup" antfile="build-unit.xml" target="runcodetest_measure_warmup"/>
    
    <executor name="prepare_ide_nb_project" antfile="build-unit.xml" target="prepare_ide_for_complex_measurements_nb_project"/>
    <executor name="execute_complex_startup_nb_project" antfile="build-unit.xml" target="runcodetest_measure_complex_startup_nb_project"/>
    
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>
    
</mconfig>
