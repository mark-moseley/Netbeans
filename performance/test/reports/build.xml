<project basedir="." default="all" name="Performance reports">
    <property name="nbroot" location="../../.."/>

    <target name="bootstrap">
        <ant dir="${nbroot}/libs/external" target="unscramble"/>
        <ant dir="${nbroot}/xml/external" target="unscramble"/>
    </target>
    
    <target name="init" depends="bootstrap">
        <taskdef name="issues" classname="org.netbeans.nbbuild.PlansPreprocess" classpath="${nbroot}/nbbuild/nbantext.jar"/>
         <available property="already-converted" file="all_features-subst.xml"/>
         <property name="http.proxyPort" value="-1" />
         <property name="http.proxyHost" value="" />
         <property name="http.proxyPool" value="" />
    </target>
    
    <target name="all" depends="init">
        <taskdef name="compare" classname="org.netbeans.performance.results.AnalyzeResultsTask" classpath="perfresults.jar"/>
    <!--
	<style destdir="." 
               in="${nbroot}/core/test/results/xmlresults/testreport-performance.xml" 
               out="testresults-performance.html" 
               style="style-html.xsl"/>
               -->
<!--        <compare refFile="${nbroot}/core/test/results/xmlresults/testreport-performance.xml"-->
        <compare refFile="/home/radim/tmp/tiger_mustang/LinRHEL3_jdk150_03_testreport-performance.xml"
                 destFile="output.xml">
           <fileset dir="/home/radim/tmp/tiger_mustang">
               <include name="LinRHEL3_jdk160_b38_testreport-performance.xml"/>
               <!--<exclude name="testrun_040222-155643/xmlresults/testrun-performance.xml"/>-->
           </fileset>
        </compare>
    </target>
    
    <target name="compile" depends="init">
        <mkdir dir="classes"/>
        <javac srcdir="src" destdir="classes"
               deprecation="${build.compiler.deprecation}" 
               debug="${build.compiler.debug}">
<!--
           <classpath>
             <pathelement location="${nbroot}/"/>
           </classpath>
-->
        </javac>
    </target>
    
    <target name="jar" depends="compile">
      <jar jarfile="perfresults.jar">
      </jar>
        <jar basedir="classes" compress="false" jarfile="perfresults.jar">
<!--          <include name="testUtilities/**"/>
          <patternset refid="standard-jar-excludes"/>
          -->
        </jar>
    </target>
</project>
