<project name="Performance Tests" basedir="." default="all">

    <!-- Name of tested module -->
    <property name="xtest.module" value="performance"/>
    
    <!-- Root folders -->
    <property name="nball.dir" location="../.."/>

    <!-- Imports buildtests, cleantests, runtest, cleanresults, realclean, printconfig targets. -->
    <import file="${nball.dir}/nbbuild/templates/xtest.xml"/>

    <!-- default testtypes, attributes used when no value is supplied from command line -->
    <property name="xtest.testtype" value="unit"/>
    <property name="xtest.attribs" value="all"/>

    <target name="compare" description="Compares test results from various testruns">
        <taskdef name="compare" classname="org.netbeans.performance.results.AnalyzeResultsTask" classpath="reports/dist/reports.jar"/>
    <!--
	<style destdir="." 
               in="${nbroot}/core/test/results/xmlresults/testreport-performance.xml" 
               out="testresults-performance.html" 
               style="style-html.xsl"/>
               -->
<!--        <compare refFile="${nbroot}/core/test/results/xmlresults/testreport-performance.xml"-->
        <!-- Optionally specify refFile attr with testreport-performance.xml file containing reference results
             Also it is possible to add a fileset of reports to be compared against reference -->
        <compare>
            <!--
           <fileset dir="results">
               <include name="testrun-*/xmlresults/testreport-performance.xml"/>
               <exclude name="testrun_YYMMDD-HHMMSS/xmlresults/testrun-performance.xml"/>
           </fileset>
           -->
        </compare>
    </target>

    <target name="buildall" description="Build all performance tests + performancetestutilities library">
        <ant dir="${nball.dir}/performance/performancetestutilities" antfile="build.xml" target="jar"/>
        <antcall target="buildallperftests"/>
    </target>
    
    <target name="buildallperftests" description="Build all performance tests">
        <antcall target="buildIDEperftests"/>
        <antcall target="buildWebperftests"/>
        <ant dir="${nball.dir}/enterprise/performancetests/test" antfile="build.xml" target="buildtests"/>
        <ant dir="${nball.dir}/visualweb/test/performance/test" antfile="build.xml" target="buildtests"/>
        <ant dir="${nball.dir}/mobility/performancetests/test" antfile="build.xml" target="buildtests"/>
    </target>
    
    <target name="cleanall" description="Clean all performance tests + performancetestutilities library">
        <ant dir="${nball.dir}/performance/performancetestutilities" antfile="build.xml" target="clean"/>
        <antcall target="cleanallperftests"/>
    </target>
    
    <target name="cleanallperftests" description="Clean all performance tests">
        <ant dir="${nball.dir}/performance/performancetestutilities" antfile="build.xml" target="clean"/>
        <antcall target="cleanIDEperftests"/>
        <antcall target="cleanWebperftests"/>
        <ant dir="${nball.dir}/enterprise/performancetests/test" antfile="build.xml" target="cleantests"/>
        <ant dir="${nball.dir}/visualweb/test/performance/test" antfile="build.xml" target="cleantests"/>
        <ant dir="${nball.dir}/mobility/performancetests/test" antfile="build.xml" target="cleantests"/>
    </target>
    
    
    <target name="buildIDEperftests" >
	<java classname="org.apache.tools.ant.Main" dir="${nball.dir}/performance/test" failonerror="true" fork="true">
          <jvmarg value="-Dant.home=${ant.home}"/>
          <arg value="buildtests"/>
          <arg value="-Dxtest.home=${xtest.home}"/>
          <arg value="-Dnetbeans.dest.dir=${netbeans.dest.dir}"/>
	  <classpath path="${java.class.path}"/>
        </java>
    </target>
    <target name="cleanIDEperftests" >
	<java classname="org.apache.tools.ant.Main" dir="${nball.dir}/performance/test" failonerror="true" fork="true">
          <jvmarg value="-Dant.home=${ant.home}"/>
          <arg value="cleantests"/>
          <arg value="-Dxtest.home=${xtest.home}"/>
          <arg value="-Dnetbeans.dest.dir=${netbeans.dest.dir}"/>
	  <classpath path="${java.class.path}"/>
        </java>
    </target>
    
    <target name="buildWebperftests" >
	<java classname="org.apache.tools.ant.Main" dir="${nball.dir}/web/test" failonerror="true" fork="true">
          <jvmarg value="-Dant.home=${ant.home}"/>
          <arg value="buildtests"/>
          <arg value="-Dxtest.testtype=qa-functional"/>
          <arg value="-Dxtest.home=${xtest.home}"/>
          <arg value="-Dnetbeans.dest.dir=${netbeans.dest.dir}"/>
	  <classpath path="${java.class.path}"/>
        </java>
    </target>
    <target name="cleanWebperftests" >
	<java classname="org.apache.tools.ant.Main" dir="${nball.dir}/web/test" failonerror="true" fork="true">
          <jvmarg value="-Dant.home=${ant.home}"/>
          <arg value="cleantests"/>
          <arg value="-Dxtest.testtype=qa-functional"/>
          <arg value="-Dxtest.home=${xtest.home}"/>
          <arg value="-Dnetbeans.dest.dir=${netbeans.dest.dir}"/>
	  <classpath path="${java.class.path}"/>
        </java>
    </target>
    
</project>

