<project name="monitor" default="netbeans" basedir=".">

  <property name="f4jroot" location="../../f4j_all"/>
  <property name="nbroot" location="../../nb_all"/>
  <property name="binroot" location="../../nbextra"/>
  <property name="license.file" location="${f4jroot}/core/release/LICENSE.txt"/>


  <taskdef name="jhindexer" 
           classname="org.netbeans.nbbuild.JHIndexer"
           classpath="${nbroot}/nbbuild/nbantext.jar"/>

  <taskdef name="makenbm" 
           classname="org.netbeans.nbbuild.MakeNBM" 
           classpath="${nbroot}/nbbuild/nbantext.jar"/>

  <taskdef name="locjar"
           classname="org.netbeans.nbbuild.LocalizedJar" 
           classpath="${nbroot}/nbbuild/nbantext.jar"/>

  <!-- These are the primary targets. -->

  <target name="netbeans" depends="jars,javahelp"/>

  <target name="nbm" depends="netbeans">
    <makenbm file="monitor.nbm"
             topdir="."
	     module="netbeans/modules/monitor.jar"
	     homepage="http://${homepage.base}/monitor.html"
	     distribution="${dist.base}/monitor.nbm">
      <license file="${license.file}" />
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
      <exclude name="**/nondist/**" />
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
    </delete>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
   <delete dir="javahelp/org/netbeans/modules/web/monitor/docs/JavaHelpSearch"/>
   <delete file="monitor.nbm"/>	
  </target>

  <!-- These are the secondary targets. -->

  <target name="javahelp">
    <copy todir="netbeans/docs">
      <fileset dir="javahelp"/>
    </copy>
    <mkdir dir="netbeans/docs/org/netbeans/modules/web/monitor/docs/JavaHelpSearch"/>
    <jhindexer basedir="netbeans/docs/org/netbeans/modules/web/monitor/docs/"
               db="netbeans/docs/org/netbeans/modules/web/monitor/docs/JavaHelpSearch"
               jhall="${binroot}/nbbuild/lib/jhall.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch/"/>
      <exclude name="ja/"/>
      <exclude name="credits.html"/>
    </jhindexer>
    <mkdir dir="netbeans/docs/org/netbeans/modules/web/monitor/docs/ja/JavaHelpSearch"/>
    <jhindexer basedir="netbeans/docs/org/netbeans/modules/web/monitor/docs/ja/"
               db="netbeans/docs/org/netbeans/modules/web/monitor/docs/ja/JavaHelpSearch"
               locale="ja"
	       jhall="${binroot}/nbbuild/lib/jhall.jar">
      <include name="**/*.html"/>
      <exclude name="JavaHelpSearch/"/>
      <exclude name="credits.html"/>
    </jhindexer>
  </target>

  <target name="release">
    <copy todir="netbeans">
      <fileset dir="release"/>
    </copy>
  </target>


  <target name="compile"
	  depends="compile-view, compile-core, compile-server, compile-tomcat"/>


  <!-- If this is compiled with the rest of the core, it fails to find 
       openide.jar in the classpath for some reason --> 
   <target name="compile-view">
    <javac srcdir="src" destdir="src"
       deprecation="${build.compiler.deprecation}" 
       debug="${build.compiler.debug}"
       includes="org/netbeans/modules/web/monitor/client/TransactionView.java">
       <classpath>
         <pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>
         <pathelement location="${nbroot}/httpserver/netbeans/modules/httpserver.jar"/>
         <pathelement location="${nbroot}/web/core/netbeans/modules/jsp.jar"/>
         <pathelement location="${binroot}/httpserver/servletapi/release/modules/ext/servlet-2.2.jar"/> 

         <pathelement location="${f4jroot}/dd2beans/netbeans/modules/dd2beans.jar"/>
      </classpath>
     </javac>
  </target>

  <target name="compile-core" depends="compile-view">
    <javac srcdir="src" destdir="src"
       deprecation="${build.compiler.deprecation}" 
       debug="${build.compiler.debug}"
       includes="**/MonitorModule.java,**/monitor/data/*,**/monitor/client/**"
       excludes="**/SCCS/**, **/CVS/**, **/TransactionView.java">

       <classpath>
         <pathelement location="${nbroot}/openide/netbeans/lib/openide.jar"/>
         <pathelement location="${nbroot}/httpserver/netbeans/modules/httpserver.jar"/>
         <pathelement location="${f4jroot}/dd2beans/netbeans/modules/dd2beans.jar"/>
         <pathelement location="${binroot}/httpserver/servletapi/release/modules/ext/servlet-2.2.jar"/> 
         <pathelement location="${nbroot}/web/core/netbeans/modules/jsp.jar"/>
       </classpath>
     </javac>
  </target>

  <target name="compile-server" depends="compile-core">
    <javac srcdir="src" destdir="src"
       deprecation="${build.compiler.deprecation}" 
       debug="${build.compiler.debug}"
       includes="**/monitor/server/**"
       excludes="**/SCCS/**, **/CVS/**">

       <classpath>
         <pathelement location="${f4jroot}/dd2beans/netbeans/modules/dd2beans.jar"/>
         <pathelement location="extra/servlet.jar"/>
       </classpath>
     </javac>
  </target>

  <target name="compile-tomcat" depends="compile-server">

    <javac srcdir="src" destdir="src"
         deprecation="${build.compiler.deprecation}" 
	 debug="${build.compiler.debug}"
	 includes="**/monitor/tomcat/**,**/org/apache/**"
	 excludes="**/SCCS/**,**/CVS/**">

       <classpath>
          <pathelement location="${binroot}/httpserver/release/modules/ext/webserver.jar"/>
          <pathelement location="extra/servlet.jar"/> 
         <pathelement location="${f4jroot}/dd2beans/netbeans/modules/dd2beans.jar"/>
       </classpath>
     </javac>
  </target>

  <target name="compile-iplanet" depends="compile-server"> 
    <javac srcdir="src" destdir="src"
         deprecation="${build.compiler.deprecation}" 
	 debug="${build.compiler.debug}"
         includes="**/iplanet/**"
	 excludes="**/SCCS/**, **/CVS/**">
       <classpath>
          <pathelement location="extra/servlet.jar"/>
          <pathelement location="extra/NSServletLayer.jar"/>
       </classpath>
     </javac>
  </target>

  <target name="jars" depends="compile,tomcat-monitor">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf"
          filtering="on"/>

    <!-- Create jspie.jar, which includes some stuff from ${nbroot}/web. -->

    <locjar jarfile="netbeans/modules/monitor.jar"
         manifest="manifest-subst.mf"
         compress="false">
      <locale name="ja"/>
      <branding name="f4j"/>
      <branding name="f4j_ce"/>
      <branding name="f4j_ie"/>
      <fileset dir="src">
        <patternset excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt">
          <exclude name="org/netbeans/modules/web/monitor/iplanet/"/>
          <exclude name="org/netbeans/modules/web/monitor/tomcat/"/>
          <exclude name="org/netbeans/modules/web/monitor/server/"/>
        </patternset>
      </fileset>
    </locjar>
 
    <locjar jarfile="netbeans/modules/ext/httpmonitor.jar"
         compress="false">
      <locale name="ja"/>
      <branding name="f4j"/>
      <branding name="f4j_ce"/>
      <branding name="f4j_ie"/>
      <fileset dir="src">
        <patternset excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt">
          <exclude name="org/netbeans/modules/web/monitor/iplanet/"/>
          <exclude name="org/netbeans/modules/web/monitor/tomcat/"/>
          <exclude name="org/netbeans/modules/web/monitor/client/"/>
        </patternset>
      </fileset>
    </locjar>
  </target>

  <!-- This target will be deprecated --> 
  <target name="tomcat-monitor" depends="compile">
    <locjar jarfile="netbeans/modules/ext/tomcat-monitor.jar"
            compress="false">
      <locale name="ja"/>
      <fileset dir="src">
        <patternset excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt">
          <include name="org/apache/tomcat/core/"/>
          <include name="org/netbeans/modules/web/monitor/data/"/>
          <include name="org/netbeans/modules/web/monitor/server/"/>
          <include name="org/netbeans/modules/web/monitor/tomcat/"/>
        </patternset>
      </fileset>
    </locjar>
  </target>



</project>






