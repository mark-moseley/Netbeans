<project name="monitor" default="netbeans" basedir=".">

    <import file="../nbbuild/templates/projectized.xml"/>

    <target name="compile-server" depends="init,compile">
        <mkdir dir="build/server-classes"/>
        <javac srcdir="serversrc" destdir="build/server-classes" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" source="1.4" includeantruntime="false">
            <classpath>
                <path path="${server.cp.extra}:build/classes"/>
            </classpath>
        </javac>
        <copy todir="build/server-classes">
            <fileset dir="serversrc" excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"/>
        </copy>
    </target>

    <!-- NOTE: this is not an IDE module. It is deployed on the execution 
      server. It will not be deployed correctly if we build a separate 
      version for another language --> 
    <target name="jar-server" depends="compile-server">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/modules/ext"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/modules/ext/org-netbeans-modules-web-httpmonitor.jar" 
             compress="false">
            <fileset dir="build/server-classes"/>
	    <fileset dir="build/classes">
                <include name="org/netbeans/modules/web/monitor/data/"/>
          </fileset>
        </jar>
    </target>

    <target name="netbeans-extra" depends="jar-server"/>

</project>
