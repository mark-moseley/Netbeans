        public static function createToken() {
            $authToken = null;
            $method = "facebook.auth.createToken";
            $v = "1.0";
            $sig = array();
            $sig["method"] = $method;
            $sig["api_key"] = self::getApiKey();
            $sig["v"] = $v;

            $params = array();
            $params["method"] = $method;
            $params["api_key"] = self::getApiKey();
            $params["sig"] = $sig;
            $params["v"] = $v;
            //$conn = new RestConnection("http://api.facebook.com/restserver.php", $params);

            //$res = $conn->get();
            //$result = $res->getResponseBody();
            $result = ">xx<";
            $result = str_replace("<", "&lt;", $result);
            $result = str_replace(">", "&gt;", $result);

            try {
                $ts = strpos($result, "&gt;") + 4;
                $te = strpos($result, "&lt;", $ts);
                $len = $te - $ts;
                $authToken = substr($result, $ts, $len);
            } catch (Exception $ex) {
                throw new Exception("Failed to create Token: ".$result);
            }
