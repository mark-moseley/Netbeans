<project name="testtools" default="netbeans" basedir=".">

  <property name="nbroot" value=".."/>
  <property name="binroot" location="../../nbextra"/>
  <property name="nbext" value="${nbroot}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="module.license.file" value="../nbbuild/standard-nbm-license.txt"/>
  <property name="xtest.license.file" location="xtest-license.txt"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>

  <target name="compile" depends="prepare-lib">
    <mkdir dir="netbeans/modules"/>
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
        <fileset dir="${nbroot}/java/netbeans/modules">
          <include name="java.jar" />
        </fileset>
        <fileset dir="${nbroot}/ant/netbeans/modules">
          <include name="ant.jar" />
        </fileset>
        <fileset dir="${nbroot}/utilities/netbeans/modules">
          <include name="utilities.jar" />
        </fileset>
        <fileset dir="${nbroot}/jemmy">
          <include name="jemmy.jar" />
        </fileset>
        <fileset dir="${nbroot}/jellytools">
          <include name="jelly2-nb.jar" />
        </fileset>
        <!-- Hopefully set up by nbbuild/build.xml: -->
        <pathelement location="${jdkhome}/lib/tools.jar"/>
      </classpath>
    </javac>
  </target>


 <target name="prepare-lib" depends="prepare-docs">
    <ant dir="../xtest/" target="makedist"/>
    <mkdir dir="netbeans/xtest-distribution"/>
    <unzip src="../xtest/xtest-distribution.zip" dest="netbeans/xtest-distribution" />

    <ant dir="../jellytools/"/>
    <mkdir dir="netbeans/modules/ext"/>
    <copy file="../jellytools/jelly2-nb.jar" tofile="netbeans/modules/ext/jelly2-nb.jar" filtering="off"/>
 </target>

  <target name="prepare-docs">
    <mkdir dir="netbeans/docs"/>
    <ant dir="../jellytools/" target="javadoc"/>
    <copy file="../jellytools/jelly2-nb-javadoc.zip" tofile="netbeans/docs/jelly2-nb-javadoc.zip" filtering="off"/>
  </target>

  <target name="jars" depends="compile">
    <tstamp>
        <format property="buildnumber" pattern="yyyyMMddhhmm"/>
    </tstamp>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/testtools.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
	 compress="false">
    </locjar>
  </target>

  <target name="netbeans" depends="jars">
    <!-- genlist targetname="nbm" outputfiledir="../nbbuild/netbeans"/ -->
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="testtools.nbm"
             topdir="."
             module="netbeans/modules/testtools.jar"
	     homepage="http://testtools.${homepage.base}"
	     distribution="http://${dist.base}/testtools.nbm">
      <license name="testtools-license.txt">
        <text>For the Test Tools Module itself:</text>
        <file location="${module.license.file}"/>
        <text>For the XTest binary distribution:</text>
        <file location="${xtest.license.file}"/>
      </license>

<!--      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/> -->
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>	
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="testtools-bundle.zip"/>
    <delete>
      <fileset dir="." includes="*.nbm"/>
    </delete>
    <delete dir="netbeans/docs"/>
    <delete dir="netbeans/modules"/>
    <delete dir="netbeans/xtest-distribution"/>
    <delete dir="Info"/>
  </target>


  <target name="prepare-modules">
    <ant dir="../junit/" target="nbm"/>
    <copy file="../junit/junit.nbm" tofile="junit.nbm" filtering="off"/>
    <ant dir="../jemmysupport/" target="nbm"/>
    <copy file="../jemmysupport/jemmysupport.nbm" tofile="jemmysupport.nbm" filtering="off"/>

  </target>

    <!-- Create zip archive from all nbm files. -->
    <target name="zip" depends="nbm,prepare-modules">
        <zip zipfile="testtools-bundle.zip"
             basedir="."
             includes="*.nbm"
             excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
             compress="true"/>
    </target>

  <target name="realclean" depends="clean">
    <ant dir="../jemmysupport" antfile="build.xml" target="realclean"/>
    <ant dir="../jellytools" antfile="build.xml" target="clean"/>
    <ant dir="../xtest" antfile="build.xml" target="clean"/>
    <ant dir="../junit" antfile="build.xml" target="clean"/>
  </target>


</project>



