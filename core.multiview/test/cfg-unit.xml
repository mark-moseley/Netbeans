<!--
  These classes are excluded by default (defined in build.xml):
    "**/*Suite.class"
    "**/*$$*.class"
    "**/data/**"
    "**/hidden/**"
    "**/*Hidden.*"
    "**/*Hid.*"
-->

<mconfig name="core unit test config">

    <!-- Tests which should be run before commit to validate IDE. -->
    <testbag testattribs="noncommit" executor="ide" name="Before Commit Validation" resultsprocessor="unit">
        <testset dir="unit/src">
            <patternset>
		<include name="**/ValidateLayer*Test.class" />
            </patternset>
        </testset>
    </testbag>

