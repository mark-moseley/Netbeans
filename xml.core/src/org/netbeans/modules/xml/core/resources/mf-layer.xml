<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.0//EN" "http://www.netbeans.org/dtds/filesystem-1_0.dtd" [
    <!ENTITY localize-it "<attr name='SystemFileSystem.localizingBundle' stringvalue='org.netbeans.modules.xml.core.resources.Bundle'/>">
    
    <!-- Schema 'module' hosted entities -->
    <!ENTITY schema-resolvers SYSTEM "nbres:/org/netbeans/modules/xml/schema/resources/mf-resolvers.ent">
    <!ENTITY schema-templates SYSTEM "nbres:/org/netbeans/modules/xml/schema/resources/mf-templates.ent">
]>

<filesystem>

    <!-- register templates -->  
    <folder name="Templates">
        <!-- !?! order ?!? -->
        <attr name="Other/XML" boolvalue="true"/>
        <attr name="RMI/XML" boolvalue="true"/>
        <attr name="Scripting/XML" boolvalue="true"/>

        <folder name="XML">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle" />
            <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/XML.html" />

            <file name="XMLWizard.xml">
                <![CDATA[<empty/>]]>
                <attr name="template" boolvalue="true" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle" />
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/xmlObject.gif" />
                <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/XMLWizard.html" />
                <attr name="templateWizardIterator" methodvalue="org.netbeans.modules.xml.core.wizard.XMLWizardIterator.singleton" />            
            </file>

            <!-- @deprecated by the wizard - ->
                        
            <file name="XMLwithDTD.xml" url="templates/XMLwithDTD.xml.template">
                <attr name="template" boolvalue="true" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle" />
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/xmlObject.gif" />
                <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/XMLwithDTD.html" />
            </file>

            <file name="XMLwithROOT.xml" url="templates/XMLwithROOT.xml.template">
                <attr name="template" boolvalue="true" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle" />
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/xmlObject.gif" />
                <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/XMLwithROOT.html" />
            </file>

            <!- - eof deprecated -->
            
            <file name="emptyDTD.dtd" url="templates/emptyDTD.dtd.template">
                <attr name="template" boolvalue="true" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle" />
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/dtdObject.gif" />
                <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/emptyDTD.html" />
            </file>

            &schema-templates;
            
            <file name="StyleSheet.xsl" url="templates/StyleSheet.xml.template">
                <attr name="template" boolvalue="true" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle" />
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/xmlObject.gif" />
                <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/StyleSheet.html" />
            </file>

            <file name="xml_entity.ent" url="templates/xml_entity.ent.template">
                <attr name="template" boolvalue="true" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle" />
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/entObject.gif" />
                <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/xml_entity.html" />
            </file>

            <!-- until we can bundle DTDs
            <file name="xhtml.xml" url="templates/xhtml.xml.template">
                <attr name="template" boolvalue="true" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle" />
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/xmlObject.gif" />
                <attr name="templateWizardURL" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/xhtml.html" />
            </file>
            -->

            <!-- Order by importance from general ones to specialized ones ! -->
            <attr name="XMLWizard.xml/emptyDTD.dtd" boolvalue="true"/>
            <attr name="emptyDTD.dtd/XMLSchema.xml" boolvalue="true"/>
            <attr name="emptyDTD.dtd/StyleSheet.xml" boolvalue="true"/>
            <attr name="XMLSchema.xml/StyleSheet.xml" boolvalue="true"/>
            <attr name="StyleSheet.xml/XMLCatalog.xml" boolvalue="true"/>
            <attr name="XMLCatalog.xml/xml_entity.ent" boolvalue="true"/>
            <attr name="xml_entity.ent/CascadeStyleSheet.css" boolvalue="true"/>

        </folder> <!-- XML -->
    </folder> <!-- Templates -->

    <!-- register services with Lookup -->
    <folder name="Services">

        <folder name="Hidden">
            <file name="org.netbeans-modules-xml-core-cookies.xml">
                <![CDATA[<?xml version="1.0"?>
<!DOCTYPE cookies PUBLIC "-//NetBeans//DTD apisupport cookie class list 1.0//EN" "http://www.netbeans.org/dtds/apisupport-cookie-class-list-1_0.dtd">
<cookies>
    <class name="org.netbeans.modules.xml.core.cookies.CookieManagerCookie" />
    <class name="org.netbeans.modules.xml.core.cookies.TreeDocumentCookie" />
    <class name="org.netbeans.modules.xml.core.cookies.TreeEditorCookie" />
</cookies>
]]>
            </file>
        </folder> <!-- Hidden -->

        <folder name="Looks">
            <file name="org-netbeans-modules-xml-core-XMLDefaultLook$Basic.xml">
                <![CDATA[
                    <!DOCTYPE Look PUBLIC "-//NetBeans IDE//DTD Looks//EN" "http://www.netbeans.org/dtds/Looks-1_0.dtd" >
                    <Look name="XML Basic">
                        <Standalone class="org.netbeans.modules.xml.core.XMLDataObject"/>
<!--                        <Standalone class="org.openide.nodes.Node"/> <!-  Survive proxy look. -->
                    </Look>
                ]]>
            </file>
        </folder> <!-- Looks -->

        <!-- Settings -->
        <file name="org-netbeans-modules-xml-core-settings-CoreSettings.settings" url="CoreSettings.xml">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.settings.Bundle"/>
        </file>
        
        <folder name="MIMEResolver">
            &schema-resolvers;
            <file name="xslt-mime-resolver.xml" url="xslt-mime-resolver.xml">
                &localize-it;
            </file>
        </folder>
        

        <!-- register helpset -->
        <folder name="JavaHelp">

            <file name="org-netbeans-modules-xml-core-docs-helpset.xml">
                <![CDATA[<?xml version="1.0"?>
<!DOCTYPE helpsetref PUBLIC
          "-//NetBeans//DTD JavaHelp Help Set Reference 1.0//EN"
          "http://www.netbeans.org/dtds/helpsetref-1_0.dtd">

<helpsetref url="nbdocs:/org/netbeans/modules/xml/core/docs/xml.hs"/>
]]></file>
        </folder> <!-- JavaHelp -->

    </folder> <!-- Services -->          
    
    
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->    
    
    
    <folder name="UI">
        <folder name="Services">
            <folder name="Editing">
                <folder name="XML">
                    <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle"/>
                    <attr name="helpID" stringvalue="org.netbeans.modules.xml.core.settings"/>

                    <file name="org-netbeans-modules-xml-core-settings-CoreSettings.shadow">
<![CDATA[Services/org-netbeans-modules-xml-core-settings-CoreSettings.settings
SystemFileSystem
]]>
                    </file>
                </folder> <!-- XML -->
            </folder> <!-- Editing -->
        </folder> <!-- Settings -->
    </folder> <!-- UI -->


    <!-- Menu -->
    <folder name="Menu">
        <!-- Help -->
        <folder name="Help">
            <!-- HelpShortcuts -->
            <folder name="HelpShortcuts">

                <file name="org-netbeans-modules-xml-core-docs-mainpage.xml">
                    <![CDATA[<?xml version="1.0"?>
<!DOCTYPE helpctx PUBLIC
          "-//NetBeans//DTD Help Context 1.0//EN"
          "http://www.netbeans.org/dtds/helpcontext-1_0.dtd">

<helpctx id="org.netbeans.modules.xml.core.docs.HOMEID"/>
]]>
                    &localize-it;
                    <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/blank.gif"/>
                </file>

            </folder> <!-- HelpShortcuts -->
        </folder> <!-- Help -->
    </folder> <!-- Menu -->


    <!-- register actions to action pool -->
    <folder name="Actions">
        <folder name="XML">
            <file name="org-netbeans-modules-xml-core-actions-CollectXMLAction.instance" />
            <file name="org-netbeans-modules-xml-core-actions-CollectDTDAction.instance" />
        </folder>

        <!-- Help -->
        <folder name="Help">

            <file name="org-netbeans-modules-xml-core-docs-mainpage.xml">
                <![CDATA[<?xml version="1.0"?>
<!DOCTYPE helpctx PUBLIC
          "-//NetBeans//DTD Help Context 1.0//EN"
          "http://www.netbeans.org/dtds/helpcontext-1_0.dtd">

<helpctx id="org.netbeans.modules.xml.core.docs.HOMEID"/>
]]>
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.xml.core.resources.Bundle"/>
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/xml/core/resources/xmlObject.gif"/>
            </file>

        </folder> <!-- Help -->
    </folder> <!-- Actions -->
  
</filesystem>
