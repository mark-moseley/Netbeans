<project name="xml/core" default="netbeans" basedir=".">
  <import file="../../nbbuild/templates/projectized.xml"/>

    <property name="xml_root" location=".."/>
    <property name="api_root" location="${xml_root}/api"/>
    <!--
    <property name="tax_root" location="${xml_root}/tax"/>
    <property name="tax_lib_root" location="${tax_root}/lib"/>
    -->
    <available property="do-not-generate-user-handler" classname="org.w3c.dom.UserDataHandler" />
    
    <!-- 
     - Workaround for new DOM3 interfaces that are not avalable on JDK 1.4 
     - At runtime on JDK 1.4 we are happy because we do not call any DOM3 methods
     -            on JDK 1.5 we are happy because system DOM3 interfaces prevail
    -->
    <target name="generate-user-handler" unless="do-not-generate-user-handler" >
        <mkdir dir="src/org/w3c/dom" />
        <echo file="src/org/w3c/dom/UserDataHandler.java" >
        package org.w3c.dom; public interface UserDataHandler {}
        </echo>
        <echo file="src/org/w3c/dom/TypeInfo.java" >
        package org.w3c.dom; public interface TypeInfo {}
        </echo>
        <echo file="src/org/w3c/dom/DOMConfiguration.java" >
        package org.w3c.dom; public interface DOMConfiguration {}
        </echo>
    </target>

    <target name="compile" depends="init,generate-user-handler,projectized.compile">
        <delete file="src/org/w3c/dom/UserDataHandler.java"/>
        <delete file="src/org/w3c/dom/TypeInfo.java"/>
        <delete file="src/org/w3c/dom/DOMConfiguration.java"/>
    </target>

    <target name="clean" depends="clean-w3c, projectized.clean"/>

    <target name="clean-w3c">
        <delete dir="src/org/w3c"/> <!-- TMP DOM3 -->
    </target>

    <target name="javadoc" depends="init">
        <delete dir="javadoc"/>
        <mkdir dir="javadoc"/>

        <!-- external JavaDocs -->
        <property name="jdk-docs-location" value="http://java.sun.com/j2se/1.4/docs/api"/>
        <property name="sax-docs-location" value="http://www.saxproject.org/apidoc"/>
        <property name="openide-docs-location" value="http://www.netbeans.org/download/dev/javadoc/OpenAPIs"/>
        <property name="xml-api-docs-location" value="${api_root}/javadoc/XML-APIs"/>

        <javadoc destdir="javadoc"
                 packagenames="org.netbeans.modules.xml.api.*, org.netbeans.modules.xml.spi.*"
                 doctitle="NetBeans XML Core APIs"
                 windowtitle="NetBeans XML Core APIs"
        >
            <sourcepath>
                <pathelement location="src"/>
            </sourcepath>
            <classpath refID="cp"/>
            <link href="${jdk-docs-location}"
                  offline="true"
                  packagelistLoc="${api_root}/doc/external/jdk"
            />
            <link href="${sax-docs-location}"
                  offline="true"
                  packagelistLoc="${api_root}/doc/external/sax"
            />
            <link href="${openide-docs-location}"
                  offline="true"
                  packagelistLoc="${api_root}/doc/external/openide"
            />            
            <link href="${xml-api-docs-location}"
                  offline="true"
                  packagelistLoc="${api_root}/javadoc/XML-APIs/package-list"
            />            
        </javadoc>                
    </target>

  <target name="jar-with-module-deps" if="module.dependencies">
      <property file="../spec-vers.properties"/>
      <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="false" manifest="${manifest.mf}">
          <manifest>
              <attribute name="OpenIDE-Module-Specification-Version" value="${xml.core.spec.version}"/>
              <attribute name="OpenIDE-Module-Implementation-Version" value="${xml.common.impl.version}"/>
              <attribute name="OpenIDE-Module-Build-Version" value="${buildnumber}"/>
              <attribute name="OpenIDE-Module-Public-Packages" value="${public.packages}"/>
              <attribute name="OpenIDE-Module-IDE-Dependencies" value="${ide.dependencies}"/>
              <attribute name="OpenIDE-Module-Module-Dependencies" value="org.openide.io > 1.0,
  org.netbeans.api.xml/1 > ${xml.api.spec.version}"/>
          </manifest>
            <fileset dir="${build.classes.dir}"/>
        </jar>
    </target>

</project>
