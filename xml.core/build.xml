<project name="xml" default="netbeans" basedir=".">

  <property name="xmlroot" location=".."/>
  <property name="taxroot" location="../tax"/>

  <property name="nbroot" location="${xmlroot}/.."/>
  <property name="binroot" location="${nbroot}/../nbextra"/>
  <property name="nbext" location="${nbroot}/nbbuild"/>

  <property name="parserimpl" value="${binroot}/xml/tax/release/modules/ext/xerces2.jar"/> <!-- parser implementation used internally by module -->

  <property name="license.file" location="${nbroot}/nbbuild/standard-nbm-license.txt"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="storepass" value="?"/>

  <taskdef name="jhindexer" classname="org.netbeans.nbbuild.JHIndexer" classpath="${nbroot}/nbbuild/nbantext.jar"/>
  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="genjavadoc" classname="org.netbeans.nbbuild.GenerateJavadoc" classpath="${nbext}/nbantext.jar"/>


  <target name="init">
    <tstamp/>
    <property name="buildnumber" value="${DSTAMP}-${TSTAMP}"/>
    <echo message="buildnumber = ${buildnumber}"/>
  </target>

  <target name="tax.compile">
    <ant dir="${taxroot}" target="compile"/>
  </target>

  <target name="compile" depends="tax.compile">
    <echo message="Compiling XML core module classes..."/>
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>        
	<fileset dir="${nbroot}/openide/netbeans/lib">
	  <include name="openide*.jar"/>
	</fileset>
        <pathelement location="${nbroot}/openidex/netbeans/modules/autoload/openidex.jar" />
	<pathelement location="${parserimpl}"/>
        <pathelement location="${taxroot}/libsrc/"/>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="init,compile">
    <mkdir dir="netbeans/modules"/>
   
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/xml-core.jar"
            manifest="manifest-subst.mf"
	    compress="false">
      <fileset dir="src" excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"/>
      <locale name="ja"/>
    </locjar>    
  </target>

  <target name="release">
  </target>

  <target name="javahelp">
  </target>

  <target name="netbeans" depends="jars,release,javahelp"/>

  <target name="nbm" depends="netbeans">
    <delete dir="Info"/>
    <makenbm file="../xml-core.nbm"
             topdir="."
	     manifest="manifest-subst.mf"
	     homepage="http://${homepage.base}/xml-core.html"
	     distribution="${dist.base}/xml-core.nbm">
      <license file="${license.file}"/>
      <description>
        The module is a base for all XML related modules. It recognizes XML and DTD documents, which can be opened in text editor. It supports parsing of those documents into TAX (Tree API for XML) representation. It supports synchronization among document representations. It also holds all settings shared among all XML related modules.
      </description>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="../xml-core.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
  </target>

  <target name="all" depends="clean,nbm" />

  <target name="javadoc">
    <delete dir="javadoc" />
    <mkdir dir="javadoc" />
    <genjavadoc destdir="javadoc" modules="openide,xml/core">
      <topdir path="${nbroot}" />
    </genjavadoc>
  </target>

  
  <!-- This target compile all XML sub-modules. -->
  <target name="all-xml">
    <echo message="Compile all XML sub-modules ..."/>
    <ant dir=".." target="clean"/>
    <ant dir=".." target="compile"/>
  </target>


  <!-- Run tests. -->
  <target name="test">
    <ant dir="testbase" target="run"/>
  </target>

</project>
