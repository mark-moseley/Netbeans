<project basedir="." default="netbeans" name="websvc/core">
	<import file="../../nbbuild/templates/projectized.xml"/>

    <target name="files-init" depends="basic-init">
        <patternset id="module.files">
            <include name="${module.jar}"/>
            <include name="${nb.system.dir}/Modules/${code.name.base.dashes}.xml"/>
            <include name="ant/extra/wsclientuptodate.jar"/>
            <include name="ant/sources/**/W*.java"/>
        </patternset>
    </target>

	<target name="build-init" depends="projectized.build-init"/>

	<property name="s2b_root_wscompile_config" location="src/org/netbeans/modules/websvc/wsdl/config/impl/"/>
	<property name="s2b_res_root" location="src/org/netbeans/modules/websvc/wsdl/resources"/>

	<target name="s2binit" depends="build-init">
		<taskdef name="schema2beans" classname="org.netbeans.modules.s2banttask.Schema2BeansAntTask">
			<classpath>
				<pathelement path="${schema2beans/rt.dir}/${nb.modules.dir}/org-netbeans-modules-schema2beans.jar" />
				<pathelement path="${schema2beans/dev.dir}/${nb.modules/autoload.dir}/schema2beansdev.jar" />
				<pathelement path="${nb_all}/schema2beans/anttask/s2banttask.jar"/>
			</classpath>
		</taskdef>
	</target>

	<target name="dd2beansgen" depends="s2binit">
		<echo message="Generating DDBeans for wscompile config file"/>
		<schema2beans schema="${s2b_res_root}/jax-rpc-ri-config_1_1.xsd"
			mddFile="${s2b_res_root}/jax-rpc-ri-config_1_1.mdd"
			package="org.netbeans.modules.websvc.wsdl.config.impl"
			schemaType="xmlschema"
			useInterfaces="true"
			validate="true"
			attrProp="true"
			removeUnreferencedNodes="true"
			rootDir="src"/>

		<replace dir="${s2b_root_wscompile_config}">
			<include name="**/*.java"/>
			<replacefilter token="CLASS2" value="ADDITIONAL_CLASS"/>
			<replacefilter token="Class2" value="AdditionalClass"/>
			<replacefilter token="PROPERTY2" value="HANDLER_PROPERTY"/>
			<replacefilter token="Property2" value="HandlerProperty"/>
		</replace>
		<replace file="${s2b_root_wscompile_config}/Configuration.java" token="javax.xml.namespace.QName" value="java.lang.String(*QName*)"/>
		<replace file="${s2b_root_wscompile_config}/Entry.java" token="javax.xml.namespace.QName" value="java.lang.String/*QName*/"/>
	</target>

	<target name="compile" depends="dd2beansgen, projectized.compile"/>

		<!-- !PW This module really needs to split up if it has this many dependencies!
				 Anyway, I broke them up for now so they are not all on one mega long line.
				 The names of the properties are just meant as a hint, some don't match
				 well (e.g. j2eeserver module under web.deps).
		-->
	<target name="jar-with-module-deps" if="module.dependencies">
		<property file="../../xml/spec-vers.properties"/>

		<property name="wscore.openide.deps" value="org.openide.io, org.openide.loaders, org.openide.src, org.netbeans.modules.schema2beans/1, org.netbeans.libs.xerces/1"/>
		<property name="wscore.project.deps" value="org.netbeans.api.java/1, org.netbeans.modules.projectapi/1, org.netbeans.modules.projectuiapi/1, org.netbeans.modules.project.ant/1"/>
		<property name="wscore.java.deps" value="org.netbeans.modules.java.project/1"/>
		<property name="wscore.xml.deps" value="org.netbeans.api.xml/1, org.netbeans.modules.xml.core/2 = ${xml.common.impl.version}, org.netbeans.modules.xml.catalog/2 = ${xml.common.impl.version}, org.netbeans.modules.xml.tools/2 = ${xml.common.impl.version}"/>
		<property name="wscore.web.deps" value="org.netbeans.modules.j2eeserver/3, org.netbeans.modules.j2ee.dd/1 > 1.2, org.netbeans.api.web.webmodule > 1.0"/>
		<property name="wscore.j2ee.deps" value="org.netbeans.modules.j2ee.dd.webservice > 1.0, org.netbeans.modules.websvc.websvcapi > 1.0, org.netbeans.modules.websvc.registry, org.netbeans.modules.j2ee.common/1"/>

		<jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="false" manifest="${manifest.mf}">
			<manifest>
				<!--attribute name="OpenIDE-Module-Specification-Version" value="1.6.${xml.common.impl.version}"/-->
				<attribute name="OpenIDE-Module-Public-Packages" value="${public.packages}"/>
				<attribute name="OpenIDE-Module-IDE-Dependencies" value="${ide.dependencies}"/>
				<attribute name="OpenIDE-Module-Implementation-Version" value="${buildnumber}"/>
				<attribute name="OpenIDE-Module-Build-Version" value="${buildnumber}"/>
				<attribute name="OpenIDE-Module-Module-Dependencies"
					value="${wscore.openide.deps}, ${wscore.project.deps}, ${wscore.java.deps}, ${wscore.xml.deps}, ${wscore.web.deps}, ${wscore.j2ee.deps}"/>
			</manifest>
			<fileset dir="${build.classes.dir}"/>
		</jar>
	</target>

    <target name="ant-extra" depends="init">
        <mkdir dir="build/antclasses"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.4" debug="true" deprecation="true">
            <classpath>
                <path refid="cp"/>
                <pathelement location="${ant.jar}"/>
                <pathelement location="${tools.jar}"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc" excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"/>
        </copy>
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/ant/extra"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/ant/extra/wsclientuptodate.jar" compress="false">
            <fileset dir="build/antclasses">
                <excludesfile name="${nb_all}/nbbuild/standard-jar-excludes.txt"/>
            </fileset>
        </jar>
        <copy todir="${netbeans.dest.dir}/${cluster.dir}/ant/sources">
            <fileset dir="antsrc" includes="**/*.java"/>
        </copy>
    </target>

    <target name="netbeans-extra" depends="ant-extra"/>

	<target name="clean" depends="build-init, clean-ddgen-src, projectized.clean"/>

	<target name="clean-ddgen-src">
		<delete dir="${s2b_root_wscompile_config}"/>
	</target>

</project>
