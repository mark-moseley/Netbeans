<project basedir="." default="netbeans" name="websvc/core">
	<import file="../../nbbuild/templates/projectized.xml"/>

	<target name="build-init" depends="projectized.build-init"/>

	<property name="s2b_root_wscompile_config" location="src/org/netbeans/modules/websvc/wsdl/config/impl/"/>
	<property name="s2b_res_root" location="src/org/netbeans/modules/websvc/wsdl/resources"/>
	
	<target name="s2binit" depends="build-init">
		<taskdef name="schema2beans" classname="org.netbeans.modules.s2banttask.Schema2BeansAntTask">
			<classpath>
				<pathelement path="${schema2beans/rt.dir}/${nb.modules.dir}/org-netbeans-modules-schema2beans.jar" />
				<pathelement path="${schema2beans/dev.dir}/${nb.modules/autoload.dir}/schema2beansdev.jar" />
				<pathelement path="${nb_all}/schema2beans/anttask/s2banttask.jar"/>
			</classpath>
		</taskdef>
	</target>
	
	<target name="dd2beansgen" depends="s2binit">
		<echo message="Generating DDBeans for wscompile config file"/>
		<schema2beans schema="${s2b_res_root}/jax-rpc-ri-config_1_1.xsd"
			mddFile="${s2b_res_root}/jax-rpc-ri-config_1_1.mdd"
			package="org.netbeans.modules.websvc.wsdl.config.impl"
			schemaType="xmlschema"
			useInterfaces="true"
			validate="true"
			attrProp="true"
			removeUnreferencedNodes="true"
			rootDir="src"/>
			
		<replace dir="${s2b_root_wscompile_config}">
			<include name="**/*.java"/>
			<replacefilter token="CLASS2" value="ADDITIONAL_CLASS"/>
			<replacefilter token="Class2" value="AdditionalClass"/>
			<replacefilter token="PROPERTY2" value="HANDLER_PROPERTY"/>
			<replacefilter token="Property2" value="HandlerProperty"/>
		</replace>
		<replace file="${s2b_root_wscompile_config}/Configuration.java" token="javax.xml.namespace.QName" value="java.lang.String(*QName*)"/>
		<replace file="${s2b_root_wscompile_config}/Entry.java" token="javax.xml.namespace.QName" value="java.lang.String/*QName*/"/>
	</target>
	
	<target name="compile" depends="dd2beansgen, projectized.compile"/>
	
	<target name="jar-with-module-deps" if="module.dependencies">
		<property file="../../xml/spec-vers.properties"/>
		<jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="false" manifest="${manifest.mf}">
			<manifest>
				<!--attribute name="OpenIDE-Module-Specification-Version" value="1.6.${xml.common.impl.version}"/-->
				<attribute name="OpenIDE-Module-Public-Packages" value="${public.packages}"/>
				<attribute name="OpenIDE-Module-IDE-Dependencies" value="${ide.dependencies}"/>
				<attribute name="OpenIDE-Module-Implementation-Version" value="${buildnumber}"/>
				<attribute name="OpenIDE-Module-Module-Dependencies" value="org.openide.io, org.openide.loaders, org.openide.src, org.netbeans.api.java/1, org.netbeans.modules.projectapi/0, org.netbeans.modules.projectuiapi/0, org.netbeans.modules.project.ant/0, org.netbeans.modules.j2eeserver/3, org.netbeans.api.xml/1, org.netbeans.modules.xml.core/2 = ${xml.common.impl.version}, org.netbeans.modules.xml.catalog/2 = ${xml.common.impl.version}, org.netbeans.modules.xml.tools/2 = ${xml.common.impl.version}, org.netbeans.api.web.dd/1 > 1.2, org.netbeans.api.web.webmodule > 1.0, org.netbeans.modules.j2ee.dd.webservice > 1.0, org.netbeans.modules.websvc.websvcapi > 1.0, org.netbeans.modules.websvc.registry"/>
			</manifest>
			<fileset dir="${build.classes.dir}"/>
		</jar>
	</target>

	<target name="clean" depends="build-init, clean-ddgen-src, projectized.clean"/>
	
	<target name="clean-ddgen-src">
		<delete>
			<fileset dir="${s2b_root_wscompile_config}">
				<include name="*.java"/>
			</fileset>
		</delete>
	</target>
	
</project>
