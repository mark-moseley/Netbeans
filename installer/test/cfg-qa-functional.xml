<mconfig name="Installer tests config">

    <!-- testbag with all MyModule tests running in jvm mode (i.e. in standard JVM)
         use ant runtests -Dxtest.attribs=all,jvm to run this testbag  -->
    <testbag testattribs="all" executor="installer-executor" name="installer tests (no ide)">
        <testset dir=".">
            <patternset>
	        <include name="org/netbeans/test/installer/TestInstallerAndUninstaller.class"/>
           </patternset>
        </testset>
    </testbag>


    <executor name="installer-executor" antfile="build-qa-functional.xml" target="run-installer-test"/>
    
    
    <!-- compiler   - this target will compile tests -->
    <compiler name="qa-functional-compiler" antfile="build-qa-functional.xml" target="qa-functional-compiler" default="true"/>
    
</mconfig>
