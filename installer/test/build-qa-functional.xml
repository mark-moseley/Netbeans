<?xml version="1.0"?>

<project name="Installer tests" basedir="." default="all">

    <import file="../../nbbuild/templates/xtest-qa-functional.xml"/>

    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <target name="qa-functional-compiler">
        <buildTests srcdir="qa-functional/src" compileexcludes="**/data/**">
            <classpath>
                <pathelement location="../../jemmy/builds/jemmy.jar"/>                    
                <pathelement location="${xtest.home}/lib/junit.jar"/>                    
                <pathelement location="${xtest.home}/lib/nbjunit.jar"/> 
            </classpath>
        </buildTests>
    </target>

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->

    <target name="run-installer-test">
        <executeTests pluginname="jvm">
            <classpath>
                <pathelement location="../../jemmy/builds/jemmy.jar"/>                    
                <pathelement location="${xtest.home}/lib/junit.jar"/>                    
                <pathelement location="${xtest.home}/lib/nbjunit.jar"/> 
            </classpath>
        </executeTests>
    </target>
    
</project>



