<project name="installer" basedir="." default="all">
    <target name="check-buildnumber" if="${buildnumber}" >
    	<echo message="${buildnumber}"/>
        <fail message="You have to specify -Dbuildnumber on commandline"/>
    </target>

    <target name="check-nb-id" if="${product-key}" >
    	<echo message="${product-key}"/>
        <fail message="You have to specify -Dproduct-key on commandline "/>
    </target>

		<target name="init-modules">
			<style destdir="." in="D:/builds/NETBEANS/unpacked/netbeans/update_tracking.xml" out="modulesDef.properties" style="modulesDef.xsl"/>
			<filter filtersfile="modulesDef.properties" />
			<copy file="src/org/netbeans/installer/actions/DetectAction.yava" toFile="src/org/netbeans/installer/actions/DetectAction.java" filtering="true" />
		</target>
																																		
		<target name="init" depends="check-buildnumber,check-nb-id,init-modules" >        
        <property name="is-install-dir" location="C:/Program Files/InstallShield/MP45"/>          
        <property name="isje" value="com.installshield.isje.ISJE" />
        <!-- property name="buildfile" location="C:/NBNew/NB.xml" / -->
        <copy todir="${is-install-dir}/jvms" >
            <fileset dir="jvms" />
		    </copy>
				<copy todir="${is-install-dir}/images/InstallShield Images">
						<fileset dir="images"/>
				</copy>
    </target>

    <target name="compile" depends="init">        
        <javac srcdir="src" destdir="${is-install-dir}/classes" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath>
                <!-- platform pack elements -->
                <pathelement location="${is-install-dir}/ppk/win32ppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/linuxppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/solarisppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/hpuxppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/aixppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/os2ppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/cimppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/as400ppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/webppk.jar"/>
                <!-- multiplatform product elements -->
                <pathelement location="${is-install-dir}/lib/ide.jar"/>
                <pathelement location="${is-install-dir}/lib/idewizards.jar"/>
                <pathelement location="${is-install-dir}/lib/wizard.jar"/>
                <pathelement location="${is-install-dir}/lib/product.jar"/>
                <pathelement location="${is-install-dir}/lib/help.jar"/>
                <pathelement location="${is-install-dir}/lib/ProjectWizard.jar"/>
                <pathelement location="${is-install-dir}/lib/platform.jar"/>
                <!-- support library elements -->
                <pathelement location="${is-install-dir}/lib/swing.jar"/>
                <pathelement location="${is-install-dir}/lib/jhall.jar"/>
                <pathelement location="${is-install-dir}/lib/parser.jar"/>
                <pathelement location="${is-install-dir}/lib/xt.jar"/>
                <pathelement location="${is-install-dir}/lib/icebrowserbean.jar"/>
                <pathelement location="${is-install-dir}/lib/icebrowserlitebean.jar"/>
            </classpath>            
        </javac>
    </target>
    
    <target name="java-build" depends="compile,build-init">
        <java classname="com.installshield.isje.ISJE">
            <arg line="D:\builds\NETBEANS\nb_all\installer\NB-subst.xml -build"/>
            <!-- arg line="-build"/ -->
            <classpath>
                <!-- platform pack elements -->
                <pathelement location="${is-install-dir}/ppk/win32ppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/linuxppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/solarisppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/hpuxppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/aixppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/os2ppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/cimppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/as400ppk.jar"/>
                <pathelement location="${is-install-dir}/ppk/webppk.jar"/>
                <!-- multiplatform product elements -->
                <pathelement location="${is-install-dir}/lib/ide.jar"/>
                <pathelement location="${is-install-dir}/lib/idewizards.jar"/>
                <pathelement location="${is-install-dir}/lib/wizard.jar"/>
                <pathelement location="${is-install-dir}/lib/product.jar"/>
                <pathelement location="${is-install-dir}/lib/help.jar"/>
                <pathelement location="${is-install-dir}/lib/ProjectWizard.jar"/>
                <pathelement location="${is-install-dir}/lib/platform.jar"/>
                <!-- support library elements -->
                <pathelement location="${is-install-dir}/lib/swing.jar"/>
                <pathelement location="${is-install-dir}/lib/jhall.jar"/>
                <pathelement location="${is-install-dir}/lib/parser.jar"/>
                <pathelement location="${is-install-dir}/lib/xt.jar"/>
                <pathelement location="${is-install-dir}/lib/icebrowserbean.jar"/>
                <pathelement location="${is-install-dir}/lib/icebrowserlitebean.jar"/>
                <pathelement location="${is-install-dir}/classes"/>
            </classpath>            
        </java>
    </target>
    <target name="build-init">
				<delete file="NB-subst.xml" />
				<delete file="src/org/netbeans/installer/actions/DetectAction.java" />
				<delete file="modulesDef.properties" />
        <delete dir="default" />
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}" />
        <filter token="product-key" value="${product-key}" />
        <copy file="NB.xml" tofile="NB-subst.xml" filtering="on" />
    </target>    
    <target name="build" depends="compile,build-init"> 
        <exec dir="${is-install-dir}" executable="cmd.exe" os="Windows 2000" failonerror="false" >
            <arg line="/c D:/builds/netbeans/nb_all/installer/buildNB.bat" />
        </exec>
    </target>
 
    <target name="all" depends="build" description="Build everything.">
        <echo message="Installer built."/>
    </target>

    <target name="clean" depends="init" description="Clean all build products.">
        <delete>
            <fileset dir=".">
                <include name="**/*.class"/>
            </fileset>
        </delete>            
    </target>

</project>
