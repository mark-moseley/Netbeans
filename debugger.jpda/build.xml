<!--
ToDo:
- if jpda.jar is available in a standard location ($JH/lib/ or $JH/lib/ext/ or similar)
  but not in current classpath, then automatically add it to the classpath and continue
-->
<project name="debuggerjpda" default="maybe-nbm" basedir=".">
  <target name="check">
    <available property="jpda" classname="com.sun.jdi.ObjectReference"/>
  </target>
  <target name="compile" depends="check" if="jpda">
    <javac srcdir="src" destdir="src">
      <classpath>
        <pathelement location="../openide/netbeans/lib/openide.jar"/>
	<pathelement location="../debuggercore/netbeans/modules/debuggerCore.jar"/>
      </classpath>
    </javac>
  </target>
  <target name="jars" depends="compile,check" if="jpda">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copyfile src="manifest.mf" dest="manifest-subst.mf" filtering="on"/>
    <jar jarfile="netbeans/modules/jpdaDebugger.jar"
         manifest="manifest-subst.mf"
         basedir="src"
	 excludesfile="../nbbuild/standard-jar-excludes.txt"
	 compress="false"/>
  </target>
  <target name="javahelp" depends="check" if="jpda">
    <copydir src="javahelp" dest="netbeans/docs"/>
  </target>
  <!-- Build only if JPDA is available now. -->
  <target name="nbm" depends="check,jars,javahelp" if="jpda">
    <zip zipfile="debuggerjpda.nbm" includes="netbeans/" basedir="."/>
  </target>
  <target name="no-such-luck" depends="check" unless="jpda">
    <echo message="Sorry, JPDA module will not be built unless you are running JDK 1.3"/>
    <echo message="or otherwise have jpda.jar in your classpath when invoking Ant."/>
  </target>
  <target name="maybe-nbm" depends="check,nbm,no-such-luck"/>
  <target name="clean">
    <delete dir="src">
      <include name="**/*.class"/>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="debuggerjpda.nbm"/>
    <deltree dir="netbeans"/>
  </target>
</project>
