<mconfig name="jpdadebugger unit test config">

    <testbag testattribs="validation,full,presence" executor="ide" name="Presence" resultsprocessor="qa-unit">
       <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/test/debugger/basic/ActionsPresenceTestCase.class"/>
                <include name="org/netbeans/test/debugger/basic/MenusPresenceTestCase.class" />
                <exclude name="org/netbeans/test/debugger/basic/MenusPresenceTestCase.class/testDebuggerWindowInView" />
                <include name="org/netbeans/test/debugger/basic/ToolBarsPresenceTestCase.class" />
                <exclude name="org/netbeans/test/debugger/basic/ToolBarsPresenceTestCase.class/testDebuggerWindowInView" />
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="validation,full,breakpoints" executor="ide" name="Breakpoints" resultsprocessor="qa-unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/test/debugger/breakpoints/clazz/HotspotClassBreakpointTestCase.class"/>

                <!--two tests (testConditionalVariableBreakpointCommon and dtto 2) will fail because of IZ bug #35466 -->
                <include name="org/netbeans/test/debugger/breakpoints/conditional/HotspotConditionalBreakpointTestCase.class"/>
                <exclude name="org/netbeans/test/debugger/breakpoints/conditional/HotspotConditionalBreakpointTestCase.class/testConditionalVariableBreakpointCommon"/>
                <exclude name="org/netbeans/test/debugger/breakpoints/conditional/HotspotConditionalBreakpointTestCase.class/testConditionalVariableBreakpointCommon2"/>

                <include name="org/netbeans/test/debugger/breakpoints/disabled/HotspotDisabledBreakpointTestCase.class"/>
                <include name="org/netbeans/test/debugger/breakpoints/exception/HotspotExceptionBreakpointTestCase.class"/>
                <include name="org/netbeans/test/debugger/breakpoints/hidden/HotspotHiddenBreakpointTestCase.class"/>
                <include name="org/netbeans/test/debugger/breakpoints/line/HotspotLineBreakpointTestCase.class"/>
                <include name="org/netbeans/test/debugger/breakpoints/method/HotspotMethodBreakpointTestCase.class"/>

                <!--one test fails here (testSuspendingVariableBreakpointCommon2). currently no bug-->
                <include name="org/netbeans/test/debugger/breakpoints/suspending/HotspotSuspendingBreakpointTestCase.class"/>
                <exclude name="org/netbeans/test/debugger/breakpoints/suspending/HotspotSuspendingBreakpointTestCase.class/testSuspendingVariableBreakpointCommon2"/>

                <include name="org/netbeans/test/debugger/breakpoints/thread/HotspotThreadBreakpointTestCase.class"/>
                <include name="org/netbeans/test/debugger/breakpoints/variable/HotspotVariableBreakpointTestCase.class"/>

                <!--The following test cases depends on method org.openide.debugger.Debugger.findBreakpoint(ConstructorElement)
                    which implementation is in (debuggercore) org.netbeans.modules.debugger.support.DebuggerSupport .
                    This implementation was commented out in revision 1.42 of this class. Therefore these tests cannot
                    pass, and because this method is in fact part of an deprecated API, they are excluded.-->
                <exclude name="org/netbeans/test/debugger/breakpoints/disabled/HotspotDisabledBreakpointTestCase.class/*Method*"/>
                <exclude name="org/netbeans/test/debugger/breakpoints/method/HotspotMethodBreakpointTestCase.class/testMethod*Method*"/>
                <exclude name="org/netbeans/test/debugger/breakpoints/suspending/HotspotSuspendingBreakpointTestCase.class/*Method*" />
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="validation,full,bugs" executor="ide" name="Bugs" resultsprocessor="qa-unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/test/debugger/bugs/HotspotBugsTestCase.class"/>

                <!--The following test cases depends on method org.openide.debugger.Debugger.findBreakpoint(ConstructorElement)
                    which implementation is in (debuggercore) org.netbeans.modules.debugger.support.DebuggerSupport .
                    This implementation was commented out in revision 1.42 of this class. Therefore these tests cannot
                    pass, and because this method is in fact part of an deprecated API, they are excluded.-->
                <exclude name="org/netbeans/test/debugger/bugs/HotspotBugsTestCase.class/testBug4331522MethodCommon"/>
                <exclude name="org/netbeans/test/debugger/bugs/HotspotBugsTestCase.class/testBug4331522MethodNameCommon"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="gui" executor="ide" name="GUI" resultsprocessor="qa-unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/test/debugger/Util/GuiRunDebugger.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="validation,full,watches" executor="ide" name="Watches" resultsprocessor="qa-unit">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/test/debugger/watches/HotspotBasicWatchesTestCase.class"/>
                <include name="org/netbeans/test/debugger/parser/HotspotBasicEvaluationTestCase.class"/>
            </patternset>
        </testset>
    </testbag>
   
    <executor name="ide" antfile="build-qa-unit.xml" target="runidetest"/>

    <compiler name="default-compiler" default="true" antfile="build-qa-unit.xml" target="default-compiler"/>
    
    <resultsprocessor name="qa-unit" antfile="build.xml" target="test_report" default="true"/>
    
</mconfig>
