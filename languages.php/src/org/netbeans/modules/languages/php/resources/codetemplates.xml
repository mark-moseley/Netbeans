 <codetemplate abbreviation="myex" descriptionId="ct_myex" contexts="php">
    <!-- Example 20.3. Extending the Exception class  -->
    <code>
<![CDATA[
/**
 * Thrown to indicate that ${exceptionCauseDescription default=""} 
 */
class ${className unusedclassname default="Class1"} extends Exception
{
    /**
     * Constructs an exception with the specified detail message.
     */
    public function __construct($message, $code = 0) {
        ${statements default=""}
        // make sure everything is assigned properly
        parent::__construct($message, $code);
    }

    /**
     * Returns a string representation of underlying exception.
     */
    public function __toString() {
        return __CLASS__ . ": [{$this->code}]: {$this->message}\n";
    }
}
${cursor}]]>
    </code>
  </codetemplate>  
