<project basedir="." default="netbeans" name="ant/project">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <target name="anttask" depends="netbeans" description="Build special Ant task.">
        <mkdir dir="build/antclasses"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.4" debug="true" deprecation="true">
            <classpath>
                <pathelement path="${antsrc.cp}"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc">
                <excludesfile name="../../nbbuild/standard-jar-excludes.txt"/>
            </fileset>
        </copy>
        <jar jarfile="build/tasks.jar">
            <fileset dir="build/antclasses"/>
        </jar>
    </target>

    <target name="test" depends="projects/projectapi-test,projectized-common.test"/>
    <target name="test-single" depends="projects/projectapi-test,projectized-common.test-single"/>
    <target name="projects/projectapi-test" depends="check-projects/projectapi-test" unless="projects/projectapi.test.built">
        <ant dir="../../projects/projectapi" target="test-build"/>
    </target>
    <target name="check-projects/projectapi-test">
        <available property="projects/projectapi.test.built" file="../../projects/projectapi/build/test/unit/classes"/>
    </target>

</project>
