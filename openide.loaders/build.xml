<project name="openide/loaders" default="netbeans" basedir=".">

    <property name="nb_all" value="../.."/>

    <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nb_all}/nbbuild/nbantext.jar"/>
    <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="${nb_all}/nbbuild/nbantext.jar"/>
    <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nb_all}/nbbuild/nbantext.jar"/>

    <property name="nbm_alias" value="nb_ide"/>
    <property name="homepage.base" value="netbeans.org"/>
    <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
    <property name="license.file" value="${nb_all}/nbbuild/standard-nbm-license.txt"/>

    <path id="cp">
        <pathelement location="${nb_all}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${nb_all}/openide/src"/>
    </path>
  
    <target name="compile">
        <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
            <classpath refid="cp"/>
        </javac>
        <taskdef name="enhanceclass" classname="org.netbeans.nbbuild.NbEnhanceClass" classpath="../../nbbuild/nbantext.jar"/>
        <enhanceclass basedir="src">
            <classpath>
                <pathelement location="${nb_all}/core/netbeans/lib/ext/boot.jar"/>
                <!-- See xtest/instance/build-clover.xml for explanation: -->
                <pathelement location="${nb_all}/core/netbeans/lib/ext/clover.jar"/>
            </classpath>
            <patch class="org/openide/loaders/MultiDataObject" > 
                <!-- make following members public -->
                <member name="getCookieSet" />
                <member name="setCookieSet" />
            </patch>

            <!-- superclass changed in order to implement MouseInputListener -->
            <patch class="org/openide/awt/Toolbar" super="org/openide/awt/$$Toolbar$$Patch$$">
                <member name="BASIC_HEIGHT" /> <!-- made non-final -->
            </patch>
            <patch class="org/openide/awt/Toolbar$$DnDEvent" >
                <!-- make fields public -->
                <member name="name" />
                <member name="dx" />
                <member name="dy" />
                <member name="type" />
            </patch>
            
            <patch class="org/openide/loaders/DataLoaderPool$$FolderLoader"  /> 
            <patch class="org/openide/loaders/DataLoaderPool$$InstanceLoader"  /> 
            <patch class="org/openide/loaders/DataLoaderPool$$DefaultLoader"  /> 
            <patch class="org/openide/loaders/DataLoaderPool$$ShadowLoader"  /> 
            
        </enhanceclass>
    </target>

    <target name="jars" depends="compile">
        <mkdir dir="netbeans/modules/autoload"/>
        <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
        <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
        <locjar jarfile="netbeans/lib/openide-loaders.jar"
                manifest="manifest-subst.mf"
                basedir="src"
	        excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"
	        compress="false">
            <locale name="ja"/>
        </locjar>
    </target>

    <target name="netbeans" depends="jars">
        <genlist targetname="nbm" outputfiledir="netbeans"/>
    </target>

    <target name="nbm" depends="netbeans">
        <makenbm file="openide-loaders.nbm"
                 topdir="."
                 module="netbeans/lib/openide-loaders.jar"
                 homepage="http://openide.${homepage.base}/"
                 distribution="http://${dist.base}/openide-loaders.nbm">
            <license file="${license.file}"/>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="javadoc" description="Build Javadoc.">
        <!-- Ant 1.4 bug workaround: <property refid="..."/> does not work inside <ant> -->
        <property name="_cp" refid="cp"/>
        <ant dir="${nb_all}/nbbuild/javadoctools" antfile="template.xml" target="javadoc">
            <property name="javadoc.base" location="."/>
            <property name="javadoc.name" value="LoadersAPI"/>
            <property name="javadoc.title" value="Loaders API"/>
            <property name="javadoc.packages" value="org.openide.actions,org.openide.cookies,org.openide.text,org.openide.loaders"/>
            <property name="javadoc.classpath" value="${_cp}"/>
            <property name="javadoc.main.page" value="org/openide/compiler/doc-files/api.html"/>
            <property name="javadoc.arch" location="../arch/arch-openide-loaders.xml"/>
            <property name="javadoc.docfiles" location="api/doc"/>
        </ant>
    </target>
  
    <target name="clean">
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
            </fileset>
        </delete>
        <delete file="manifest-subst.mf"/>
        <delete file="openide-compiler.nbm"/>
        <delete dir="netbeans"/>
        <delete dir="Info"/>
        <delete dir="javadoc"/>
        <delete dir="gensrc"/>
    </target>
    
    <target name="openide-compat" 
        description="Regenerates different classes from openide to make them compatible with pre openide-loaders.jar version. Shall be just a temporary solution" 
        depends="compile"
    >
        <taskdef name="preprocess" classname="org.netbeans.nbbuild.Preprocess" classpath="${nb_all}/nbbuild/nbantext.jar"/>
        
        <mkdir dir="gensrc" />
        <preprocess srcdir="../src" destdir="gensrc" >
            <switch name="compat.loaders_32143" on="true" />
            <include name="org/openide/util/WeakListener.java" />

            <include name="org/openide/windows/TopComponent.java" />
            <include name="org/openide/windows/CloneableTopComponent.java" />
            
            <include name="org/openide/text/Line.java" />
            <include name="org/openide/text/DocumentLine.java" />
            <include name="org/openide/text/PositionRef.java" />
        </preprocess>
        
        <javac 
            srcdir="gensrc" destdir="gensrc" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}"
            classpath="src"
        >
            <classpath refid="cp"/>
        </javac>

        <!-- overrides the original versions in openide.jar -->        
        <copy todir="../src">
            <fileset dir="gensrc" >
                <include name="**/*class" />
            </fileset>
        </copy>
    </target>
  
</project>
