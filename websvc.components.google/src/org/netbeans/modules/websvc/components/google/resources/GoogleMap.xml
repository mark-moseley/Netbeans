<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : google-map.xml
    Created on : June 6, 2007, 10:23 AM
    Author     : Ayub Khan
    Description:
        Purpose of the document follows.
        This document is an instance of component.xsd that describes the rest component
        "google map". This document describes the name, description, icons for the
        google map component. Classes element define the set of classes that to copied to
        users project from the location specified to the current target location
        of users file. The class files will be looked up using jdk 6 meta lookup. If 
        'instanceCreate' element is found on any class then the invocation of the 
        class will be added to the target class where this component will be dragged
        and dropped. In this case GoogleMapResource.getMap() needs to do all the necessary 
        things to invoke whatever service it needs to (rest, jax-ws, jpa, ejb etc.,)
-->

<component xmlns="http://xml.netbeans.org/websvc/rest/component/1.0"
           xmlns:tns="http://xml.netbeans.org/websvc/rest/component/1.0/google/google-map"
           xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'               
           xsi:schemaLocation='http://xml.netbeans.org/websvc/rest/component/1.0 component.xsd'           
           name="GoogleMap"
           category="/Google"
           nameKey="GoogleMap_Name"
           categoryKey="Google_Name"
           bundle="org.netbeans.modules.websvc.components.google.Bundle">
    
    <description key="GoogleMap_Desc" 
                 bundle="org.netbeans.modules.websvc.components.google.Bundle"/>
    
    <icons>
        <icon url="org/netbeans/modules/websvc/components/google/resources/google16.png" size="16"/>
        <icon url="org/netbeans/modules/websvc/components/google/resources/google32.png" size="32"/>
    </icons>
    
    <service name="GoogleMap">
        <method name="generateGoogleMapCode"
                type="custom"
                url="Templates/WebServices/GoogleMapResource.java">                      
            <documentation>
                Allows a developer to generate code to access Google Map.
            </documentation>
            <input>
                <params>
                    <param name="apiKey" type="string"/>
                    <param name="address" type="string" default="16 Network Circle, Menlo Park"/>
                    <param name="zoom" type="int" default="15"/>
                </params>
            </input>
            <output>
                <media type="text/html"/>
            </output>
        </method>
    </service>

</component>
