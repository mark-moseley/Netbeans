<mconfig name="unit test config">

    <testbag testattribs="validation" executor="code" name="jsp syntax parser tests">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/test/web/core/syntax/*Test.class"/>
            </patternset>
        </testset>
    </testbag>
   
     <testbag testattribs="validation" executor="ide" name="jsp folding tests">
        <testset dir="unit/src">
            <patternset>
                <include name="org/netbeans/test/web/folding/*Test.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <executor name="code" antfile="build-unit.xml" target="runcodetest"/>
    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest"/>
    
    <compiler name="unit-compiler" antfile="build-unit.xml" target="unit-compiler" default="true"/>
    
</mconfig>
