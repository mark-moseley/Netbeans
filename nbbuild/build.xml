      <config name="bloated" modules="ant,apisupport,applet,autoupdate,beans,clazz,cpplite,debuggercore,debuggerjpda,debuggertools,editor,form,html,httpserver,i18n,icebrowser,image,innertesters,jarpackager,java,javacvs,javadoc,javaembeddedserver,logger,makefile,multicompile,objectbrowser,projects,properties,remotefs,scripting,serialversion,sysprops,text,usersguide,utilities,vcscore,vcscvs,web"/>
