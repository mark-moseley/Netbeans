  <!-- Use of nbmerge target has the effect of automatically depending on all-X for every module. -->
  <!-- It also runs deltree(dir=wherever) and copydir(src=../X/netbeans,dest=wherever) to create the IDE install. -->


  <target name="virgin" depends="firststart-merge"
          description="Create a virgin build that has never been started.">
    <!-- zip task not well suited to making final build, as it does not set +x bits -->
    <!-- so on Unix try to use native ZIP first -->
    <delete file="NetBeans-${buildnumber}-virgin.zip"/>
    <exec executable="zip" dir="." os="Linux SunOS Solaris" failonerror="false">
      <arg value="-r"/>
      <arg value="NetBeans-${buildnumber}-virgin.zip"/>
      <arg value="netbeans"/>
    </exec>
    <zip zipfile="NetBeans-${buildnumber}-virgin.zip" basedir=".">
      <include name="netbeans/"/>
    </zip>
    <echo message="Virgin build created; see NetBeans-${buildnumber}-virgin.zip (in nbbuild/)."/>
  </target>

  <target name="firststart-merge" depends="init,build-messaging">
    <mkdir dir="netbeans"/>
    <nbmerge dest="netbeans" topdir=".." modules="openide,openidex,core,${modules}" targetprefix="all-">
      <suppress locale="ja" unless="netbeans.japanese"/>
    </nbmerge>
    <chmod perm="ugo+x">
      <fileset dir="netbeans/bin">
        <include name="*.sh"/>
        <include name="fastjavac/fastjavac.linux"/>
        <include name="fastjavac/fastjavac.sun"/>
        <include name="fastjavac/fastjavac.sun.intel"/>
      </fileset>
    </chmod>
  </target>
  <target name="firststart" depends="firststart-merge"
          description="Build the IDE and start it, but do not create a build archive.">
    <echo>Starting the IDE...
(This both acts as a test, and primes some files
to make the first user start faster and better.)
</echo>
    <!-- XXX better would be to scan first start log for stacktraces and just show those; -->
    <!-- possibly after filtering for duplicates or something like this. -->
    <!-- Timeout is ten minutes; should be enough for valid first start, while preventing -->
    <!-- a deadlock from hanging an automated build: -->
    <exec os="Windows NT Windows 95 Windows 98 Windows 2000" dir="netbeans/bin" executable="netbeans/bin/runide.exe" failonerror="yes" timeout="600000">
      <arg value="-jdkhome"/>
      <arg file="${jdkhome}"/>
      <arg line="${firststart.args}"/>
    </exec>
    <exec os="Linux SunOS Solaris" dir="netbeans/bin" executable="sh" failonerror="yes" timeout="600000">
      <arg value="runide.sh"/>
      <arg value="-jdkhome"/>
      <arg file="${jdkhome}"/>
      <arg line="${firststart.args}"/>
    </exec>
    <echo message="Successfully started, cleaning up detritus..."/>
    <!-- XXX W2k users have reported problems with the following line. -->
    <!-- Would it be better to do a copy and then a delete? -->
    <move file="netbeans/system/ide.log" tofile="NetBeans-${buildnumber}.log"/>
    <delete file="netbeans/system/project.basic"/>
    <delete file="netbeans/system/project.last"/>
    <delete file="netbeans/beans/libs.properties"/>
    <delete file="netbeans/beans/installed.properties"/>
    <delete dir="netbeans/system/Palette/Beans"/>
    <echo file="netbeans/build_info">NetBeans dev build
------------------
Number:   ${buildnumber}
Date:     ${TODAY}
Branding:
Branch:   trunk
Tag:
</echo>
  </target>

  <target name="depucelee" depends="firststart"
