<project name="xtest-dist" default="all" basedir=".">
    <target name="all">
        <property name="xtest.home" location="../xtest"/>
        <property name="xtest.templates.dir" location="nbbuild/templates"/>
        <property name="xtest.results" location="results"/>
        <property name="test.fail.on.error" value="true"/>
        <property name="nbantext.jar" location="../nbbuild/nbantext.jar"/>
        <property name="test.dist.dir" location=".."/>
        <!-- only for these module on runtime classpath -->
        <property name="test.required.modules" value=""/>
        <taskdef name="validatepath" classname="org.netbeans.nbbuild.ValidatePath" classpath="${nbantext.jar}"/>
        <delete dir="${xtest.results}"/>
        <mkdir dir="${xtest.results}"/>
 
        <fail unless="netbeans.dest.dir" message="Property netbeans.dest.dir doesn't exist."/>
        <available file="${netbeans.dest.dir}/etc/netbeans.conf" property="exist.netbeans.dest.dir"/>
        <fail unless="exist.netbeans.dest.dir" message="Path netbeans.dest.dir doesn't contain netbeans dir."/>
        <fail unless="xtest.home" message="Property xtest.home doesn't exist."/>
        <available file="${xtest.home}/lib/xtest.jar" property="exist.xtest.home"/>
        <fail unless="exist.xtest.home" message="xtest.jar doesn't exist at ${xtest.home}/lib/xtest.jar"/>
        
        <taskdef name="testdistfilter" classpath="../nbbuild/nbantext.jar" classname="org.netbeans.nbbuild.TestDistFilter"/>
        <!-- run modules with xtest.attribs="stable" in cfg-unit.xml -->
        <property name="xtest.attribs" value="stable"/>
        
        <testdistfilter harness="xtest" testlistproperty="xtest.modules.list" attribs="${xtest.attribs}" testdistdir=".." testtype="unit" requiredmodules="${test.required.modules}"/>
 
        <taskdef name="getResultsDirs" classname="org.netbeans.xtest.pe.GetResultsDirsTask" classpath="${xtest.home}/lib/xtest.jar"/>
        <getResultsDirs testRunDirProperty="xtest.results.testrun.dir"/>
        <subant buildpath="${xtest.modules.list}" target="runtestsdist" failonerror="test.fail.on.error">
            <property name="xtest.templates.dir" location="../nbbuild/templates"/>
            <property name="xtest.results" location="results"/>
            <property name="xtest.results.testrun.dir" location="${xtest.results.testrun.dir}"/>
            <property name="xtest.nobuildxtest" value="nobuild"/>
            <property name="xtest.attribs" value="${xtest.attribs}"/>
            <property name="xtest.testtype" value="unit"/>
            <property name="test.dist.dir" value="${test.dist.dir}"/>
        </subant>    
    </target>
</project>
