<project name="sierra" default="all" basedir=".">
    <import file="build.tst"/>
    
    <target name="all" depends="init,get-netbeans,build-xtest,clean,build-and-create"/>
    <target name="build-and-create" depends="build-fcs,create-zip-init,create-zip,create-zip-fcs,build-dev,create-zip-dev"/>
    <target name="hudson" depends="run-daily,all"/>

    <target name="init">
        <property name="env.BUILD_NUMBER" value=""/>
        <tstamp>
            <format property="long_stamp" pattern="yyyyMMdd_HHmm"/>
        </tstamp>
        <tstamp>
            <format property="short_stamp" pattern="yyyyMMdd"/>
        </tstamp>

        <ant dir="${home}/nbbuild" target="bootstrap"/>
    </target>

    <!-- netbeans -->
    <target name="get-netbeans">
        <java jar="build.jar" fork="true" classpath="." outputproperty="netbeans.file">
            <sysproperty key="url" value="${netbeans.host}/${netbeans.path}"/>
        </java>

        <mkdir dir="${netbeans}"/>
        <property name="netbeans.url" value="${netbeans.host}/${netbeans.path}/${netbeans.file}"/>
        <get src="${netbeans.url}" dest="${netbeans}/netbeans.zip" usetimestamp="true"/>

        <delete dir="${home}/nbbuild/netbeans"/>
        <unzip src="${netbeans}/netbeans.zip" dest="${home}/nbbuild"/>
        <echo file="${build.number}" message="netbeans hudson build: ${netbeans.file}${line.separator}" append="true"/>
    </target>

    <target name="build-xtest">
        <ant dir="${home}/xtest" target="clean"/>
        <ant dir="${home}/xtest" target="netbeans"/>
    </target>

    <!-- zip -->
    <target name="create-zip-init">
        <delete dir="${dist}"/>
        <mkdir dir="${dist}"/>
        <delete dir="${latest}"/>
        <mkdir dir="${latest}"/>

        <replace file="${home}/nbbuild/netbeans/etc/netbeans.conf" token="${netbeans.dir}" value="${sierra.dir}"/>
        <property name="env.BUILD_NUMBER" value=""/>

        <echo file="${build.number}" message="sierra hudson: ${env.BUILD_NUMBER}${line.separator}" append="true"/>
        <echo file="${build.number}" message="sierra build: ${long_stamp}${line.separator}" append="true"/>

        <chmod file="${home}/nbbuild/netbeans/bin/netbeans" perm="ugo+rx"/>
    </target>

    <target name="create-zip">
        <zip destfile="${dist}/sierra_${env.BUILD_NUMBER}_${short_stamp}.zip">
            <zipfileset dir="${home}/nbbuild">
                <include name="netbeans/bin/**"/>
                <include name="netbeans/enterprise5/**"/>
                <include name="netbeans/etc/**"/>
                <include name="netbeans/gsf1/**"/>
                <include name="netbeans/harness/**"/>
                <include name="netbeans/ide9/**"/>
                <include name="netbeans/java2/**"/>
                <include name="netbeans/nb6.1/**"/>
                <include name="netbeans/platform8/**"/>
                <include name="netbeans/soa2/**"/>
                <include name="netbeans/xml2/**"/>
                <exclude name="netbeans/soa2/**/*-etl-*"/>
                <exclude name="netbeans/**/.lastModified"/>
            </zipfileset>
        </zip>
    </target>

    <target name="create-zip-fcs">
        <zip destfile="${latest}/sierra.zip">
            <zipfileset dir="${home}/nbbuild">
                <include name="netbeans/**"/>
                <exclude name="netbeans/soa2/**/*-xslt-*"/>
                <exclude name="netbeans/testtools/**"/>
                <exclude name="netbeans/**/.lastModified"/>
            </zipfileset>
        </zip>

        <copy file="${latest}/sierra.zip" tofile="${dist}/sierra_${env.BUILD_NUMBER}_${long_stamp}.zip"/>
    </target>

    <target name="create-zip-dev">
        <zip destfile="${latest}/sierra_dev.zip">
            <zipfileset dir="${home}/nbbuild">
                <include name="netbeans/**"/>
                <exclude name="netbeans/testtools/**"/>
                <exclude name="netbeans/**/.lastModified"/>
            </zipfileset>
        </zip>

        <copy file="${latest}/sierra_dev.zip" tofile="${dist}/sierra_${env.BUILD_NUMBER}_${long_stamp}_dev.zip"/>
    </target>

    <!-- daily -->
    <target name="run-daily" depends="check-daily,do-daily"/>
    
    <target name="check-daily">
        <mkdir dir="${lock}"/>

        <tstamp>
            <format property="daily" pattern="yyyyMMdd"/>
        </tstamp>

        <available property="lock.available" file="${lock}/${daily}"/>
    </target>

    <target name="do-daily" unless="lock.available">
        <delete>
            <fileset dir="${lock}" includes="*"/>
        </delete>

        <echo file="${lock}/${daily}" message="${daily}"/>

        <antcall target="get-test"/>
    </target>

    <target name="get-test">
        <cvs package="${test.cvs.modules}" cvsRoot="${test.cvs.root}" dest="${test}" command="-q co -P ${test.cvs.branch}" failonerror="false"/>
    </target>

    <!-- clean & build -->
    <target name="build" depends="build-fcs,build-dev"/>
    <target name="clean" depends="clean-fcs,clean-dev"/>

    <target name="build-fcs" depends="build-print,build-libs,build-compapp,build-soa,build-bpel, build-etl, build-xslt"/>
    <target name="clean-fcs" depends="build-print,clean-libs,clean-compapp,clean-soa,clean-bpel, clean-etl, clean-xslt"/>

    <target name="build-dev" depends="build-iep,build-sql,build-wsdlextensions"/>
    <target name="clean-dev" depends="clean-iep,clean-sql,clean-wsdlextensions"/>

    <!-- print -->
    <target name="build-print"><antcall target="do-print"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-print"><antcall target="do-print"><param name="action" value="clean"/></antcall></target>
    <target name="do-print">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/print"/>
            <buildpath location="${home}/xml.xpath.ext"/> <!-- todo r -->
            <buildpath location="${home}/xml.wsdl.extensions"/> <!-- todo r -->
        </subant>
    </target>

    <!-- libs -->
    <target name="build-libs"><antcall target="do-libs"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-libs"><antcall target="do-libs"><param name="action" value="clean"/></antcall></target>
    <target name="do-libs">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/o.n.soa.libs.httpunit/build.xml"/>
            <buildpath location="${home}/o.n.soa.libs.jbiadmincommon/build.xml"/>
            <buildpath location="${home}/o.n.soa.libs.jgo/build.xml"/>
            <buildpath location="${home}/o.n.soa.libs.wsdl4j/build.xml"/>
            <buildpath location="${home}/o.n.soa.libs.xmlbeans/build.xml"/>
        </subant>
    </target>
        
    <!-- compapp -->
    <target name="build-compapp"><antcall target="do-compapp"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-compapp"><antcall target="do-compapp"><param name="action" value="clean"/></antcall></target>
    <target name="do-compapp">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/compapp.help/build.xml"/>
            <buildpath location="${home}/compapp.manager.jbi/build.xml"/>
            <buildpath location="${home}/compapp.projects.jbi/build.xml"/>
            <buildpath location="${home}/compapp.casaeditor/build.xml"/>
            <buildpath location="${home}/compapp.projects.base/build.xml"/>
            <buildpath location="${home}/compapp.projects.wizard/build.xml"/>
            <buildpath location="${home}/compapp.configextension/build.xml"/>
        </subant>
    </target>

    <!-- soa -->
    <target name="build-soa"><antcall target="do-soa"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-soa"><antcall target="do-soa"><param name="action" value="clean"/></antcall></target>
    <target name="do-soa">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/soa.ui/build.xml"/>
            <buildpath location="${home}/soa.mappercore/build.xml"/>
            <buildpath location="${home}/soa.mapper/build.xml"/>
            <buildpath location="${home}/soa.reportgenerator/build.xml"/>
        </subant>
    </target>

    <!-- bpel -->
    <target name="build-bpel"><antcall target="do-bpel"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-bpel"><antcall target="do-bpel"><param name="action" value="clean"/></antcall></target>
    <target name="do-bpel">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/bpel.help/build.xml"/>
            <buildpath location="${home}/bpel.model/build.xml"/>
            <buildpath location="${home}/bpel.editors.api/build.xml"/>
            <buildpath location="${home}/bpel.debugger.api/build.xml"/>
            <buildpath location="${home}/bpel.core/build.xml"/>
            <buildpath location="${home}/bpel.project/build.xml"/>
            <buildpath location="${home}/bpel.debugger.bdi/build.xml"/>
            <buildpath location="${home}/bpel.debugger/build.xml"/>
            <buildpath location="${home}/bpel.debugger.ui/build.xml"/>
            <buildpath location="${home}/bpel.mapper/build.xml"/>
            <buildpath location="${home}/bpel.search/build.xml"/>
            <buildpath location="${home}/bpel.editors/build.xml"/>
            <buildpath location="${home}/bpel.refactoring/build.xml"/>
            <buildpath location="${home}/bpel.samples/build.xml"/>
            <buildpath location="${home}/bpel.validation/build.xml"/>
        </subant>
    </target>

    <!-- etl -->
    <target name="build-etl"><antcall target="do-etl"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-etl"><antcall target="do-etl"><param name="action" value="clean"/></antcall></target>
    <target name="do-etl">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/etl.editor/build.xml"/>
            <buildpath location="${home}/etl.project/build.xml"/>
        </subant>
    </target>

    <!-- iep -->
    <target name="build-iep"><antcall target="do-iep"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-iep"><antcall target="do-iep"><param name="action" value="clean"/></antcall></target>
    <target name="do-iep">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/iep.model/build.xml"/>
            <buildpath location="${home}/iep.editor/build.xml"/>
            <buildpath location="${home}/iep.help/build.xml"/>
            <buildpath location="${home}/iep.project/build.xml"/>
        </subant>
    </target>

    <!-- sql -->
    <target name="build-sql"><antcall target="do-sql"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-sql"><antcall target="do-sql"><param name="action" value="clean"/></antcall></target>
    <target name="do-sql">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/sql.help/build.xml"/>
            <buildpath location="${home}/sql.project/build.xml"/>
            <buildpath location="${home}/sql.wizard/build.xml"/>
        </subant>
    </target>
  
    <!-- wsdlextensions -->
    <target name="build-wsdlextensions"><antcall target="do-wsdlextensions"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-wsdlextensions"><antcall target="do-wsdlextensions"><param name="action" value="clean"/></antcall></target>
    <target name="do-wsdlextensions">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/wsdlextensions.ftp/build.xml"/>
            <buildpath location="${home}/wsdlextensions.snmp/build.xml"/>
            <buildpath location="${home}/wsdlextensions.file/build.xml"/>
            <buildpath location="${home}/wsdlextensions.jms/build.xml"/>
        </subant>
    </target>
  
    <!-- xslt -->
    <target name="build-xslt"><antcall target="do-xslt"><param name="action" value="netbeans"/></antcall></target>
    <target name="clean-xslt"><antcall target="do-xslt"><param name="action" value="clean"/></antcall></target>
    <target name="do-xslt">
        <subant target="${action}" inheritAll="false">
            <buildpath location="${home}/xslt.model/build.xml"/>
            <buildpath location="${home}/xslt.mapper/build.xml"/>
            <buildpath location="${home}/xslt.tmap/build.xml"/>
            <buildpath location="${home}/xslt.project/build.xml"/>
            <buildpath location="${home}/xslt.core/build.xml"/>
            <buildpath location="${home}/xslt.help/build.xml"/>
        </subant>
    </target>
</project>
