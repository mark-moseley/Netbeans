<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.1//EN" "http://www.netbeans.org/dtds/filesystem-1_1.dtd">
<filesystem>
    
    <folder name="Editors">
        <folder name="SideBar">
            <file name="org-netbeans-modules-versioning-diff-DiffSidebarFactory.instance">
                <attr name="position" intvalue="4000"/>
            </file>
            <!-- place in between line numbers sidebar and folding sidebar #57544 -->
            </folder>

        <folder name="UpToDateStatusProvider">
            <file name="org-netbeans-modules-versioning-diff-DiffMarkProviderCreator.instance">
                <attr name="instanceClass" stringvalue="org.netbeans.modules.versioning.diff.DiffMarkProviderCreator"/>
            </file>
        </folder>
    </folder>

    <!-- register into action pool to allow user to define shortcut, put it on toolbar etc. -->  
    <folder name="Actions">
        <folder name="Versioning">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.versioning.Bundle"/>
            <file name="org-netbeans-modules-versioning-ShowTextAnnotationsAction.instance">
                <attr name="instanceClass" stringvalue="org.netbeans.modules.versioning.ShowTextAnnotationsAction"/>
            </file>
        </folder>
        <folder name="Tools">
            <file name="org-netbeans-modules-versioning-diff-ShowDiffSidebarAction.instance"/>
        </folder>
    </folder>
    
    <folder name="Projects">
        <folder name="Actions">
            <file name="org-netbeans-modules-versioning-ProjectMenuItem.instance"/>
        </folder>
    </folder>
    
    <folder name="Menu">
        <folder name="View">
            <file name="org-netbeans-modules-versioning-diff-ShowDiffSidebarAction.shadow">
                <attr name="originalFile" stringvalue="Actions/Tools/org-netbeans-modules-versioning-diff-ShowDiffSidebarAction.instance"/>
                <attr name="position" intvalue="900"/>
            </file>
            <file name="org-netbeans-modules-versioning-ShowTextAnnotationsAction.shadow">
                <attr name="originalFile" stringvalue="Actions/Versioning/org-netbeans-modules-versioning-ShowTextAnnotationsAction.instance"/>
                <attr name="position" intvalue="1000"/>
            </file>            
            </folder>

        <folder name="Versioning">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.versioning.Bundle"/>
            <attr name="position" intvalue="900"/>
            <file name="org-netbeans-modules-versioning-VersioningMainMenu.instance">
                <attr name="instanceClass" stringvalue="org.netbeans.modules.versioning.VersioningMainMenu"/>
            </file>
        </folder>
        
        <folder name="Window">
            <folder name="Versioning">
                <attr name="position" intvalue="1550"/>
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/modules/versioning/resources/window-versioning.png"/>
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.modules.versioning.Bundle"/>
            </folder>
            </folder>
        
    </folder>
    
</filesystem>
