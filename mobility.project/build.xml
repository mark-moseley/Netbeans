<project name="org.netbeans.nbmodule1" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.nbmodule1.</description>
    <import file="nbproject/build-impl.xml"/>

    <target name="nblib" depends="init,jar">
        <mkdir dir="build/antclasses"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.5" debug="true" deprecation="true">
            <classpath>
                <path refid="cp"/>
                <pathelement location="${ant.jar}"/>
                <pathelement location="${tools.jar}"/>
                <pathelement location="${cluster}/${module.jar}"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc" excludesfile="${suite.dir}/standard-jar-excludes.txt"/>
        </copy>
        <mkdir dir="${cluster}/ant/nblib"/>
        <jar jarfile="${cluster}/ant/nblib/${code.name.base.dashes}.jar" compress="false">
            <fileset dir="build/antclasses">
                 <excludesfile name="${suite.dir}/standard-jar-excludes.txt"/>
            </fileset>
        </jar>
        <copy todir="${cluster}/modules/scr">
            <fileset dir="scripts"/>
        </copy>
    </target>

    <target name="netbeans-extra" depends="nblib"/>
</project>
