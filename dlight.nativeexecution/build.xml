<?xml version="1.0" encoding="UTF-8"?>
<project name="dlight.nativeexecution" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.dlight.nativeexecution.</description>
    <import file="../nbbuild/templates/projectized.xml"/>

    <target name="netbeans" depends="projectized-common.netbeans">
        <chmod file="${cluster}/bin/nativeexecution/Linux-x86/unbuffer.so" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/Linux-x86_64/unbuffer.so" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/MacOSX-x86/unbuffer.dylib" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/MacOSX-x86_64/unbuffer.dylib" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/SunOS-sparc/privp" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/SunOS-sparc/unbuffer.so" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/SunOS-sparc_64/unbuffer.so" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/SunOS-x86/privp" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/SunOS-x86/unbuffer.so" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/SunOS-x86_64/unbuffer.so" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/dorun.sh" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/hostinfo.sh" perm="ugo+rx"/>
        <chmod file="${cluster}/bin/nativeexecution/Windows-x86/unbuffer.dll" perm="ugo+rx"/>
        <fixcrlf srcdir="${cluster}/bin/nativeexecution" eol="lf">
            <include name="**/*.sh"/>
        </fixcrlf>
    </target>

</project>
