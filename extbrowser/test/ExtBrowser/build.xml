<project name="External Browser tests" basedir="." default="all">


    <property name="build.sysclasspath" value="ignore"/>
    <property name="xtest.module" value="ExtBrowser"/>

    <!-- locations of IDE -->
    <property name="nb_all.dir" location="../../../"/>
    <property name="nbextra.dir" location="${nb_all.dir}/../nbextra"/>
    <!--property name="netbeans.home" location="${nb_all.dir}/nbbuild/netbeans"/ -->
    <property name="netbeans.home" location="../../../nbbuild/netbeans"/>

    <property name="xtest.home" location="${nb_all.dir}/xtest"/>
    <property name="xtest.ide.winsys" value="mdi"/>
    <property name="xtest.module_harness.antfile" location="${xtest.home}/lib/module_harness.xml"/>
    <property name="xtest.source.location" value="ide"/>   

    <property name="xtest.testtype" value="qa-functional"/>
    <property name="xtest.attribs" value="ide,all"/>

 


    <!-- ============ -->
    <!-- Main targets -->
    <!-- ============ -->
    
    <target name="all" depends="runtests"/>
    
    <!-- This calls target which will call compilers according to cfg file -->
    <target name="buildtests" depends="common">
       <ant dir="." antfile="${xtest.module_harness.antfile}" target="compiler-launcher"/>
    </target>
    <target name="common">
        <ant dir="${nb_all.dir}/web/test/Common" target="jar"/>
    </target>
	     
    <!-- This calls common clean process. -->    
    <target name="cleantests">
       <ant dir="." antfile="${xtest.module_harness.antfile}" target="cleantests"/>
    </target> 

    <!-- This target runs tests -->
    <target name="runtests" depends="buildtests">
        <echo message="Module: Running tests for ${xtest.module}, testtype ${xtest.testtype}, attribs=${xtest.attribs}"/>
        <ant dir="." antfile="${xtest.module_harness.antfile}" target="runtests"/>
    </target>
   
    <!-- This target is executed from test-executor in newly created Project -->
    <!-- Name of this task is defined in cfg-xxx.xml -->
    <target name="test_report">
        <ant dir="." antfile="${xtest.module_harness.antfile}" target="test_report"/>
    </target>
    
    <target name="cleanresults">
        <ant dir="." antfile="${xtest.module_harness.antfile}" target="cleanresults"/>
    </target>
    
    <target name="realclean" depends="cleantests,cleanresults">
        <ant dir="." antfile="${xtest.module_harness.antfile}"
             target="realclean"/>
    </target>
    
    <target name="printconfig">
        <echo message="Default config is testtype: ${xtest.testtype}, attributes: ${xtest.attribs}."/>
    </target>
    
</project>

