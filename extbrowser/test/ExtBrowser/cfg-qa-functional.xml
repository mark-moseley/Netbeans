<mconfig name="ExtBrowser QA functional test config">
    <testbag testattribs="all" executor="ide" name="External Unix Browser">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/extbrowser/execution/ExecuteExternalUnixBrowser.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all" executor="ide" name="Swing Browser">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/extbrowser/execution/ExecuteSwingBrowser.class"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="all" executor="ide" name="Command Line Browser">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/extbrowser/execution/ExecuteCLBrowser.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all" executor="ide" name="Command Line Browser with Full Path">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/extbrowser/execution/ExecuteCLFullPathBrowser.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all" executor="ide" name="Browser Registry tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/settings/BrowserRegistry.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all" executor="ide" name="SystemSettings tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/settings/SystemSettings.class"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="all" executor="ide" name="JSP and Servlet settings tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/settings/JspAndServletSettings.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="all" executor="ide" name="Using different browsers">
        <testset dir="qa-functional/src">
            <patternset>
                 <include name="**/using/Using.class"/>
            </patternset>
       </testset>
    </testbag>

    <testbag testattribs="using" executor="ide" name="Using different browsers">
       <testset dir="qa-functional/src">
            <patternset>
                 <include name="**/using/Using.class"/>
            </patternset>
       </testset>
    </testbag>


    
    <testbag testattribs="uworking" executor="ide" name="Using different browsers">
       <testset dir="qa-functional/src">
            <patternset>
                 <include name="**/using/Using.class/testEBCLNetscape6InPath"/>
            </patternset>
       </testset>
    </testbag>

    <testbag testattribs="jas" executor="ide" name="JSP and Servlet settings tests">
        <testset dir="qa-functional/src">
            <patternset>
               <include name="**/settings/JspAndServletSettings.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="ss" executor="ide" name="SystemSettings tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/settings/SystemSettings.class"/>
            </patternset>
        </testset>
    </testbag>
							    
    <testbag testattribs="extunix" executor="ide" name="External Unix Browser">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/extbrowser/execution/ExecuteExternalUnixBrowser.class"/>
            </patternset>
        </testset>
    </testbag>

    <testbag testattribs="swing" executor="ide" name="Swing Browser">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/extbrowser/execution/ExecuteSwingBrowser.class"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="cl" executor="ide" name="Command Line Browser">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/extbrowser/execution/ExecuteCLBrowser.class"/>
            </patternset>
        </testset>
    </testbag>
    
    <testbag testattribs="clfp" executor="ide" name="Command Line Browser with Full Path">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/extbrowser/execution/ExecuteCLFullPathBrowser.class"/>
            </patternset>
        </testset>
    </testbag>
    <testbag testattribs="allsettings" executor="ide" name="All settings tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/settings/**"/>
            </patternset>
        </testset>
    </testbag>


    <testbag testattribs="registry" executor="ide" name="Browser Registry tests">
        <testset dir="qa-functional/src">
            <patternset>
                <include name="**/settings/BrowserRegistry.class"/>
            </patternset>
        </testset>
    </testbag>


    <!-- ====================================== -->
    <!-- COMPILERS, EXECUTORS, RESULTPROCESSORS -->
    <!-- ====================================== -->
    
    <compiler name="default-compiler" antfile="build-qa-functional.xml" 
              target="default-compiler" default="true"/>
    
    <executor name="ide" antfile="build-qa-functional.xml" target="runidetest"/>
    <executor name="code" antfile="build-qa-functional.xml" target="runcodetest"/>
    
    <resultsprocessor name="default-processor" antfile="build.xml" target="test_report" default="true"/>

</mconfig>

