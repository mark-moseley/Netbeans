<project name="xml/catalog" default="netbeans" basedir=".">

    <import file="../../nbbuild/templates/projectized.xml"/>

    <!-- before netbeans projectized.xml hook. -->
    <target name="netbeans-extra" depends="init">
        <mkdir dir="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext"/>
        <copy file="../external/resolver-1_1_nb.jar"
              tofile="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/ext/resolver-1_1_nb.jar"/>
    </target>
    
    <!-- Need to unscramble the libs before continuing-->
    <target name="build-init" depends="projectized.build-init">
      <ant dir="../external" target="unscramble"/>
    </target>

    <!-- Rewritten to capture two licenses. -->                           
    <target name="nbm" depends="init,netbeans" description="Build NBM archive.">
        <mkdir dir="build"/>
        <makenbm file="build/${nbm}"
                 productdir="${netbeans.dest.dir}/${cluster.dir}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="http://${dist.base}/${nbm}"
                 needsrestart="${nbm.needs.restart}"
                 releasedate="${nbm.release.date}"
                 moduleauthor="${nbm.module.author}">
            <license name="xml-catalog-license.txt">
                 <text>For the XML Entity Catalog module itself:</text>
                 <file location="${license.file}"/>
                 <text>For the XML Resolver library:</text>
                 <file location="${nb_all}/nbbuild/external/apache-license.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <!-- TODO rewrite to javadoctools  -->
    <target name="javadoc" depends="init">
        <delete dir="javadoc"/>
        <mkdir dir="javadoc"/>

        <!-- external JavaDocs -->
        <property name="jdk-docs-location" value="http://java.sun.com/j2se/1.4/docs/api"/>
        <property name="sax-docs-location" value="http://www.saxproject.org/apidoc"/>
        <property name="openide-docs-location" value="http://www.netbeans.org/download/dev/javadoc/OpenAPIs"/>
        <property name="xml-api-docs-location" value="${api_root}/javadoc/XML-APIs"/>

        <javadoc destdir="javadoc"
                 packagenames="org.netbeans.modules.xml.catalog.spi.*"
                 doctitle="NetBeans XML Catalog APIs"
                 windowtitle="NetBeans XML Catalog APIs"
        >
            <sourcepath>
                <pathelement location="src"/>
            </sourcepath>        
            <classpath refID="cp"/>
           
            <link href="${jdk-docs-location}"
                  offline="true"
                  packagelistLoc="${api_root}/doc/external/jdk"
            />
            <link href="${sax-docs-location}"
                  offline="true"
                  packagelistLoc="${api_root}/doc/external/sax"
            />
            <link href="${openide-docs-location}"
                  offline="true"
                  packagelistLoc="${api_root}/doc/external/openide"
            />            
            <link href="${xml-api-docs-location}"
                  offline="true"
                  packagelistLoc="${api_root}/javadoc/XML-APIs/package-list"
            />            
        </javadoc>                
    </target>

</project>
