    <target name="myunit-compiler" depends="init,init-cp">
        <!--ant dir="../../vcsgeneric/test/unit/testprofile" target="compile" /-->
        <buildTests srcdir="unit/src" compileexcludes="**/data/**">
            <classpath>
                <path refid="test.unit.compile.cp"/>
                <!--pathelement location="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/org-netbeans-modules-vcs-advanced.jar"/>
                <pathelement location="../../vcsgeneric/test/unit/testprofile/src"/-->
            </classpath>
        </buildTests>
    </target>

    <target name="myrun-unit-test" depends="init,init-cp">
        <executeTests pluginname="jvm">
            <classpath>
                <path refid="test.unit.run.cp"/>
                <!--pathelement location="${netbeans.dest.dir}/${cluster.dir}/${nb.modules.dir}/org-netbeans-modules-vcs-advanced.jar"/>
                <pathelement location="../../vcsgeneric/test/unit/testprofile/src"/-->
            </classpath>
        </executeTests>
    </target>

