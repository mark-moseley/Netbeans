<!-- ToDo: create TimerBean.jar and src/ from source, rather than have them in release/ -->
<!-- Also should beans/beans.properties really be there, since firststart removes them afterwards? -->

<project name="form" default="netbeans" basedir=".">

  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>
  <property name="binroot" location="../../nbextra"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="tojar" classname="org.netbeans.nbbuild.ToJar" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../nbbuild/nbantext.jar"/>

  <target name="compile" depends="hack13">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="../openide/openide-13javac-workaround.jar"/>
        <!-- XXX illegally uses org.netbeans.beaninfo classes: -->
        <pathelement location="../core/netbeans/lib/core.jar"/>
        <pathelement location="release/modules/ext/AbsoluteLayout.jar"/>
        <fileset dir="../openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
        <pathelement location="../java/netbeans/modules/java.jar"/>
        <pathelement location="${binroot}/core/release/lib/ext/xerces.jar"/>
        <pathelement location="tmp"/>
      </classpath>
    </javac>
  </target>

  <target name="hack13">
    <available property="hack13" classname="java.lang.CharSequence" />
    <available property="uptodate" file="tmp/java/awt/image/VolatileImage.java" />

    <antcall target="hack13-check" />
  </target>

  <target name="hack13-check" unless="hack13">
    <antcall target="hack13-do" />
  </target>

  <target name="hack13-do" unless="uptodate">
    <mkdir dir="tmp/java/awt/image/" />
    <echo file="tmp/java/awt/image/VolatileImage.java" message="package java.awt.image;public abstract class VolatileImage extends java.awt.Image {}" />
    <echo file="tmp/java/awt/BufferCapabilities.java" message="package java.awt;public class BufferCapabilities implements Cloneable {public static final class FlipContents {}}" />
    <javac srcdir="tmp" destdir="tmp" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}" />
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="netbeans/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="netbeans/modules/form.jar"
            manifest="manifest-subst.mf"
            basedir="src"
	    excludesfile="../nbbuild/standard-jar-excludes.txt"
	    compress="false">
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="release">
    <copy todir="netbeans">
      <fileset dir="release"/>
    </copy>
  </target>

  <target name="netbeans" depends="jars,release">
    <genlist targetname="nbm" outputfiledir="../nbbuild/netbeans"/>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="form.nbm"
             topdir="."
             module="netbeans/modules/form.jar"
	     homepage="http://form.${homepage.base}/"
	     distribution="http://${dist.base}/form.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="form.nbm"/>
    <delete dir="netbeans"/>
    <delete dir="Info"/>
    <delete dir="tmp" />
  </target>

</project>
