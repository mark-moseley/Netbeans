<project name="SimpleModuleAction" default="netbeans" basedir=".">
  <target name="init" depends="">
    <path id="cp">
      <pathelement location="/jmgt/pub/netbeans/latest/platform4//core/openide.jar"/>
      <pathelement location="/jmgt/pub/netbeans/latest/platform4//core/openide-loaders.jar"/>
      <pathelement location="/jmgt/pub/netbeans/latest/ide4/modules/org-netbeans-api-xml.jar"/>
      <pathelement location="/jmgt/pub/netbeans/latest/platform4/modules/org-openide-io.jar"/>
      <pathelement location="."/>
    </path>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="src" destdir="src" deprecation="true">
      <classpath refid="cp"/>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <jar jarfile="simpleaction.jar"
         manifest="manifest.mf"
         basedir="src"
	 excludes="**/*.java"
	 compress="false"/>
  </target>

  <target name="clean" depends="init">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
    </delete>
    <delete file="simpleaction.jar"/>
  </target>

  <!-- This target will only work *inside* the IDE! -->
  <target name= "test" depends="jars" description="Test the module inside the running IDE." >
    <nbinstaller action="reinstall" module="simpleaction.jar"/>
  </target>

</project>
