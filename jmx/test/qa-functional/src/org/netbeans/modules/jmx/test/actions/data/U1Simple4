package com.foo.bar;

import javax.management.ObjectName;
import javax.management.MBeanServer;
import java.lang.management.ManagementFactory;
import javax.management.JMException;
import com.foo.bar.Dynamic1;

public class U1Simple4 {
    
    /**
     * Instantiate and register your MBeans.
     */
    public void init() throws Exception {

        //TODO Add your MBean registration code here
        try { // Register MBean in Platform MBeanServer
            ManagementFactory.getPlatformMBeanServer().
                    registerMBean(new Dynamic1(),
                    new ObjectName("com.foo.bar:type=Dynamic1"));
        }catch(JMException ex) {
            // TODO handle exception
        }
    }
    
    /**
     * Returns an agent singleton.
     */
    public synchronized static U1Simple4 getDefault() throws Exception {
        if(singleton == null) {
            singleton = new U1Simple4();
            singleton.init();
        }
        return singleton;
    }
    
    public MBeanServer getMBeanServer() {
        return mbs;
    }
    
    // Platform MBeanServer used to register your MBeans
    private final MBeanServer mbs = ManagementFactory.getPlatformMBeanServer();
    
    // Singleton instance
    private static U1Simple4 singleton;
}
