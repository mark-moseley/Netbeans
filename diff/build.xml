<!-- Special targets: diff-apis -->

<project name="diff" default="netbeans" basedir=".">

  <property name="nbroot" value=".."/>
  <property name="nbext" value="${nbroot}/nbbuild"/>
  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>
  <property name="build" location="../nbbuild/netbeans"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>
  <!-- <taskdef name="tojar" classname="org.netbeans.nbbuild.ToJar" classpath="${nbext}/nbantext.jar"/> -->
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="${nbext}/nbantext.jar"/>
  <taskdef name="makelayer" classname="org.netbeans.nbbuild.MakeLayer" classpath="${nbext}/nbantext.jar"/>

  <patternset id="diff.files">
    <include name="modules/diff.jar"/>
  </patternset>

  <target name="compile">
    <javac srcdir="src" 
        deprecation="${build.compiler.deprecation}" 
        debug="${build.compiler.debug}"
        destdir="src">
      <classpath>
        <pathelement location="${build}/modules/ext/nb-editor.jar"/>
	<pathelement location="${nbroot}/openide/openide-13javac-workaround.jar"/>
        <pathelement location="${build}/lib/openide.jar"/>
        <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
        <fileset dir="${nbroot}/core/external">
          <include name="regexp*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="${build}/modules"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="${build}/modules/diff.jar"
         manifest="manifest-subst.mf"
         basedir="src"
         excludesfile="${nbroot}/nbbuild/standard-jar-excludes.txt"
         compress="false">
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="netbeans" depends="jars">
      <genlist outputfiledir="${build}" module="modules/diff.jar">
          <fileset dir="${build}">
	      <patternset refID="diff.files"/>
          </fileset>
      </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="diff.nbm"
             productDir="${build}"
	     module="modules/diff.jar"
	     homepage="http://diff.${homepage.base}/"
	     distribution="http://${dist.base}/diff.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="javadoc" depends="diff-apis">
    <copy todir="javadoc">
      <fileset dir=".">
        <include name="DiffAPIs/**"/>
        <include name="DiffAPIs.zip"/>
      </fileset>
    </copy>
  </target>

  <!-- Diff API documentation -->
  <target name="diff-apis" description="Create Diff API documentation.">
    <property name="jdk-docs-location" value="http://java.sun.com/j2se/1.3/docs/api"/>
    <property name="openide-docs-location" value="http://www.netbeans.org/download/apis/"/>
    <property name="openide.package-list.loc" location="api/doc/openide"/>
    <echo message="Build Diff API documentation..."/>
    <delete dir="DiffAPIs"/>
    <mkdir dir="DiffAPIs"/>
    <javadoc destdir="DiffAPIs"
             packagenames="org.netbeans.api.diff,org.netbeans.spi.diff"
             doctitle="NetBeans Diff APIs"
             use="true"
             splitindex="true"
             author="false"
             version="false"
             maxmemory="64m"
    >
      <sourcepath>
        <pathelement location="api/doc"/>
        <pathelement location="src"/>
      </sourcepath>
      <classpath>
        <fileset dir="${nbroot}/openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
        <fileset dir="${nbroot}/core/external">
          <include name="regexp*.jar"/>
        </fileset>
      </classpath>
      <link href="${jdk-docs-location}"
            offline="true"
            packagelistLoc="${nbroot}/openide/api/doc"
      />
      <link href="${openide-docs-location}"
            offline="true"
            packagelistLoc="${openide.package-list.loc}"
      />
    </javadoc>
    <zip zipfile="DiffAPIs.zip" basedir="DiffAPIs"/>
  </target>

  <target name="clean">
    <delete dir="javadoc"/>
    <delete dir="DiffAPIs"/>
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
        <include name="**/*.jar"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="diff.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="diff.nbm"/>
  </target>

    <target name="apichanges-check" description="Check syntax of API changes list. Requires Ant 1.4!">
        <xmlvalidate file="api/doc/changes/apichanges.xml" failonerror="true"/>
    </target>
    <target name="apichanges-generate" description="Regenerate HTML from XML API changes list.">
        <!-- Ant 1.3 and 1.4 disagree on style attribute. -->
        <!-- 1.3: treated as a name relative to XML file. -->
        <!-- 1.4: treated as a filename consistent with normal Ant usage. -->
        <!-- Be safe and give the absolute path here. -->
        <style in="api/doc/changes/apichanges.xml" out="www/apichanges.html" destdir="www" style="${nbroot}/openide/api/doc/changes/apichanges.xsl"/>
    </target>


</project>
