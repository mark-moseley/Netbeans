<project name="properties" default="netbeans" basedir=".">

  <property name="nbm_alias" value="nb_ide"/>
  <property name="homepage.base" value="netbeans.org"/>
  <property name="dist.base" value="www.netbeans.org/download/nbms/40"/>
  <property name="license.file" value="../nbbuild/standard-nbm-license.txt"/>
  <property name="build" location="../nbbuild/netbeans"/>

  <taskdef name="makenbm" classname="org.netbeans.nbbuild.MakeNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="genlist" classname="org.netbeans.nbbuild.MakeListOfNBM" classpath="../nbbuild/nbantext.jar"/>
  <taskdef name="locjar" classname="org.netbeans.nbbuild.LocalizedJar" classpath="../nbbuild/nbantext.jar"/>

  <patternset id="properties.files">
    <include name="modules/properties.jar"/>
  </patternset>

  <patternset id="properties-syntax.files">
    <include name="modules/eager/properties-syntax.jar"/>
  </patternset>


  <target name="compile">
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <exclude name="org/netbeans/modules/properties/syntax/"/>
      <classpath>
        <pathelement location="../openide/openide-13javac-workaround.jar"/>
        <pathelement location="${build}/lib/openide.jar"/>
        <pathelement location="${build}/modules/autoload/openide-deprecated.jar"/> <!-- XXX -->
      </classpath>
    </javac>
    <javac srcdir="src" destdir="src" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <include name="org/netbeans/modules/properties/syntax/"/>
      <classpath>
        <pathelement location="../openide/openide-13javac-workaround.jar"/>
        <fileset dir="${build}/lib">
          <include name="openide*.jar" />
        </fileset>
        <pathelement location="${build}/modules/ext/nb-editor.jar"/>
        <pathelement location="${build}/modules/editor.jar"/>
        <!-- src must be on classpath, otherwise AspectJ compiler (ajc) wouldn't compile -->
        <pathelement location="src" />
      </classpath>
    </javac>
  </target>

  <target name="jars" depends="compile">
    <mkdir dir="${build}/modules/eager"/>
    <filter token="BUILD_NUMBER_SUBST" value="${buildnumber}"/>
    <copy file="manifest.mf" tofile="manifest-subst.mf" filtering="on"/>
    <locjar jarfile="${build}/modules/properties.jar"
            manifest="manifest-subst.mf"
            basedir="src"
	    excludesfile="../nbbuild/standard-jar-excludes.txt"
	    compress="false">
      <exclude name="org/netbeans/modules/properties/syntax/"/>
      <locale name="ja"/>
    </locjar>
    <copy file="manifest-syntax.mf" tofile="manifest-syntax-subst.mf" filtering="on"/>
    <locjar jarfile="${build}/modules/eager/properties-syntax.jar"
            manifest="manifest-syntax-subst.mf"
            basedir="src"
            excludesfile="../nbbuild/standard-jar-excludes.txt"
            compress="false">
      <include name="org/netbeans/modules/properties/syntax/"/>
      <locale name="ja"/>
    </locjar>
  </target>

  <target name="netbeans" depends="jars">
      <genlist outputfiledir="${build}" module="modules/properties.jar">
          <fileset dir="${build}">
	      <patternset refID="properties.files"/>
          </fileset>
      </genlist>
      <genlist outputfiledir="${build}" module="modules/eager/properties-syntax.jar">
          <fileset dir="${build}">
	      <patternset refID="properties-syntax.files"/>
          </fileset>
      </genlist>
  </target>

  <target name="nbm" depends="netbeans">
    <makenbm file="properties.nbm"
             productDir="${build}"
             module="modules/properties.jar"
	     homepage="http://properties.${homepage.base}/"
	     distribution="http://${dist.base}/properties.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
    <makenbm file="properties-syntax.nbm"
             productDir="${build}"
             module="modules/eager/properties-syntax.jar"
	     homepage="http://properties.${homepage.base}/"
	     distribution="http://${dist.base}/properties-syntax.nbm">
      <license file="${license.file}"/>
      <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
    </makenbm>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="src">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="properties.files"/>
      </fileset>
      <fileset dir="${build}">
        <patternset refID="properties-syntax.files"/>
      </fileset>
    </delete>
    <delete file="manifest-subst.mf"/>
    <delete file="manifest-syntax-subst.mf"/>
    <delete file="properties.nbm"/>
    <delete file="properties-syntax.nbm"/>
    <delete dir="javadoc"/>
  </target>

  <target name="javadoc" description="Build properties module API documentation.">
    <tstamp/>
    <property name="apis-footer" value="&lt;font size=-2 color=gray&gt;Built on ${TODAY}.&amp;nbsp;&amp;nbsp;|&amp;nbsp;&amp;nbsp;Portions Copyright 1997-2002 Sun Microsystems, Inc. All rights reserved.&lt;/font&gt;"/>
    <echo message="Build properties module API documentation..."/>
    <mkdir dir="javadoc"/>
    <javadoc destdir="javadoc"
             packagenames="org.netbeans.modules.properties"
             doctitle="NetBeans properties module APIs"
             windowtitle="NetBeans properties module APIs"
             bottom="${apis-footer}"
             use="true"
             splitindex="true"
             author="false"
             version="false"
             maxmemory="384m"
    >
      <sourcepath>
        <pathelement location="src"/>
      </sourcepath>
      <classpath>
        <pathelement location="../openide/openide-13javac-workaround.jar"/>
        <fileset dir="../openide/netbeans/lib">
          <include name="openide*.jar" />
        </fileset>
      </classpath>
    </javadoc>    
  </target>

</project>

