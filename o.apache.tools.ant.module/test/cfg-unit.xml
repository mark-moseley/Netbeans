<mconfig name="ant">
    
    <testbag testattribs="stable" executor="unit-executor" name="ant">
        <testset dir="unit/src">
            <patternset>
                <include name="**/*Test.class"/>
                <!-- Will not pass until Ant 1.6.3 or 1.7 is bundled (Ant #28599): -->
                <exclude name="**/AntLoggerTest.class/testLocationOfImportedTargetsWithLineNumbers"/>
                <!-- Failing (but only within IDE) for mysterious reasons; related to #50160: -->
                <exclude name="**/IntrospectedInfoTest.class/testBasicAttributes"/>
            </patternset>
        </testset>
    </testbag>
    
    <compiler name="default-compiler" antfile="build-unit.xml" target="default-compiler" default="true"/>
    <executor name="unit-executor" antfile="build-unit.xml" target="run-unit-test"/>
    
</mconfig>
