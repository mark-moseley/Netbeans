<project name="ant/test-unit" basedir="." default="all">
    <import file="../../nbbuild/templates/xtest-unit.xml"/>
    
    <!-- Need to override target from xtest-unit.xml because standard module 
         build script need external directory which is not available on test4u. -->
    <target name="default-compiler" depends="init-cp">
        <buildTests srcDir="unit/src" compileExcludes="**/data/**">
            <classpath>
                <path refid="test.unit.compile.cp"/>
            </classpath>
        </buildTests>
    </target>
</project>
