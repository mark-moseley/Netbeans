<project basedir="." default="netbeans" name="j2ee/ejbjarproject">
    <import file="../../nbbuild/templates/projectized.xml"/>
    
    <property name="ejbcodegenroot" location="src/org/netbeans/modules/j2ee/ejbjarproject/ejb/wizard/gen"/>
        
    <target name="s2beansgen">
          <taskdef name="schema2beans" classname="org.netbeans.modules.s2banttask.Schema2BeansAntTask">
	      <classpath>
		    <pathelement path="${schema2beans/rt.dir}/${nb.modules.dir}/org-netbeans-modules-schema2beans.jar" />
		    <pathelement path="${nb_all}/schema2beans/dev/schema2beansdev.jar" />
		    <pathelement path="${nb_all}/schema2beans/anttask/s2banttask.jar"/>
	      </classpath>
         </taskdef>
	 <mkdir dir="${ejbcodegenroot}"/>
     	 <schema2beans schema="src/org/netbeans/modules/j2ee/ejbjarproject/ejb/wizard/xsl/BeanCreation.dtd"
		package="org.netbeans.modules.j2ee.ejbjarproject.ejb.wizard.gen"
		rootDir="src"
		outputType="javabeans"
		attrProp="true"
		standalone="true"/>
	 <schema2beans schema="src/org/netbeans/modules/j2ee/ejbjarproject/ejb/wizard/xsl/InterfaceCreation.dtd"
		package="org.netbeans.modules.j2ee.ejbjarproject.ejb.wizard.gen"
		rootDir="src"
		outputType="javabeans"
		attrProp="true"
		standalone="true"/>
    </target>
    
    <target name="files-init" depends="basic-init"> 
        <patternset id="module.files">
            <include name="${module.jar}"/>
            <include name="${nb.system.dir}/Modules/${code.name.base.dashes}.xml"/>
        </patternset>
    </target>

    <target depends="init,s2beansgen" name="compile">
	<antcall target="projectized.compile"/>
    </target>

    <target name="clean" depends="files-init">
        <delete dir="${ejbcodegenroot}"/>
        <antcall target="projectized.clean"/>
    </target>
    <target name="jar-with-module-deps" if="module.dependencies">
        <property file="spec-ver.properties"/>
        <jar jarfile="${netbeans.dest.dir}/${cluster.dir}/${module.jar}" compress="false" manifest="${manifest.mf}">
            <manifest>
                <attribute name="OpenIDE-Module-Public-Packages" value="${public.packages}"/>
                <attribute name="OpenIDE-Module-IDE-Dependencies" value="${ide.dependencies}"/>
                <attribute name="OpenIDE-Module-Build-Version" value="${buildnumber}"/>
            </manifest>
            <fileset dir="${build.classes.dir}"/>
        </jar>
    </target>

</project>
