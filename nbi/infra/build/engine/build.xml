<project name="build-engine" default="usage" basedir=".">
    <!-- load properties specific to this build script - we attempt to load 
    them twice, since this build script is used both as a standalone script and
    as a library -->
    <property file="${engine.dir}/build.properties"/>
    <property file="build.properties"/>
    
    <import file="${.common.dir}/build.xml" optional="false"/>
    
    <target name="all" depends="init,clean,build,release"/>
    
    <target name="init" depends="-init">
        <evaluate property="engine.jar.file"/>
    </target>
    
    <target name="clean" depends="init,-clean"/>
    
    <target name="build" depends="init,-build">
        <signjar jar="${work.dir}/${engine.jar.file}" 
                 keystore="${security.keystore}"
                 storepass="${security.storepass}"
                 alias="${security.alias}"
                 maxmemory="${security.application.xmx}"/>
        
        <copy file="${work.dir}/${engine.jar.file}" todir="${dist.dir}"/>
    </target>
    
    <target name="release" depends="init,build">
        <update-engine url="${release.url}"
                       archive="${work.dir}/${engine.jar.file}"/>
    </target>
    
    <!-- =======================================================================
        Default Target
    ======================================================================== -->
    <target name="usage">
        <echo>
            This script builds and releases NetBeans Installer engine. In order
            for it to function correctly, set the properties in 
            build.properties, ${.common.dir}/common.properties and 
            ../common/native/*.properties
        </echo>
    </target>
</project>
