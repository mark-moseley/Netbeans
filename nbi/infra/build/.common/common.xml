<project name="build-common" default="usage" basedir=".">
    <property file="${basedir}/../.common/common.properties"/>
    
    <!-- =======================================================================
        Initialization
    ======================================================================== -->
    <target name="init">
        <mkdir dir="${lib.cls}"/>
        <javac srcdir="${lib.src}" destdir="${lib.cls}"/>
        
        <taskdef name="for-each" classname="org.netbeans.installer.infra.build.ant.ForEachTask" classpath="${lib.cls}"/>
    </target>
    
    <!-- =======================================================================
        Clean-up
    ======================================================================== -->
    <target name="clean" depends="init,clean-native,clean-java"/>
    
    <target name="clean-native" depends="init">
        <for-each list="${platforms}" param="platform">
            <antcall target="-clean-native"/>
        </for-each>
    </target>
    
    <target name="-clean-native" depends="init">
        <property file="${native.dir}/build.properties"/>
        <property file="${native.dir}/${platform}.properties"/>
        
        <delete dir="${scp.local.file}"/>
    </target>
    
    <target name="clean-java" depends="init">
        <subant buildpath="${working.dir}/${cvs.module}/${cvs.path}" target="${target.clean}" failonerror="false">
            <property name="${nb.platform.home}" value="${java.home}"/>
            <property name="${nb.ignore.native}" value="true"/>
        </subant>
        <delete dir="${working.dir}/${cvs.module}"/>
    </target>
    
    <!-- =======================================================================
        Checkout
    ======================================================================== -->
    <target name="checkout" depends="init,-checkout-trunk,-checkout-branch"/>
    
    <target name="-checkout-trunk" depends="init" unless="cvs.branch">
        <cvs cvsroot="${cvs.root}" command="checkout" package="${cvs.module}/${cvs.path}" dest="${working.dir}"/>
    </target>
    
    <target name="-checkout-branch" depends="init" if="cvs.branch">
        <cvs cvsroot="${cvs.root}" command="checkout" package="${cvs.module}/${cvs.path}" tag="${cvs.branch}" dest="${working.dir}"/>
    </target>
    
    <!-- =======================================================================
        Build
    ======================================================================== -->
    <target name="build" depends="init,build-native,build-java"/>
    
    <target name="build-native" depends="init">
        <for-each list="${platforms}" param="platform">
            <antcall target="-build-native"/>
        </for-each>
    </target>
    
    <target name="-build-native" depends="init">
        <property file="${basedir}/../.common/${native.dir}/${platform}.properties"/>
        <property file="${basedir}/../.common/${native.dir}/build.properties"/>
        
        <exec executable="${ssh.executable}" failonerror="true">
            <arg line="${ssh.arguments}"/>
            <arg value="${ssh.command}"/>
        </exec>
        
        <mkdir dir="${scp.local.dir}"/>
        <exec executable="${scp.executable}" failonerror="true">
            <arg line="${scp.arguments}"/>
            <arg value="${scp.remote.file}"/>
            <arg value="${scp.local.file}"/>
        </exec>
    </target>
    
    <target name="build-java" depends="init">
        <subant buildpath="${working.dir}/${cvs.module}/${cvs.path}" target="${target.build}" failonerror="true">
            <property name="${nb.platform.home}" value="${java.home}"/>
            <property name="${nb.ignore.native}" value="true"/>
        </subant>
    </target>
    
    <!-- =======================================================================
        Default Target
    ======================================================================== -->
    <target name="usage">
        <echo>
            This build script is a targets library and should not be used 
            directly. See ../engine/build.xml and ../component/build.xml
            for usage examples.
        </echo>
    </target>
</project>
