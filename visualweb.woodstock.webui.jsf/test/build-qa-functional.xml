<project default="all" name="qa-functional Test Type Script">
    
    <!-- Imports default qa-functional-compiler and runidetest executor.
        jemmy and jellytools jars are on classpath for both. -->
    <import file="../../nbbuild/templates/xtest-qa-functional.xml"/>

    <!-- Creates an empty Java project in IDE -->
    <!-- <property name="xtest.ide.create.project" value="true"/> -->
    <!-- Opens project at specified location -->
    <!-- <property name="xtest.ide.open.project" location="${xtest.data}/SampleProject"/> -->
    <!-- Suppress XTest error manager -->
    <!-- <property name="xtest.ide.error.manager" value="false"/> -->
    

    <!-- Overriden qa-functional-compiler because ide module doesn't have build.xml. -->
    <target name="qa-functional-compiler" depends="functional-compile-check, init-cp" unless="functional.compile.mark.exist">
        <buildTests srcDir="qa-functional/src" compileExcludes="**/data/**">
            <classpath>
                <path refid="jemmy.and.jelly.path"/>
                <path location="${test.qa-functional.cp.extra}"/>
            </classpath>
        </buildTests>
        <touch file="functional-compile.mark" verbose="true"/>
    </target>
    
    <target name="functional-compile-check">
        <available file="functional-compile.mark" property="functional.compile.mark.exist" type="file"/>
    </target>
    
    <!-- ========= -->
    <!-- Compilers -->
    <!-- ========= -->

    <!-- You can override default qa-functional-compiler if you need something special -->
    <!--
    <target name="qa-functional-compiler" depends="build-jellytools">
        <ant dir=".." target="do-test-build-qa-functional" />
        <packageTests/>
    </target>
    -->

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->
    <target name="runidetest" depends="init-cp, install-fresh-woodstock">
        <executeTests pluginName="ide">
            <classpath refid="jemmy.and.jelly.path"/>
            <classpath location="${test.qa-functional.run.cp.extra}"/>
            <property name="xtest.timeout" value="7200000" />
        </executeTests>
    </target>
    
    <target name="install-fresh-woodstock" if="woodstock.plugin.url"
        description="Installs Fresh Woodstock plugin, woodstock.plugin.url property must be set.">
        <property name="download.dir" value="${netbeans.dest.dir}/visualweb1/update/download"/>
        <mkdir dir="${download.dir}"/>
        <get verbose="true"
            src="${woodstock.plugin.url}/org-netbeans-modules-visualweb-webui-jsf-defaulttheme.nbm"
            dest="${download.dir}/org-netbeans-modules-visualweb-webui-jsf-defaulttheme.nbm"/>
        <get verbose="true"
            src="${woodstock.plugin.url}/org-netbeans-modules-visualweb-woodstock-webui-jsf.nbm"
            dest="${download.dir}/org-netbeans-modules-visualweb-woodstock-webui-jsf.nbm"/>
    </target>
    
    <!-- This target executes tests inside IDE. It is defined in imported xtest-qa-functional.xml.
         If you need to customize it, you can uncomment the following and override it.
    <target name="runidetest" depends="init-cp">
        <executeTests pluginName="ide">
            <classpath>
                <path refid="test.qa-functional.run.cp"/>
            </classpath>
        </executeTests>
    </target>
    -->
    
</project>

