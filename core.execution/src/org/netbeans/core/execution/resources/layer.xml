<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.0//EN" "http://www.netbeans.org/dtds/filesystem-1_0.dtd">

<!-- XML Layer for core-execution -->

<filesystem>
    <folder name="Actions">
        <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />

        <folder name="Window">
            <file name="org-netbeans-core-execution-ExecutionViewAction.instance"/>
        </folder>
        
    </folder>    
    
    <folder name="Menu">
        <folder name="Window">
            <attr name="oldRootsEnd.txt/org-netbeans-core-execution-ExecutionViewAction.instance" boolvalue="true" />
            <file name="org-netbeans-core-execution-ExecutionViewAction.instance"/>
        </folder>
    </folder>  
    
    <folder name="Toolbars">
        <folder name="Window">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />
            <attr name="org-netbeans-core-output-OutputWindowAction.instance/org-netbeans-core-execution-ExecutionViewAction.instance" boolvalue="true" />
            <file name="org-netbeans-core-execution-ExecutionViewAction.instance"/>
            <attr name="org-netbeans-core-execution-ExecutionViewAction.instance/org-netbeans-core-actions-HTMLViewAction.instance" boolvalue="true" />
        </folder>
    </folder>

    <folder name="Shortcuts">
        <file name="C-6.instance">
	    <attr name="instanceClass" stringvalue="org.netbeans.core.execution.ExecutionViewAction"/>
	</file>
    </folder>
    
    <folder name="Templates">
        <!-- templates for services in Lookup, should have the same subdirectory as objects under the -->
        <folder name="Services">
            <folder name="ScriptType">
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/core/resources/scriptTypes.gif" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle"/>
            </folder>
        </folder>
    </folder>
    
    <!-- register services with Lookup -->
    <folder name="Services">
        <folder name="ScriptType">
            <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/core/resources/scriptTypes.gif" />
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle"/>
            <attr name="SystemFileSystem.layer" stringvalue="project"/>
            <attr name="helpID" stringvalue="org.netbeans.core.services.ScriptTypes"/>
        </folder>
        
        <file name="org-netbeans-core-execution-ExecutionSettings.settings" url="ExecutionSettings.settings">
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />
            <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/core/resources/executionSettings.gif" />
        </file>
    </folder>
    
    <folder name="UI">
        <folder name="Runtime">
            <file name="org-netbeans-core-execution-ProcessNode.instance">
                <attr name="instanceClass" stringvalue="org.netbeans.core.execution.ProcessNode"/>
                <attr name="instanceCreate" methodvalue="org.netbeans.core.execution.ProcessNode.getExecutionNode"/>
            </file>
        </folder>
        <!-- settings categories UI presentation -->
        <folder name="Services">
        
            <folder name="DebuggingAndExecuting">
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />

                <file name="org-netbeans-core-execution-ExecutionSettings.shadow">
                    <attr name="originalFile" stringvalue="Services/org-netbeans-core-execution-ExecutionSettings.settings"/>
                </file>
            </folder> <!-- DebuggingAndExecuting -->

            <folder name="IDEConfiguration">
                <folder name="ServerAndExternalToolSettings">
                    <file name="ScriptTypes.shadow">
                        <attr name="originalFile" stringvalue="Services/ScriptType"/>
                    </file>
                </folder>
            </folder>
                
        </folder> <!-- Services -->

    </folder> <!-- UI -->
    
    <folder name="Windows2">

        <folder name="Modes">
            
            <folder name="explorer">
                <attr name="filesystems.wstcref/runtime.wstcref" boolvalue="true" />
                <file name="runtime.wstcref" url="windowmanager/explorer/runtime.wstcref" />
            </folder>

            <folder name="debugger">
                <attr name="threads.wstcref/execution.wstcref" boolvalue="true"/>
                <file name="execution.wstcref" url="windowmanager/debugger/execution.wstcref" />
            </folder> 

        </folder>
        
        <folder name="Groups">
            <file name="execution.wsgrp" url="groups/execution.wsgrp" />
            <folder name="execution">
                <file name="execution.wstcgrp" url="groups/execution/execution.wstcgrp" />
            </folder>
        </folder>
        
        <folder name="Components">            
            <file name="runtime.settings" url="components/runtime.settings" />
            <file name="execution.settings" url="components/execution.settings" />
        </folder>
        
    </folder>
    
</filesystem>
