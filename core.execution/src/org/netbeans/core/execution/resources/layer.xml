<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.0//EN" "http://www.netbeans.org/dtds/filesystem-1_0.dtd">

<!-- XML Layer for core-execution -->

<filesystem>
    <folder name="Actions">
        <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle" />

        <folder name="Window">
            <file name="org-netbeans-core-actions-ViewRuntimeTabAction.instance">
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/core/resources/environment.gif"/>
            </file>
        </folder>
        
    </folder>    
    
    <folder name="Menu">
        <folder name="Window">
            <attr name="ViewFilesystemsTabAction.shadow/ViewRuntimeTabAction.shadow" boolvalue="true" />
            <attr name="org-netbeans-core-output2-OutputWindowAction.instance/ViewRuntimeTabAction.shadow" boolvalue="true"/>
            <file name="ViewRuntimeTabAction.shadow">
                <attr name="originalFile" stringvalue="Actions/Window/org-netbeans-core-actions-ViewRuntimeTabAction.instance"/>
            </file>
        </folder>
    </folder>  
    
    <folder name="Templates">
        <!-- templates for services in Lookup, should have the same subdirectory as objects under the -->
        <folder name="Services">
            <folder name="ScriptType">
                <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/core/resources/scriptTypes.gif" />
                <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle"/>
            </folder>
        </folder>
    </folder>
    
    <!-- register services with Lookup -->
    <folder name="Services">
        <folder name="ScriptType">
            <attr name="SystemFileSystem.icon" urlvalue="nbresloc:/org/netbeans/core/resources/scriptTypes.gif" />
            <attr name="SystemFileSystem.localizingBundle" stringvalue="org.netbeans.core.Bundle"/>
            <attr name="helpID" stringvalue="org.netbeans.core.services.ScriptTypes"/>
        </folder>
    </folder>
    
    <folder name="UI">
        <folder name="Runtime"/>
        <!-- settings categories UI presentation -->
        <folder name="Services">
        
            <folder name="IDEConfiguration">
                <folder name="ServerAndExternalToolSettings">
                    <file name="ScriptTypes.shadow">
                        <attr name="originalFile" stringvalue="Services/ScriptType"/>
                    </file>
                </folder>
            </folder>
                
        </folder> <!-- Services -->

    </folder> <!-- UI -->
    
    <folder name="Windows2">

        <folder name="Modes">
            
            <folder name="explorer">
                <file name="runtime.wstcref" url="runtime.wstcref" />
            </folder>

        </folder>
        
        <folder name="Components">            
            <file name="runtime.settings" url="runtime.settings" />
        </folder>
        
    </folder>
    
</filesystem>
