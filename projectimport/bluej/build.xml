<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="netbeans" name="ide/projectimport/bluej">
    <description>Builds, tests, and runs the project org.netbeans.bluej</description>
    <import file="../../../nbbuild/templates/projectized.xml"/>
    
    <target name="nblib" depends="init">
        <mkdir dir="build/antclasses"/>
        <javac srcdir="antsrc" destdir="build/antclasses" source="1.4" debug="true" deprecation="true">
            <classpath>
                <pathelement path="${antsrc.cp}"/>
            </classpath>
        </javac>
        <copy todir="build/antclasses">
            <fileset dir="antsrc" excludesfile="${nb_all}/nbbuild/standard-jar-excludes.txt"/>
        </copy>
        <mkdir dir="${cluster}/ant/nblib"/>
        <jar jarfile="${cluster}/ant/nblib/org-netbeans-bluej.jar" compress="false">
            <fileset dir="build/antclasses">
                <excludesfile name="${nb_all}/nbbuild/standard-jar-excludes.txt"/>
            </fileset>
        </jar>
    </target>

    <target name="netbeans-extra" depends="nblib"/>
</project>
