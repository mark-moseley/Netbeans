<?xml version="1.0" encoding="UTF-8"?>
<saas-services
    xmlns="http://xml.netbeans.org/websvc/saas/services/1.0"
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'    
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"             
    xsi:schemaLocation='http://xml.netbeans.org/websvc/saas/services/1.0 
                    ../../../../../../../../../../websvc.saas.api/src/org/netbeans/modules/websvc/saas/model/SaasServices.xsd'
    url="https://sandbox.google.com/api/adsense/v2/AdSenseForContentService?wsdl"
    type="http://schemas.xmlsoap.org/wsdl/"
    api-doc="http://code.google.com/apis/adsense/">
    
    <!-- This is the description for this SaaS component. It is not localized. -->
    <description>Generates ad code snippets to include in a publisher's web pages displaying contextual advertising</description>
    
    <display-name>AdSenseForContent Service</display-name>

    <saas-metadata>
        <localizing-bundle>org.netbeans.modules.websvc.components.google.Bundle</localizing-bundle>
        <group name="Google"/>
        <code-gen>
            <artifacts targets="java,servlet"/>
        </code-gen>
        <!-- http-basic, api-key, custom -->
        <authentication profile="SaaSServices/Google/profile.properties">
            <api-key id="zwsid"/>
        </authentication>
    </saas-metadata>

    <!-- The method elements are used to specified a subset of important operations
         in cases where the wsdl contains a large number of operations. -->
    <!-- TODO -->     
    <methods>
        <method name="GoogleAdSenseForContent" serviceName="AdSenseForContentServiceService"
                portName="AdSenseForContentService" operationName="generateAdCode">
            <documentation>
                Allows a developer to generate ad code snippets to include in a publisher's web pages to start serving and displaying contextual advertising. When an end-user clicks through an ad, Google credits a payment.
            </documentation>
        </method>
    </methods>
        
    
</saas-services>
