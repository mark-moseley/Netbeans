<project name="serverplugins/sun/appsrv81/test/qa-functional" basedir="." default="all">

    <import file="../../../../nbbuild/templates/xtest-qa-functional.xml"/>

    <!-- ========= -->
    <!-- Executors -->
    <!-- ========= -->

    <target name="set-environment">
        <condition property="sjsas.server.path" value="e:\\space\\AppServer">
            <os family="windows"/>
        </condition>
        <condition property="sjsas.server.path" value="/space/appserver">
            <os family="unix"/>
        </condition>
        <property name="sjsas.server.password" value="adminadmin"/>
        <property name="xtest.ide.commandline.suffix" value="-J-Dsjsas.server.password=${sjsas.server.password} -J-Dsjsas.server.path=${sjsas.server.path} -J-Dnetbeans.dest.dir=${netbeans.dest.dir}"/>
        <!--<property name="xtest.ide.commandline.suffix" value="-J-Dsjsas.server.path=${sjsas.server.path} -J-Dnetbeans.dest.dir=${netbeans.dest.dir} -J-Xdebug -J-Xnoagent -J-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8765"/>-->
        <property name="test.classpath" value=""/>
    </target>

    <target name="check-sjsas" depends="set-environment">
        <available file="${sjsas.server.path}/domains" property="sjsas.present"/>
        <fail unless="sjsas.present" message="Sjsas was not found in ${sjsas.server.path}. Set property sjsas.server.path to point to Sjsas installation directory."/>
    </target>
    
    <target name="runidetest" depends="init,init-cp, check-sjsas">
        <copy todir="${xtest.tmpdir}/SjsasTestEjb">
            <fileset dir="${xtest.data}/SjsasTestEjb"/>
        </copy>
        <copy todir="${xtest.tmpdir}/SjsasTestWeb">
            <fileset dir="${xtest.data}/SjsasTestWeb"/>
        </copy>
        <copy todir="${xtest.tmpdir}/SjsasJSFTest">
            <fileset dir="${xtest.data}/SjsasJSFTest"/>
        </copy>
        <copy todir="${xtest.tmpdir}/CalculatorWSApplication">
            <fileset dir="${xtest.data}/CalculatorWSApplication"/>
        </copy>
        <copy todir="${xtest.tmpdir}/customer-cmp-ear">
            <fileset dir="${xtest.data}/customer-cmp-ear"/>
        </copy>
        <copy todir="${xtest.tmpdir}/SimpleMessage">
            <fileset dir="${xtest.data}/SimpleMessage"/>
        </copy>
        <copy todir="${xtest.tmpdir}/duke_stateful">
            <fileset dir="${xtest.data}/duke_stateful"/>
        </copy>
        <executeTests pluginname="ide"/>
        <delete dir="${xtest.tmpdir}/SjsasTestWeb"/>
        <delete dir="${xtest.tmpdir}/SjsasTestEjb"/>
        <delete dir="${xtest.tmpdir}/SjsasJSFTest"/>
        <delete dir="${xtest.tmpdir}/customer-cmp-ear"/>
        <delete dir="${xtest.tmpdir}/SimpleMessage"/>
        <delete dir="${xtest.tmpdir}/duke_stateful"/>
        <delete dir="${xtest.tmpdir}/CalculatorWSApplication"/>
    </target>        
</project>
