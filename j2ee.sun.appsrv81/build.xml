<project name="appsrv-plugin" default="netbeans" basedir=".">

    <import file="../../../nbbuild/templates/projectized.xml"/>

    <target name="netbeans-extra" depends="build-init">
        <ant dir="../appsrvbridge" target="jar" inheritall="false"/>
        <mkdir dir="${cluster}/modules/ext"/>
        <copy file="../appsrvbridge/dist/appsrvbridge.jar" todir="${cluster}/modules/ext"/>
        <mkdir dir="${cluster}/ant/nblib"/>
        <copy file="../../external/org-netbeans-modules-j2ee-sun-appsrv81.jar" todir="${cluster}/ant/nblib"/>
    </target>

    <target name="javahelp" depends="init,unjar-extra-help">
        <antcall target="projectized.javahelp"/>
        <delete dir="javahelp/com"/>
    </target>

    <!-- XXX poor style; should rather override javahelp target to build jar differently: -->
    <target name="unjar-extra-help">
        <unjar src="../../external/persistence-help.jar" dest="javahelp"/>
        <delete dir="javahelp/META-INF"/>
    </target>
    
    <target name="nbm" depends="init,netbeans" description="Build NBM archive.">
        <mkdir dir="build"/>
        <property name="nbm.target.cluster" value=""/> <!-- fallback -->        
        <makenbm file="build/${nbm}"
                 productdir="${cluster}"
                 module="${module.jar}"
                 homepage="${nbm.homepage}"
                 distribution="http://${dist.base}/${nbm}"
                 needsrestart="${nbm.needs.restart}"
                 releasedate="${nbm.release.date}"
		 moduleauthor="${nbm.module.author}"
                 global="${nbm.is.global}"
                 targetcluster="${nbm.target.cluster}">
            <license>
                <text>For the integration module:</text>
                <file location="${license.file}"/>
                <text>For the Persistence UI implementation and documentation:</text>
                <file location="../../external/appsrv81license.txt"/>
            </license>
            <signature keystore="${keystore}" storepass="${storepass}" alias="${nbm_alias}"/>
        </makenbm>
    </target>

    <target name="clean" depends="projectized-common.clean">
        <ant dir="../appsrvbridge" target="clean" inheritall="false"/>
    </target>
    
</project>
